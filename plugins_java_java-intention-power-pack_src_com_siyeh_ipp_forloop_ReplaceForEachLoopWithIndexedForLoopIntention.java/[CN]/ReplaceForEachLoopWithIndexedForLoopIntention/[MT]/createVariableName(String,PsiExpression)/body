{
  final Project project=assignedExpression.getProject();
  final JavaCodeStyleManager codeStyleManager=JavaCodeStyleManager.getInstance(project);
  final SuggestedNameInfo names=codeStyleManager.suggestVariableName(VariableKind.LOCAL_VARIABLE,baseName,assignedExpression,null);
  if (names.names.length == 0) {
    return codeStyleManager.suggestUniqueVariableName(baseName,assignedExpression,true);
  }
  return codeStyleManager.suggestUniqueVariableName(names.names[0],assignedExpression,true);
}
