{
  if (holdsValue && !bar.isActive()) {
    bar.setActive(true);
    bar.revalidate();
    bar.repaint();
    myComponent.revalidate();
    myComponent.repaint();
  }
 else   if (!holdsValue && bar.isActive()) {
    bar.setActive(false);
    bar.revalidate();
    bar.repaint();
    myComponent.revalidate();
    myComponent.repaint();
  }
}
