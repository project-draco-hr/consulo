{
  if ((min_group_len < MIN_ALLOWED) || (min_group_len > MAX_ALLOWED))   throw new IllegalArgumentException("min_group_len out of range!");
  if ((pref_group_len < MIN_ALLOWED) || (pref_group_len > MAX_ALLOWED))   throw new IllegalArgumentException("pref_group_len out of range!");
  if ((max_group_len < MIN_ALLOWED) || (max_group_len > MAX_ALLOWED))   throw new IllegalArgumentException("max_group_len out of range!");
  if ((pref_group_len < min_group_len) || (pref_group_len > max_group_len))   throw new IllegalArgumentException("pref_group_len is incompatible with min and max!");
  if (max_group_len < min_group_len)   throw new IllegalArgumentException("max_group_len must not be smaller than min_group_len!");
  this.min_group_len=min_group_len;
  this.pref_group_len=pref_group_len;
  this.max_group_len=max_group_len;
}
