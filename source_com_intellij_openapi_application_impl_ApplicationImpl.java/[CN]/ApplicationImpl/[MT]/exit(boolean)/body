{
  Runnable runnable=new Runnable(){
    public void run(){
      if (!force) {
        if (!showConfirmation()) {
          saveAll();
          return;
        }
      }
      saveAll();
      if (!canExit())       return;
      disposeSelf();
      new Thread(new Runnable(){
        public void run(){
          System.exit(0);
        }
      }
).start();
    }
  }
;
  if (!isDispatchThread()) {
    invokeLater(runnable,ModalityState.NON_MODAL);
  }
 else {
    runnable.run();
  }
}
