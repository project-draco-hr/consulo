{
  if (boundVariable == null) {
    return false;
  }
  final PsiStatement statement=PsiTreeUtil.getParentOfType(creationContext,PsiStatement.class);
  if (statement == null) {
    return false;
  }
  final PsiStatement nextStatement=PsiTreeUtil.getNextSiblingOfType(statement,PsiStatement.class);
  if (!(nextStatement instanceof PsiTryStatement)) {
    return false;
  }
  final PsiTryStatement tryStatement=(PsiTryStatement)nextStatement;
  return resourceIsClosedInFinally(tryStatement,boundVariable);
}
