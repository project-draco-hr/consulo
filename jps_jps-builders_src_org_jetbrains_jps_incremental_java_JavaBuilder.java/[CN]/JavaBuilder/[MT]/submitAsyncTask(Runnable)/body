{
synchronized (myCounterLock) {
    myTasksInProgress++;
  }
  myTaskRunner.submit(new Runnable(){
    public void run(){
      try {
        taskRunnable.run();
      }
  finally {
synchronized (myCounterLock) {
          myTasksInProgress=Math.max(0,myTasksInProgress - 1);
          if (myTasksInProgress == 0) {
            myCounterLock.notifyAll();
          }
        }
      }
    }
  }
);
}
