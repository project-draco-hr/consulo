{
  PsiClass[] classes=dir.getClasses();
  for (int i=0; i < classes.length; i++) {
    array.add(classes[i]);
  }
  if (includeSubdirs) {
    PsiDirectory[] dirs=dir.getSubdirectories();
    for (int i=0; i < dirs.length; i++) {
      addClassesInDirectory(dirs[i],includeSubdirs,array);
    }
  }
}
