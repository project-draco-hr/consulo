{
  PsiFile psiFile=PsiDocumentManager.getInstance(myProject).getPsiFile(document);
  if (psiFile == null)   return;
  final VirtualFile virtualFile=psiFile.getVirtualFile();
  if (virtualFile == null)   return;
  String name=virtualFile.getPath();
  if (name == null)   return;
  RangeHighlighter lineMarker=((MarkupModelEx)document.getMarkupModel(myProject)).addPersistentLineHighlighter(lineIndex,HighlighterLayer.ADDITIONAL_SYNTAX - 1,null);
  if (lineMarker == null)   return;
  EditorBookmark bookmark=new EditorBookmark(document,myProject,lineMarker,"",number);
  myEditorBookmarks.addBookmark(bookmark);
}
