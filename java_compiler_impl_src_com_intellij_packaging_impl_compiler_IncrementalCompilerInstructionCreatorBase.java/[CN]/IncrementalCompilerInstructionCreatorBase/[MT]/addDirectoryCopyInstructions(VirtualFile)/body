{
  final VirtualFile[] children=directory.getChildren();
  if (children != null) {
    for (    VirtualFile child : children) {
      if (!child.isDirectory()) {
        addFileCopyInstruction(child,child.getName());
      }
 else {
        subFolder(child.getName()).addDirectoryCopyInstructions(child);
      }
    }
  }
}
