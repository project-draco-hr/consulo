{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      final Balloon b=JBPopupFactory.getInstance().createHtmlTextBalloonBuilder(title,null,MessageType.INFO.getPopupBackground(),null).setFadeoutTime(3000).setShowCallout(false).createBalloon();
      Dimension size=myDiffView.getSize();
      RelativePoint point=new RelativePoint(myDiffView,new Point(size.width / 2,size.height / 2));
      b.show(point,Balloon.Position.above);
    }
  }
);
}
