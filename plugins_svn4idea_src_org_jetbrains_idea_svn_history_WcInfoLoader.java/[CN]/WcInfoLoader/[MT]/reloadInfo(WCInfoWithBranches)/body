{
  final SvnVcs vcs=SvnVcs.getInstance(myProject);
  if (vcs == null) {
    return null;
  }
  final SvnFileUrlMapping urlMapping=vcs.getSvnFileUrlMapping();
  final File file=new File(info.getPath());
  final RootUrlInfo rootInfo=urlMapping.getWcRootForFilePath(file);
  if (rootInfo == null) {
    return null;
  }
  final WCInfo wcInfo=new WCInfo(rootInfo.getIoFile().getAbsolutePath(),rootInfo.getAbsoluteUrlAsUrl(),SvnFormatSelector.getWorkingCopyFormat(file),rootInfo.getRepositoryUrl(),SvnUtil.isWorkingCopyRoot(file),rootInfo.getType(),SvnUtil.getDepth(vcs,file));
  return createInfo(wcInfo,vcs,urlMapping);
}
