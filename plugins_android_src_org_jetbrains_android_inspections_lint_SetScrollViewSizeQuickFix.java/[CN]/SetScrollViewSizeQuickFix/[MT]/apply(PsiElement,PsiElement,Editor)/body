{
  final XmlTag tag=PsiTreeUtil.getParentOfType(startElement,XmlTag.class);
  if (tag == null) {
    return;
  }
  final XmlTag parentTag=tag.getParentTag();
  if (parentTag == null) {
    return;
  }
  final boolean isHorizontal=LintConstants.HORIZONTAL_SCROLL_VIEW.equals(parentTag.getName());
  final String attributeName=isHorizontal ? AndroidLintUtil.ATTR_LAYOUT_WIDTH : AndroidLintUtil.ATTR_LAYOUT_HEIGHT;
  tag.setAttribute(attributeName,SdkConstants.NS_RESOURCES,AndroidLintUtil.ATTR_VALUE_WRAP_CONTENT);
}
