{
  return hasProblemFilesBeneath(new Condition<VirtualFile>(){
    public boolean value(    final VirtualFile virtualFile){
      return scope.contains(virtualFile) && (scope.getValue() instanceof PsiElement && PsiUtil.getVirtualFile((PsiElement)scope.getValue()) == virtualFile || scope.someChildContainsFile(virtualFile));
    }
  }
);
}
