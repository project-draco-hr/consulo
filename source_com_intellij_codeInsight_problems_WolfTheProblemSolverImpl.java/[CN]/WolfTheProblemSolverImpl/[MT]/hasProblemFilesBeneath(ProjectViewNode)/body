{
  return hasProblemFilesBeneath(new Condition<VirtualFile>(){
    public boolean value(    final VirtualFile virtualFile){
      return node.contains(virtualFile) && (node.getValue() instanceof PsiElement && PsiUtil.getVirtualFile((PsiElement)node.getValue()) == virtualFile || node.someChildContainsFile(virtualFile));
    }
  }
);
}
