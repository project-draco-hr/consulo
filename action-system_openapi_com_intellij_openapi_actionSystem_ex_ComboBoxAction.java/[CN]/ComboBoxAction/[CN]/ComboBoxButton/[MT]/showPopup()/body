{
  DefaultActionGroup group=createPopupActionGroup(this);
  myForcePressed=true;
  repaint();
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup("",group,DataManager.getInstance().getDataContext(),JBPopupFactory.ActionSelectionAid.SPEEDSEARCH,false,new Runnable(){
    public void run(){
      myForcePressed=false;
      repaint();
    }
  }
);
  popup.showUnderneathOf(this);
}
