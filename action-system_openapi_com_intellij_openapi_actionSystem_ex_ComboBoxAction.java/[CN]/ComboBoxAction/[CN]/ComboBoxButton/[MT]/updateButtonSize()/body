{
  int width;
  String text=getText();
  if ((text == null || text.trim().length() == 0) && (getIcon() == null)) {
    width=ARROW_ICON.getIconWidth() + 10;
  }
 else {
    width=getUI().getPreferredSize(this).width + ARROW_ICON.getIconWidth() + 2;
  }
  setPreferredSize(new Dimension(width,21));
}
