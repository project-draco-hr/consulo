{
  if (myModallyActivated) {
    if (myDialog != null) {
      return myDialog.isShowing();
    }
 else {
      return false;
    }
  }
 else {
    if (myFrame != null) {
      if (!myFrame.isVisible()) {
        return false;
      }
 else {
        return myFrame.getState() == JFrame.NORMAL;
      }
    }
 else {
      return false;
    }
  }
}
