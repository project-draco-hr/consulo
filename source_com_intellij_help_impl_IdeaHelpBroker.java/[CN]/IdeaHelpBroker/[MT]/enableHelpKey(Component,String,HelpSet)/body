{
  if (id == null) {
    throw new NullPointerException("id");
  }
  CSH.setHelpIDString(comp,id);
  if (hs != null) {
    CSH.setHelpSet(comp,hs);
  }
  if (comp instanceof JComponent) {
    JComponent root=(JComponent)comp;
    root.registerKeyboardAction(getDisplayHelpFromFocus(),KeyStroke.getKeyStroke(KeyEvent.VK_HELP,0),JComponent.WHEN_ANCESTOR_OF_FOCUSED_COMPONENT);
    root.registerKeyboardAction(getDisplayHelpFromFocus(),KeyStroke.getKeyStroke(KeyEvent.VK_F1,0),JComponent.WHEN_ANCESTOR_OF_FOCUSED_COMPONENT);
  }
 else {
    comp.addKeyListener(this);
  }
}
