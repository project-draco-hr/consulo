{
  if (--myPostponedCounter == 0) {
    if (ApplicationManager.getApplication().isWriteAccessAllowed()) {
      doPostponedFormatting();
    }
 else {
      ApplicationManager.getApplication().runWriteAction(new Runnable(){
        public void run(){
          doPostponedFormatting();
        }
      }
);
    }
  }
}
