{
  if (SystemInfo.isMac) {
    if (bounds.x + bounds.width - startPoint.x < 16 && bounds.y + bounds.height - startPoint.y < 16 && startPoint.x > startPoint.y && bounds.y + bounds.height - startPoint.y > 0 && bounds.x + bounds.width - startPoint.x > 0) {
      return Cursor.SE_RESIZE_CURSOR;
    }
    return Cursor.DEFAULT_CURSOR;
  }
  if (Math.abs(startPoint.x - bounds.x) < SENSITIVITY) {
    if (Math.abs(startPoint.y - bounds.y) < SENSITIVITY) {
      return Cursor.NW_RESIZE_CURSOR;
    }
 else     if (Math.abs(bounds.y + bounds.height - startPoint.y) < SENSITIVITY) {
      return Cursor.SW_RESIZE_CURSOR;
    }
 else {
      return Cursor.W_RESIZE_CURSOR;
    }
  }
 else   if (Math.abs(bounds.x + bounds.width - startPoint.x) < SENSITIVITY) {
    if (Math.abs(startPoint.y - bounds.y) < SENSITIVITY) {
      return Cursor.NE_RESIZE_CURSOR;
    }
 else     if (Math.abs(bounds.y + bounds.height - startPoint.y) < SENSITIVITY) {
      return Cursor.SE_RESIZE_CURSOR;
    }
 else {
      return Cursor.E_RESIZE_CURSOR;
    }
  }
 else {
    if (Math.abs(startPoint.y - bounds.y) < SENSITIVITY) {
      return Cursor.N_RESIZE_CURSOR;
    }
 else     if (Math.abs(bounds.y + bounds.height - startPoint.y) < SENSITIVITY) {
      return Cursor.S_RESIZE_CURSOR;
    }
 else {
      return Cursor.DEFAULT_CURSOR;
    }
  }
}
