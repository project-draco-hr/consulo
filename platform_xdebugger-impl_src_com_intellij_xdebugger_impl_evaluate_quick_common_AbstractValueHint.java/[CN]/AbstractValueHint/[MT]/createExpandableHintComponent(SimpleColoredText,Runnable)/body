{
  final JComponent component=HintUtil.createInformationLabel(text,COLLAPSED_TREE_ICON);
  addMouseListenerToHierarchy(component,new MouseAdapter(){
    public void mouseClicked(    MouseEvent e){
      if (myCurrentHint != null) {
        myCurrentHint.hide();
      }
      expand.run();
    }
  }
);
  return component;
}
