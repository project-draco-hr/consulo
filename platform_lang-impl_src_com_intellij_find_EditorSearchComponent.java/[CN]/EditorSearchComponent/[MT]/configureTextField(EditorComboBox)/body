{
  searchField.addFocusListener(new FocusListener(){
    public void focusGained(    final FocusEvent e){
      searchField.repaint();
    }
    public void focusLost(    final FocusEvent e){
      searchField.repaint();
    }
  }
);
  new CloseOnESCAction(this,searchField);
  updateHistory(searchField);
}
