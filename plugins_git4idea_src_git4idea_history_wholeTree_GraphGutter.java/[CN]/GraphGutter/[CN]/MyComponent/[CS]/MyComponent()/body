{
  setDoubleBuffered(true);
  setBackground(UIUtil.getTableBackground());
  addMouseListener(new MouseAdapter(){
    @Override public void mousePressed(    MouseEvent e){
      final MouseEvent mouseEvent=new MouseEvent((Component)e.getSource(),e.getID(),e.getWhen(),e.getModifiers(),0,(int)myTableViewPort.getViewPosition().getY() + e.getY(),e.getClickCount(),e.isPopupTrigger(),e.getButton());
      myJBTable.dispatchEvent(mouseEvent);
    }
  }
);
  addMouseWheelListener(new MouseWheelListener(){
    @Override public void mouseWheelMoved(    MouseWheelEvent e){
      myTableViewPort.dispatchEvent(e);
    }
  }
);
  setBorder(BorderFactory.createMatteBorder(0,0,1,0,UIUtil.getBorderColor()));
}
