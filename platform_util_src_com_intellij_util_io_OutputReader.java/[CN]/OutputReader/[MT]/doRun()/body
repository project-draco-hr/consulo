{
  try {
    while (true) {
      boolean read=readAvailable();
      if (!read) {
        myReadFullySemaphore.up();
      }
      if (isStopped) {
        break;
      }
      Thread.sleep(mySleepingPolicy.getTimeToSleep(read));
    }
  }
 catch (  InterruptedException ignore) {
  }
catch (  IOException e) {
    LOG.info(e);
  }
catch (  Exception e) {
    LOG.error(e);
  }
 finally {
    try {
      myReader.close();
    }
 catch (    IOException e) {
      LOG.warn("Can't close reader",e);
    }
  }
}
