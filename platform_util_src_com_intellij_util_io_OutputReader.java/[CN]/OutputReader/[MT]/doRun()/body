{
  try {
    while (true) {
      boolean read=readAvailable();
      if (!read) {
        myReadFullySemaphore.up();
      }
      if (isStopped) {
        myReader.close();
        break;
      }
      Thread.sleep(read ? 1 : 5);
    }
  }
 catch (  InterruptedException ignore) {
  }
catch (  IOException e) {
    LOG.info(e);
  }
catch (  Exception e) {
    LOG.error(e);
  }
}
