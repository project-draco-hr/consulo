{
  if (getLineNumberAreaWidth() == 0 && getAnnotationsAreaWidthEx() == 0 && getLineMarkerAreaWidth() == 0) {
    return getFoldingAreaWidth() == 0 ? 0 : 1;
  }
 else   if (getLineNumberAreaWidth() == 0 && getAnnotationsAreaWidthEx() > 0) {
    return 0;
  }
 else {
    return GAP_BETWEEN_AREAS;
  }
}
