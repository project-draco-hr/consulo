{
  PsiClass oldClass=JavaPsiFacade.getInstance(myProject).findClass(oldName,ProjectScope.getAllScope(myProject));
  CopyClassesHandler.doCopyClasses(Collections.singletonMap(oldClass.getNavigationElement().getContainingFile(),new PsiClass[]{oldClass}),copyName,myPsiManager.findDirectory(myRootDir),myProject);
}
