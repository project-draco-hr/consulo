{
  String directoryPath=PathManager.getConfigPath() + File.separator + CODESTYLES_DIRECTORY;
  File directory=new File(directoryPath);
  if (!directory.exists()) {
    if (!create)     return null;
    if (!directory.mkdir()) {
      Messages.showErrorDialog(PsiBundle.message("codestyle.cannot.save.settings.directory.cant.be.created.message",directoryPath),PsiBundle.message("codestyle.cannot.save.settings.directory.cant.be.created.title"));
      return null;
    }
  }
  return directory;
}
