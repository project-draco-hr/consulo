{
  String directoryPath=PathManager.getConfigPath() + File.separator + "codestyles";
  File directory=new File(directoryPath);
  if (!directory.exists()) {
    if (!create)     return null;
    if (!directory.mkdir()) {
      Messages.showErrorDialog("Cannot save code style schemes. Directory " + directoryPath + " cannot be created.","Cannot Save Settings");
      return null;
    }
  }
  return directory;
}
