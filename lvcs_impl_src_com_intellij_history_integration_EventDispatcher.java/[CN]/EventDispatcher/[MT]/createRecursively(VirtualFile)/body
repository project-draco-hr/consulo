{
  if (notAllowedOrNotUnderContentRoot(f))   return;
  if (isRefreshing && !f.isDirectory()) {
    getOrInitProcessor().addFileToCreate(f);
    return;
  }
  myFacade.create(f);
  if (f.isDirectory()) {
    for (    VirtualFile child : f.getChildren()) {
      createRecursively(child);
    }
  }
}
