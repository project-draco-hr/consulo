{
  if (element instanceof ResourceElementWrapper) {
    element=((ResourceElementWrapper)element).getWrappee();
  }
  if (element instanceof XmlFile) {
    if (AndroidFacet.getInstance(element) == null || ((XmlFile)element).getRootTag() == null) {
      return false;
    }
    return DomManager.getDomManager(element.getProject()).getDomFileDescription((XmlFile)element) instanceof LayoutDomFileDescription;
  }
  return getLayoutUsageDataFromContext(editor) != null;
}
