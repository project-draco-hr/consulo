{
  myListener=new VirtualFileAdapter(){
    @Override public void contentsChanged(    VirtualFileEvent event){
      final VirtualFile file=event.getFile();
      if (myUserDevicesFile != null && SdkConstants.FN_DEVICES_XML.equals(file.getName()) && FileUtil.pathsEqual(FileUtil.toSystemIndependentName(myUserDevicesFile.getPath()),file.getPath())) {
        userDevicesChanged();
      }
    }
  }
;
  LocalFileSystem.getInstance().addVirtualFileListener(myListener);
}
