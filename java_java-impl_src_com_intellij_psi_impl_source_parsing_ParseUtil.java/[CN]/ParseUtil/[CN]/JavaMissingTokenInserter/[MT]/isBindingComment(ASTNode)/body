{
  final ASTNode prev=comment.getTreePrev();
  final boolean prevOk=prev == null || (prev.getElementType() == TokenType.WHITE_SPACE && prev.textContains('\n'));
  final ASTNode next=comment.getTreeNext();
  final boolean nextOk=next != null && (next.getElementType() != TokenType.WHITE_SPACE || StringUtil.getLineBreakCount(next.getText()) < 2);
  return prevOk && nextOk;
}
