{
  Thread caller=Thread.currentThread();
synchronized (this) {
    if (caller == owner_)     ++holds_;
 else {
      try {
        while (owner_ != null)         wait();
        owner_=caller;
        holds_=1;
      }
 catch (      InterruptedException ex) {
        notify();
        throw ex;
      }
    }
  }
}
