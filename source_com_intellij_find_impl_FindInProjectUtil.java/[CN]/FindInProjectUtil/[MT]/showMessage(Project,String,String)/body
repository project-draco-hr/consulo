{
  final int[] answer=new int[1];
  try {
    SwingUtilities.invokeAndWait(new Runnable(){
      public void run(){
        answer[0]=Messages.showYesNoDialog(project,message,title,Messages.getWarningIcon());
      }
    }
);
  }
 catch (  Exception e) {
    answer[0]=DialogWrapper.OK_EXIT_CODE;
  }
  return answer[0];
}
