{
  final PsiExpression condition=ifStatement.getCondition();
  if (condition == null || !(condition instanceof PsiPolyadicExpression)) {
    return null;
  }
  final PsiPolyadicExpression polyadicExpression=(PsiPolyadicExpression)condition;
  final PsiExpression operand=findOperand(element,polyadicExpression);
  if (operand == null) {
    return null;
  }
  return create(factory,ifStatement.getThenBranch(),ifStatement.getElseBranch(),operand,removeOperand(factory,polyadicExpression,operand),polyadicExpression.getOperationTokenType());
}
