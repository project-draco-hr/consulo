{
  final Ref<Boolean> done=new Ref<Boolean>(false);
  doAndWaitForBuilder(new Runnable(){
    public void run(){
      getBuilder().select(elements,new Runnable(){
        public void run(){
          done.set(true);
        }
      }
,addToSelection);
    }
  }
,new Condition(){
    public boolean value(    Object o){
      return done.get();
    }
  }
);
}
