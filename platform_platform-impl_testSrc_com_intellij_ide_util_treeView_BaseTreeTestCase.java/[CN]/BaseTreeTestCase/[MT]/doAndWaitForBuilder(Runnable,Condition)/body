{
  final Ref<Boolean> started=new Ref<Boolean>();
  invokeLaterIfNeeded(new Runnable(){
    public void run(){
      started.set(true);
      runnable.run();
    }
  }
);
  waitBuilderToCome(new Condition(){
    public boolean value(    Object o){
      return started.get() && condition.value(null);
    }
  }
);
}
