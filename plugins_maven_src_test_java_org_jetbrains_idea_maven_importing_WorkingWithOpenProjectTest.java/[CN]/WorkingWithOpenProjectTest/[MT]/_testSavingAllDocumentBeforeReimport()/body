{
  myProjectsManager.listenForExternalChanges();
  final Document d=FileDocumentManager.getInstance().getDocument(myProjectPom);
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      d.setText(createPomXml("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<dependencies>"+ "  <dependency>"+ "    <groupId>junit</groupId>"+ "    <artifactId>junit</artifactId>"+ "    <version>4.0</version>"+ "  </dependency>"+ "</dependencies>"));
    }
  }
);
  resolveDependenciesAndImport();
  assertModuleLibDep("project","Maven: junit:junit:4.0");
}
