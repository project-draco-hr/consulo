{
synchronized (myDataLock) {
    try {
      myMap.close();
    }
 catch (    IOException ignored) {
    }
    PersistentHashMap.deleteFilesStartingWith(myBaseFile);
    try {
      myMap=createMap(myBaseFile);
    }
 catch (    IOException ignored) {
      return false;
    }
    return true;
  }
}
