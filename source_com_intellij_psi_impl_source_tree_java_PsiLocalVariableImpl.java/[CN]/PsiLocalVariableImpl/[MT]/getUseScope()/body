{
  if (PsiUtil.isInJspFile(this)) {
    if (getTreeParent().getElementType() == JavaElementType.DECLARATION_STATEMENT && getTreeParent().getTreeParent().getElementType() == JavaElementType.CODE_BLOCK && getTreeParent().getTreeParent().getTreeParent().getElementType() == JspElementType.HOLDER_METHOD) {
      final PsiFile[] includingFiles=JspSpiUtil.getReferencingFiles(PsiUtil.getJspFile(this));
      return new LocalSearchScope(includingFiles);
    }
  }
  return super.getUseScope();
}
