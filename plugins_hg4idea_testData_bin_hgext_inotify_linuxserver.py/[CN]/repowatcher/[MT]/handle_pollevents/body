def handle_pollevents(self, events):
    if self.ui.debugflag:
        self.ui.note((_('%s readable: %d bytes\n') % (self.event_time(), self.threshold.readable())))
    if (not self.threshold()):
        if self.registered:
            if self.ui.debugflag:
                self.ui.note((_('%s below threshold - unhooking\n') % self.event_time()))
            self.unregister()
            self.timeout = 250
    else:
        self.read_events()
