def _patsplit(pat, default):
    'Split a string into an optional pattern kind prefix and the\n    actual pattern.'
    if (':' in pat):
        (kind, val) = pat.split(':', 1)
        if (kind in ('re', 'glob', 'path', 'relglob', 'relpath', 'relre')):
            return (kind, val)
    return (default, pat)
