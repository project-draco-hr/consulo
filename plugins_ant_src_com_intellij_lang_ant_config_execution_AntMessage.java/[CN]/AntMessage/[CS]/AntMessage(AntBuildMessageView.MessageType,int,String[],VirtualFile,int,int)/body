{
  myType=type;
  myPriority=priority;
  myFile=file;
  myLine=line;
  myColumn=column;
  myTextLines=lines;
  final StringBuilder builder=StringBuilderSpinAllocator.alloc();
  try {
    for (    final String aLine : lines) {
      builder.append(aLine);
      builder.append('\n');
    }
    myText=builder.toString();
  }
  finally {
    StringBuilderSpinAllocator.dispose(builder);
  }
}
