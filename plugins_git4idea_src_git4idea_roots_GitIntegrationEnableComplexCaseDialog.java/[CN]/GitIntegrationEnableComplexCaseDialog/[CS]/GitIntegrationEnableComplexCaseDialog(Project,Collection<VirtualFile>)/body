{
  super(project);
  myRoots=roots;
  int rootsNum=myRoots.size();
  myGitInit=new JRadioButton("Create Git repository for the whole project, and register " + (rootsNum == 1 ? "both" : "all") + " VCS roots");
  myJustAddRoots=new JRadioButton("Just register " + pluralize("this",rootsNum) + " Git "+ pluralize("repository",rootsNum)+ " as VCS "+ pluralize("root",rootsNum));
  setTitle("Enable Git Integration");
  init();
}
