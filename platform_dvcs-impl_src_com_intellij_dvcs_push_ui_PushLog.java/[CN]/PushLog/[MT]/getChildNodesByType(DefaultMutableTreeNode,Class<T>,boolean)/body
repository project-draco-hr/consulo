{
  List<T> nodes=ContainerUtil.newArrayList();
  if (node.getChildCount() < 1) {
    return nodes;
  }
  for (DefaultMutableTreeNode childNode=(DefaultMutableTreeNode)node.getFirstChild(); childNode != null; childNode=(DefaultMutableTreeNode)node.getChildAfter(childNode)) {
    if (type.isInstance(childNode)) {
      @SuppressWarnings("unchecked") T nodeT=(T)childNode;
      if (reverseOrder) {
        nodes.add(0,nodeT);
      }
 else {
        nodes.add(nodeT);
      }
    }
  }
  return nodes;
}
