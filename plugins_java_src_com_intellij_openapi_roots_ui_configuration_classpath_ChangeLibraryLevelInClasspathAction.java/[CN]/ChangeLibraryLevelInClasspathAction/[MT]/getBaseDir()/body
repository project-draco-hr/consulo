{
  if (isConvertingToModuleLibrary()) {
    final VirtualFile[] roots=myPanel.getRootModel().getContentRoots();
    if (roots.length > 0) {
      return roots[0];
    }
    final VirtualFile moduleDir=myPanel.getRootModel().getModule().getModuleDir();
    if (moduleDir != null) {
      return moduleDir;
    }
  }
  return super.getBaseDir();
}
