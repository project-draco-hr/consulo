{
  final PsiVariable var=(PsiVariable)declaration.getDeclaredElements()[0];
  final PsiExpression initializer=var.getInitializer();
  new WriteCommandAction(declaration.getProject()){
    @Override protected void run(    Result result) throws Throwable {
      declaration.replace(JavaPsiFacade.getElementFactory(variable.getProject()).createStatementFromText(variable.getName() + " = " + initializer.getText()+ ";",declaration));
    }
  }
.execute();
  finishTemplate(editor);
}
