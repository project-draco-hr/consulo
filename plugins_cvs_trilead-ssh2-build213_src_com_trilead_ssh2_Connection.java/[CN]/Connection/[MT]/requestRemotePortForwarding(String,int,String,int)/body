{
  if (tm == null)   throw new IllegalStateException("You need to establish a connection first.");
  if (!authenticated)   throw new IllegalStateException("The connection is not authenticated.");
  if ((bindAddress == null) || (targetAddress == null) || (bindPort <= 0)|| (targetPort <= 0))   throw new IllegalArgumentException();
  cm.requestGlobalForward(bindAddress,bindPort,targetAddress,targetPort);
}
