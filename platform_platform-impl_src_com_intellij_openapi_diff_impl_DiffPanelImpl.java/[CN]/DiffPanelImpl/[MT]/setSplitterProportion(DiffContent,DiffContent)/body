{
  if (content1.isEmpty()) {
    mySplitter.setProportion(0f);
    mySplitter.setResizeEnabled(false);
    return;
  }
  if (content2.isEmpty()) {
    mySplitter.setProportion(1.0f);
    mySplitter.setResizeEnabled(false);
    return;
  }
  mySplitter.setProportion(0.5f);
  mySplitter.setResizeEnabled(true);
}
