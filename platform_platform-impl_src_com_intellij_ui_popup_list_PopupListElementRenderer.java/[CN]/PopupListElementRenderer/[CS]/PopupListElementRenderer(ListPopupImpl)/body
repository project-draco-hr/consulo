{
  super(new ListItemDescriptor(){
    @Override public String getTextFor(    Object value){
      return aPopup.getListStep().getTextFor(value);
    }
    @Override public String getTooltipFor(    Object value){
      return null;
    }
    @Override public Icon getIconFor(    Object value){
      return aPopup.getListStep().getIconFor(value);
    }
    @Override public boolean hasSeparatorAboveOf(    Object value){
      return aPopup.getListModel().isSeparatorAboveOf(value);
    }
    @Override public String getCaptionAboveOf(    Object value){
      return aPopup.getListModel().getCaptionAboveOf(value);
    }
  }
);
  myPopup=aPopup;
}
