{
  Class c=bean.getClass();
  Object o=myDefaultBeans.get(c);
  if (o == null) {
    try {
      o=c.newInstance();
      configure(o);
    }
 catch (    InstantiationException e) {
      throw new XmlSerializationException(e);
    }
catch (    IllegalAccessException e) {
      throw new XmlSerializationException(e);
    }
    myDefaultBeans.put(c,o);
  }
  return o;
}
