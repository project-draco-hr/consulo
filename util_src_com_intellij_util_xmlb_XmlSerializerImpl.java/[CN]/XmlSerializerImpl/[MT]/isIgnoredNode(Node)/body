{
  if (node instanceof Text && node.getNodeValue().trim().length() == 0) {
    return true;
  }
  if (node instanceof Comment) {
    return true;
  }
  if (node instanceof Attr) {
    Attr attr=(Attr)node;
    final String namespaceURI=attr.getNamespaceURI();
    if (namespaceURI != null && namespaceURI != "")     return true;
  }
  return false;
}
