{
  final StringBuffer b=new StringBuffer();
  for (int i=0; i < s.length(); i++) {
    final char c=s.charAt(i);
    if (c == '_' || Character.isDigit(c) || Character.isLetter(c)) {
      b.append(c);
    }
 else     if (c == '-') {
      b.append('_');
    }
 else {
      b.append(Character.getNumericValue(c));
    }
  }
  return b.toString();
}
