{
  if (myBusy) {
    if (myBusyIcon == null) {
      myBusyIcon=new AsyncProcessIcon(toString());
      myBusyIcon.setPaintPassiveIcon(false);
      add(myBusyIcon);
    }
  }
  if (myBusyIcon != null) {
    if (myBusy) {
      myBusyIcon.resume();
    }
 else {
      myBusyIcon.suspend();
    }
    updateBusyIconLocation();
  }
}
