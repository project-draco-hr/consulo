{
  final QuickFix fix=myTool.getQuickFix(hint);
  if (fix != null) {
    if (problemDescriptor instanceof ProblemDescriptor) {
      final ProblemDescriptor descriptor=new ProblemDescriptorImpl(((ProblemDescriptor)problemDescriptor).getStartElement(),((ProblemDescriptor)problemDescriptor).getEndElement(),problemDescriptor.getDescriptionTemplate(),new LocalQuickFix[]{(LocalQuickFix)fix},ProblemHighlightType.GENERIC_ERROR_OR_WARNING,false,null);
      return QuickFixWrapper.wrap(descriptor,0);
    }
 else {
      return new IntentionAction(){
        @NotNull public String getText(){
          return fix.getName();
        }
        @NotNull public String getFamilyName(){
          return fix.getFamilyName();
        }
        public boolean isAvailable(        @NotNull Project project,        Editor editor,        PsiFile file){
          return true;
        }
        public void invoke(        @NotNull Project project,        Editor editor,        PsiFile file) throws IncorrectOperationException {
          fix.applyFix(project,problemDescriptor);
        }
        public boolean startInWriteAction(){
          return true;
        }
      }
;
    }
  }
  return null;
}
