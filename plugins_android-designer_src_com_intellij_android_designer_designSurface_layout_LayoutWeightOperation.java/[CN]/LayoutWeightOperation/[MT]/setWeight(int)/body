{
  float weight=myWeight + value / 100f;
  if (weight <= 0) {
    XmlAttribute attribute=myComponent.getTag().getAttribute("android:layout_weight");
    if (attribute != null) {
      attribute.delete();
    }
  }
 else {
    myComponent.getTag().setAttribute("android:layout_weight",FORMAT.format(weight).replace(',','.'));
  }
}
