{
  new LinkMouseListenerBase<Consumer<MouseEvent>>(){
    @Nullable @Override protected Consumer<MouseEvent> getTagAt(    @NotNull MouseEvent e){
      return (Consumer<MouseEvent>)((SimpleColoredComponent)e.getSource()).getFragmentTagAt(e.getX());
    }
    @Override protected void handleTagClick(    @Nullable Consumer<MouseEvent> tag,    @NotNull MouseEvent event){
      if (tag != null) {
        tag.consume(event);
      }
    }
  }
.installOn(component);
}
