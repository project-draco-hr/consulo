{
  if (rebuild) {
    cleanUpStructureCaches();
  }
  if (EventQueue.isDispatchThread()) {
    SimpleTreeBuilder.super.updateFromRoot();
  }
 else {
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      public void run(){
        SimpleTreeBuilder.super.updateFromRoot();
      }
    }
);
  }
}
