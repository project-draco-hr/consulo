{
  if (getStringToFind() == null || getStringToFind().length() == 0) {
    setOKActionEnabled(false);
    return;
  }
  if (myRbDirectory != null && myRbDirectory.isSelected() && (getDirectory() == null || getDirectory().length() == 0)) {
    setOKActionEnabled(false);
    return;
  }
  setOKActionEnabled(true);
}
