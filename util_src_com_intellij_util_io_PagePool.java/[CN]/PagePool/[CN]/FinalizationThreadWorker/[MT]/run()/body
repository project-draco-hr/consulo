{
  while (true) {
    try {
      FinalizationRequest request=retreiveFinalizationRequest();
      if (request != null) {
        processFinalizationRequest(request);
        Thread.sleep(5);
      }
 else {
synchronized (finalizationLock) {
          try {
            finalizationLock.wait(10);
          }
 catch (          InterruptedException e) {
            throw new RuntimeException(e);
          }
        }
      }
    }
 catch (    Throwable e) {
      LOG.info(e);
    }
  }
}
