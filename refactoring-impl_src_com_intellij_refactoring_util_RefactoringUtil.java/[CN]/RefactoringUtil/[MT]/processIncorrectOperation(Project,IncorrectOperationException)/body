{
  @NonNls final String message=e.getMessage();
  final int index=message != null ? message.indexOf("java.io.IOException") : -1;
  if (index >= 0) {
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      public void run(){
        Messages.showMessageDialog(project,message.substring(index + "java.io.IOException".length()),RefactoringBundle.message("error.title"),Messages.getErrorIcon());
      }
    }
);
  }
 else {
    LOG.error(e);
  }
}
