def _disabledhelp(path):
    'retrieve help synopsis of a disabled extension (without importing)'
    try:
        file = open(path)
    except IOError:
        return
    else:
        doc = help.moduledoc(file)
        file.close()
    if doc:
        return gettext(doc).splitlines()[0]
    else:
        return _('(no help text available)')
