def disabled():
    'find disabled extensions from hgext\n    returns a dict of {name: desc}, and the max name length'
    paths = _disabledpaths()
    if (not paths):
        return (None, 0)
    exts = {}
    maxlength = 0
    for (name, path) in paths.iteritems():
        doc = _disabledhelp(path)
        if (not doc):
            continue
        exts[name] = doc
        if (len(name) > maxlength):
            maxlength = len(name)
    return (exts, maxlength)
