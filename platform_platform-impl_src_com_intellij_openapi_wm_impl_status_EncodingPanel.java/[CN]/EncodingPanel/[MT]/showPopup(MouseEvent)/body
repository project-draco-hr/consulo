{
  if (!actionEnabled) {
    return;
  }
  DataContext dataContext=getContext();
  DefaultActionGroup group=encodingActionsPair.createActionGroup();
  ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup("File Encoding",group,dataContext,true,false,false,null,2,null);
  Dimension dimension=popup.getContent().getPreferredSize();
  Point at=new Point(0,-dimension.height);
  popup.show(new RelativePoint(e.getComponent(),at));
  Disposer.register(this,popup);
}
