{
  final VirtualFile file=getSelectedFile();
  if (file != null) {
    Charset charset=ChooseFileEncodingAction.charsetFromContent(file);
    if (charset == null)     charset=file.getCharset();
    setSelectedValue(charset);
    myStatusBar.updateWidget(ID());
  }
 else {
    mySelected="";
    myStatusBar.updateWidget(ID());
  }
}
