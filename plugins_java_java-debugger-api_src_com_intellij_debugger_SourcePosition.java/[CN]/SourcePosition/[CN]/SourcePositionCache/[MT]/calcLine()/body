{
  final PsiFile file=getFile();
  Document document=null;
  try {
    document=PsiDocumentManager.getInstance(file.getProject()).getDocument(file);
  }
 catch (  Throwable e) {
    LOG.error(e);
  }
  if (document != null) {
    try {
      return document.getLineNumber(calcOffset());
    }
 catch (    IndexOutOfBoundsException e) {
    }
  }
  return -1;
}
