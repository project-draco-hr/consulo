def write_err(self, *args):
    try:
        if (not getattr(sys.stdout, 'closed', False)):
            sys.stdout.flush()
        for a in args:
            sys.stderr.write(str(a))
        if (not getattr(sys.stderr, 'closed', False)):
            sys.stderr.flush()
    except IOError as inst:
        if (inst.errno != errno.EPIPE):
            raise
