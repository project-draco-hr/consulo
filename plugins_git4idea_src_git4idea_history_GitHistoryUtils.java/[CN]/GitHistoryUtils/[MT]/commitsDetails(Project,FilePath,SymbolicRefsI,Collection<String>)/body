{
  path=getLastCommitName(project,path);
  VirtualFile root=GitUtil.getGitRoot(path);
  GitSimpleHandler h=new GitSimpleHandler(project,root,GitCommand.SHOW);
  GitLogParser parser=new GitLogParser(project,GitLogParser.NameStatus.STATUS,SHORT_HASH,HASH,COMMIT_TIME,AUTHOR_NAME,AUTHOR_TIME,AUTHOR_EMAIL,COMMITTER_NAME,COMMITTER_EMAIL,SHORT_PARENTS,REF_NAMES,SUBJECT,BODY,RAW_BODY);
  h.setStdoutSuppressed(true);
  h.addParameters("--name-status","-M",parser.getPretty(),"--encoding=UTF-8");
  h.addParameters(new ArrayList<String>(commitsIds));
  String output=h.run();
  final List<GitCommit> rc=new ArrayList<GitCommit>();
  for (  GitLogRecord record : parser.parse(output)) {
    final GitCommit gitCommit=createCommit(project,refs,root,record);
    rc.add(gitCommit);
  }
  return rc;
}
