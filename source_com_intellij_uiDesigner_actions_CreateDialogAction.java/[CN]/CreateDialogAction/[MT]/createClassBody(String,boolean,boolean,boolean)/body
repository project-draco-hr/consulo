    result.append(");");
  }
  result.append("}\n");
  if (generateOK) {
    result.append("\n");
    result.append("private void onOK(){\n");
    result.append(" // add your code here\n");
    result.append("dispose();\n");
    result.append("}\n");
  }
  if (generateCancel) {
    result.append("\n");
    result.append("private void onCancel(){\n");
    result.append(" // add your code here if necessary\n");
