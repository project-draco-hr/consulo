{
  JComponent optionsPanel=super.createCenterPanel();
  JPanel panel=new JPanel();
  panel.setLayout(new GridBagLayout());
  GridBagConstraints gbc=new GridBagConstraints();
  gbc.fill=GridBagConstraints.HORIZONTAL;
  gbc.weightx=1.0;
  panel.add(optionsPanel,gbc);
  JavaRefactoringSettings settings=JavaRefactoringSettings.getInstance();
  myCbSearchInComments=new JCheckBox(RefactoringBundle.message("search.in.comments.and.strings"),settings.INLINE_CLASS_SEARCH_IN_COMMENTS);
  myCbSearchTextOccurences=new JCheckBox(RefactoringBundle.message("search.for.text.occurrences"),settings.INLINE_CLASS_SEARCH_IN_NON_JAVA);
  gbc.gridy=1;
  panel.add(myCbSearchInComments,gbc);
  gbc.gridy=2;
  panel.add(myCbSearchTextOccurences,gbc);
  return panel;
}
