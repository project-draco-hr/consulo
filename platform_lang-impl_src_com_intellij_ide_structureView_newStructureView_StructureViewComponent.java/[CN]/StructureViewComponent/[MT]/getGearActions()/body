{
  DefaultActionGroup group=createActionGroup(true);
  group.addAction(new ToggleAction("Show Toolbar"){
    @Override public boolean isDumbAware(){
      return true;
    }
    @Override public boolean isSelected(    AnActionEvent e){
      return getSettings().SHOW_TOOLBAR;
    }
    @Override public void setSelected(    AnActionEvent e,    boolean state){
      setToolbar(state ? createToolbar() : null);
      getSettings().SHOW_TOOLBAR=state;
    }
  }
).setAsSecondary(true);
  return group;
}
