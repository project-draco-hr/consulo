{
  if (getMethod(psiClass,false) != null || isSuperClassForBaseClass(psiClass)) {
    return false;
  }
  if (hasBaseClassMethod(psiClass) || isAbstract(psiClass)) {
    for (    final PsiClass subclass : getSubclasses(psiClass)) {
      if (!shouldHideClass(subclass)) {
        return false;
      }
    }
    return true;
  }
  return false;
}
