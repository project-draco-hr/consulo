{
  try {
    final Class<?> aClass=Class.forName(className,true,myPluginDescriptor == null ? getClass().getClassLoader() : myPluginDescriptor.getPluginClassLoader());
    return new ConstructorInjectionComponentAdapter(className,aClass).getComponentInstance(project.getPicoContainer());
  }
 catch (  Exception e) {
    LOG.error(e);
    return null;
  }
}
