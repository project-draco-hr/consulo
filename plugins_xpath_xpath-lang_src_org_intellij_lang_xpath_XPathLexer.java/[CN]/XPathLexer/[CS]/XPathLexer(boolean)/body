{
  super(new _XPathLexer(xpath2Syntax){
    @Override protected void readComment() throws IOException {
      int state=yystate();
      int start=getTokenStart();
      while (true) {
        IElementType type=advance();
        if (type == null || type == XPath2TokenTypes.END_COMMENT) {
          break;
        }
      }
      setStart(start);
      yybegin(state);
    }
  }
);
}
