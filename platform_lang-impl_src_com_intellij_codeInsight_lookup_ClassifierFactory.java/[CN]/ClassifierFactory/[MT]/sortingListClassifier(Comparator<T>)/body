{
  return new Classifier<T>(){
    @Override public void addElement(    T t){
    }
    @Override public Iterable<List<T>> classify(    List<T> source){
      final List<T> copy=new ArrayList<T>(source);
      Collections.sort(source,comparator);
      return Collections.singletonList(copy);
    }
    @Override public void describeItems(    LinkedHashMap<T,StringBuilder> map){
      final String str="sorted by " + comparator;
      for (      StringBuilder builder : map.values()) {
        builder.append(str);
      }
    }
  }
;
}
