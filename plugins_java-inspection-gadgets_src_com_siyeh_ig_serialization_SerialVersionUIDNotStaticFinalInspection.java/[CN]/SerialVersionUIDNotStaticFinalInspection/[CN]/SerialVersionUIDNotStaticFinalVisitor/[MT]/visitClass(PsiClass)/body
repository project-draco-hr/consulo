{
  if (aClass.isInterface() || aClass.isAnnotationType()) {
    return;
  }
  final PsiField field=aClass.findFieldByName(HardcodedMethodConstants.SERIAL_VERSION_UID,false);
  if (field == null) {
    return;
  }
  final PsiType type=field.getType();
  final boolean wrongType=!PsiType.LONG.equals(type);
  if (field.hasModifierProperty(PsiModifier.STATIC) && field.hasModifierProperty(PsiModifier.PRIVATE) && field.hasModifierProperty(PsiModifier.FINAL)&& !wrongType) {
    return;
  }
  if (!SerializationUtils.isSerializable(aClass)) {
    return;
  }
  registerFieldError(field,Boolean.valueOf(wrongType));
}
