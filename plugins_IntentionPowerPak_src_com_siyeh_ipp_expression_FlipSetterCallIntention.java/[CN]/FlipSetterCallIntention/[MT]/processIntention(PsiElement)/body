{
  final Editor editor=getEditorByElementIfItHasSelection(element);
  if (editor == null) {
    if (element instanceof PsiMethodCallExpression) {
      flipCall((PsiMethodCallExpression)element);
    }
  }
 else {
    final List<PsiMethodCallExpression> methodCalls=PsiSelectionSearcher.searchElementsInSelection(editor,element.getProject(),PsiMethodCallExpression.class,false);
    for (    PsiMethodCallExpression call : methodCalls) {
      flipCall(call);
    }
    editor.getSelectionModel().removeSelection();
  }
}
