{
  if (myTool != null) {
    myTool.deactivate();
  }
  myTool=tool;
  if (myTool != null) {
    myTool.setToolProvider(this);
    myTool.activate();
    if (myArea != null) {
      myTool.setArea(myArea);
      myTool.refreshCursor();
      try {
        myTool.mouseMove(myEvent,myArea);
      }
 catch (      Exception e) {
        showError("Edit operation",e);
      }
    }
  }
}
