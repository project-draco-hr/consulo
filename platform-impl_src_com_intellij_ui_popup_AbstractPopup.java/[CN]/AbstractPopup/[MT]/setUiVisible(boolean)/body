{
  if (myPopup != null) {
    if (visible) {
      myPopup.show();
      final JWindow window=getPopupWindow();
      if (window != null) {
        window.setSize(myRestoreWindowSize);
        myRestoreWindowSize=null;
      }
    }
 else {
      final JWindow window=getPopupWindow();
      if (window != null) {
        myRestoreWindowSize=window.getSize();
        window.hide();
      }
    }
  }
}
