{
  if (!(element instanceof PsiBlockStatement)) {
    return false;
  }
  final PsiBlockStatement blockStatement=(PsiBlockStatement)element;
  final PsiElement parent=blockStatement.getParent();
  if (!(parent instanceof PsiIfStatement || parent instanceof PsiWhileStatement || parent instanceof PsiDoWhileStatement|| parent instanceof PsiForStatement|| parent instanceof PsiForeachStatement)) {
    return false;
  }
  final PsiCodeBlock codeBlock=blockStatement.getCodeBlock();
  final PsiStatement[] statements=codeBlock.getStatements();
  if (statements.length != 1 || statements[0] instanceof PsiDeclarationStatement) {
    return false;
  }
  final PsiFile file=element.getContainingFile();
  return !(file instanceof JspFile);
}
