{
  super(addedFileInfo);
  KeywordSubstitutionWrapper defaultSubst=(KeywordSubstitutionWrapper)myAddedFileInfo.getKeywordSubstitutionsWithSelection().getSelection();
  final KeywordSubstitutionComboBoxWrapper wrapper=new KeywordSubstitutionComboBoxWrapper(mySubstitutionComboBox,defaultSubst.getStringRepresentation());
  mySubstitutionComboBox.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      myAddedFileInfo.setKeywordSubstitution(wrapper.getSelection().getSubstitution());
    }
  }
);
  init();
}
