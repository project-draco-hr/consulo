{
  Project project=PlatformDataKeys.PROJECT.getData(e.getDataContext());
  if (project == null) {
    project=ProjectManager.getInstance().getDefaultProject();
  }
  ConfigurableGroup[] group=new ConfigurableGroup[]{new ProjectConfigurablesGroup(project,false),new IdeConfigurablesGroup()};
  final long startTime=System.nanoTime();
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      final long endTime=System.nanoTime();
      if (ApplicationManagerEx.getApplicationEx().isInternal()) {
        System.out.println("Displaying settings dialog took " + ((endTime - startTime) / 1000000) + " ms");
      }
    }
  }
);
  ShowSettingsUtil.getInstance().showSettingsDialog(project,group);
}
