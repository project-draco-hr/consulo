{
  Charset charset=null;
  if (project != null) {
    charset=EncodingProjectManager.getInstance(project).getDefaultCharset();
  }
  if (charset == null) {
    charset=EncodingManager.getInstance().getDefaultCharset();
  }
  if (charset == null) {
    charset=CharsetToolkit.UTF8_CHARSET;
  }
  return charset;
}
