{
  MavenIndex i=new LocalMavenIndex("local",myDataTestFixture.getTestDataPath("local2"));
  myIndices.add(i);
  myIndices.save();
  shutdownIndex();
  FileWriter w=new FileWriter(new File(myIndexDir,MavenIndices.INDICES_LIST_FILE));
  w.write("bad content");
  w.close();
  initIndex();
  myIndices.load();
  assertTrue(myIndices.getIndices().isEmpty());
  assertFalse(myIndexDir.exists());
}
