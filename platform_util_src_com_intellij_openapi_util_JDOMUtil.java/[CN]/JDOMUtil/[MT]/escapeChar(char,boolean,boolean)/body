{
switch (c) {
case '\n':
    return escapeLineEnds ? "&#10;" : null;
case '\r':
  return escapeLineEnds ? "&#13;" : null;
case '\t':
return escapeLineEnds ? "&#9;" : null;
case ' ':
return escapeSpaces ? "&#20" : null;
case '<':
return "&lt;";
case '>':
return "&gt;";
case '\"':
return "&quot;";
case '&':
return "&amp;";
}
return null;
}
