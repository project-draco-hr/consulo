{
  if (Comparing.equal(aRoot.getUserObject(),aObject)) {
    return aRoot;
  }
 else {
    for (int i=0; i < aRoot.getChildCount(); i++) {
      final DefaultMutableTreeNode candidate=findNodeWithObject((DefaultMutableTreeNode)aRoot.getChildAt(i),aObject);
      if (null != candidate) {
        return candidate;
      }
    }
    return null;
  }
}
