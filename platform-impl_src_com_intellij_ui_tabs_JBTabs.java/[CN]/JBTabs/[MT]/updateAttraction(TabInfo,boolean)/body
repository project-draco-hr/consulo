{
  if (start) {
    myAttractions.add(tabInfo);
  }
 else {
    myAttractions.remove(tabInfo);
    tabInfo.setBlinkCount(0);
  }
  if (start && !myAnimator.isRunning()) {
    myAnimator.resume();
  }
 else   if (!start && myAttractions.size() == 0) {
    myAnimator.suspend();
    repaintAttractions();
  }
}
