{
  final VirtualFile projectFile=myProject.getProjectFile();
  if (projectFile != null) {
    String path=projectFile.getPresentableUrl();
    if (path != null) {
      File file=new File(path);
      if (file.exists() && !file.canWrite()) {
        Messages.showMessageDialog(myProject,OptionsBundle.message("project.file.read.only.error.message"),OptionsBundle.message("cannot.save.settings.default.dialog.title"),Messages.getErrorIcon());
      }
    }
  }
}
