{
  final VirtualFile projectFile=myProject.getProjectFile();
  if (projectFile != null) {
    String path=projectFile.getPresentableUrl();
    if (path != null) {
      File file=new File(path);
      if (file.exists() && !file.canWrite()) {
        Messages.showMessageDialog(myProject,"The project file is read-only.\nThe settings will not be saved until you make the file writable.","Cannot Save Settings",Messages.getErrorIcon());
      }
    }
  }
}
