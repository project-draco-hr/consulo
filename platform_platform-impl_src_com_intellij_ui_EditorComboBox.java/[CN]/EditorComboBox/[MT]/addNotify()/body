{
  releaseEditor();
  setEditor();
  super.addNotify();
  myEditorField.getFocusTarget().addFocusListener(new FocusAdapter(){
    @Override public void focusGained(    FocusEvent e){
      EditorComboBox.this.repaint();
    }
    @Override public void focusLost(    FocusEvent e){
      EditorComboBox.this.repaint();
    }
  }
);
}
