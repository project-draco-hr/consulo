{
  myProject=project;
  myGeneralSettings=generalSettings;
  myEditorSettings=editorSettings;
  documentManager.addListener(new PsiDocumentManager.Listener(){
    @Override public void documentCreated(    Document document,    PsiFile psiFile){
      if (document != null) {
        ((EncodingManagerImpl)EncodingManager.getInstance()).queueUpdateEncodingFromContent(document);
      }
    }
    @Override public void fileCreated(    @NotNull PsiFile file,    @NotNull Document document){
    }
  }
);
}
