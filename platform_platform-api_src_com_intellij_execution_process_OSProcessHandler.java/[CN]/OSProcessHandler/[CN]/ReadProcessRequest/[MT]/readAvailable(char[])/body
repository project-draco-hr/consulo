{
  int fairCount=0;
  while (myReader.ready()) {
    int n=myReader.read(buffer);
    if (n <= 0)     break;
    int start=0;
    int end=0;
    while (start < n) {
      while (end < n && buffer[end++] != '\n')       ;
      myNotificationQueue.offer(new String(buffer,start,end - start));
      start=end;
    }
    if (++fairCount > 10)     return;
  }
  if (isProcessTerminated()) {
    close();
  }
}
