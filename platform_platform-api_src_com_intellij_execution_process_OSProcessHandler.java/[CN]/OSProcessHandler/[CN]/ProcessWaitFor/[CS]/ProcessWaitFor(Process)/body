{
  myWaitForThreadFuture=executeOnPooledThread(new Runnable(){
    public void run(){
      int exitCode=0;
      try {
        try {
          exitCode=process.waitFor();
        }
 catch (        InterruptedException e) {
          LOG.info(e);
        }
      }
  finally {
        try {
          myTerminationCallback.take().consume(exitCode);
        }
 catch (        InterruptedException e) {
        }
      }
    }
  }
);
}
