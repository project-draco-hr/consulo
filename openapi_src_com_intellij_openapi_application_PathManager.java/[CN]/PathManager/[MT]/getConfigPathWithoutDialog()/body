{
  if (ourConfigPath != null)   return ourConfigPath;
  if (System.getProperty(PROPERTY_CONFIG_PATH) != null) {
    ourConfigPath=getAbsolutePath(trimPathQuotes(System.getProperty(PROPERTY_CONFIG_PATH)));
  }
 else {
    if (PropertyLoader.getProperty(PROPERTY_CONFIG_PATH) != null)     ourConfigPath=getAbsolutePath(trimPathQuotes(PropertyLoader.getProperty(PROPERTY_CONFIG_PATH)));
 else     ourConfigPath=getHomePath() + File.separator + "config";
  }
  return ourConfigPath;
}
