{
  if (ourSystemPath != null)   return ourSystemPath;
  if (System.getProperty(PROPERTY_SYSTEM_PATH) != null) {
    ourSystemPath=getAbsolutePath(trimPathQuotes(System.getProperty(PROPERTY_SYSTEM_PATH)));
  }
 else {
    if (PropertyLoader.getProperty(PROPERTY_SYSTEM_PATH) != null)     ourSystemPath=getAbsolutePath(trimPathQuotes(PropertyLoader.getProperty(PROPERTY_SYSTEM_PATH)));
 else     ourSystemPath=getHomePath() + File.separator + "system";
  }
  try {
    File file=new File(ourSystemPath);
    file.mkdirs();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  return ourSystemPath;
}
