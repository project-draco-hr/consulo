def saveseries(self, revmap, merges):
    if (not revmap):
        return
    if (not os.path.isdir(self.path)):
        os.mkdir(self.path)
    series = self.opener('series', 'w')
    for rev in sorted(revmap):
        series.write((revlog.hex(revmap[rev]) + '\n'))
    if merges:
        series.write('# Merges\n')
        for m in merges:
            series.write((revlog.hex(m) + '\n'))
    series.close()
