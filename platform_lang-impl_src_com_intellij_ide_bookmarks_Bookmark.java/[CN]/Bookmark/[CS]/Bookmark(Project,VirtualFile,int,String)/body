{
  myFile=file;
  myProject=project;
  myDescription=description;
  if (line >= 0) {
    final Document document=getDocument();
    if (document == null) {
      myHighlighter=null;
    }
 else {
      initHighlighter(line,document);
    }
  }
 else {
    myHighlighter=null;
  }
  myTarget=new OpenFileDescriptor(project,file,line,-1,true);
}
