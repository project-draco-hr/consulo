{
  adjustCounter(myEditor,1);
  int line=mySourcePosition.getLine();
  Document document=myEditor.getDocument();
  if (line < 0 || line >= document.getLineCount())   return;
  if (myRangeHighlighter != null)   return;
  EditorColorsScheme scheme=EditorColorsManager.getInstance().getGlobalScheme();
  myRangeHighlighter=DocumentMarkupModel.forDocument(document,myProject,true).addLineHighlighter(line,DebuggerColors.EXECUTION_LINE_HIGHLIGHTERLAYER,myNotTopFrame ? scheme.getAttributes(DebuggerColors.NOT_TOP_FRAME_ATTRIBUTES) : scheme.getAttributes(DebuggerColors.EXECUTIONPOINT_ATTRIBUTES));
  myRangeHighlighter.putUserData(EXECUTION_POINT_HIGHLIGHTER_KEY,true);
  myRangeHighlighter.setGutterIconRenderer(myGutterIconRenderer);
}
