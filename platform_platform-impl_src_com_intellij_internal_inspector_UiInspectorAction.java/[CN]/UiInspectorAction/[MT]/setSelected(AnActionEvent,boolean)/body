{
  if (state) {
    if (myInspector == null) {
      myInspector=new UiInspector();
      Toolkit.getDefaultToolkit().addAWTEventListener(myInspector,AWTEvent.MOUSE_EVENT_MASK);
    }
  }
 else {
    if (myInspector != null) {
      Toolkit.getDefaultToolkit().removeAWTEventListener(myInspector);
      Disposer.dispose(myInspector);
      myInspector=null;
    }
  }
}
