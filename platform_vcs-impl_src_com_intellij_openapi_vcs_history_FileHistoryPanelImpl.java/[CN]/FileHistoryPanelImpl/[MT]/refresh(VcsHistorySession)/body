{
  myHistorySession=session;
  refreshRevisionsOrder();
  HistoryAsTreeProvider treeHistoryProvider=session.getHistoryAsTreeProvider();
  if (treeHistoryProvider != null) {
    myDualView.setRoot(new TreeNodeOnVcsRevision(null,treeHistoryProvider.createTreeOn(myHistorySession.getRevisionList())),myTargetSelection);
  }
 else {
    myDualView.setRoot(new TreeNodeOnVcsRevision(null,wrapWithTreeElements(myHistorySession.getRevisionList())),myTargetSelection);
  }
  myDualView.getFlatView().updateColumnSizes();
  myDualView.expandAll();
  myDualView.repaint();
}
