{
  if (minimumSize == null) {
    throw new IllegalArgumentException("minimumSize cannot be null");
  }
  setMinimumButtonSize(minimumSize);
  myRollover=false;
  myMouseDown=false;
  myAction=action;
  myPresentation=presentation;
  myPlace=place;
  setFocusable(false);
  enableEvents(AWTEvent.MOUSE_EVENT_MASK);
  myMinimumButtonSize=minimumSize;
}
