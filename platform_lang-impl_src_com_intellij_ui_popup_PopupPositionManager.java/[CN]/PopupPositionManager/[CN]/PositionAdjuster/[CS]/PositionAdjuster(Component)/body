{
  myRelativeTo=relativeTo;
  myRelativeOnScreen=relativeTo.getLocationOnScreen();
  GraphicsDevice gd=GraphicsEnvironment.getLocalGraphicsEnvironment().getDefaultScreenDevice();
  final Toolkit toolkit=Toolkit.getDefaultToolkit();
  final Insets screenInsets=toolkit.getScreenInsets(gd.getDefaultConfiguration());
  myScreenRect=new Rectangle(screenInsets.left,screenInsets.top,toolkit.getScreenSize().width - screenInsets.left - screenInsets.right,toolkit.getScreenSize().height - screenInsets.top - screenInsets.bottom);
}
