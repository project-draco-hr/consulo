{
  String result="";
  if (style != null) {
    result+="<div style=\"" + style + "\">";
  }
  result+="<b color=\"#" + ColorUtil.toHex(getMessageType(notification).getTitleForeground()) + "\">"+ notification.getTitle()+ "</b>"+ "<p>"+ notification.getContent()+ "</p>";
  if (style != null) {
    result+="</div>";
  }
  return XmlStringUtil.wrapInHtml(result);
}
