{
  try {
    if (SwingUtilities.isEventDispatchThread()) {
      runnable.run();
    }
 else {
      final ActionCallback cb=new ActionCallback();
      ApplicationManager.getApplication().invokeAndWait(new Runnable(){
        public void run(){
          runnable.run();
          cb.setDone();
        }
      }
,state);
      return cb;
    }
  }
 catch (  Exception e) {
    LOG.warn(e);
  }
  return new ActionCallback.Done();
}
