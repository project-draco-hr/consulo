{
  final String url=Messages.showInputDialog(parent,ProjectBundle.message("sdk.configure.javadoc.url.prompt"),ProjectBundle.message("sdk.configure.javadoc.url.title"),Messages.getQuestionIcon(),"",new InputValidator(){
    public boolean checkInput(    String inputString){
      return true;
    }
    public boolean canClose(    String inputString){
      try {
        new URL(StringUtil.endsWithChar(inputString,'/') ? inputString : (inputString + "/"));
        return true;
      }
 catch (      MalformedURLException e1) {
        Messages.showErrorDialog(e1.getMessage(),ProjectBundle.message("sdk.configure.javadoc.url.title"));
      }
      return false;
    }
  }
);
  if (url == null) {
    return null;
  }
  return VirtualFileManager.getInstance().findFileByUrl(StringUtil.endsWithChar(url,'/') ? url : (url + "/"));
}
