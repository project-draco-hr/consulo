{
  StringBuilder result=new StringBuilder();
  if (id != null) {
    result.append("id=\"").append(id).append('"');
    if (classes.size() > 0) {
      result.append(' ');
    }
  }
  if (classes.size() > 0) {
    result.append("class=\"");
    for (int i=0; i < classes.size(); i++) {
      result.append(classes.get(i));
      if (i < classes.size() - 1) {
        result.append(' ');
      }
    }
    result.append('"');
  }
  return result.toString();
}
