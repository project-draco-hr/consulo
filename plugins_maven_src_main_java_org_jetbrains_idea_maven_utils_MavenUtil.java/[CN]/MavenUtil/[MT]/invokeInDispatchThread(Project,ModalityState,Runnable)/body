{
  if (ApplicationManager.getApplication().isUnitTestMode() || ApplicationManager.getApplication().isDispatchThread()) {
    r.run();
  }
 else {
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      public void run(){
        if (p.isDisposed())         return;
        r.run();
      }
    }
,state);
  }
}
