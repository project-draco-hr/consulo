{
  if (isNoBackgroundMode()) {
    r.run();
  }
 else {
    if (ApplicationManager.getApplication().isDispatchThread()) {
      r.run();
    }
 else {
      ApplicationManager.getApplication().invokeAndWait(new Runnable(){
        public void run(){
          if (p.isDisposed())           return;
          r.run();
        }
      }
,state);
    }
  }
}
