{
  if (primary == null)   return secondary;
  if (secondary == null)   return primary;
  return new TextAttributes(primary.getForegroundColor() == null ? secondary.getForegroundColor() : primary.getForegroundColor(),primary.getBackgroundColor() == null ? secondary.getBackgroundColor() : primary.getBackgroundColor(),primary.getEffectColor() == null ? secondary.getEffectColor() : primary.getEffectColor(),primary.getEffectType() == null ? secondary.getEffectType() : primary.getEffectType(),primary.getFontType() == Font.PLAIN ? secondary.getFontType() : primary.getFontType());
}
