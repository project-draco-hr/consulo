{
  if (myLastSelectedChangeList != null) {
    final String actualCommentText=myCommitMessageArea.getComment();
    if ((!Comparing.equal(myLastSelectedChangeList.getComment(),actualCommentText)) && (!Comparing.equal(actualCommentText,VcsConfiguration.getInstance(myProject).LAST_COMMIT_MESSAGE))) {
      myLastSelectedChangeList.setComment(actualCommentText);
    }
  }
}
