{
  final NotificationListener notificationListener=listener == null ? null : new NotificationListener(){
    @Override public void hyperlinkUpdate(    @NotNull Notification notification,    @NotNull HyperlinkEvent event){
      listener.hyperlinkUpdate(event);
    }
  }
;
  final NotificationType notificationType=type == MessageType.ERROR ? NotificationType.ERROR : type == MessageType.WARNING ? NotificationType.WARNING : NotificationType.INFORMATION;
  return new Notification(group,"",text,notificationType,notificationListener);
}
