{
  final PsiClassInitializer initializer=PsiTreeUtil.getParentOfType(expression,PsiClassInitializer.class);
  if (initializer != null && initializer.hasModifierProperty(PsiModifier.STATIC)) {
    if (!PsiUtil.isOnAssignmentLeftHand(expression)) {
      return true;
    }
  }
  final PsiField field=PsiTreeUtil.getParentOfType(expression,PsiField.class);
  return field != null && field.hasModifierProperty(PsiModifier.STATIC);
}
