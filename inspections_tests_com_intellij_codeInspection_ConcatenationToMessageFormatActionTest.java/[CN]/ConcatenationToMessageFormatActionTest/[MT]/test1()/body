{
  final String text="\"aaa 'bbb' '\" + ((java.lang.String)ccc) + \"'\"";
  final PsiExpression expression=JavaPsiFacade.getInstance(getProject()).getElementFactory().createExpressionFromText(text,null);
  final StringBuffer result=new StringBuffer();
  ConcatenationToMessageFormatAction.calculateFormatAndArguments(expression,result,new ArrayList<PsiExpression>(),new ArrayList<PsiExpression>(),false);
  assertEquals("aaa ''bbb'' ''{0}''",ConcatenationToMessageFormatAction.prepareString(result.toString()));
}
