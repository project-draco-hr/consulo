{
  super.update(e);
  Project project=e.getData(PlatformDataKeys.PROJECT);
  Editor editor=e.getData(PlatformDataKeys.EDITOR);
  if (project != null && editor != null) {
    e.getPresentation().setEnabled(getEditorSearchComponent().hasMatches() && PsiDocumentManager.getInstance(project).getPsiFile(editor.getDocument()) != null);
  }
}
