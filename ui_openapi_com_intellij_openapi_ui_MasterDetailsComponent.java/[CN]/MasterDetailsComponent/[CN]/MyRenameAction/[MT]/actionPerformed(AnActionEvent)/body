{
  MyNode node=(MyNode)myTree.getSelectionPath().getLastPathComponent();
  final NamedConfigurable namedConfigurable=node.getConfigurable();
  final String newName=Messages.showInputDialog(myTree,RefactoringBundle.message("copy.files.new.name.label"),RefactoringBundle.message("rename.title"),Messages.getInformationIcon());
  if (newName != null) {
    namedConfigurable.setDisplayName(newName);
    ((DefaultTreeModel)myTree.getModel()).reload();
  }
}
