{
  if (myStartElement == null)   return false;
  final PsiElement startElement=myStartElement.getElement();
  final PsiElement endElement=myEndElement == null ? startElement : myEndElement.getElement();
  return startElement != null && endElement != null && startElement.isValid() && startElement.getContainingFile() != null && (endElement == startElement || endElement.isValid()) && file != null && isAvailable(project,file,startElement,endElement);
}
