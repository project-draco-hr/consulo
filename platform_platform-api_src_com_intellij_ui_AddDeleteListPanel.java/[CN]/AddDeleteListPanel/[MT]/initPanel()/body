{
  final ToolbarDecorator decorator=ToolbarDecorator.createDecorator(myList).disableUpAction().disableDownAction().setAddAction(new Runnable(){
    @Override public void run(){
      addElement(findItemToAdd());
    }
  }
);
  customizeDecorator(decorator);
  setLayout(new BorderLayout());
  add(decorator.createPanel(),BorderLayout.CENTER);
  if (myTitle != null) {
    setBorder(IdeBorderFactory.createTitledBorderBoldWithIndent(myTitle));
  }
}
