{
  final ToolbarDecorator decorator=ToolbarDecorator.createDecorator(myList).disableUpAction().disableDownAction().setAddAction(new AnActionButtonRunnable(){
    @Override public void run(    AnActionButton button){
      addElement(findItemToAdd());
    }
  }
);
  customizeDecorator(decorator);
  setLayout(new BorderLayout());
  add(decorator.createPanel(),BorderLayout.CENTER);
  if (myTitle != null) {
    setBorder(IdeBorderFactory.createTitledBorder(myTitle,false));
  }
}
