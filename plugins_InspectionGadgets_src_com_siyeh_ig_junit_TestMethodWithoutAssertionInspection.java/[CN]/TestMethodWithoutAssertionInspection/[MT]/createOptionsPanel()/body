{
  final JPanel panel=new JPanel(new BorderLayout());
  final ListTable table=new ListTable(new ListWrappingTableModel(Arrays.asList(classNames,methodNamePatterns),InspectionGadgetsBundle.message("class.name"),InspectionGadgetsBundle.message("method.name.pattern")));
  final JPanel tablePanel=UiUtils.createAddRemovePanel(table);
  final CheckBox checkBox=new CheckBox(InspectionGadgetsBundle.message("assert.keyword.is.considered.an.assertion"),this,"assertKeywordIsAssertion");
  panel.add(tablePanel,BorderLayout.CENTER);
  panel.add(checkBox,BorderLayout.SOUTH);
  return panel;
}
