{
  clear();
  mySelected=selected;
  myFocused=tree.hasFocus();
  if (UIUtil.isUnderQuaquaLookAndFeel()) {
    if (selected) {
      setBackground(UIUtil.getTreeSelectionBackground());
    }
 else {
      setBackground(null);
    }
  }
 else {
    if (selected) {
      setPaintFocusBorder(true);
      if (myFocused) {
        setBackground(UIUtil.getTreeSelectionBackground());
      }
 else {
        setBackground(null);
      }
    }
 else {
      setBackground(null);
    }
  }
  customizeCellRenderer(tree,value,selected,expanded,leaf,row,hasFocus);
  return this;
}
