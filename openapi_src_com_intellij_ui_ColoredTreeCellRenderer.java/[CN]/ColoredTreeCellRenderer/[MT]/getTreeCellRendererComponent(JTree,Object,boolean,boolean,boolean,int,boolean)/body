{
  clear();
  mySelected=selected;
  myFocused=tree.hasFocus();
  if (selected) {
    setPaintFocusBorder(true);
    if (myFocused) {
      setBackground(UIManager.getColor("Tree.selectionBackground"));
    }
 else {
      setBackground(null);
    }
  }
 else {
    setBackground(null);
  }
  customizeCellRenderer(tree,value,selected,expanded,leaf,row,hasFocus);
  return this;
}
