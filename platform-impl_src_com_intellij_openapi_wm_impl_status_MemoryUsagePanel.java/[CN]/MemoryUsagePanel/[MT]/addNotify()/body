{
  myFuture=JobScheduler.getScheduler().scheduleAtFixedRate(new Runnable(){
    public void run(){
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          if (!isDisplayable())           return;
          updateState();
        }
      }
);
    }
  }
,1,1,TimeUnit.SECONDS);
  super.addNotify();
}
