{
  if (Registry.getInstance().isRestartNeeded()) {
    final ApplicationEx app=(ApplicationEx)ApplicationManager.getApplication();
    final ApplicationInfo info=ApplicationInfo.getInstance();
    final int r=Messages.showDialog(myContent,"You need to restart " + info.getVersionName() + " for the changes to take effect","Restart Required",new String[]{(app.isRestartCapable() ? "Restart Now" : "Shutdown Now"),(app.isRestartCapable() ? "Restart Later" : "Shutdown Later")},0,Messages.getQuestionIcon());
    if (r == 0) {
      LaterInvocator.invokeLater(new Runnable(){
        public void run(){
          if (app.isRestartCapable()) {
            app.restart();
          }
 else {
            app.exit(true);
          }
        }
      }
,ModalityState.NON_MODAL);
    }
  }
}
