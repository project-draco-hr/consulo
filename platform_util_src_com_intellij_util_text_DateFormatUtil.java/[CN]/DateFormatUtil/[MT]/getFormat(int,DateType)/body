{
  DateFormat result=null;
  if (SystemInfo.isMac) {
    try {
      result=new SimpleDateFormat(getMacTimeFormat(format,type).trim());
    }
 catch (    Throwable e) {
      LOG.error(e);
    }
  }
  if (result == null)   result=DateFormat.getDateInstance(format);
  return new SyncDateFormat(result);
}
