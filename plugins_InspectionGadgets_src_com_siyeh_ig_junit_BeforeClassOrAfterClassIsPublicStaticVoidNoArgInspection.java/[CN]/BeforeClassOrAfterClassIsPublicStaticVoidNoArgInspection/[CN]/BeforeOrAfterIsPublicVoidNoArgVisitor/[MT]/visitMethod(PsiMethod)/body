{
  if (!AnnotationUtil.isAnnotated(method,"org.junit.BeforeClass",true) && !AnnotationUtil.isAnnotated(method,"org.junit.AfterClass",true)) {
    return;
  }
  final PsiType returnType=method.getReturnType();
  if (returnType == null) {
    return;
  }
  final PsiClass targetClass=method.getContainingClass();
  if (targetClass == null) {
    return;
  }
  final PsiParameterList parameterList=method.getParameterList();
  final PsiParameter[] parameters=parameterList.getParameters();
  if (parameters == null) {
    return;
  }
  if (parameters.length != 0) {
    registerMethodError(method);
  }
 else   if (!returnType.equals(PsiType.VOID)) {
    registerMethodError(method);
  }
 else   if (!method.hasModifierProperty(PsiModifier.PUBLIC)) {
    registerMethodError(method);
  }
 else   if (!method.hasModifierProperty(PsiModifier.STATIC)) {
    registerMethodError(method);
  }
}
