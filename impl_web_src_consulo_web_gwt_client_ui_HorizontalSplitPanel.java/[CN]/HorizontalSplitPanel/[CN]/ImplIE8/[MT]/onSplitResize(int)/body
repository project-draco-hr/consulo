{
  final int resizeUpdatePeriod=20;
  if (!isResizeInProgress) {
    isResizeInProgress=true;
    new Timer(){
      @Override public void run(){
        setSplitPositionUsingPixels(splitPosition);
        isResizeInProgress=false;
      }
    }
.schedule(resizeUpdatePeriod);
  }
  splitPosition=px;
}
