{
  myActive=active;
  if (myActive) {
    setBackground(JBColor.LIGHT_GRAY);
    for (    HeaderButton o : myButtons) {
      if (o == this) {
        continue;
      }
      o.setActive(false);
    }
    ((CardLayout)myCardPanel.getLayout()).show(myCardPanel,myKey);
  }
 else {
    setBackground(WelcomeScreenColors.CAPTION_BACKGROUND);
  }
}
