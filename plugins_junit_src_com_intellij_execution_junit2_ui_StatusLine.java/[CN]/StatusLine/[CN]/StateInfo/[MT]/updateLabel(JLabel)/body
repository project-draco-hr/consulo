{
  String testCount;
  if (myDefects > 0)   testCount=ExecutionBundle.message("junit.runing.info.status.completed.from.total.failed",myCompleted,myTotal,myDefects);
 else   testCount=ExecutionBundle.message("junit.runing.info.status.completed.from.total",myCompleted,myTotal);
  final StringBuffer buffer=new StringBuffer();
  if (myDoneEvent != null) {
    String termMessage=generateTermMessage(testCount);
    buffer.append(termMessage);
    final String comment=myDoneEvent.getComment();
    if (comment.length() > 0) {
      buffer.append("(" + comment + ")");
    }
  }
 else {
    buffer.append(ExecutionBundle.message("junit.runing.info.status.running.number.with.name",testCount,myCurrentTestName));
  }
  label.setText(buffer.toString());
}
