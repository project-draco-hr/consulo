{
  super.init();
  myPanel.add(createKeepBlankLinesPanel(),new GridBagConstraints(0,0,1,1,0,0,GridBagConstraints.NORTH,GridBagConstraints.HORIZONTAL,new Insets(0,4,0,4),0,0));
  myPanel.add(createBlankLinesPanel(),new GridBagConstraints(0,1,1,1,0,0,GridBagConstraints.NORTH,GridBagConstraints.HORIZONTAL,new Insets(0,4,0,4),0,0));
  final JPanel previewPanel=createPreviewPanel();
  myPanel.add(previewPanel,new GridBagConstraints(1,0,1,2,1,1,GridBagConstraints.NORTH,GridBagConstraints.BOTH,new Insets(0,0,0,4),0,0));
  installPreviewPanel(previewPanel);
  addPanelToWatch(myPanel);
  myIsFirstUpdate=false;
}
