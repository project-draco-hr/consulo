def mimeencode(ui, s, charsets=None, display=False):
    'creates mime text object, encodes it if needed, and sets\n    charset and transfer-encoding accordingly.'
    cs = 'us-ascii'
    if (not display):
        (s, cs) = _encode(ui, s, charsets)
    return email.MIMEText.MIMEText(s, 'plain', cs)
