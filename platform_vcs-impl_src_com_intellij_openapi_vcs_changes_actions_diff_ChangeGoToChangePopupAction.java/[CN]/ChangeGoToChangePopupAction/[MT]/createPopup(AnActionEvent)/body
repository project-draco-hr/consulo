{
  Project project=e.getProject();
  if (project == null)   project=ProjectManager.getInstance().getDefaultProject();
  Ref<JBPopup> popup=new Ref<JBPopup>();
  ChangesBrowser cb=new MyChangesBrowser(project,getChanges(),getCurrentSelection(),popup);
  popup.set(JBPopupFactory.getInstance().createComponentPopupBuilder(cb,cb.getPreferredFocusedComponent()).setResizable(true).setModalContext(false).setFocusable(true).setRequestFocus(true).setCancelOnWindowDeactivation(true).setCancelOnOtherWindowOpen(true).setMovable(true).setCancelKeyEnabled(true).setCancelOnClickOutside(true).createPopup());
  return popup.get();
}
