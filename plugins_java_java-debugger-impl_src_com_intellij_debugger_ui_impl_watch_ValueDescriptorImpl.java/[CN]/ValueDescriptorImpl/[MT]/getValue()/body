{
  if (Patches.IBM_JDK_DISABLE_COLLECTION_BUG && myStoredEvaluationContext != null && !myStoredEvaluationContext.getSuspendContext().isResumed() && myValue instanceof ObjectReference && VirtualMachineProxyImpl.isCollected((ObjectReference)myValue)) {
    final Semaphore semaphore=new Semaphore();
    semaphore.down();
    myStoredEvaluationContext.getDebugProcess().getManagerThread().invoke(new SuspendContextCommandImpl(myStoredEvaluationContext.getSuspendContext()){
      public void contextAction() throws Exception {
        try {
          setContext(myStoredEvaluationContext);
        }
  finally {
          semaphore.up();
        }
      }
    }
);
    semaphore.waitFor();
  }
  return myValue;
}
