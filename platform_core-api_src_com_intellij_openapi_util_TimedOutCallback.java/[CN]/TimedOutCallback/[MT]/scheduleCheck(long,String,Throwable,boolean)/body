  myMessage=message;
  myAllocation=allocation;
  final long current=System.currentTimeMillis();
  myTask=SimpleTimer.getInstance().setUp(new Runnable(){
    @Override public void run(){
      if (System.currentTimeMillis() - current > timeOut) {
        if (isEdt) {
