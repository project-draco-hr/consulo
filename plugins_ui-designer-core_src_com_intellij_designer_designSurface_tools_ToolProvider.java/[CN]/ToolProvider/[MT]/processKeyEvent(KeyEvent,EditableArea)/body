{
  if (myTool != null) {
    try {
switch (event.getID()) {
case KeyEvent.KEY_PRESSED:
        myTool.keyPressed(event,area);
      break;
case KeyEvent.KEY_TYPED:
    myTool.keyTyped(event,area);
  break;
case KeyEvent.KEY_RELEASED:
myTool.keyReleased(event,area);
break;
}
}
 catch (Throwable e) {
showError("Edit operation",e);
}
}
}
