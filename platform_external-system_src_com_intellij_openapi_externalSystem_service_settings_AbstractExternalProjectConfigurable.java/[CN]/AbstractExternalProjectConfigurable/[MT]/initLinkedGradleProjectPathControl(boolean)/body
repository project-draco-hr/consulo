{
  TextFieldWithBrowseButton result=new TextFieldWithBrowseButton();
  FileChooserDescriptor fileChooserDescriptor=testMode ? new FileChooserDescriptor(true,false,false,false,false,false) : getLinkedProjectConfigDescriptor();
  myLinkedExternalProjectPathField.addBrowseFolderListener("",ExternalSystemBundle.message("settings.label.select.project",myDisplayName),myProject,fileChooserDescriptor,TextComponentAccessor.TEXT_FIELD_WHOLE_TEXT,false);
  return result;
}
