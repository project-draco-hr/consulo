{
  final JComponent panel=new JPanel(new BorderLayout());
  final ListTable table=new ListTable(new ListWrappingTableModel(ignoredTypes,InspectionGadgetsBundle.message("ignored.io.resource.types")));
  JPanel tablePanel=UiUtils.createAddRemoveTreeClassChooserPanel(table,InspectionGadgetsBundle.message("choose.io.resource.type.to.ignore"),IO_TYPES);
  final CheckBox checkBox=new CheckBox(InspectionGadgetsBundle.message("allow.resource.to.be.opened.inside.a.try.block"),this,"insideTryAllowed");
  panel.add(tablePanel,BorderLayout.CENTER);
  panel.add(checkBox,BorderLayout.SOUTH);
  return panel;
}
