def updatecurbookmark(orig, ui, repo, *args, **opts):
    'Set the current bookmark\n\n    If the user updates to a bookmark we update the .hg/bookmarks.current\n    file.\n    '
    res = orig(ui, repo, *args, **opts)
    rev = opts['rev']
    if ((not rev) and (len(args) > 0)):
        rev = args[0]
    setcurrent(repo, rev)
    return res
