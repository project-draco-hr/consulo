{
  Map<String,String> cMap=PROPERTIES_MAP.get(className);
  if (cMap == null)   return false;
  int idx=0;
  do {
    int i=path.indexOf('.',idx);
    if (i == -1) {
      return cMap.containsKey(path.substring(idx));
    }
    cMap=PROPERTIES_MAP.get(cMap.get(path.substring(idx,i)));
    if (cMap == null)     return false;
    idx=i + 1;
  }
 while (true);
}
