{
  for (  TabInfo each : myInfos) {
    final JComponent c=each.getComponent();
    if (c != null) {
      c.setBounds(0,0,0,0);
    }
    final JComponent toolbar=myInfo2Toolbar.get(each);
    if (toolbar != null) {
      toolbar.setBounds(0,0,0,0);
    }
    if (resetLabels) {
      myInfo2Label.get(each).setBounds(0,0,0,0);
    }
  }
}
