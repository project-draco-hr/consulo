{
  DefaultActionGroup popupGroup=new DefaultActionGroup(null,false);
  popupGroup.addSeparator("Repositories");
  for (  GitRepository repository : myRepositoryManager.getRepositories()) {
    popupGroup.add(new RootAction<GitRepository>(repository,highlightCurrentRepo() ? myCurrentRepository : null,new GitBranchPopupActions(repository.getProject(),repository).createActions(null),GitBranchUtil.getDisplayableBranchText(repository)));
  }
  return popupGroup;
}
