{
  if (column == null) {
    return;
  }
  final ColumnInfo[] columnInfos=getColumnInfos();
  for (int i=0; i < columnInfos.length; i++) {
    ColumnInfoAdapter adapter=(ColumnInfoAdapter)columnInfos[i];
    if (adapter.getColumn() == column) {
      sortByColumn(i,sortingType);
      break;
    }
  }
}
