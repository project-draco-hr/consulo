{
  PsiClass componentClass=JavaPsiFacade.getInstance(myProject).findClass(rc.getClassName().replace('$','.'),GlobalSearchScope.allScope(myProject));
  while (componentClass != null) {
    if (JPanel.class.getName().equals(componentClass.getQualifiedName()) || JTabbedPane.class.getName().equals(componentClass.getQualifiedName()) || JScrollPane.class.getName().equals(componentClass.getQualifiedName())|| JSplitPane.class.getName().equals(componentClass.getQualifiedName())) {
      return true;
    }
    componentClass=componentClass.getSuperClass();
  }
  return false;
}
