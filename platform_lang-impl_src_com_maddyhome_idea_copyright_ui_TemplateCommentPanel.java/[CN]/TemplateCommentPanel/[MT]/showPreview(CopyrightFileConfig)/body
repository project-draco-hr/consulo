{
  final String defaultCopyrightText=myNoCopyright.isSelected() ? "" : FileTypeUtil.buildComment(myCommenter,myAllowSeparator,VelocityHelper.evaluate(null,null,null,EntityUtil.decode(CopyrightProfile.DEFAULT_COPYRIGHT_NOTICE)),options);
  SwingUtilities.invokeLater(new Runnable(){
    @Override public void run(){
      preview.setText(defaultCopyrightText);
    }
  }
);
}
