{
  myProject=project;
  myProject.getMessageBus().connect().subscribe(ProjectTopics.MODULES,new ModuleAdapter(){
    @Override public void moduleAdded(    Project project,    Module module){
      createDefaultForModule(module);
    }
    @Override public void moduleRemoved(    Project project,    Module module){
      myModulesToVirtualFilePoints.remove(module);
    }
  }
);
  createDefaults();
}
