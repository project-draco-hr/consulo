{
  decorator.addPoint(new EmptyPoint(){
    @Override protected void paint(    DecorationLayer layer,    Graphics2D g,    RadComponent component){
      Rectangle bounds=component.getBounds(layer);
      g.setStroke(LayoutMarginOperation.STROKE);
      g.setColor(COLOR);
      g.drawRect(bounds.x,bounds.y,bounds.width,bounds.height);
    }
  }
);
  decorator.addPoint(new DirectionResizePoint(COLOR,Color.black,Position.WEST,TYPE,"Change layout:column x layout:columnSpan"));
  decorator.addPoint(new DirectionResizePoint(COLOR,Color.black,Position.EAST,TYPE,"Change layout:columnSpan").move(1,0.25));
  decorator.addPoint(new DirectionResizePoint(COLOR,Color.black,Position.NORTH,TYPE,"Change layout:row x layout:rowSpan"));
  decorator.addPoint(new DirectionResizePoint(COLOR,Color.black,Position.SOUTH,TYPE,"Change layout:rowSpan").move(0.25,1));
}
