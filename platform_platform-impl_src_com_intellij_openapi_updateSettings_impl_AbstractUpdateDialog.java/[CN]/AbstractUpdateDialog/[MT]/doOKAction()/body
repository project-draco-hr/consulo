{
  if (doDownloadAndPrepare() && isShowConfirmation()) {
    final ApplicationEx app=ApplicationManagerEx.getApplicationEx();
    app.invokeLater(new Runnable(){
      @Override public void run(){
        if (app.isRestartCapable()) {
          app.restart();
        }
 else {
          app.exit(true);
        }
      }
    }
);
  }
  super.doOKAction();
}
