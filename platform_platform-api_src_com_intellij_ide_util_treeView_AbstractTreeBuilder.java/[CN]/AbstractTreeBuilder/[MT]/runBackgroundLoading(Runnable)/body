{
  if (isDisposed())   return;
  final Application app=ApplicationManager.getApplication();
  if (app != null) {
    app.runReadAction(new TreeRunnable("AbstractTreeBuilder.runBackgroundLoading"){
      @Override public void perform(){
        runnable.run();
      }
    }
);
  }
 else {
    runnable.run();
  }
}
