{
  mySettings=settings;
  myProject=project;
  int port;
  if (debug) {
    try {
      port=NetUtils.findAvailableSocketPort();
    }
 catch (    IOException e) {
      LOG.warn("Unexpected I/O exception occurred on attempt to find a free port to use for external system task debugging",e);
      port=0;
    }
  }
 else {
    port=0;
  }
  myDebugPort=port;
}
