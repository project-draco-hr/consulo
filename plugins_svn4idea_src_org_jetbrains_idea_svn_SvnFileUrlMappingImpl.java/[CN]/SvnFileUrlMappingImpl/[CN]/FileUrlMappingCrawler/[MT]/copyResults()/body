{
synchronized (myMonitor) {
    myUserRootsDiffersFromReal=myRootsDiffer;
    myFile2UrlMap.clear();
    myFile2UrlMap.putAll(myFile2UrlMapCopy);
    myFileRootsMap.clear();
    myFileRootsMap.putAll(myFileRootsMapCopy);
    myUrl2FileMap.clear();
    myUrl2FileMap.putAll(myUrl2FileMapCopy);
  }
