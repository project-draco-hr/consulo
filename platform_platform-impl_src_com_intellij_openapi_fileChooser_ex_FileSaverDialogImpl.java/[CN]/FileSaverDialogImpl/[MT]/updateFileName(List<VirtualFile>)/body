{
  for (  VirtualFile file : selection) {
    if (file.isDirectory()) {
      myPathTextField.getField().setText(file.getPath());
    }
 else {
      myFileName.setText(file.getName());
      final VirtualFile parent=file.getParent();
      if (parent != null) {
        myPathTextField.getField().setText(parent.getPath());
      }
    }
  }
  updateOkButton();
}
