{
  if (myCanvasWidth <= 0) {
    return;
  }
  ArrangementNodeComponent component=myRenderers.get(row);
  if (component == null) {
    return;
  }
  if (!component.onCanvasWidthChange(myCanvasWidth)) {
    return;
  }
  TreePath path=myTree.getPathForRow(row);
  if (path != null) {
    myTreeModel.nodeChanged((TreeNode)path.getLastPathComponent());
  }
}
