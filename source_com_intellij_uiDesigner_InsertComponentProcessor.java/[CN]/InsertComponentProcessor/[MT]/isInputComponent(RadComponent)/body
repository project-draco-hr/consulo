{
  LOG.assertTrue(component != null);
  final Class aClass=component.getComponentClass();
  if (AbstractButton.class.isAssignableFrom(aClass) || JComboBox.class.isAssignableFrom(aClass) || JList.class.isAssignableFrom(aClass)|| JSpinner.class.isAssignableFrom(aClass)|| JTabbedPane.class.isAssignableFrom(aClass)|| JTable.class.isAssignableFrom(aClass)|| JTextComponent.class.isAssignableFrom(aClass)|| JTree.class.isAssignableFrom(aClass)) {
    return true;
  }
  return false;
}
