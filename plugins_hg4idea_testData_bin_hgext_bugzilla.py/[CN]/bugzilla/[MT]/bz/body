def bz(self):
    'return object that knows how to talk to bugzilla version in\n        use.'
    if (bugzilla._bz is None):
        bzversion = self.ui.config('bugzilla', 'version')
        try:
            bzclass = bugzilla._versions[bzversion]
        except KeyError:
            raise util.Abort((_('bugzilla version %s not supported') % bzversion))
        bugzilla._bz = bzclass(self.ui)
    return bugzilla._bz
