{
  if (--myInsideRefresh == 0) {
    if (myPointerChangesDetected) {
      myPointerChangesDetected=false;
      myProject.getMessageBus().syncPublisher(ProjectTopics.PROJECT_ROOTS).rootsChanged(new ModuleRootEventImpl(myProject,false));
      doSynchronizeRoots();
      addRootsToWatch();
    }
  }
}
