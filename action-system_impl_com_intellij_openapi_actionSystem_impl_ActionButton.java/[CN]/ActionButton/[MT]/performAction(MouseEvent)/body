{
  AnActionEvent event=new AnActionEvent(e,getDataContext(),myPlace,myPresentation,ActionManager.getInstance(),e.getModifiers());
  myAction.beforeActionPerformedUpdate(event);
  if (isButtonEnabled()) {
    final ActionManagerEx manager=ActionManagerEx.getInstanceEx();
    final DataContext dataContext=event.getDataContext();
    manager.fireBeforeActionPerformed(myAction,dataContext);
    Component component=DataKeys.CONTEXT_COMPONENT.getData(dataContext);
    if (component != null && !component.isShowing()) {
      return;
    }
    actionPerfomed(event);
    manager.queueActionPerformedEvent(myAction,dataContext);
  }
}
