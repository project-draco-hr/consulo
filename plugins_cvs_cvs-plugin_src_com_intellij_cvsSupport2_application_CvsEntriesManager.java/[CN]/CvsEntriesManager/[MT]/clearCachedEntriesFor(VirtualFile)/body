{
  if (parent == null)   return;
  CvsInfo cvsInfo=getInfoFor(parent);
  cvsInfo.clearFilter();
  if (cvsInfo.isLoaded()) {
    cvsInfo.clearAll();
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      public void run(){
        if (parent.isValid()) {
          onEntriesChanged(parent);
        }
      }
    }
);
  }
}
