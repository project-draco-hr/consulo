{
  int selected=getSelectedIndex();
  if (selected < 0)   return;
  TemplateImpl template=getTemplate(selected);
  if (template == null)   return;
  LiveTemplateSettingsEditor dialog=new LiveTemplateSettingsEditor(this,CodeInsightBundle.message("dialog.edit.live.template.title"),template,getTemplateGroups(),(String)myExpandByCombo.getSelectedItem(),getOptions(template),getContext(template),true);
  applyChanges(dialog);
}
