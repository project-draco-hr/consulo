{
  int selected=getSelectedIndex();
  if (selected < 0)   return;
  TemplateImpl template=getTemplate(selected);
  if (template == null)   return;
  LiveTemplateSettingsEditor dialog=new LiveTemplateSettingsEditor(template,getTemplateGroups(),(String)myExpandByCombo.getSelectedItem(),getOptions(template),getContext(template));
  applyChanges(dialog);
}
