{
  final List<T> wasSelected=getSelectedChanges();
  myShowFlatten=showFlatten;
  myCards.show(this,myShowFlatten ? LIST_CARD : TREE_CARD);
  select(wasSelected);
  if (myList.hasFocus() || myTree.hasFocus()) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        requestFocus();
      }
    }
);
  }
}
