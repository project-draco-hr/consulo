{
  if (paths.length == 0) {
    return;
  }
  doRefresh(new Runnable(){
    public void run(){
      for (int idx=0; idx < paths.length; idx++) {
        final VirtualFile file=LocalFileSystem.getInstance().refreshAndFindFileByPath(paths[idx].replace(File.separatorChar,'/'));
        if (file != null) {
          file.refresh(false,false);
        }
      }
    }
  }
);
}
