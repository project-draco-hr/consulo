{
  if (files.length == 0) {
    return;
  }
  doRefresh(new Runnable(){
    public void run(){
      for (int idx=0; idx < files.length; idx++) {
        final VirtualFile file=LocalFileSystem.getInstance().refreshAndFindFileByIoFile(files[idx]);
        if (file != null) {
          file.refresh(false,false);
        }
      }
    }
  }
);
}
