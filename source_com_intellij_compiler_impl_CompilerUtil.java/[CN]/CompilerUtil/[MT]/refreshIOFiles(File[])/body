{
  if (files.length == 0) {
    return;
  }
  doRefresh(new Runnable(){
    public void run(){
      for (      File file1 : files) {
        final VirtualFile file=LocalFileSystem.getInstance().refreshAndFindFileByIoFile(file1);
        if (file != null) {
          file.refresh(false,false);
        }
      }
    }
  }
);
}
