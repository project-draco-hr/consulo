{
  final PsiExpression condition=ifStatement.getCondition();
  if (expressionAssignsVariableOrFails(condition,variable,checkedMethods)) {
    return true;
  }
  final PsiStatement thenBranch=ifStatement.getThenBranch();
  final PsiStatement elseBranch=ifStatement.getElseBranch();
  return statementAssignsVariableOrFails(thenBranch,variable,checkedMethods) && statementAssignsVariableOrFails(elseBranch,variable,checkedMethods);
}
