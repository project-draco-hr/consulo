{
  final PsiCodeBlock tryBlock=tryStatement.getTryBlock();
  if (!blockAssignsVariableOrFails(tryBlock,variable,checkedMethods,strict)) {
    return false;
  }
  final PsiCodeBlock[] catchBlocks=tryStatement.getCatchBlocks();
  for (  final PsiCodeBlock catchBlock : catchBlocks) {
    if (strict) {
      if (!blockFails(catchBlock)) {
        return false;
      }
    }
 else     if (!blockAssignsVariableOrFails(catchBlock,variable,checkedMethods,strict)) {
      return false;
    }
  }
  final PsiCodeBlock finallyBlock=tryStatement.getFinallyBlock();
  return blockAssignsVariableOrFails(finallyBlock,variable,checkedMethods,strict);
}
