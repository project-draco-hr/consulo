{
  for (  final RootsAndBranches action : myMergeInfoRefreshActions) {
    if (ApplicationManager.getApplication().isDispatchThread()) {
      action.reloadPanels();
      action.refresh();
    }
 else {
      ApplicationManager.getApplication().invokeLater(new Runnable(){
        public void run(){
          action.reloadPanels();
          action.refresh();
        }
      }
);
    }
  }
}
