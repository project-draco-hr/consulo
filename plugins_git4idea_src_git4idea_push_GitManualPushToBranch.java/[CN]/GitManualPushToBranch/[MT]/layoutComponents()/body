{
  JPanel panel=new JPanel();
  GridBagLayout layout=new GridBagLayout();
  panel.setLayout(layout);
  GridBag g=new GridBag().setDefaultFill(GridBagConstraints.NONE).setDefaultAnchor(GridBagConstraints.LINE_START).setDefaultWeightX(1,1);
  panel.add(myManualPush,g.nextLine().next());
  panel.add(myRemoteSelectorComponent,g.next());
  panel.add(myDestBranchTextField,g.next());
  panel.add(myRefreshButton,g.next());
  g.nextLine();
  if (myRepositories.size() > 1) {
    panel.add(myComment,g.insets(0,20,0,0).next());
  }
  setLayout(new BorderLayout());
  add(panel,BorderLayout.WEST);
}
