{
  OutputStream outputStream=null;
  byte[] bytes=null;
  try {
    bytes=text.getBytes(myFile.getCharset().name());
    outputStream=myFile.getOutputStream(this);
  }
 catch (  IOException e) {
    LOG.error(e);
  }
  try {
    outputStream.write(bytes);
  }
 catch (  IOException e) {
    LOG.error(e);
  }
 finally {
    try {
      outputStream.close();
    }
 catch (    IOException e) {
      LOG.error(e);
    }
  }
}
