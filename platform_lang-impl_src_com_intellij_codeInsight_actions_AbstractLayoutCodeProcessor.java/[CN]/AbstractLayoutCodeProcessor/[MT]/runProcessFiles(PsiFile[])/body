{
  final Runnable[] resultRunnable=new Runnable[1];
  runLayoutCodeProcess(new Runnable(){
    @Override public void run(){
      resultRunnable[0]=preprocessFiles(new ArrayList<PsiFile>(Arrays.asList(files)));
