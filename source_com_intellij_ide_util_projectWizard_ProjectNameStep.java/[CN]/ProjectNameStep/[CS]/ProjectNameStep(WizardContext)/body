{
  myWizardContext=wizardContext;
  myNamePathComponent=new NamePathComponent(IdeBundle.message("label.project.name"),IdeBundle.message("label.project.file.location"),'a','l',IdeBundle.message("title.select.project.file.directory"),IdeBundle.message("description.select.project.file.directory"));
  myPanel=new JPanel(new GridBagLayout());
  myPanel.setBorder(BorderFactory.createEtchedBorder());
  ApplicationInfo info=ApplicationManager.getApplication().getComponent(ApplicationInfo.class);
  String appName=info.getVersionName();
  myPanel.add(new JLabel(IdeBundle.message("label.please.enter.project.name",appName)),new GridBagConstraints(0,GridBagConstraints.RELATIVE,1,1,1.0,0.0,GridBagConstraints.NORTHWEST,GridBagConstraints.HORIZONTAL,new Insets(8,10,8,10),0,0));
  myPanel.add(myNamePathComponent,new GridBagConstraints(0,GridBagConstraints.RELATIVE,1,1,1.0,1.0,GridBagConstraints.NORTHWEST,GridBagConstraints.HORIZONTAL,new Insets(8,10,8,10),0,0));
}
