{
  doTranslate(new PairConsumer<Integer,Integer>(){
    @Override public void consume(    Integer x,    Integer y){
      g.translate(x,y);
    }
  }
);
  super.paint(g);
  doTranslate(new PairConsumer<Integer,Integer>(){
    @Override public void consume(    Integer x,    Integer y){
      g.translate(-x,-y);
    }
  }
);
}
