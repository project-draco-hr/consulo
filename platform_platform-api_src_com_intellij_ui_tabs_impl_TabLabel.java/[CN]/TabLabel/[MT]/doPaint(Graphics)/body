{
  doTranslate(new PairConsumer<Integer,Integer>(){
    @Override public void consume(    Integer x,    Integer y){
      g.translate(x,y);
    }
  }
);
  final Composite oldComposite=((Graphics2D)g).getComposite();
  super.paint(g);
  ((Graphics2D)g).setComposite(oldComposite);
  doTranslate(new PairConsumer<Integer,Integer>(){
    @Override public void consume(    Integer x,    Integer y){
      g.translate(-x,-y);
    }
  }
);
}
