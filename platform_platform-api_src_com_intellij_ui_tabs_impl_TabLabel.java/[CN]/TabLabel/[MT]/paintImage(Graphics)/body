{
  final Rectangle b=getBounds();
  if (myImage != null) {
    g.drawImage(myImage,b.x,b.y,getWidth(),getHeight(),null);
  }
 else {
    final Graphics lG=g.create(b.x,b.y,b.width,b.height);
    try {
      lG.setColor(Color.red);
      doPaint(lG);
    }
  finally {
      lG.dispose();
    }
  }
}
