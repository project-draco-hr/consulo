{
  TextAttributes textAttributes=highlightAttributes != null ? highlightAttributes : getHyperlinkAttributes();
  final RangeHighlighter highlighter=myEditor.getMarkupModel().addRangeHighlighter(highlightStartOffset,highlightEndOffset,HYPERLINK_LAYER,textAttributes,HighlighterTargetArea.EXACT_RANGE);
  associateHyperlink(highlighter,hyperlinkInfo,followedHyperlinkAttributes);
  return highlighter;
}
