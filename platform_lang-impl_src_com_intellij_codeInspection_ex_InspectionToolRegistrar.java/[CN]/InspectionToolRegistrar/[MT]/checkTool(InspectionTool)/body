{
  if (toolWrapper instanceof LocalInspectionToolWrapper) {
    final LocalInspectionTool localTool=((LocalInspectionToolWrapper)toolWrapper).getTool();
    if (!LocalInspectionTool.isValidID(localTool.getID())) {
      final String message=InspectionsBundle.message("inspection.disabled.wrong.id",localTool.getShortName(),localTool.getID(),LocalInspectionTool.VALID_ID_PATTERN);
      showNotification(message);
      return false;
    }
  }
  return true;
}
