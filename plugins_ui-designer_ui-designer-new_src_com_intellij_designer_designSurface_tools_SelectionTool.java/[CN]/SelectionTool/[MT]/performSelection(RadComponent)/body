{
  if (myInputEvent.isControlDown()) {
    if (myArea.isSelected(component)) {
      myArea.deselect(component);
    }
 else {
      myArea.appendSelection(component);
    }
  }
 else   if (myInputEvent.isShiftDown()) {
    myArea.appendSelection(component);
  }
 else {
    myArea.select(component);
  }
}
