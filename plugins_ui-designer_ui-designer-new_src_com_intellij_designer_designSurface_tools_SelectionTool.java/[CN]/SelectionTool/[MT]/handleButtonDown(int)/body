{
  if (myState == STATE_INIT && (button == 1 || button == 3)) {
    RadComponent component=myArea.findTarget(myCurrentScreenX,myCurrentScreenY);
    if (component != null) {
      performSelection(component);
    }
  }
  if (button == 1) {
    if (myState == STATE_INIT) {
      myState=STATE_DRAG;
    }
  }
 else {
    if (button == 3) {
      myState=STATE_NONE;
    }
 else {
      myState=STATE_INVALID;
    }
    setCommand(null);
  }
}
