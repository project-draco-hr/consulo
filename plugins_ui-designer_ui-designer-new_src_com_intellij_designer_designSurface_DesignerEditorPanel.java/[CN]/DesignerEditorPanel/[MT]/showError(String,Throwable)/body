{
  while (e instanceof InvocationTargetException) {
    e=e.getCause();
  }
  ErrorInfo info=new ErrorInfo();
  info.message=info.displayMessage=message;
  info.throwable=e;
  configureError(info);
  if (info.show) {
    showErrorPage(info);
  }
  if (info.log || ApplicationManagerEx.getApplicationEx().isInternal()) {
    LOG.error(info.message,e);
  }
}
