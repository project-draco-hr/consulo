{
  if (!myMouseListeners.contains(listener)) {
    myMouseListeners.add(listener);
    updateSortedList();
  }
  activateIfNeeded();
  Disposer.register(parent,new Disposable(){
    public void dispose(){
      UIUtil.invokeLaterIfNeeded(new Runnable(){
        public void run(){
          removeListener(listener);
        }
      }
);
    }
  }
);
}
