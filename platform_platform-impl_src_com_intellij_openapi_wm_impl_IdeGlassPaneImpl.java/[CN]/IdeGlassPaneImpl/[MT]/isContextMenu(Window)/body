{
  if (window != null) {
    for (    Component component : window.getComponents()) {
      if (component instanceof JComponent && ((UIUtil.findComponentOfType((JComponent)component,JPopupMenu.class) != null) || (UIUtil.findComponentOfType((JComponent)component,AbstractPopup.MyContentPanel.class) != null))) {
        return true;
      }
    }
  }
  return false;
}
