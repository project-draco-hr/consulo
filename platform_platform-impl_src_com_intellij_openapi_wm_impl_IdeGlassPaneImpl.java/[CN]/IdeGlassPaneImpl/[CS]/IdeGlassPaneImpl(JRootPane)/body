{
  myRootPane=rootPane;
  setOpaque(false);
  setVisible(false);
  setLayout(null);
  myFocusProxy.setOpaque(false);
  myFocusProxy.setPreferredSize(new Dimension(0,0));
  myFocusProxy.setFocusable(true);
  UIUtil.setFocusProxy(myFocusProxy,true);
  add(myFocusProxy);
  myFocusProxy.setBounds(0,0,0,0);
}
