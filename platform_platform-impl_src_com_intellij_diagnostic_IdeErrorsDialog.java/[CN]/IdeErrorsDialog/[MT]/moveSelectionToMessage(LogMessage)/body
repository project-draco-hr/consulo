{
  int index=-1;
  for (int i=0; i < myMergedMessages.size(); i++) {
    final AbstractMessage each=getMessageAt(i);
    if (each == defaultMessage) {
      index=i;
      break;
    }
  }
  if (index >= 0) {
    myIndex=index;
    updateControls();
    return true;
  }
 else {
    return false;
  }
}
