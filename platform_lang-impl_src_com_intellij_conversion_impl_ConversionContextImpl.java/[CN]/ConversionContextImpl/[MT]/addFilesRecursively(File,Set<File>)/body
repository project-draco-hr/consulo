{
  if (file.isDirectory()) {
    final File[] children=file.listFiles();
    if (children != null) {
      for (      File child : children) {
        addFilesRecursively(child,files);
      }
    }
  }
 else   if (StringUtil.endsWithIgnoreCase(file.getName(),".xml") && !file.getName().startsWith(".")) {
    files.add(file);
  }
}
