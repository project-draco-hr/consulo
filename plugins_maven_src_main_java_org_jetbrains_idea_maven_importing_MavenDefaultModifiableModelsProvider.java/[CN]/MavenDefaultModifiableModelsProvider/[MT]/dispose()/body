{
  MavenUtil.invokeAndWaitWriteAction(myProject,new Runnable(){
    public void run(){
      for (      ModifiableRootModel each : myRootModels.values()) {
        each.dispose();
      }
      myModuleModel.dispose();
      if (myArtifactModel != null) {
        myArtifactModel.dispose();
      }
    }
  }
);
}
