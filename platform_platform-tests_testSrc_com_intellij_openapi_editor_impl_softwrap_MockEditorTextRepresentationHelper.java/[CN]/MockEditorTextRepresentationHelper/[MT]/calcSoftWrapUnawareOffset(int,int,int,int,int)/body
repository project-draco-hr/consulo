{
  int x=startX;
  int column=startColumn;
  for (int i=startOffset; i < endOffset; i++) {
    if (column == targetColumn) {
      return i;
    }
    char c=myText.charAt(i);
    int width=charWidth(c,x);
    column+=width / mySpaceSizeInPixels;
    if (width % mySpaceSizeInPixels > 0) {
      column++;
    }
    x+=width;
  }
  return -1;
}
