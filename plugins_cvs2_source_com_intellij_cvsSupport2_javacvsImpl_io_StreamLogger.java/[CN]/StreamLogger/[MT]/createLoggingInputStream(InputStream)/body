{
  return new InputStream(){
    public int read() throws IOException {
      int result=inputStream.read();
      getInputLogStream().write(result);
      getInputLogStream().flush();
      return result;
    }
    public int read(    byte b[],    int off,    int len) throws IOException {
      if (len == 0)       return 0;
      final int read=read();
      if (read == -1)       return -1;
      b[off]=(byte)read;
      return 1;
    }
  }
;
}
