{
  for (int idx=0; idx < length; idx++) {
    char ch=str.charAt(idx);
switch (ch) {
case '\b':
      buffer.append("\\b");
    break;
case '\t':
  buffer.append("\\t");
break;
case '\n':
buffer.append("\\n");
break;
case '\f':
buffer.append("\\f");
break;
case '\r':
buffer.append("\\r");
break;
case '\"':
buffer.append("\\\"");
break;
case '\\':
buffer.append("\\\\");
break;
default :
if (Character.isISOControl(ch)) {
String hexCode=Integer.toHexString(ch).toUpperCase();
buffer.append("\\u");
int paddingCount=4 - hexCode.length();
while (paddingCount-- > 0) {
buffer.append(0);
}
buffer.append(hexCode);
}
 else {
buffer.append(ch);
}
}
}
}
