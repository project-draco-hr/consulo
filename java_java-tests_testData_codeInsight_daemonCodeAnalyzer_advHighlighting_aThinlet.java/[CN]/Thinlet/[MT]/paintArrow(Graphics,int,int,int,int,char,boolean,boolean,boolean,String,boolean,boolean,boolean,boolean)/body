{
  inside=inside && (insidepart == part);
  pressed=pressed && (pressedpart == part);
  paintRect(g,x,y,width,height,enabled ? c_border : c_disable,enabled ? ((inside != pressed) ? c_hover : (pressed ? c_press : c_ctrl)) : c_bg,top,left,bottom,right);
  g.setColor(enabled ? c_text : c_disable);
  paintArrow(g,x,y,width,height,dir);
}
