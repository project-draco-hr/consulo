{
  int cx=x + width / 2 - 2;
  int cy=y + height / 2 - 2;
  for (int i=0; i < 4; i++) {
    if (dir == 'N') {
      g.drawLine(cx + 1 - i,cy + i,cx + 1 + i,cy + i);
    }
 else     if (dir == 'W') {
      g.drawLine(cx + i,cy + 1 - i,cx + i,cy + 1 + i);
    }
 else     if (dir == 'S') {
      g.drawLine(cx + 1 - i,cy + 4 - i,cx + 1 + i,cy + 4 - i);
    }
 else {
      g.drawLine(cx + 4 - i,cy + 1 - i,cx + 4 - i,cy + 1 + i);
    }
  }
}
