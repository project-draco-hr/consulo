{
  myMouseListeners.add(listener);
  if (!isVisible()) {
    setVisible(true);
  }
  Disposer.register(parent,new Disposable(){
    public void dispose(){
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          myMouseListeners.remove(listener);
          if (myMouseListeners.size() == 0) {
            setVisible(false);
          }
        }
      }
);
    }
  }
);
}
