{
  if (ourShadowInstance == null) {
    ourShadowInstance=new ApplicationInfoImpl();
    try {
      Document doc=JDOMUtil.loadDocument(ApplicationInfoImpl.class.getResourceAsStream(IDEA_PATH + ApplicationNamesInfo.getComponentName() + XML_EXTENSION));
      ourShadowInstance.readExternal(doc.getRootElement());
    }
 catch (    Exception e) {
      LOG.error(e);
    }
  }
  return ourShadowInstance;
}
