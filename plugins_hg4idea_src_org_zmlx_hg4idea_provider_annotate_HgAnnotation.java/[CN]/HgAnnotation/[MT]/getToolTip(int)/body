{
  if (myLines.size() <= lineNumber || lineNumber < 0) {
    return null;
  }
  HgAnnotationLine info=myLines.get(lineNumber);
  if (info == null) {
    return null;
  }
  for (  HgFileRevision revision : myFileRevisions) {
    if (revision.getRevisionNumber().equals(info.getVcsRevisionNumber())) {
      return HgVcsMessages.message("hg4idea.annotation.tool.tip",revision.getRevisionNumber().asString(),revision.getAuthor(),revision.getRevisionDate(),revision.getCommitMessage());
    }
  }
  return null;
}
