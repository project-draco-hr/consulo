{
  final String configPath=PathManager.getConfigPath();
  if (configPath == null || !new File(configPath).isDirectory()) {
    showError("Invalid config path","Config path '" + configPath + "' is invalid.\n"+ "If you have modified the 'idea.config.path' property please make sure it is correct,\n"+ "otherwise please re-install the IDE.");
    return false;
  }
  final String systemPath=PathManager.getSystemPath();
  if (systemPath == null || !new File(systemPath).isDirectory()) {
    showError("Invalid system path","System path '" + systemPath + "' is invalid.\n"+ "If you have modified the 'idea.system.path' property please make sure it is correct,\n"+ "otherwise please re-install the IDE.");
    return false;
  }
  return true;
}
