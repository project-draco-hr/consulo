{
  if (isFileReadOnly(project,file)) {
    return;
  }
  final PsiJavaToken token=(PsiJavaToken)findMatchingElement(file,editor);
  final PsiIfStatement firstStatement=(PsiIfStatement)token.getParent();
  final PsiIfStatement secondStatement=(PsiIfStatement)PsiTreeUtil.skipSiblingsForward(firstStatement,new Class[]{PsiWhiteSpace.class});
  String statement=mergeIfStatements(firstStatement,secondStatement);
  replaceStatement(project,statement,firstStatement);
  secondStatement.delete();
}
