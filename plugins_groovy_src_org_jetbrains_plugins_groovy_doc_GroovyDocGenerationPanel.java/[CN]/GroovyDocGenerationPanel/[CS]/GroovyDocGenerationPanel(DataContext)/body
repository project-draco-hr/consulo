{
  myInputDir.addBrowseFolderListener(GroovyDocBundle.message("groovydoc.generate.input.directory.browse"),null,null,FileChooserDescriptorFactory.createSingleFolderDescriptor());
  myOutputDir.addBrowseFolderListener(GroovyDocBundle.message("groovydoc.generate.output.directory.browse"),null,null,FileChooserDescriptorFactory.createSingleFolderDescriptor());
  myPackageNames.setModel(new DefaultListModel());
  myPackagesPanel.setLayout(new BorderLayout());
  myActionToolbar=ActionManager.getInstance().createActionToolbar("GroovyDoc",getActionGroup(),true);
  myPackagesPanel.add(myActionToolbar.getComponent(),BorderLayout.WEST);
  myActionToolbar.updateActionsImmediately();
}
