{
  final String message=((ArtifactEditorImpl)myContext.getThisArtifactEditor()).getValidationManager().getProblem(this);
  if (message == null) {
    super.update(presentation);
    return;
  }
  getElementPresentation().render(presentation,addErrorHighlighting(SimpleTextAttributes.REGULAR_ATTRIBUTES),addErrorHighlighting(SimpleTextAttributes.GRAY_ATTRIBUTES));
  presentation.setTooltip(message);
}
