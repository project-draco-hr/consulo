{
  try {
    if (LOG.isDebugEnabled()) {
      LOG.debug("to fsnotifier: " + line);
    }
    notifierWriter.write(line);
    notifierWriter.newLine();
    notifierWriter.flush();
  }
 catch (  IOException e) {
    try {
      notifierProcess.exitValue();
    }
 catch (    IllegalThreadStateException e1) {
      throw e;
    }
    notifierProcess=null;
    notifierWriter=null;
    notifierReader=null;
  }
}
