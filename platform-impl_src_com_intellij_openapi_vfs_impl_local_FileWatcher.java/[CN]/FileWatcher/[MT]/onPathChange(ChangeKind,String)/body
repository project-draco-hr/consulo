{
synchronized (LOCK) {
switch (changeKind) {
case STATS:
case CHANGE:
      myDirtyPaths.add(path);
    break;
case CREATE:
case DELETE:
  myDirtyPaths.add(new File(path).getParentFile().getPath());
break;
case DIRTY:
myDirtyDirs.add(path);
break;
case RECDIRTY:
myDirtyRecursivePaths.add(path);
break;
case RESET:
reset();
break;
}
}
}
