{
  try {
    String p=FileUtil.toSystemIndependentName(localPath);
    if (!p.startsWith("/")) {
      p="/" + p;
    }
    if (p.startsWith("//")) {
      p="//" + p;
    }
    return new URI("file",null,p.replaceAll(" ","%20"),null);
  }
 catch (  URISyntaxException e) {
    throw new Error(e);
  }
}
