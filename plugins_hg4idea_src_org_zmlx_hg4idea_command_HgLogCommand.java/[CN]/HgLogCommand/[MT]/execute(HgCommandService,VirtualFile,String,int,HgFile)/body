{
  List<String> arguments=new LinkedList<String>();
  if (followCopies) {
    arguments.add("--follow");
  }
  arguments.add("--template");
  arguments.add(template);
  arguments.add("--limit");
  arguments.add(String.valueOf(limit));
  if (logFile) {
    arguments.add(hgFile.getRelativePath());
  }
  return service.execute(repo,"log",arguments);
}
