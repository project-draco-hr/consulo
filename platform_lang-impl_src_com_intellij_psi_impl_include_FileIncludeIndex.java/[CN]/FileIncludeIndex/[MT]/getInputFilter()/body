{
  return new FileBasedIndex.FileTypeSpecificInputFilter(){
    @Override public boolean acceptInput(    Project project,    @NotNull VirtualFile file){
      if (file.getFileSystem() instanceof ArchiveFileSystem) {
        return false;
      }
      for (      FileIncludeProvider provider : myProviders) {
        if (provider.acceptFile(file)) {
          return true;
        }
      }
      return false;
    }
    @Override public void registerFileTypesUsedForIndexing(    @NotNull Consumer<FileType> fileTypeSink){
      for (      FileIncludeProvider provider : myProviders) {
        provider.registerFileTypesUsedForIndexing(fileTypeSink);
      }
    }
  }
;
}
