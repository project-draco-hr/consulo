{
  Color color;
  if (value == null) {
    color=null;
  }
 else {
    try {
      int rgb=Integer.parseInt(value,16);
      color=new Color(rgb);
    }
 catch (    NumberFormatException ex) {
      LOG.debug("Wrong color value: " + value,ex);
      throw new InvalidDataException("Wrong color value: " + value,ex);
    }
  }
  return color;
}
