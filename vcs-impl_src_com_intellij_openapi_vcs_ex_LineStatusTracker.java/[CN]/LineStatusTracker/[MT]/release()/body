{
  try {
    if (!myIsInitialized)     return;
    LOG.assertTrue(!myIsReleased);
    removeHighlighters(new ArrayList<Range>());
    if (myDocumentListener != null) {
      myDocument.removeDocumentListener(myDocumentListener);
      myDocumentListener=null;
    }
  }
  finally {
    myIsReleased=true;
  }
}
