{
  progressWindow.addListener(new ProgressIndicatorListenerAdapter(){
    public void cancelled(){
      command.release();
    }
  }
);
  new Thread(){
    public void run(){
      ProgressManager.getInstance().runProcess(new Runnable(){
        public void run(){
          invokeAndWait(command,HIGH_PRIORITY);
        }
      }
,progressWindow);
    }
  }
.start();
}
