{
  int upEdgeLI=getLayoutIndex(edge.getUpNodeIndex());
  int downEdgeLI=upEdgeLI;
  if (edge.getDownNodeIndex() != LinearGraph.NOT_LOAD_COMMIT)   downEdgeLI=getLayoutIndex(edge.getDownNodeIndex());
  int nodeLI=getLayoutIndex(node.getNodeIndex());
  if (Math.max(upEdgeLI,downEdgeLI) != nodeLI)   return Math.max(upEdgeLI,downEdgeLI) - nodeLI;
 else   return edge.getUpNodeIndex() - node.getNodeIndex();
}
