{
  File f=new File(myDir,"counter");
  if (!f.exists())   return 0;
  try {
    FileInputStream fs=new FileInputStream(f);
    try {
      Stream s=new Stream(fs);
      return s.readInteger();
    }
  finally {
      fs.close();
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
