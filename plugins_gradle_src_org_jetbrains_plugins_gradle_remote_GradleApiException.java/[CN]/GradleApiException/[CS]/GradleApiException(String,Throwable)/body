{
  super(extractMessage(message,cause));
  if (cause == null) {
    myOriginalReason="";
    return;
  }
  StringWriter stringWriter=new StringWriter();
  PrintWriter printWriter=new PrintWriter(stringWriter);
  try {
    cause.printStackTrace(printWriter);
  }
  finally {
    printWriter.close();
  }
  myOriginalReason=stringWriter.toString();
}
