{
  final Editor editor=myFixture.getEditor();
  final PsiElement element=GotoDeclarationAction.findTargetElement(myFixture.getProject(),editor,editor.getCaretModel().getOffset());
  assertEquals(myFixture.getFile(),element.getContainingFile());
  editor.getCaretModel().moveToOffset(element.getTextOffset());
  editor.getScrollingModel().scrollToCaret(ScrollType.CENTER);
  editor.getSelectionModel().removeSelection();
}
