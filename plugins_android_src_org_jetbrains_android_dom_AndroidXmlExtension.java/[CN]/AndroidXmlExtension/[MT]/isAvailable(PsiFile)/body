{
  if (file instanceof XmlFile) {
    Project project=file.getProject();
    if (!project.isDefault() && !DirectoryIndex.getInstance(project).isInitialized()) {
      return false;
    }
    if (AndroidFacet.getInstance(file) == null) {
      return false;
    }
    return ApplicationManager.getApplication().runReadAction(new Computable<Boolean>(){
      public Boolean compute(){
        return AndroidResourceUtil.isInResourceSubdirectory(file,null) || ManifestDomFileDescription.isManifestFile((XmlFile)file);
      }
    }
);
  }
  return false;
}
