{
  if ((pos + 8) > max)   throw new IOException("Packet too short.");
  long high=((arr[pos++] & 0xff) << 24) | ((arr[pos++] & 0xff) << 16) | ((arr[pos++] & 0xff) << 8)| (arr[pos++] & 0xff);
  long low=((arr[pos++] & 0xff) << 24) | ((arr[pos++] & 0xff) << 16) | ((arr[pos++] & 0xff) << 8)| (arr[pos++] & 0xff);
  return (high << 32) | (low & 0xffffffffl);
}
