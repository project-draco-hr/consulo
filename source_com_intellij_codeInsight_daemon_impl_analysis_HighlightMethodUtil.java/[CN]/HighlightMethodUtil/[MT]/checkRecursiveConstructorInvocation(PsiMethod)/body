{
  if (HighlightControlFlowUtil.isRecursivelyCalledConstructor(method)) {
    TextRange textRange=HighlightUtil.getMethodDeclarationTextRange(method);
    final HighlightInfo highlightInfo=HighlightInfo.createHighlightInfo(HighlightInfoType.ERROR,textRange,"Recursive constructor invocation");
    return highlightInfo;
  }
  return null;
}
