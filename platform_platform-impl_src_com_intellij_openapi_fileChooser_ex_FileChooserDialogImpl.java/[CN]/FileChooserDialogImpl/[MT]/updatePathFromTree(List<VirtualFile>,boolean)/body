{
  if (!isToShowTextField() || myTreeIsUpdating)   return;
  String text="";
  if (selection.size() > 0) {
    text=getFilePath(selection.get(0));
  }
 else {
    final List<String> rootPaths=myChooserDescriptor.getRootPaths();
    if (!myFileSystemTree.getTree().isRootVisible() && rootPaths.size() == 1) {
      text=rootPaths.get(0);
    }
  }
  myPathTextField.setText(text,now,new Runnable(){
    public void run(){
      myPathTextField.getField().selectAll();
      setErrorText(null);
    }
  }
);
}
