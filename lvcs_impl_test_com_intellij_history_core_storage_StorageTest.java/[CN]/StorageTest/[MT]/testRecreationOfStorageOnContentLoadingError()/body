{
  StoredContent c=(StoredContent)s.storeContent(b("abc"));
  m.myEntryCounter=10;
  s.store(m);
  s.purgeContent(c);
  s.close();
  initStorage();
  try {
    s.loadContentData(c.getId());
    fail();
  }
 catch (  BrokenStorageException e) {
  }
  initStorage();
  m=s.load();
  assertEquals(0,m.myEntryCounter);
}
