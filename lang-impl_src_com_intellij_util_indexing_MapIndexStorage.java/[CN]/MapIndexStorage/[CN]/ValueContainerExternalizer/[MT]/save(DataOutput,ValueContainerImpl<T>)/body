{
  for (final Iterator<T> valueIterator=container.getValueIterator(); valueIterator.hasNext(); ) {
    final T value=valueIterator.next();
    myExternalizer.save(out,value);
    final ValueContainer.IntIterator ids=container.getInputIdsIterator(value);
    if (ids != null) {
      if (ids.size() == 1) {
        RecordUtil.writeSINT(out,-ids.next());
      }
 else {
        RecordUtil.writeSINT(out,ids.size());
        while (ids.hasNext()) {
          RecordUtil.writeSINT(out,ids.next());
        }
      }
    }
 else {
      RecordUtil.writeSINT(out,0);
    }
  }
}
