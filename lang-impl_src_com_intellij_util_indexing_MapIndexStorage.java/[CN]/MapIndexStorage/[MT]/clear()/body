{
  try {
    myMap.close();
  }
 catch (  IOException e) {
    LOG.error(e);
  }
  myMap=null;
  myCache.removeAll();
  FileUtil.delete(myStorageFile);
  try {
    myMap=new PersistentHashMap<Key,ValueContainerImpl<Value>>(myStorageFile,myKeyDescriptor,myValueContainerExternalizer);
  }
 catch (  IOException e) {
    throw new StorageException(e);
  }
}
