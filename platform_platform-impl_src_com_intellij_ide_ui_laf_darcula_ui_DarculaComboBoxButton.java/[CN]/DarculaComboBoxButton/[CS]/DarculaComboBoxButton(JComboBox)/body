{
  myComboBox=comboBox;
  setUI(new BasicButtonUI(){
    @Override public void paint(    Graphics g,    JComponent c){
      final Icon i;
      if (myComboBox.isEditable()) {
        g.drawLine(0,0,0,c.getHeight());
        i=AllIcons.Mac.Tree_white_down_arrow;
      }
 else {
        i=AllIcons.Ide.Statusbar_arrows;
      }
      i.paintIcon(c,g,(c.getWidth() - i.getIconWidth()) / 2,(c.getHeight() - i.getIconHeight()) / 2);
    }
    @Override public Dimension getPreferredSize(    JComponent c){
      return super.getPreferredSize(c);
    }
  }
);
}
