{
  final String edited=Messages.showMultilineInputDialog(project,"Attention! Previous message will be lost!\n\nNew revision comment:","Edit Revision # " + number + " Comment",oldComment,Messages.getInformationIcon(),null);
  if (edited == null || edited.trim().equals(oldComment.trim()))   return;
  ProgressManager.getInstance().run(new EditMessageTask(project,edited,location,number,listener,fromVersionControl));
}
