{
  if (notAllowed(fileOrDir))   return;
  assertNotExists(fileOrDir);
  if (fileOrDir.isDirectory()) {
    myVcs.createDirectory(fileOrDir.getPath());
    for (    VirtualFile f : fileOrDir.getChildren()) {
      createRecursively(f);
    }
  }
 else {
    myProcessor.addFileToCreate(fileOrDir);
  }
}
