{
  if (element instanceof GrTypeDefinitionBody) {
    final PsiElement parent=element.getParent();
    if (parent instanceof GrTypeDefinition && !((GrTypeDefinition)parent).isAnonymous() && ((GrTypeDefinition)parent).getContainingClass() == null) {
      final PsiFile file=element.getContainingFile();
      if (file instanceof GroovyFile) {
        return ((GroovyFile)file).getClasses().length == 1;
      }
    }
  }
  return false;
}
