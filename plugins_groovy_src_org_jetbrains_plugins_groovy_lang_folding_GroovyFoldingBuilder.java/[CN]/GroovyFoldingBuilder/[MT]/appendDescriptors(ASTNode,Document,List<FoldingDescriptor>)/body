{
  IElementType type=node.getElementType();
  if (GroovyElementTypes.BLOCK_SET.contains(type) || type == GroovyElementTypes.CLOSABLE_BLOCK) {
    if (isMultiline(node,document)) {
      descriptors.add(new FoldingDescriptor(node,node.getTextRange()));
    }
  }
  if ((type.equals(mML_COMMENT) || type.equals(GROOVY_DOC_COMMENT)) && isMultiline(node,document) && isWellEndedComment(node)) {
    descriptors.add(new FoldingDescriptor(node,node.getTextRange()));
  }
  ASTNode child=node.getFirstChildNode();
  while (child != null) {
    appendDescriptors(child,document,descriptors);
    child=child.getTreeNext();
  }
}
