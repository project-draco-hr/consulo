{
  int moduleCount=0;
  final Project project=e.getData(DataKeys.PROJECT);
  if (project != null) {
    for (    Module aModule : (ModuleManager.getInstance(project).getModules())) {
      if (aModule.getModuleType() instanceof PluginModuleType) {
        moduleCount++;
      }
    }
  }
  boolean enabled=false;
  if (moduleCount > 1) {
    enabled=true;
  }
 else {
    final Module module=e.getData(DataKeys.MODULE);
    if (module == null || !(module.getModuleType() instanceof PluginModuleType)) {
      enabled=true;
    }
  }
  e.getPresentation().setVisible(enabled);
  e.getPresentation().setEnabled(enabled);
  if (enabled) {
    e.getPresentation().setText(DevKitBundle.message("prepare.for.deployment.all"));
  }
}
