{
  if (!isVisible())   return;
  Toolkit.getDefaultToolkit().removeAWTEventListener(myActiveityListener);
  myLayeredPane.removeComponentListener(myComponentListener);
  myLayeredPane.remove(myComp);
  myComp.clear();
  myLayeredPane.revalidate();
  myLayeredPane.repaint();
  myLayeredPane=null;
  onHidden();
}
