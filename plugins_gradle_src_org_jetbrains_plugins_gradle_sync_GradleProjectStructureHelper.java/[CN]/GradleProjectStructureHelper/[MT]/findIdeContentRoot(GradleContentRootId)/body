{
  final Module module=findIdeModule(id.getModuleName());
  if (module == null) {
    return null;
  }
  for (  ModuleAwareContentRoot contentRoot : myFacade.getContentRoots(module)) {
    final VirtualFile file=contentRoot.getFile();
    if (id.getRootPath().equals(file.getPath())) {
      return contentRoot;
    }
  }
  return null;
}
