{
  myFirstLetterCaseMatters=firstLetterCaseMatters;
  myPattern=pattern.replaceAll(":","\\*:").replaceAll("\\.","\\*\\.").toCharArray();
  for (int i=0; i < myPattern.length; i++) {
    if (Character.isUpperCase(myPattern[i])) {
      myFirstUpperCase=i;
      return;
    }
  }
  myFirstUpperCase=-1;
}
