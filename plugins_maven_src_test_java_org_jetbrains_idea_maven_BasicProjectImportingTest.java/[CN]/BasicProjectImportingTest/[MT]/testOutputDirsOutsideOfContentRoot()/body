{
  importProject("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<build>"+ "  <directory>../target</directory>"+ "  <outputDirectory>../target/classes</outputDirectory>"+ "  <testOutputDirectory>../target/test-classes</testOutputDirectory>"+ "</build>");
  String parentPath=root.getParent().getPath();
  assertContentRoots("project",root.getPath(),parentPath + "/target");
  assertContentRootExcludes("project",root.getPath());
  assertContentRootExcludes("project",parentPath + "/target","");
  assertModuleOutput("project",parentPath + "/target/classes",parentPath + "/target/test-classes");
}
