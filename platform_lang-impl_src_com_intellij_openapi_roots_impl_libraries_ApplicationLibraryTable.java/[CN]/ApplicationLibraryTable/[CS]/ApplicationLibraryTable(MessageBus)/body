{
  messageBus.connect().subscribe(ProjectManager.TOPIC,new ProjectManagerAdapter(){
    @Override public void projectOpened(    final Project project){
      project.getMessageBus().connect().subscribe(ProjectTopics.PROJECT_ROOTS,new ModuleRootListener(){
        @Override public void beforeRootsChange(        ModuleRootEvent event){
        }
        @Override public void rootsChanged(        ModuleRootEvent event){
          updateUsedLibraries(project);
        }
      }
);
    }
  }
);
}
