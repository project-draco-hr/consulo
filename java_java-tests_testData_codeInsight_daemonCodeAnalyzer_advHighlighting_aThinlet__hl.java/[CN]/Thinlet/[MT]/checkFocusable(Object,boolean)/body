{
  String classname=getClass(component);
  if ((classname == "button") || (classname == "checkbox") || (classname == "combobox")|| (classname == "textfield")|| (classname == "passwordfield")|| (classname == "textarea")|| (classname == "spinbox")|| (classname == "slider")|| (classname == "list")|| (classname == "table")|| (classname == "tree")|| (classname == "tabbedpane")|| (forced && (classname == "splitpane"))) {
    for (Object comp=component; comp != null; ) {
      if (!getBoolean(comp,"enabled",true) || !getBoolean(comp,"visible",true)) {
        return false;
      }
      Object parent=getParent(comp);
      if ((getClass(parent) == "tabbedpane") && (getItemImpl(parent,"component",getInteger(parent,"selected",0)) != comp)) {
        return false;
      }
      comp=parent;
    }
    return true;
  }
  return false;
}
