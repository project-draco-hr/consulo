{
  DIRECTORY_ICON.paintIcon(tc,g,5,5);
  int imagesCount=tc.getImagesCount();
  if (imagesCount > 0) {
    final String title;
    if (imagesCount == 1) {
      title=IconsBundle.message("icons.count.one");
    }
 else     if (imagesCount > 100) {
      title=IconsBundle.message("icons.count.more.than.hundred");
    }
 else {
      title=IconsBundle.message("icons.count",imagesCount);
    }
    Font font=getSmallFont();
    FontMetrics fontMetrics=g.getFontMetrics(font);
    g.setColor(Color.BLACK);
    g.setFont(font);
    g.drawString(title,5 + (DIRECTORY_ICON.getIconWidth() - fontMetrics.stringWidth(title)) / 2,DIRECTORY_ICON.getIconHeight() / 2 + fontMetrics.getAscent());
  }
}
