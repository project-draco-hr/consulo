{
  int dx=0;
  int dy=0;
  for (Container c=component; c != null; c=c.getParent()) {
    if (c.isShowing()) {
      Point locationOnScreen=c.getLocationOnScreen();
      locationOnScreen.translate(dx,dy);
      return locationOnScreen;
    }
 else {
      Point location=c.getLocation();
      dx+=location.x;
      dy+=location.y;
    }
  }
  return null;
}
