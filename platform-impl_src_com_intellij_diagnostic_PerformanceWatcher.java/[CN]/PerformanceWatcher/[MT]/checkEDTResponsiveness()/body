{
  while (true) {
    try {
      if (myShutdownSemaphore.tryAcquire(1,TimeUnit.SECONDS)) {
        break;
      }
    }
 catch (    InterruptedException e) {
      break;
    }
    if (mySwingThreadCounter != myLoopCounter) {
      dumpThreads();
    }
    myLoopCounter++;
    SwingUtilities.invokeLater(new SwingThreadRunnable(myLoopCounter));
  }
}
