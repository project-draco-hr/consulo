  return psiElement().afterLeaf(CLOSURE_LBRACE).accepts(ref) || psiElement().afterLeaf(psiElement().afterLeaf(",").withParent(psiElement(GrVariable.class).withParent(psiElement(GrVariableDeclaration.class).afterLeaf(CLOSURE_LBRACE)))).accepts(ref) || GroovyCompletionContributor.isInPossibleClosureParameter(ref);
