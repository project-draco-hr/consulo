{
  if (expression == null) {
    return false;
  }
  final Project project=expression.getProject();
  final JavaPsiFacade psiFacade=JavaPsiFacade.getInstance(project);
  final PsiConstantEvaluationHelper constantEvaluationHelper=psiFacade.getConstantEvaluationHelper();
  final Object value=constantEvaluationHelper.computeConstantExpression(expression,false);
  if (!(value instanceof Boolean)) {
    return false;
  }
  final Boolean aBoolean=(Boolean)value;
  return aBoolean.booleanValue() == b;
}
