{
synchronized (myLock) {
    if (myCharHeight < 0) {
      FontMetrics fontMetrics=myEditor.getContentComponent().getFontMetrics(myEditor.getColorsScheme().getFont(EditorFontType.PLAIN));
      myCharHeight=FontLayoutService.getInstance().charWidth(fontMetrics,'a');
    }
    return myCharHeight;
  }
}
