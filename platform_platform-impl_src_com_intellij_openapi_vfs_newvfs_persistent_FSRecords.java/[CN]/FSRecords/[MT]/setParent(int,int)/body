{
  if (id == parent) {
    LOG.error("Cyclic parent/child relations");
    return;
  }
  lock.lock();
  try {
    DbConnection.markDirty();
    incModCount(id);
    getRecords().putInt(id * RECORD_SIZE + PARENT_OFFSET,parent);
  }
 catch (  Throwable e) {
    throw DbConnection.handleError(e);
  }
 finally {
    lock.unlock();
  }
}
