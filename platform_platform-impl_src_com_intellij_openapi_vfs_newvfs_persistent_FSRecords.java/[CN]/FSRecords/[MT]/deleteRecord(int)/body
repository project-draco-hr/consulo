{
synchronized (lock) {
    try {
      DbConnection.markDirty();
      deleteAttribute(id,-1);
      deleteAttribute(id,DbConnection.CONTENT_ID);
      DbConnection.cleanRecord(id);
      addToFreeRecordsList(id);
    }
 catch (    Throwable e) {
      throw DbConnection.handleError(e);
    }
  }
}
