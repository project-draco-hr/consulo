{
  lock.lock();
  try {
    final int parentId=getRecords().getInt(id * RECORD_SIZE + PARENT_OFFSET);
    if (parentId == id) {
      LOG.error("Cyclic parent child relations in the database. id = " + id);
      return 0;
    }
    return parentId;
  }
 catch (  Throwable e) {
    throw DbConnection.handleError(e);
  }
 finally {
    lock.unlock();
  }
}
