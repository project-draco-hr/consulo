{
  try {
    r.lock();
    try {
      final int parentId=getRecordInt(id,PARENT_OFFSET);
      if (parentId == id) {
        LOG.error("Cyclic parent child relations in the database. id = " + id);
        return 0;
      }
      return parentId;
    }
  finally {
      r.unlock();
    }
  }
 catch (  Throwable e) {
    throw DbConnection.handleError(e);
  }
}
