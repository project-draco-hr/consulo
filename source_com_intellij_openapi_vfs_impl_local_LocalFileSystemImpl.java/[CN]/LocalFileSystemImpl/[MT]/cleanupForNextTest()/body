{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      refresh(false);
    }
  }
);
  myRootsToWatch.clear();
  myFSRootsToPaths=null;
  myDirtyFiles.clear();
  myDeletedFiles.clear();
