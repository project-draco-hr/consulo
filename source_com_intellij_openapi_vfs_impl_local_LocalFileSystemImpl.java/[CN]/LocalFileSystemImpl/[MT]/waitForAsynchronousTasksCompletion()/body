{
  LOG.assertTrue(myFutures != null,"tasks monitoring should have been started");
  for (  Future<?> future : myFutures) {
    try {
      future.get();
    }
 catch (    InterruptedException e) {
      throw new RuntimeException(e);
    }
catch (    ExecutionException e) {
      throw new RuntimeException(e);
    }
    myFutures=null;
  }
}
