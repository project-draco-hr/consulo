{
  if (SystemInfo.isWindows) {
    if (path.charAt(0) == '/')     path=path.substring(1);
    if (path.contains("~")) {
      try {
        return new File(path.replace('/',File.separatorChar)).getCanonicalPath().replace(File.separatorChar,'/');
      }
 catch (      IOException e) {
        return null;
      }
    }
  }
  return path.replace(File.separatorChar,'/');
}
