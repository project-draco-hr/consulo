def deletefile(self, wfn, oldstatus):
    '\n        update the entry of a file which has been deleted.\n\n        oldstatus: char in statuskeys, status of the file before deletion\n        '
    if (oldstatus == 'r'):
        newstatus = 'r'
    elif (oldstatus in 'almn'):
        newstatus = '!'
    else:
        newstatus = None
    self.statcache.pop(wfn, None)
    self._updatestatus(wfn, newstatus)
