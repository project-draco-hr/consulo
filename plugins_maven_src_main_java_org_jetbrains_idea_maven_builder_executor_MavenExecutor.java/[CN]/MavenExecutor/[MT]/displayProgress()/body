{
  final ProgressIndicator indicator=ProgressManager.getInstance().getProgressIndicator();
  if (indicator != null) {
    indicator.setText(MessageFormat.format("{0} {1}",myAction != null ? myAction : BuilderBundle.message("maven.building"),FileUtil.toSystemDependentName(myParameters.getPomPath())));
    indicator.setText2(myParameters.getGoals().toString());
  }
}
