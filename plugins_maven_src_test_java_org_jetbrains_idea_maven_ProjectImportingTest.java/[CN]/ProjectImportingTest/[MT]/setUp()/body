{
  super.setUp();
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      try {
        File dir=createTempDirectory();
        root=LocalFileSystem.getInstance().refreshAndFindFileByIoFile(dir);
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
);
}
