{
  final boolean[] values=new boolean[2];
  FileFilter f=new FileFilter(null,null){
    @Override public boolean isUnderContentRoot(    VirtualFile f){
      return values[0];
    }
    @Override public boolean isAllowed(    VirtualFile f){
      return values[1];
    }
  }
;
  values[0]=true;
  values[1]=true;
  assertTrue(f.isAllowedAndUnderContentRoot(null));
  values[0]=false;
  values[1]=true;
  assertFalse(f.isAllowedAndUnderContentRoot(null));
  values[0]=true;
  values[1]=false;
  assertFalse(f.isAllowedAndUnderContentRoot(null));
}
