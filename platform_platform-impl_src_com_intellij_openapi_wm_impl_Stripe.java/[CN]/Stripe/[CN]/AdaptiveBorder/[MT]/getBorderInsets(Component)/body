{
  Stripe stripe=(Stripe)c;
  ToolWindowAnchor anchor=stripe.getAnchor();
  Insets result=new Insets(0,0,0,0);
  if (anchor == ToolWindowAnchor.LEFT) {
    result.top=1;
    result.right=1;
  }
 else   if (anchor == ToolWindowAnchor.RIGHT) {
    result.left=1;
    result.top=1;
  }
 else   if (anchor == ToolWindowAnchor.TOP) {
    result.bottom=0;
    result.top=1;
  }
 else {
    result.top=1;
  }
  return result;
}
