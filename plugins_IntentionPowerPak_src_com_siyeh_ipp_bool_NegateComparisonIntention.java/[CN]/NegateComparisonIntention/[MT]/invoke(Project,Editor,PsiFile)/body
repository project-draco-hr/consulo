{
  final PsiBinaryExpression exp=(PsiBinaryExpression)findMatchingElement(file,editor);
  final PsiExpression lhs=exp.getLOperand();
  final PsiExpression rhs=exp.getROperand();
  final PsiJavaToken sign=exp.getOperationSign();
  final String operator=sign.getText();
  final String negatedOperator=ComparisonUtils.getNegatedComparison(operator);
  final String lhsText=lhs.getText();
  final String rhsText=rhs.getText();
  replaceExpressionWithNegatedExpressionString(project,lhsText + negatedOperator + rhsText,exp);
}
