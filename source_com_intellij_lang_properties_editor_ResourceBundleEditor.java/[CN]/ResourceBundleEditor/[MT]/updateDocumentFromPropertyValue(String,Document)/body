{
  String text=value;
  text=StringUtil.replace(text,"\\\n","\n");
  text=StringUtil.replace(text,"\\n","\n");
  text=StringUtil.replace(text,"\\t","\t");
  text=StringUtil.replace(text,"\\\\","\\");
  text=text.replaceAll("\n\\s*(\\S)","\n$1");
  document.replaceString(0,document.getTextLength(),text);
}
