{
  final InspectionToolsConfigurable inspectionToolsConfigurable=new InspectionToolsConfigurable(project,canChooseDifferentProfile,profileManager,inspectionProfile,null){
    public JComponent createComponent(){
      final InspectionToolsPanel toolsPanel=getPanel();
      toolsPanel.filterTree(filter);
      return toolsPanel;
    }
    public void reset(){
      getPanel().setFilter(filter);
    }
  }
;
  final boolean isOK=ShowSettingsUtil.getInstance().editConfigurable(project,"#com.intellij.codeInspection.ex.EditInspectionToolsSettingsAction",inspectionToolsConfigurable);
  return isOK;
}
