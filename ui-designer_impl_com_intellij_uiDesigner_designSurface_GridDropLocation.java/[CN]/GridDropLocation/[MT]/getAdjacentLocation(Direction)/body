{
switch (direction) {
case LEFT:
    return new GridInsertLocation(myContainer,myRow,myColumn,GridInsertMode.ColumnBefore);
case UP:
  return new GridInsertLocation(myContainer,myRow,myColumn,GridInsertMode.RowBefore);
case RIGHT:
return new GridInsertLocation(myContainer,myRow,myColumn,GridInsertMode.ColumnAfter);
case DOWN:
return new GridInsertLocation(myContainer,myRow,myColumn,GridInsertMode.RowAfter);
}
return null;
}
