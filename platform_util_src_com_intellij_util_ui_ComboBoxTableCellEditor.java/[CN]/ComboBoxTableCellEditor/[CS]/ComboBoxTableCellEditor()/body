{
  myComboBox.setRenderer(new BasicComboBoxRenderer());
  myComboBox.addActionListener(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      stopCellEditing();
    }
  }
);
  myPanel.add(myComboBox,new GridBagConstraints(0,0,1,1,1.0,1.0,GridBagConstraints.CENTER,GridBagConstraints.BOTH,new Insets(0,0,0,0),0,0));
}
