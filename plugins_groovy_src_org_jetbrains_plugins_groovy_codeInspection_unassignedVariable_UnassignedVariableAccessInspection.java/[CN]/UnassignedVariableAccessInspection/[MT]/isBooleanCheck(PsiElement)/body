{
  final PsiElement parent=element.getParent();
  return parent instanceof GrIfStatement && ((GrIfStatement)parent).getCondition() == element || parent instanceof GrWhileStatement && ((GrWhileStatement)parent).getCondition() == element || parent instanceof GrTraditionalForClause && ((GrTraditionalForClause)parent).getCondition() == element || isLogicalExpression(parent) || parent instanceof GrUnaryExpression && ((GrUnaryExpression)parent).getOperationTokenType() == GroovyTokenTypes.mBNOT || isCheckForNull(parent,element);
}
