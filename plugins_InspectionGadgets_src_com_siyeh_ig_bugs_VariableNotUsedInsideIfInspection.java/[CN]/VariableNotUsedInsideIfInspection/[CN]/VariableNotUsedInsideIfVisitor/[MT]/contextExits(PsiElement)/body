{
  if (context instanceof PsiBlockStatement) {
    final PsiBlockStatement blockStatement=(PsiBlockStatement)context;
    final PsiCodeBlock codeBlock=blockStatement.getCodeBlock();
    final PsiStatement[] statements=codeBlock.getStatements();
    if (statements.length == 0) {
      return true;
    }
    final PsiStatement lastStatement=statements[statements.length - 1];
    if (lastStatement instanceof PsiReturnStatement || lastStatement instanceof PsiThrowStatement) {
      return true;
    }
  }
 else {
    if (context instanceof PsiReturnStatement || context instanceof PsiThrowStatement) {
      return true;
    }
  }
  return false;
}
