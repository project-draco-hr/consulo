{
  myAtStart=false;
  final SVNDiffClient dc=myVcs.createDiffClient();
  dc.setEventHandler(myHandler);
  final SvnConfiguration svnConfig=SvnConfiguration.getInstance(myVcs.getProject());
  dc.setMergeOptions(new SVNDiffOptions(svnConfig.IGNORE_SPACES_IN_MERGE,svnConfig.IGNORE_SPACES_IN_MERGE,svnConfig.IGNORE_SPACES_IN_MERGE));
  if (myReintegrate) {
    dc.doMergeReIntegrate(mySourceUrl,SVNRevision.UNDEFINED,new File(myTargetPath),false);
  }
 else {
    dc.doMerge(mySourceUrl,SVNRevision.create(mySourceCopyRevision),mySourceUrl,SVNRevision.create(mySourceLatestRevision),new File(myTargetPath),SVNDepth.INFINITY,true,true,false,false);
  }
}
