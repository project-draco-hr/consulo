{
  final char[] buffer=lexer.getBuffer();
  final char firstCh=buffer[lexer.getTokenStart()];
  if (firstCh != 'o' && firstCh != 's' && (!caseInsensitive || (firstCh != 'S' && firstCh != 'O'))) {
    return;
  }
  String name=ParseUtil.getTokenText(lexer);
  if (caseInsensitive)   name=name.toLowerCase();
  boolean style=name.equals("style");
  boolean script=name.equals("script") || name.startsWith("on");
  if (style || script) {
    if (seenTag) {
      seenTag=false;
      return;
    }
    seenStyle=style;
    seenScript=script;
    int state=getState() & BASE_STATE_MASK;
    if (!isHtmlTagState(state)) {
      seenAttribute=true;
    }
  }
 else   if (seenAttribute) {
    seenStyle=false;
    seenScript=false;
    seenAttribute=false;
  }
}
