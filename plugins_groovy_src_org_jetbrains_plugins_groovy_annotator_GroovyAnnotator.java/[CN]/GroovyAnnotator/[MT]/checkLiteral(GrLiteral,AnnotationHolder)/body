{
  String text=literal.getText();
  if (text.startsWith("'''")) {
    if (text.length() < 6 || !text.endsWith("'''")) {
      holder.createErrorAnnotation(literal,GroovyBundle.message("string.end.expected"));
    }
  }
 else   if (text.startsWith("'")) {
    if (text.length() < 2 || !text.endsWith("'")) {
      holder.createErrorAnnotation(literal,GroovyBundle.message("string.end.expected"));
    }
  }
}
