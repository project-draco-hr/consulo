{
  String statusText=StringUtils.isNotBlank(branch) ? HgVcsMessages.message("hg4idea.status.currentBranch.text",branch) : "";
  String toolTipText=StringUtils.isNotBlank(branch) ? HgVcsMessages.message("hg4idea.status.currentBranch.description") : "";
  setVisible(StringUtils.isNotBlank(branch));
  setText(statusText);
  setToolTipText(toolTipText);
}
