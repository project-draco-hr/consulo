{
  int i=index;
  int o=offset;
  int l=length;
  while (l > 0) {
    int page=i / BUFFER_SIZE;
    int page_offset=i % BUFFER_SIZE;
    int page_len=Math.min(l,BUFFER_SIZE - page_offset);
    final ByteBuffer buffer=getBuffer(page);
    buffer.position(page_offset);
    buffer.put(src,o,page_len);
    l-=page_len;
    o+=page_len;
    i+=page_len;
  }
}
