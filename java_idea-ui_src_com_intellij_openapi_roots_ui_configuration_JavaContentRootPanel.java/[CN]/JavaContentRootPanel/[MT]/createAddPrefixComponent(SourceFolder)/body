{
  final IconActionComponent iconComponent=new IconActionComponent(AllIcons.Modules.SetPackagePrefix,AllIcons.Modules.SetPackagePrefixRollover,ProjectBundle.message("module.paths.package.prefix.tooltip"),new Runnable(){
    public void run(){
      final String message=ProjectBundle.message("module.paths.package.prefix.prompt",toRelativeDisplayPath(folder.getUrl(),getContentEntry().getUrl() + ":"));
      final String prefix=Messages.showInputDialog(JavaContentRootPanel.this,message,ProjectBundle.message("module.paths.package.prefix.title"),Messages.getQuestionIcon(),folder.getPackagePrefix(),null);
      if (prefix != null) {
        myCallback.setPackagePrefix(folder,prefix);
      }
    }
  }
);
  final JPanel panel=new JPanel(new BorderLayout());
  panel.setOpaque(false);
  panel.add(iconComponent,BorderLayout.CENTER);
  panel.add(Box.createHorizontalStrut(3),BorderLayout.EAST);
  return panel;
}
