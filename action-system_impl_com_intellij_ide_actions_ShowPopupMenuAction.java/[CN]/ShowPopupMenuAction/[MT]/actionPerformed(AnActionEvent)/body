{
  final RelativePoint relPoint=getPopupLocation(e.getDataContext());
  Component focusOwner=relPoint.getComponent();
  Point popupMenuPoint=relPoint.getPoint();
  focusOwner.dispatchEvent(new MouseEvent(focusOwner,MouseEvent.MOUSE_PRESSED,System.currentTimeMillis(),0,popupMenuPoint.x,popupMenuPoint.y,1,true));
}
