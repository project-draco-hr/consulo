{
  super.hide();
  if (myFocusTrackback != null) {
    myFocusTrackback.setWillBeSheduledForRestore();
    IdeFocusManager mgr=getFocusManager();
    mgr.doWhenFocusSettlesDown(new Runnable(){
      public void run(){
        myFocusTrackback.restoreFocus();
        myFocusTrackback=null;
      }
    }
);
  }
}
