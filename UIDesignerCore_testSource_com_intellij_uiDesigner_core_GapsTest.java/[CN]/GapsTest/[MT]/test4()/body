{
  final JPanel panel=new JPanel(new GridLayoutManager(3,1,new Insets(0,0,0,0),0,7));
  final JButton btn1=new JButton();
  btn1.setPreferredSize(new Dimension(100,20));
  final JButton btn2=new JButton();
  btn2.setPreferredSize(new Dimension(100,20));
  panel.add(btn1,new GridConstraints(0,0,1,1,GridConstraints.ANCHOR_CENTER,GridConstraints.FILL_HORIZONTAL,GridConstraints.SIZEPOLICY_CAN_GROW,GridConstraints.SIZEPOLICY_FIXED,null,null,null));
  panel.add(btn2,new GridConstraints(2,0,1,1,GridConstraints.ANCHOR_CENTER,GridConstraints.FILL_HORIZONTAL,GridConstraints.SIZEPOLICY_CAN_GROW,GridConstraints.SIZEPOLICY_FIXED,null,null,null));
  final Dimension preferredSize=panel.getPreferredSize();
  assertEquals(47,preferredSize.height);
  panel.setSize(panel.getPreferredSize());
  panel.doLayout();
}
