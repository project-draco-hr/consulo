{
  if (myGlassPane != null)   return;
  new UiNotifyConnector(myDragComponent,new Activatable(){
    public void showNotify(){
      attach();
    }
    public void hideNotify(){
      detach(true);
    }
  }
);
  Disposer.register(myParentDisposable,new Disposable(){
    public void dispose(){
      stop();
    }
  }
);
}
