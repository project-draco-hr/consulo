{
  setSomethingChanged(true);
  if (myEditor != null) {
    if (ApplicationManager.getApplication().isUnitTestMode()) {
      updateEditor(true);
    }
 else {
      UiNotifyConnector.doWhenFirstShown(myEditor.getComponent(),new Runnable(){
        @Override public void run(){
          addUpdatePreviewRequest();
        }
      }
);
    }
  }
}
