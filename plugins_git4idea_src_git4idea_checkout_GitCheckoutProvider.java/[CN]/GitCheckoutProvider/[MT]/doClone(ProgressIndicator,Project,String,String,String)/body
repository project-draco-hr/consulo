{
  File dir=mkdir(project,directoryName,parentDirectory);
  if (dir == null) {
    return false;
  }
  VirtualFile root=VcsUtil.getVirtualFileWithRefresh(dir);
  if (root != null && init(project,root) && addRemote(project,root,sourceRepositoryURL) && fetch(project,root,indicator) && checkout(project,root)) {
    return true;
  }
  cleanup(dir);
  return false;
}
