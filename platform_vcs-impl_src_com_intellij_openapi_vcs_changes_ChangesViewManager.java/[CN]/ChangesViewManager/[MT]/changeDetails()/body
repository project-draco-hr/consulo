{
  if (!myDetailsOn) {
    if (mySplitter.getSecondComponent() != null) {
      setChangeDetailsPanel(null);
    }
  }
 else {
    myDiffDetails.refresh();
    myDetailsFilePath=myDiffDetails.getCurrentFilePath();
    if (mySplitter.getSecondComponent() == null) {
      setChangeDetailsPanel(myDiffDetails.getPanel());
    }
  }
}
