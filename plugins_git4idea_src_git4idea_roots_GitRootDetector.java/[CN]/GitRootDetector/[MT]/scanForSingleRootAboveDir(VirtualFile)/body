{
  return myPlatformFacade.runReadAction(new Computable<VirtualFile>(){
    @Nullable @Override public VirtualFile compute(){
      if (myProject.isDisposed()) {
        return null;
      }
      VirtualFile par=projectDir.getParent();
      while (par != null) {
        if (hasGitDir(par)) {
          return par;
        }
        par=par.getParent();
      }
      return null;
    }
  }
);
}
