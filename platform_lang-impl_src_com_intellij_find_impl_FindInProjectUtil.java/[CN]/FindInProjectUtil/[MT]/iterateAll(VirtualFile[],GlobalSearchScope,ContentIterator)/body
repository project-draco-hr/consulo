{
  final FileTypeManager fileTypeManager=FileTypeManager.getInstance();
  final VirtualFileFilter contentFilter=new VirtualFileFilter(){
    @Override public boolean accept(    @NotNull final VirtualFile file){
      return file.isDirectory() || !fileTypeManager.isFileIgnored(file) && !file.getFileType().isBinary() && searchScope.contains(file);
    }
  }
;
  for (  VirtualFile file : files) {
    if (!FileIndexImplUtil.iterateRecursively(file,contentFilter,iterator))     return false;
  }
  return true;
}
