{
  Object[] edges=getEdges(source);
  List<Object> result=new ArrayList<Object>(edges.length);
  for (int i=0; i < edges.length; i++) {
    mxCellState state=view.getState(edges[i]);
    Object src=(state != null) ? state.getVisibleTerminal(true) : view.getVisibleTerminal(edges[i],true);
    Object trg=(state != null) ? state.getVisibleTerminal(false) : view.getVisibleTerminal(edges[i],false);
    if ((src == source && trg == target) || (!directed && src == target && trg == source)) {
      result.add(edges[i]);
    }
  }
  return result.toArray();
}
