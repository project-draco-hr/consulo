{
  if (cells == null) {
    cells=getSelectionCells();
  }
  if (includeEdges) {
    cells=addAllEdges(cells);
  }
  model.beginUpdate();
  try {
    cellsToggled(cells,show);
    fireEvent(new mxEventObject(mxEvent.TOGGLE_CELLS,"show",show,"cells",cells,"includeEdges",includeEdges));
  }
  finally {
    model.endUpdate();
  }
  return cells;
}
