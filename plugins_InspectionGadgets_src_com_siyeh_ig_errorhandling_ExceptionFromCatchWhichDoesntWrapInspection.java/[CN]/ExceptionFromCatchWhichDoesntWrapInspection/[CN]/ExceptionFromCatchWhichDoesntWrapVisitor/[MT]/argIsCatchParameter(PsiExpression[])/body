{
  for (int i=0; i < args.length; i++) {
    final PsiExpression arg=args[i];
    if (arg instanceof PsiReferenceExpression) {
      final PsiReferenceExpression ref=(PsiReferenceExpression)arg;
      final PsiElement referent=ref.resolve();
      if (referent != null && referent instanceof PsiParameter && ((PsiParameter)referent).getDeclarationScope() instanceof PsiCatchSection) {
        return true;
      }
    }
  }
  return false;
}
