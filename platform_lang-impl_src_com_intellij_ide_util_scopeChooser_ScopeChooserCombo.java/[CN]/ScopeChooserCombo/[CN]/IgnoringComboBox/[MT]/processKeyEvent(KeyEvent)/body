{
  if (e.getID() == KeyEvent.KEY_PRESSED && e.getModifiers() == 0) {
    if (e.getKeyCode() == KeyEvent.VK_UP) {
      myDirection=-1;
    }
 else     if (e.getKeyCode() == KeyEvent.VK_DOWN) {
      myDirection=1;
    }
  }
  try {
    super.processKeyEvent(e);
  }
  finally {
    myDirection=0;
  }
}
