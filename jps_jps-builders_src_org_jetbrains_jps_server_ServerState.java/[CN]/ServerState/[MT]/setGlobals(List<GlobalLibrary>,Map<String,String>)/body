{
synchronized (myConfigurationLock) {
    for (    ProjectDescriptor descriptor : myProjects.values()) {
      descriptor.close();
    }
    myProjects.clear();
    myGlobalLibraries.clear();
    myGlobalLibraries.addAll(libs);
    myPathVariables.clear();
    myPathVariables.putAll(pathVars);
  }
}
