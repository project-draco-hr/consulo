def __init__(self, **opts):
    for k in self.__slots__:
        v = opts.get(k)
        if (v is None):
            v = self.defaults[k]
        setattr(self, k, v)
    try:
        self.context = int(self.context)
    except ValueError:
        raise util.Abort((_('diff context lines count must be an integer, not %r') % self.context))
