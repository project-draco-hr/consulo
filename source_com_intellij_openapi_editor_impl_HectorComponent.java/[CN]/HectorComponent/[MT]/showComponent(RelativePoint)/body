{
  final JBPopup hector=JBPopupFactory.getInstance().createComponentPopupBuilder(this,null).setRequestFocus(true).setMovable(true).setCancelCallback(new Computable<Boolean>(){
    public Boolean compute(){
      onClose();
      return Boolean.TRUE;
    }
  }
).createPopup();
  final JBPopup oldHector=getOldHector();
  if (oldHector != null) {
    oldHector.cancel();
  }
 else {
    myHectorRef=new WeakReference<JBPopup>(hector);
    hector.show(point);
  }
}
