{
  final JBPopup hector=JBPopupFactory.getInstance().createComponentPopupBuilder(this,null).setRequestFocus(true).setMovable(true).setCallback(new Runnable(){
    public void run(){
      onClose();
    }
  }
).createPopup();
  final JBPopup oldHector=getOldHector();
  if (oldHector != null) {
    oldHector.cancel();
  }
 else {
    myHectorRef=new WeakReference<JBPopup>(hector);
    hector.show(point);
  }
}
