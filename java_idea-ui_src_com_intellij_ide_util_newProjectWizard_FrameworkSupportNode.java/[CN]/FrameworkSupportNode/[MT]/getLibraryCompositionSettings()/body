{
  if (myLibraryCompositionSettings == null || isObsolete(myLibraryCompositionSettings)) {
    final LibraryInfo[] libraries=getLibraries();
    if (libraries.length != 0) {
      myLibraryCompositionSettings=new LibraryCompositionSettings(libraries,myConfigurable.getSelectedVersion().getLibraryName(),myBaseDirForLibrariesGetter.compute(),"Libraries",myProvider.getIcon());
    }
 else {
      myLibraryCompositionSettings=null;
    }
  }
  return myLibraryCompositionSettings;
}
