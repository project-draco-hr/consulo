{
  final File[] files=directory.listFiles();
  if (files == null) {
    return;
  }
  for (int i=0; i < files.length; i++) {
    final File file=files[i];
    if (file.isDirectory()) {
      deleteDirectoryRecursively(file);
    }
 else {
      FileUtil.delete(file);
    }
  }
  FileUtil.delete(directory);
}
