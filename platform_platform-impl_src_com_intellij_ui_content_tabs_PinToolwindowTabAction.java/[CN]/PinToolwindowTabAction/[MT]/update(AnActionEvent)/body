{
  super.update(event);
  Presentation presentation=event.getPresentation();
  final Content content=getContextContent(event);
  boolean enabled=content != null && content.isPinnable();
  if (enabled) {
    presentation.setIcon(TabbedPaneContentUI.POPUP_PLACE.equals(event.getPlace()) || ToolWindowContentUi.POPUP_PLACE.equals(event.getPlace()) ? null : AllIcons.General.Pin_tab);
  }
  presentation.setEnabled(enabled);
  presentation.setVisible(enabled);
}
