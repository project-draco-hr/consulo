{
  Runnable cleanup=new Runnable(){
    public void run(){
      myLastProcessedOverComponent=null;
      myCurrentDragContext=null;
      myCurrentEvent=null;
      myLastProcessedEvent=null;
    }
  }
;
  if (myApp.isDispatchThread()) {
    cleanup.run();
  }
 else {
    SwingUtilities.invokeLater(cleanup);
  }
}
