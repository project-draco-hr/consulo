{
  LOG.debug("================== tearing down " + getName() + " ==================");
  try {
    myConnection.disconnect();
    myWatcher.shutdown();
    assertFalse(myWatcher.isOperational());
  }
  finally {
    myFileSystem=null;
    myWatcher=null;
    super.tearDown();
  }
  LOG.debug("================== tearing down " + getName() + " ==================");
}
