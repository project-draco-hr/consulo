{
  if (color != null && !color.equals(myColor)) {
    myColor=color;
    myPreviewComponent.setColor(color);
    myColorWheelPanel.setColor(color,fromHex ? myHex : null);
    if (fromHex) {
      applyColor(color);
    }
 else {
      applyColorToHEX(color);
    }
    fireColorChanged(color);
  }
}
