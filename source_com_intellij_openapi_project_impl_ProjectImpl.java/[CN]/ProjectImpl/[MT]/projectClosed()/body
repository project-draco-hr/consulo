{
  final Object[] components=getComponents();
  for (int i=components.length - 1; i >= 0; i--) {
    if (components[i] instanceof ProjectComponent) {
      try {
        ProjectComponent component=(ProjectComponent)components[i];
        component.projectClosed();
      }
 catch (      Throwable e) {
        LOG.error(e);
      }
    }
  }
}
