{
  if (now) {
    final boolean success=mySpotlightPainter.updateForCurrentConfigurable();
    if (!success) {
      updateSpotlight(false);
    }
  }
 else {
    mySpotlightUpdate.queue(new Update(this){
      public void run(){
        final boolean success=mySpotlightPainter.updateForCurrentConfigurable();
        if (!success) {
          updateSpotlight(false);
        }
      }
    }
);
  }
}
