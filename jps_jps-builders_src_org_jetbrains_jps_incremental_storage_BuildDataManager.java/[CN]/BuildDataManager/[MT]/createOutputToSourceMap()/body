{
  final File root=getOutputToSourceStorageRoot();
  final File dataFile=new File(root,"data");
  try {
    return new OutputToSourceMapping(dataFile);
  }
 catch (  IOException e) {
    FileUtil.delete(root);
    try {
      return new OutputToSourceMapping(dataFile);
    }
 catch (    IOException e1) {
      throw new RuntimeException(e1);
    }
  }
}
