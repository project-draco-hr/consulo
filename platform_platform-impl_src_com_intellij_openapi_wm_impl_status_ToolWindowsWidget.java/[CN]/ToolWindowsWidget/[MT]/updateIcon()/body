{
  setToolTipText(null);
  if (isActive()) {
    boolean changes=false;
    if (!isVisible()) {
      setVisible(true);
      changes=true;
    }
    Icon icon=UISettings.getInstance().HIDE_TOOL_STRIPES ? AllIcons.General.TbShown : AllIcons.General.TbHidden;
    if (icon != getIcon()) {
      setIcon(icon);
      changes=true;
    }
    if (changes) {
      revalidate();
      repaint();
    }
  }
 else {
    setVisible(false);
    setToolTipText(null);
  }
}
