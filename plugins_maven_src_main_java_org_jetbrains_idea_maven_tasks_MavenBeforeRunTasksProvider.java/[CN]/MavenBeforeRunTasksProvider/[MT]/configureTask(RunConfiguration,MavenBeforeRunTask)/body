{
  SelectMavenGoalDialog dialog=new SelectMavenGoalDialog(myProject,task.getProjectPath(),task.getGoal(),TasksBundle.message("maven.tasks.select.goal.title"));
  dialog.show();
  if (!dialog.isOK())   return;
  task.setProjectPath(dialog.getSelectedProjectPath());
  task.setGoal(dialog.getSelectedGoal());
  MavenTasksManager.getInstance(myProject).fireTasksChanged();
}
