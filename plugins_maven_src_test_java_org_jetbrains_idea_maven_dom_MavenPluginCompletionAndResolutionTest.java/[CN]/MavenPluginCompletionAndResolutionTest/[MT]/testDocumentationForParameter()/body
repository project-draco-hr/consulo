  createProjectPom("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<build>"+ "  <plugins>"+ "    <plugin>"+ "      <artifactId>maven-compiler-plugin</artifactId>"+ "      <configuration>"+ "        <s<caret>ource></source>"+ "      </configuration>"+ "    </plugin>"+ "  </plugins>"+ "</build>");
