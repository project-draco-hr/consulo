{
  final IsConstantExpressionVisitor visitor=new IsConstantExpressionVisitor();
  expression.accept(visitor);
  if (!visitor.isConstant()) {
    return false;
  }
  final Object value=ConstantExpressionUtil.computeCastTo(expression,expressionType);
  if (value == null) {
    return false;
  }
  if (value instanceof Integer && ((Integer)value).intValue() == 0) {
    return true;
  }
  if (value instanceof Long && ((Long)value).longValue() == 0L) {
    return true;
  }
  if (value instanceof Short && ((Short)value).shortValue() == 0) {
    return true;
  }
  if (value instanceof Character && ((Character)value).charValue() == 0) {
    return true;
  }
  if (value instanceof Byte && ((Byte)value).byteValue() == 0) {
    return true;
  }
  return false;
}
