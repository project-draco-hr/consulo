{
  final Throwable[] throwable={null};
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      CommandProcessor.getInstance().executeCommand(getProject(),new Runnable(){
        public void run(){
          try {
            doRunTest();
          }
 catch (          Throwable t) {
            throwable[0]=t;
          }
        }
      }
,"",null);
    }
  }
);
  if (throwable[0] != null) {
    throw throwable[0];
  }
}
