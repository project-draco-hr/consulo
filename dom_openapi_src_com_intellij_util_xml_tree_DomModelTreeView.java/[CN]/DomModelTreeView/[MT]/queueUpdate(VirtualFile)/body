{
  if (file == null)   return;
  if (getProject().isDisposed())   return;
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    public void run(){
      if (getProject().isDisposed())       return;
      if (!file.isValid() || isRightFile(file)) {
        myBuilder.queueUpdate();
      }
    }
  }
);
}
