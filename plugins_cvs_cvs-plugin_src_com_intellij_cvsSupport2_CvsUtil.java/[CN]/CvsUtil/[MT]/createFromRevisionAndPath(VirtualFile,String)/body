{
  File ioFile=CvsVfsUtil.getFileFor(file);
  final File parent=new File(getAdminDir(ioFile.getParentFile()),BASE_REVISIONS_DIR);
  if (!parent.exists()) {
    if (!parent.mkdirs()) {
      return null;
    }
  }
 else   if (parent.isFile()) {
    return null;
  }
  return new File(parent,".#" + ioFile.getName() + "."+ revision);
}
