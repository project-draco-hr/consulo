{
  try {
    if (!CompileDriver.ourDebugMode) {
      while (!reader.ready()) {
        if (isProcessTerminated()) {
          return -1;
        }
        try {
          Thread.sleep(1L);
        }
 catch (        InterruptedException ignore) {
        }
      }
    }
    return reader.read();
  }
 catch (  IOException e) {
    if (CompileDriver.ourDebugMode) {
      e.printStackTrace();
    }
    return -1;
  }
catch (  Throwable t) {
    if (CompileDriver.ourDebugMode) {
      t.printStackTrace();
    }
    return -1;
  }
}
