{
  if (ReadonlyStatusHandler.getInstance(project).ensureFilesWritable(new VirtualFile[]{descriptor.getPsiElement().getContainingFile().getVirtualFile()}).hasReadonlyFiles())   return;
  final PsiElement nameElement=descriptor.getPsiElement();
  final PsiField field=(PsiField)nameElement.getParent();
  final RefactoringActionHandlerFactory factory=RefactoringActionHandlerFactory.getInstance();
  final RefactoringActionHandler renameHandler=factory.createEncapsulateFieldsHandler();
  renameHandler.invoke(project,new PsiElement[]{field},null);
}
