{
  myProject=project;
  myFile=file;
  myLine=line;
  myColumn=col;
  myOffset=offset;
  if (offset >= 0) {
    final Document document=FileDocumentManager.getInstance().getDocument(file);
    myRangeMarker=(document != null && offset <= document.getTextLength()) ? document.createRangeMarker(offset,offset) : null;
  }
 else {
    myRangeMarker=null;
  }
}
