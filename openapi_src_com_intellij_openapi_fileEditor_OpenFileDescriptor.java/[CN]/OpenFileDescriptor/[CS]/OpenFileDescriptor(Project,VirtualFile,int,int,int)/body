{
  myProject=project;
  if (file == null) {
    throw new IllegalArgumentException("file cannot be null");
  }
  myFile=file;
  myLine=line;
  myColumn=col;
  myOffset=offset;
  if (offset >= 0) {
    final Document document=FileDocumentManager.getInstance().getDocument(file);
    myRangeMarker=(document != null) ? document.createRangeMarker(offset,offset) : null;
  }
 else {
    myRangeMarker=null;
  }
}
