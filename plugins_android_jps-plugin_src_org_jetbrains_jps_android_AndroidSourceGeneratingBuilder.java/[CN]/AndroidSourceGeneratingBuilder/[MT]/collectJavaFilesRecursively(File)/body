{
  final List<File> result=new ArrayList<File>();
  FileUtil.processFilesRecursively(dir,new Processor<File>(){
    @Override public boolean process(    File file){
      if (file.isFile() && "java".equals(FileUtil.getExtension(file.getName()))) {
        result.add(file);
      }
      return true;
    }
  }
);
  return result;
}
