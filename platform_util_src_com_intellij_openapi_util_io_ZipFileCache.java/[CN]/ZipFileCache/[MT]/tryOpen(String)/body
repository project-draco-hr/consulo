{
  path=FileUtil.toSystemDependentName(path);
  debug("opening %s",path);
  try {
    return new ZipFile(path);
  }
 catch (  IOException e) {
    String reason=e.getMessage();
    if ("too many open files".equalsIgnoreCase(reason) && tryCloseFiles() > 0) {
      return new ZipFile(path);
    }
 else {
      throw e;
    }
  }
}
