{
  assertEquals("aaa",readValue("<root><foo>aaa<!--a--></foo></root>","foo"));
  assertEquals("aaa",readValue("<root><foo>\n" + "aaa<!--a--></foo></root>","foo"));
  assertEquals("aaa",readValue("<root><foo>aaa<!--a-->\n" + "</foo></root>","foo"));
  assertEquals("aaa",readValue("<root><foo>\n" + "aaa\n" + "<!--a-->\n"+ "</foo></root>","foo"));
}
