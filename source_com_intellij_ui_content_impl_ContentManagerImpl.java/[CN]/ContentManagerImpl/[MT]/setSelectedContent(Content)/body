{
  int index;
  if (content != null) {
    index=getIndexOfContent(content);
    if (index == -1) {
      throw new IllegalArgumentException("content not found: " + content);
    }
  }
 else {
    index=-1;
  }
  if (mySelectedContent != content) {
    mySelectedContent=content;
    fireSelectionChanged(content,index);
  }
}
