{
  StringBuilder buffer=new StringBuilder();
  if (message != null) {
    buffer.append(message);
  }
  boolean first=true;
  for (Throwable t=cause; t != null; t=t.getCause()) {
    final String m=t.getLocalizedMessage();
    if (m == null) {
      continue;
    }
    if (first) {
      first=false;
    }
 else     if (buffer.length() > 0) {
      buffer.append("\n");
    }
    buffer.append(m);
  }
  return buffer.toString();
}
