{
  PsiElement elementToTest=assignment;
  while (elementToTest != null) {
    if (elementToTest.equals(block)) {
      return false;
    }
    if (elementToTest instanceof PsiWhileStatement || elementToTest instanceof PsiForeachStatement || elementToTest instanceof PsiForStatement|| elementToTest instanceof PsiDoWhileStatement) {
      return true;
    }
    elementToTest=elementToTest.getParent();
  }
  return false;
}
