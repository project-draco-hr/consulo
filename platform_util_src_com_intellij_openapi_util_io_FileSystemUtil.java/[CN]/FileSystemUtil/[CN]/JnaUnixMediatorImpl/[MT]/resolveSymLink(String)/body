{
  try {
    return new File(path).getCanonicalPath();
  }
 catch (  IOException e) {
    final String message=e.getMessage();
    if (message != null && message.toLowerCase().contains("too many levels of symbolic links")) {
      LOG.debug(e);
      return null;
    }
    throw new IOException("Cannot resolve '" + path + "'",e);
  }
}
