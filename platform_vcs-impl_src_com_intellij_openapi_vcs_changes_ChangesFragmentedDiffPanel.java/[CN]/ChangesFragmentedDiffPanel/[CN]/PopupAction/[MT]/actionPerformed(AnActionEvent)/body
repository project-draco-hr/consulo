{
  final DefaultActionGroup dag=new DefaultActionGroup();
  dag.add(myUsual);
  dag.add(myNumbered);
  dag.add(new Separator());
  dag.add(mySoftWrapsAction);
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup(null,dag,e.getDataContext(),JBPopupFactory.ActionSelectionAid.SPEEDSEARCH,false);
  if (e.getInputEvent() instanceof MouseEvent) {
    popup.show(new RelativePoint((MouseEvent)e.getInputEvent()));
  }
 else {
    popup.showInBestPositionFor(e.getDataContext());
  }
}
