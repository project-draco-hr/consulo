{
  myUsual=new AnAction("Vertical"){
    @Override public void actionPerformed(    AnActionEvent e){
      boolean was=myConfiguration.SHORT_DIFF_HORISONTALLY;
      myConfiguration.SHORT_DIFF_HORISONTALLY=false;
      if (was) {
        ensurePresentation();
      }
    }
  }
