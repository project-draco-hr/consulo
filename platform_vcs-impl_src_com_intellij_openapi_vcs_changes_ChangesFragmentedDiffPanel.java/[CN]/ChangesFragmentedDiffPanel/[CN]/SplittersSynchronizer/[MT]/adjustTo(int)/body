{
  final Splitter target=mySplitters.get(idx);
  for (int i=0; i < mySplitters.size(); i++) {
    final Splitter splitter=mySplitters.get(i);
    splitter.setProportion(target.getProportion());
  }
  for (  Splitter splitter : myListening) {
    splitter.setProportion(target.getProportion());
  }
}
