{
  int rowIndex=0;
  updateFlag=false;
  while (rowIndex < graph.getNodeRows().size()) {
    Node node=commitNodeInRow(rowIndex);
    if (node != null) {
      GraphFragment fragment=fragmentGenerator.getMaximumDownFragment(node);
      if (fragment != null) {
        hide(fragment);
      }
    }
    rowIndex++;
  }
  updateFlag=true;
  callBackFunction.fullUpdate();
}
