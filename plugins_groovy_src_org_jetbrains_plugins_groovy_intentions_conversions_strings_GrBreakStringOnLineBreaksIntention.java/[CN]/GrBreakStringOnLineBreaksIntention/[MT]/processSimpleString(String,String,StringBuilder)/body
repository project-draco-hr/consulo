{
  int prev=0;
  for (int pos=value.indexOf("\\n"); pos >= 0; pos=value.indexOf("\\n",prev)) {
    buffer.append(quote);
    int end=checkForR(value,pos);
    buffer.append(value.substring(prev,end));
    prev=end;
    buffer.append(quote);
    buffer.append("+\n");
  }
  buffer.append(quote);
  buffer.append(value.substring(prev,value.length()));
  buffer.append(quote);
}
