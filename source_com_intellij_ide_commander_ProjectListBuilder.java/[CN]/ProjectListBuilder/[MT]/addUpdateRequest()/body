{
  final Runnable request=new Runnable(){
    public void run(){
      if (!myProject.isDisposed()) {
        updateList();
      }
    }
  }
;
  if (!ApplicationManager.getApplication().isUnitTestMode()) {
    myUpdateAlarm.cancelAllRequests();
    myUpdateAlarm.addRequest(request,300);
  }
 else {
    request.run();
  }
}
