{
  final String p=quotePath(path);
  final String m="$" + macroName + "$";
  myMacroMap.put(p,m);
  for (  String protocol : PROTOCOLS) {
    myMacroMap.put(protocol + ":" + p,protocol + ":" + m);
    myMacroMap.put(protocol + ":/" + p,protocol + "://" + m);
    myMacroMap.put(protocol + "://" + p,protocol + "://" + m);
  }
}
