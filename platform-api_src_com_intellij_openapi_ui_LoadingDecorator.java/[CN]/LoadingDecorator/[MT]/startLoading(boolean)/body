{
  if (isLoading() || myStartRequest)   return;
  myStartRequest=true;
  if (myDelay > 0) {
    myStartAlarm.addRequest(new Runnable(){
      public void run(){
        UIUtil.invokeLaterIfNeeded(new Runnable(){
          public void run(){
            if (!myStartRequest)             return;
            _startLoading(takeSnapshot);
          }
        }
);
      }
    }
,myDelay);
  }
 else {
    _startLoading(takeSnapshot);
  }
}
