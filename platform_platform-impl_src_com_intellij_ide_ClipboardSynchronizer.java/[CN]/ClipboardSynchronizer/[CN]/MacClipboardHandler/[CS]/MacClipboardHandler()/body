{
  myFrameStateListener=new FrameStateListener(){
    @Override public void onFrameDeactivated(){
    }
    @Override public void onFrameActivated(){
      scheduleSynchronization();
    }
  }
;
  myLafListener=new LafManagerListener(){
    @Override public void lookAndFeelChanged(    final LafManager source){
      final UIDefaults uiDefaults=UIManager.getLookAndFeelDefaults();
      replaceDefaultCopyPasteActions(uiDefaults);
    }
  }
;
}
