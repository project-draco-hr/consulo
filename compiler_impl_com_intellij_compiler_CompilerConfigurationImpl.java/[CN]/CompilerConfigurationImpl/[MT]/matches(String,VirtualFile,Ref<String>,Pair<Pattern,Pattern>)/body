{
  if (!matches(name,pair.first)) {
    return false;
  }
  final Pattern dirPattern=pair.second;
  if (dirPattern == null || parent == null) {
    return true;
  }
  String parentPath=parentRef.get();
  if (parentPath == null) {
    parentRef.set(parentPath=parent.getPath());
  }
  return matches(parentPath,dirPattern);
}
