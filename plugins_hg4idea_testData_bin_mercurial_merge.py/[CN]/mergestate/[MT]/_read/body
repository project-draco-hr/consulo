def _read(self):
    self._state = {}
    try:
        localnode = None
        f = self._repo.opener('merge/state')
        for (i, l) in enumerate(f):
            if (i == 0):
                localnode = l[:(-1)]
            else:
                bits = l[:(-1)].split('\x00')
                self._state[bits[0]] = bits[1:]
        self._local = bin(localnode)
    except IOError as err:
        if (err.errno != errno.ENOENT):
            raise
