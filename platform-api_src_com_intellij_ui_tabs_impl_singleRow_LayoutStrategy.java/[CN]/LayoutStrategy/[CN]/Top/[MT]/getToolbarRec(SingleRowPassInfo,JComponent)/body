{
  if (!myTabs.isSideComponentVertical() && !myTabs.isHideTabs()) {
    int toolbarX=data.position + myTabs.getToolbarInset() + (data.moreRect != null ? data.moreRect.width : 0);
    final Rectangle rec=new Rectangle(toolbarX,data.insets.top,myTabs.getSize().width - data.insets.left - toolbarX,myTabs.myHeaderFitSize.height - 1);
    return rec;
  }
 else   if (myTabs.isSideComponentVertical()) {
    final Rectangle rec=new Rectangle(data.insets.left + 1,data.compPosition + 1,selectedToolbar.getPreferredSize().width,myTabs.getSize().height - data.compPosition - data.insets.bottom- 2);
    return rec;
  }
  return null;
}
