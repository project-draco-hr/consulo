{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      myRepaintAlarm.cancelAllRequests();
      myRepaintAlarm.addRequest(new Runnable(){
        public void run(){
          if (myDisposed)           return;
          myView.updateModel();
        }
      }
,100);
    }
  }
);
}
