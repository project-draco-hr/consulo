{
  final ChangeList list=((ChangeList[])e.getDataContext().getData(DataConstants.CHANGE_LISTS))[0];
  int rc=list.getChanges().size() == 0 ? DialogWrapper.OK_EXIT_CODE : Messages.showYesNoDialog(myProject,"Are you sure want to remove changelist '" + list.getDescription() + "'?\n"+ "All changes will be moved to default changelist.","Remove Change List",Messages.getQuestionIcon());
  if (rc == DialogWrapper.OK_EXIT_CODE) {
    removeChangeList(list);
  }
}
