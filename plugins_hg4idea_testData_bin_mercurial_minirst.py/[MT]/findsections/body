def findsections(blocks):
    "Finds sections.\n\n    The blocks must have a 'type' field, i.e., they should have been\n    run through findliteralblocks first.\n    "
    for block in blocks:
        if ((block['type'] == 'paragraph') and (len(block['lines']) == 2) and (block['lines'][1] == ('-' * len(block['lines'][0])))):
            block['type'] = 'section'
    return blocks
