def findliteralblocks(blocks):
    "Finds literal blocks and adds a 'type' field to the blocks.\n\n    Literal blocks are given the type 'literal', all other blocks are\n    given type the 'paragraph'.\n    "
    i = 0
    while (i < len(blocks)):
        blocks[i]['type'] = 'paragraph'
        if (blocks[i]['lines'][(-1)].endswith('::') and ((i + 1) < len(blocks))):
            indent = blocks[i]['indent']
            adjustment = (blocks[(i + 1)]['indent'] - indent)
            if (blocks[i]['lines'] == ['::']):
                del blocks[i]
                i -= 1
            elif blocks[i]['lines'][(-1)].endswith(' ::'):
                blocks[i]['lines'][(-1)] = blocks[i]['lines'][(-1)][:(-3)]
            else:
                blocks[i]['lines'][(-1)] = blocks[i]['lines'][(-1)][:(-1)]
            m = _bulletre.match(blocks[i]['lines'][0])
            if m:
                indent += m.end()
                adjustment -= m.end()
            while (((i + 1) < len(blocks)) and (blocks[(i + 1)]['indent'] > indent)):
                blocks[(i + 1)]['type'] = 'literal'
                blocks[(i + 1)]['indent'] -= adjustment
                i += 1
        i += 1
    return blocks
