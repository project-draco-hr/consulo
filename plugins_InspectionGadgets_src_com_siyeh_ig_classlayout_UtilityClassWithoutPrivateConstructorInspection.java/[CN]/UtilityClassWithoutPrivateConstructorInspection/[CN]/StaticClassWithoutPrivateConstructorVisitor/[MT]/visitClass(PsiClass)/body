{
  if (aClass.hasModifierProperty(PsiModifier.ABSTRACT)) {
    return;
  }
  if (!UtilityClassUtil.isUtilityClass(aClass)) {
    return;
  }
  if (ignoreClassesWithOnlyMain && hasOnlyMain(aClass)) {
    return;
  }
  if (hasPrivateConstructor(aClass)) {
    return;
  }
  registerClassError(aClass);
}
