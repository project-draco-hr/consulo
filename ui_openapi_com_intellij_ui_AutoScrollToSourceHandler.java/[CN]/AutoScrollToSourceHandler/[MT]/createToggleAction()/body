{
  return new ToggleAction(UIBundle.message("autoscroll.to.source.action.name"),UIBundle.message("autoscroll.to.source.action.description"),IconLoader.getIcon("/general/autoscrollToSource.png")){
    public boolean isSelected(    AnActionEvent event){
      return isAutoScrollMode();
    }
    public void setSelected(    AnActionEvent event,    boolean flag){
      setAutoScrollMode(flag);
    }
  }
;
}
