{
  ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
    public void run(){
      while (true) {
        try {
          Thread.sleep(200L);
          if (future.isDone() || future.isCancelled()) {
            break;
          }
          if (indicator.isCanceled()) {
            future.cancel(true);
            break;
          }
        }
 catch (        InterruptedException ignored) {
        }
      }
    }
  }
);
}
