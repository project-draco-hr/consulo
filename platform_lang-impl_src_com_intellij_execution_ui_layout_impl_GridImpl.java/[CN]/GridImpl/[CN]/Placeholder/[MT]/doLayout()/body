{
  super.doLayout();
  Component child=getComponentCount() == 1 ? getComponent(0) : null;
  if (child instanceof JBTabsPresentation) {
    if (!((JBTabsPresentation)child).isHideTabs()) {
      Rectangle bounds=child.getBounds();
      bounds.y--;
      bounds.height++;
      child.setBounds(bounds);
    }
  }
}
