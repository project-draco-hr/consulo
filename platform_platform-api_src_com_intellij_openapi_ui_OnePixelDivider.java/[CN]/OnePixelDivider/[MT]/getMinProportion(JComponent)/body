{
  if (component != null && mySplitter.getFirstComponent() != null && mySplitter.getFirstComponent().isVisible() && mySplitter.getSecondComponent() != null && mySplitter.getSecondComponent().isVisible()) {
    if (isVertical()) {
      return (float)component.getMinimumSize().height / (float)(mySplitter.getHeight() - 1);
    }
 else {
      return (float)component.getMinimumSize().width / (float)(mySplitter.getWidth() - 1);
    }
  }
  return 0.0f;
}
