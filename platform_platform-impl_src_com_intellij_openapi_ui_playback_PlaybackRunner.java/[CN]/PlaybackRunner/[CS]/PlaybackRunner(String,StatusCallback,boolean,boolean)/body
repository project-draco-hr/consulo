{
  myScript=script;
  myCallback=callback;
  myUseDirectActionCall=useDirectActionCall;
  myStopOnAppDeactivation=stopOnAppDeactivation;
  myAppListener=new ApplicationActivationListener(){
    @Override public void applicationActivated(    IdeFrame ideFrame){
    }
    @Override public void applicationDeactivated(    IdeFrame ideFrame){
      if (myStopOnAppDeactivation) {
        myCallback.message(null,"App lost focus, stopping...",0,StatusCallback.Type.message);
        stop();
      }
    }
  }
;
}
