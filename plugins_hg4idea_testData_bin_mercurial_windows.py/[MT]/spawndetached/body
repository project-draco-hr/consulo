def spawndetached(args):


    class STARTUPINFO:
        dwFlags = subprocess.STARTF_USESHOWWINDOW
        hStdInput = None
        hStdOutput = None
        hStdError = None
        wShowWindow = subprocess.SW_HIDE
    args = subprocess.list2cmdline(args)
    comspec = os.environ.get('COMSPEC', 'cmd.exe')
    args = ((comspec + ' /c ') + args)
    (hp, ht, pid, tid) = subprocess.CreateProcess(None, args, None, None, 0, 8, os.environ, os.getcwd(), STARTUPINFO())
    return pid
