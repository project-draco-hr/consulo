{
  if (myLines.size() <= lineNumber || lineNumber < 0) {
    return "";
  }
  final LineInfo info=myLines.get(lineNumber);
  if (info == null) {
    return "";
  }
  VcsFileRevision fileRevision=myRevisionMap.get(info.getRevision());
  if (fileRevision != null) {
    return GitBundle.message("annotation.tool.tip",info.getRevision().asString(),info.getAuthor(),info.getDate(),fileRevision.getCommitMessage());
  }
 else {
    return "";
  }
}
