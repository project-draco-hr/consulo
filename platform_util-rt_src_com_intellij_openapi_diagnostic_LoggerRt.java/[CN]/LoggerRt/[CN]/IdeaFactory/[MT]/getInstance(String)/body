{
  try {
    final Object logger=myGetInstance.invoke(null,category);
    return new LoggerRt(){
      @Override public void info(      @Nullable @NonNls final String message,      @Nullable final Throwable t){
        try {
          myInfo.invoke(logger,message,t);
        }
 catch (        Exception ignored) {
        }
      }
      @Override public void warn(      @Nullable @NonNls final String message,      @Nullable final Throwable t){
        try {
          myWarn.invoke(logger,message,t);
        }
 catch (        Exception ignored) {
        }
      }
      @Override public void error(      @Nullable @NonNls final String message,      @Nullable final Throwable t){
        try {
          myError.invoke(logger,message,t);
        }
 catch (        Exception ignored) {
        }
      }
    }
;
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
