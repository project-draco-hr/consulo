{
  PsiFile psiFile=myFixture.configureByText("test.txt",text);
  TaskCompletionContributor.installCompletion(myFixture.getDocument(psiFile),getProject(),new Consumer<Task>(){
    @Override public void consume(    Task task){
    }
  }
);
