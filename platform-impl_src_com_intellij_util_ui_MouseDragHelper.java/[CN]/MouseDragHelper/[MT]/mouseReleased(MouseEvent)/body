{
  boolean wasDragging=myDraggingNow;
  myPressPointScreen=null;
  myDraggingNow=false;
  myDragJustStarted=false;
  if (wasDragging) {
    try {
      processDragFinish(e);
    }
  finally {
      myDraggingNow=false;
      myPressPointComponent=null;
      myPressPointScreen=null;
      e.consume();
    }
  }
}
