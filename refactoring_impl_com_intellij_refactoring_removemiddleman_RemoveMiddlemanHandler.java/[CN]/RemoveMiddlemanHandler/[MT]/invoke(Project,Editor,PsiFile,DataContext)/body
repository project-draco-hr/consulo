{
  final ScrollingModel scrollingModel=editor.getScrollingModel();
  scrollingModel.scrollToCaret(ScrollType.MAKE_VISIBLE);
  final PsiElement element=(PsiElement)dataContext.getData(DataConstants.PSI_ELEMENT);
  if (!(element instanceof PsiField)) {
    showErrorMessage(RefactorJBundle.message("cannot.perform.the.refactoring") + RefactorJBundle.message("the.caret.should.be.positioned.at.the.name.of.the.field.to.be.refactored"),project);
    return;
  }
  final PsiField field=(PsiField)element;
  invoke(field);
}
