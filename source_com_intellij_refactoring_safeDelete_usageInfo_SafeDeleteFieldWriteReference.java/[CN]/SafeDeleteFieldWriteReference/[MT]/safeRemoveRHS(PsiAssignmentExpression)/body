{
  final PsiExpression rExpression=expression.getRExpression();
  final PsiElement parent=expression.getParent();
  return RefactoringUtil.verifySafeCopyExpression(rExpression) == RefactoringUtil.EXPR_COPY_SAFE && parent instanceof PsiExpressionStatement && ((PsiExpressionStatement)parent).getExpression() == expression;
}
