{
  final PsiExpressionStatement thenExpressionStatement=(PsiExpressionStatement)statement;
  final PsiExpression expression=thenExpressionStatement.getExpression();
  if (!(expression instanceof PsiAssignmentExpression)) {
    return null;
  }
  final PsiAssignmentExpression assignmentExpression=(PsiAssignmentExpression)expression;
  final PsiExpression thenLhs=assignmentExpression.getLExpression();
  if (!(thenLhs instanceof PsiReferenceExpression)) {
    return null;
  }
  final PsiReferenceExpression referenceExpression=(PsiReferenceExpression)thenLhs;
  final PsiElement target=referenceExpression.resolve();
  if (!(target instanceof PsiVariable)) {
    return null;
  }
  return (PsiVariable)target;
}
