{
  int visible=getVisibleRowCount(list);
  int top;
  int bottom;
  if (moveDirection == 0) {
    top=index - (visible - 1) / ROW_PADDING;
    bottom=top + visible - 1;
  }
 else   if (moveDirection < 0) {
    top=index - ROW_PADDING;
    bottom=index;
  }
 else {
    top=index;
    bottom=index + ROW_PADDING;
  }
  ensureRangeIsVisible(list,top,bottom);
}
