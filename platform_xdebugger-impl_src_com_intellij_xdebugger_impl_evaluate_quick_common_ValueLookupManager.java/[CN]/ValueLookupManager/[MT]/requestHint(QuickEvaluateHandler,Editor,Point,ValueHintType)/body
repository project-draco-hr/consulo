{
  myAlarm.cancelAllRequests();
  if (type == ValueHintType.MOUSE_OVER_HINT) {
    myAlarm.addRequest(new Runnable(){
      @Override public void run(){
        showHint(handler,editor,point,type);
      }
    }
,handler.getValueLookupDelay(myProject));
  }
 else {
    showHint(handler,editor,point,type);
  }
}
