{
  getSettings().ALIGN_THROWS_KEYWORD=true;
  doClassTest("public void test()\n" + "                 throws Exception {}","public void test()\n" + "throws Exception {\n" + "}");
  getSettings().ALIGN_THROWS_KEYWORD=false;
  doClassTest("public void test()\n" + "                 throws Exception {}","public void test()\n" + "        throws Exception {\n" + "}");
}
