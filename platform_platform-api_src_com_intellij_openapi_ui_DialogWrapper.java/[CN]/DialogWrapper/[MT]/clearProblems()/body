{
  myErrorPainter.setValidationInfo(null);
  if (!myErrorText.isTextSet(null)) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        if (myDisposed)         return;
        setErrorText(null);
        myPeer.getRootPane().getGlassPane().repaint();
        getOKAction().setEnabled(true);
      }
    }
);
  }
}
