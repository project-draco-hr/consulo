{
  myValidationAlarm.cancelAllRequests();
  myValidationAlarm.addRequest(new Runnable(){
    public void run(){
      final ValidationInfo result=doValidate();
      if (result == null) {
        clearProblems();
      }
 else {
        reportProblem(result.message,result.component);
      }
      if (!myDisposed) {
        initValidation();
      }
    }
  }
,myValidationDelay,ModalityState.current());
}
