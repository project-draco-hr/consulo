{
  if (isWindows) {
    int pos=parameter.indexOf('\"');
    if (pos >= 0) {
      final StringBuffer buffer=new StringBuffer(parameter);
      do {
        buffer.insert(pos,'\\');
        pos+=2;
      }
 while ((pos=parameter.indexOf('\"',pos)) >= 0);
      parameter=buffer.toString();
    }
 else     if (parameter.length() == 0) {
      parameter="\"\"";
    }
  }
  return parameter;
}
