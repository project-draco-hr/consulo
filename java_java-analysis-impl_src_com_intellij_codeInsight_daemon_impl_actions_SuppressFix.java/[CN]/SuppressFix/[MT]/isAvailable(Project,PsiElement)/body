{
  PsiDocCommentOwner container=getContainer(context);
  boolean isValid=container != null && !(container instanceof PsiMethod && container instanceof SyntheticElement);
  if (!isValid) {
    return false;
  }
  setText(container instanceof PsiClass ? InspectionsBundle.message("suppress.inspection.class") : container instanceof PsiMethod ? InspectionsBundle.message("suppress.inspection.method") : InspectionsBundle.message("suppress.inspection.field"));
  return true;
}
