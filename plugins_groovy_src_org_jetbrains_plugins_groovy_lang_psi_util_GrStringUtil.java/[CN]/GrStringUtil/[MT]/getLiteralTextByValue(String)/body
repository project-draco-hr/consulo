{
  StringBuilder buffer=new StringBuilder();
  if (value.indexOf('\n') >= 0) {
    buffer.append("'''");
    escapeStringCharacters(value.length(),value,"",false,true,buffer);
    buffer.append("'''");
  }
 else {
    buffer.append("'");
    escapeStringCharacters(value.length(),value,"'",false,true,buffer);
    buffer.append("'");
  }
  return buffer;
}
