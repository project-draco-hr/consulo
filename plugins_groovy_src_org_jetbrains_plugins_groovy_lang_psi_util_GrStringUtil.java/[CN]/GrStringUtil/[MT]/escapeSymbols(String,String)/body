{
  StringBuilder builder=new StringBuilder();
  boolean escaped=false;
  for (int i=0; i < s.length(); i++) {
    final char ch=s.charAt(i);
    if (escaped) {
      builder.append(ch);
      escaped=false;
      continue;
    }
    if (ch == '\\') {
      escaped=true;
    }
    if (toEscape.indexOf(ch) >= 0) {
      builder.append('\\');
    }
    builder.append(ch);
  }
  return builder.toString();
}
