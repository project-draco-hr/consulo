{
  out.writeInt(size());
  for (  Value value : myInputIdMapping.keySet()) {
    externalizer.save(out,value);
    final IntIterator ids=getInputIdsIterator(value);
    if (ids != null) {
      out.writeInt(ids.size());
      while (ids.hasNext()) {
        out.writeInt(ids.next());
      }
    }
 else {
      out.writeInt(0);
    }
  }
}
