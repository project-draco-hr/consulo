{
  if (TestNGUtil.inheritsJUnitTestCase(psiClass) || TestNGUtil.containsJunitAnnotions(psiClass)) {
    final PsiIdentifier nameIdentifier=psiClass.getNameIdentifier();
    ProblemDescriptor descriptor=manager.createProblemDescriptor(nameIdentifier != null ? nameIdentifier : psiClass,"TestCase can be converted to TestNG",new JUnitConverterQuickFix(),ProblemHighlightType.GENERIC_ERROR_OR_WARNING,isOnTheFly);
    return new ProblemDescriptor[]{descriptor};
  }
  return null;
}
