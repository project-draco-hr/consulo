{
  if (isOnTheFly)   return null;
  if (!psiClass.getContainingFile().isWritable())   return null;
  boolean isJUnit=Intentions.inheritsJUnitTestCase(psiClass) || Intentions.containsJunitAnnotions(psiClass);
  if (!isJUnit)   return null;
  ProblemDescriptor descriptor=manager.createProblemDescriptor(psiClass,"TestCase can be converted to TestNG",new JUnitConverterQuickFix(),ProblemHighlightType.GENERIC_ERROR_OR_WARNING);
  return new ProblemDescriptor[]{descriptor};
}
