{
  final RandomAccessFile file=new RandomAccessFile(myFile,RW);
  try {
    final FileChannel channel=file.getChannel();
    try {
      channel.position(myPosition);
      final ByteBuffer buffer=ByteBuffer.allocateDirect((int)myLength);
      channel.read(buffer);
      return buffer;
    }
  finally {
      channel.close();
    }
  }
  finally {
    file.close();
  }
}
