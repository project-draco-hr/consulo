{
  Storage goodStorage=new TestStorage(){
    @Override protected byte[] loadContentData(    final int id) throws IOException {
      return new byte[0];
    }
  }
;
  Storage brokenStorage=new TestStorage(){
    @Override protected byte[] loadContentData(    int id) throws IOException {
      throw new IOException();
    }
  }
;
  assertTrue(new StoredContent(goodStorage,0).isAvailable());
  assertFalse(new StoredContent(brokenStorage,0).isAvailable());
}
