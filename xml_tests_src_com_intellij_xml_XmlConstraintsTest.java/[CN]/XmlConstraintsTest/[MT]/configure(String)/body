{
  myFixture.configureByFiles(files);
  XmlTag tag=((XmlFile)getFile()).getRootTag();
  assertNotNull(tag);
  XmlElementDescriptor descriptor=tag.getDescriptor();
  assertNotNull(descriptor);
  XmlElementDescriptor[] descriptors=descriptor.getElementsDescriptors(tag);
  Map<String,XmlElementDescriptor> map=ContainerUtil.assignKeys(Arrays.asList(descriptors).iterator(),new Convertor<XmlElementDescriptor,String>(){
    @Override public String convert(    XmlElementDescriptor o){
      return o.getName();
    }
  }
);
  map.put(tag.getName(),tag.getDescriptor());
  return map;
}
