{
  final PsiManager manager=expression.getManager();
  final PsiConstantEvaluationHelper constantEvaluationHelper=JavaPsiFacade.getInstance(manager.getProject()).getConstantEvaluationHelper();
  final PsiExpression lhs=expression.getLOperand();
  final Object lhsConstant=constantEvaluationHelper.computeConstantExpression(lhs);
  final String lhsText;
  if (lhsConstant == null) {
    lhsText="";
  }
 else {
    lhsText=lhsConstant.toString();
  }
  String result;
  if (lhsText.length() == 0) {
    result="";
  }
 else {
    result=lhsText;
  }
  final PsiExpression rhs=expression.getROperand();
  final Object rhsConstant=constantEvaluationHelper.computeConstantExpression(rhs);
  if (rhsConstant != null) {
    result+=rhsConstant.toString();
  }
  result=StringUtil.escapeStringCharacters(result);
  return result;
}
