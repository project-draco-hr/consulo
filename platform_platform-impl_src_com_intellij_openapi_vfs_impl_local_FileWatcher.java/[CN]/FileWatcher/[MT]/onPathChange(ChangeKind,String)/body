{
synchronized (LOCK) {
switch (changeKind) {
case STATS:
case CHANGE:
      myDirtyPaths.add(path);
    break;
case CREATE:
case DELETE:
  final File parentFile=new File(path).getParentFile();
if (parentFile != null) {
  myDirtyPaths.add(parentFile.getPath());
}
 else {
  myDirtyPaths.add(path);
}
break;
case DIRTY:
myDirtyDirs.add(path);
break;
case RECDIRTY:
myDirtyRecursivePaths.add(path);
break;
case RESET:
reset();
break;
}
}
}
