{
switch (changeKind) {
case STATS:
case CHANGE:
    myDirtyPaths.addAll(paths);
  break;
case CREATE:
case DELETE:
for (String path : paths) {
  final File parent=new File(path).getParentFile();
  myDirtyPaths.add(parent != null ? parent.getPath() : path);
}
break;
case DIRTY:
myDirtyDirs.addAll(paths);
break;
case RECDIRTY:
myDirtyRecursivePaths.addAll(paths);
break;
case RESET:
reset();
break;
}
notifyOnEvent();
}
