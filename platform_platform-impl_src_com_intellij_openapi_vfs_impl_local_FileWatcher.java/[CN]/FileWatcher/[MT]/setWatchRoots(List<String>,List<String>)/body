{
synchronized (LOCK) {
    if (myRecursiveWatchRoots.equals(recursive) && myFlatWatchRoots.equals(flat))     return;
    if (isAlive()) {
      try {
        writeLine(ROOTS_COMMAND);
        for (        String path : recursive) {
          writeLine(path);
        }
        for (        String path : flat) {
          writeLine("|" + path);
        }
        writeLine("#");
      }
 catch (      IOException e) {
        LOG.error(e);
      }
    }
    myRecursiveWatchRoots=recursive;
    myFlatWatchRoots=flat;
    myMapping.clear();
  }
}
