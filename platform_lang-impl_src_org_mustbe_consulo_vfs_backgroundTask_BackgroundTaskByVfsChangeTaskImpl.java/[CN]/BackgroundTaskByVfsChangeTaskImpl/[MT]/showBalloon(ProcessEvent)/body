{
  IdeFrame frame=((WindowManagerEx)WindowManager.getInstance()).findFrameFor(myProject);
  StatusBarEx statusBar=frame == null ? null : (StatusBarEx)frame.getStatusBar();
  if (statusBar == null) {
    return;
  }
  int exitCode=processEvent.getExitCode();
  statusBar.notifyProgressByBalloon(exitCode == 0 ? MessageType.INFO : MessageType.ERROR,"Task <b>" + myName + "</b> finished with code: <b>"+ exitCode+ "</b>",null,null);
}
