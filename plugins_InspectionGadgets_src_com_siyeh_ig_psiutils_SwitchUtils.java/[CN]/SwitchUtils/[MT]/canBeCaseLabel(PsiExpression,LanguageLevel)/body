{
  if (expression == null) {
    return false;
  }
  if (languageLevel.isAtLeast(LanguageLevel.JDK_1_5) && expression instanceof PsiReferenceExpression) {
    final PsiElement referent=((PsiReference)expression).resolve();
    if (referent instanceof PsiEnumConstant) {
      return true;
    }
  }
  final PsiType type=expression.getType();
  return type != null && (PsiType.INT.equals(type) || PsiType.CHAR.equals(type) || PsiType.SHORT.equals(type)|| PsiType.BYTE.equals(type)) && PsiUtil.isConstantExpression(expression);
}
