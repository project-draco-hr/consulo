{
  if (myEditor.getComponent().isShowing() && isSomethingChanged()) {
    myUpdateAlarm.addComponentRequest(new Runnable(){
      public void run(){
        try {
          myUpdateAlarm.cancelAllRequests();
          updatePreview();
        }
  finally {
          setSomethingChanged(false);
        }
      }
    }
,300);
  }
}
