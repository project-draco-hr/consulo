{
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      try {
        PsiFile psiFile=PsiFileFactory.getInstance(project).createFileFromText("a." + getFileTypeExtension(getFileType()),getFileType(),myTextToReformat,LocalTimeCounter.currentTime(),false,false);
        prepareForReformat(psiFile);
        apply(mySettings);
        CodeStyleSettings clone=mySettings.clone();
        if (getRightMargin() > 0) {
          clone.RIGHT_MARGIN=getRightMargin();
        }
        CodeStyleSettingsManager.getInstance(project).setTemporarySettings(clone);
        CodeStyleManager.getInstance(project).reformat(psiFile);
        CodeStyleSettingsManager.getInstance(project).dropTemporarySettings();
        myEditor.getSettings().setTabSize(clone.getTabSize(getFileType()));
        Document document=myEditor.getDocument();
        document.replaceString(0,document.getTextLength(),psiFile.getText());
      }
 catch (      IncorrectOperationException e) {
        LOG.error(e);
      }
    }
  }
);
}
