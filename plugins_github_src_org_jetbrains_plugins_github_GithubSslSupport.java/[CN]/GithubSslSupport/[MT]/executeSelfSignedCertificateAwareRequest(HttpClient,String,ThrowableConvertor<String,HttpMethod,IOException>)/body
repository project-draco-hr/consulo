{
  HttpMethod method=methodCreator.convert(uri);
  try {
    client.executeMethod(method);
    return method;
  }
 catch (  IOException e) {
    HttpMethod m=handleCertificateExceptionAndRetry(e,method.getURI().getHost(),client,method.getURI(),methodCreator);
    if (m == null) {
      throw e;
    }
    return m;
  }
}
