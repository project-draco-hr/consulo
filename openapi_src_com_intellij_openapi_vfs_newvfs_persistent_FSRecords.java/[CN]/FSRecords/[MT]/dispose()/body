{
  try {
    if (myAttributes != null) {
      myAttributes.dispose();
    }
    if (myNames != null) {
      myNames.close();
    }
    if (myRecords != null) {
      myRecords.putInt(HEADER_CONNECTION_STATUS_OFFSET,SAFELY_CLOSED_MAGIC);
      myRecords.close();
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
