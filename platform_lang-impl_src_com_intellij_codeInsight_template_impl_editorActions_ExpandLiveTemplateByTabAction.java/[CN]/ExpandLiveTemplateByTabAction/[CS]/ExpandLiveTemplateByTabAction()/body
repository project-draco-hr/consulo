{
  super(new EditorWriteActionHandler(){
    public void executeWriteAction(    Editor editor,    DataContext dataContext){
      Project project=editor.getProject();
      TemplateManager.getInstance(project).startTemplate(editor,TemplateSettings.TAB_CHAR);
    }
    public boolean isEnabled(    Editor editor,    DataContext dataContext){
      Project project=editor.getProject();
      return project != null && ((TemplateManagerImpl)TemplateManager.getInstance(project)).prepareTemplate(editor,TemplateSettings.TAB_CHAR,null) != null;
    }
  }
);
}
