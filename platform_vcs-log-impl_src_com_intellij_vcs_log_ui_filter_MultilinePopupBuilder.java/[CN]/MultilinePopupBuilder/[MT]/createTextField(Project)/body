{
  final EditorTextFieldProvider service=ServiceManager.getService(project,EditorTextFieldProvider.class);
  List<EditorCustomization> features=new ArrayList<EditorCustomization>(2);
  features.add(SoftWrapsEditorCustomization.ENABLED);
  final SpellCheckerCustomization spellChecker=SpellCheckerCustomization.getInstance();
  if (spellChecker.isEnabled()) {
    features.add(spellChecker.getCustomization(false));
  }
  EditorTextField textField=service.getEditorField(PlainTextLanguage.INSTANCE,project,features);
  textField.setBorder(new CompoundBorder(BorderFactory.createEmptyBorder(2,2,2,2),textField.getBorder()));
  textField.setOneLineMode(false);
  return textField;
}
