{
  final JSplitPane splitPane=getSplitPane();
  int dividerPos=getDividerPos();
  int dividerLeftPos=dividerPos - splitPane.getDividerSize() / 2;
  int dividerRightPos=dividerPos + splitPane.getDividerSize() - splitPane.getDividerSize() / 2;
  if (splitPane.getOrientation() == JSplitPane.VERTICAL_SPLIT) {
    return isLeft(location) ? new Rectangle(0,0,getWidth(),dividerLeftPos) : new Rectangle(0,dividerRightPos,getWidth(),getHeight() - dividerRightPos);
  }
 else {
    return isLeft(location) ? new Rectangle(0,0,dividerLeftPos,getHeight()) : new Rectangle(dividerRightPos,0,getWidth() - dividerRightPos,getHeight());
  }
}
