{
  final PsiElement element=descriptor.getPsiElement();
  final String text=element.getText();
  final int max=text.length() - 1;
  if (max < 1) {
    return;
  }
  int index=0;
  while (index < max && text.charAt(index) == '0') {
    index++;
  }
  final JavaPsiFacade psiFacade=JavaPsiFacade.getInstance(project);
  final PsiElementFactory factory=psiFacade.getElementFactory();
  final String textWithoutLeadingZeros=text.substring(index);
  final PsiExpression decimalNumber=factory.createExpressionFromText(textWithoutLeadingZeros,element);
  element.replace(decimalNumber);
}
