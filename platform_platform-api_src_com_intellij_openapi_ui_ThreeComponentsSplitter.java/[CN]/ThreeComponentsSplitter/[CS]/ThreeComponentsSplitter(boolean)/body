{
  myVerticalSplit=vertical;
  myShowDividerControls=false;
  myFirstDivider=new Divider(true);
  Disposer.register(this,myFirstDivider);
  myLastDivider=new Divider(false);
  Disposer.register(this,myLastDivider);
  myDividerWidth=7;
  setOpaque(false);
  add(myFirstDivider);
  add(myLastDivider);
}
