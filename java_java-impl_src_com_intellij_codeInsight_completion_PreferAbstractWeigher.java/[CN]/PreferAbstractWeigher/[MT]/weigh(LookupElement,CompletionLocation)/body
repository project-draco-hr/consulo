{
  if (location == null || location.getCompletionType() != CompletionType.SMART) {
    return null;
  }
  final PsiElement position=location.getCompletionParameters().getPosition();
  final PsiElement parent=position.getParent();
  if (!(parent instanceof PsiJavaCodeReferenceElement) || !(parent.getParent() instanceof PsiTypeElement) || !(parent.getParent().getParent() instanceof PsiInstanceOfExpression)) {
    return null;
  }
  final Object object=item.getObject();
  if (object instanceof PsiClass) {
    final PsiClass aClass=(PsiClass)object;
    if (aClass.isInterface()) {
      return 2;
    }
    if (aClass.hasModifierProperty(PsiModifier.ABSTRACT)) {
      return 1;
    }
  }
  return 0;
}
