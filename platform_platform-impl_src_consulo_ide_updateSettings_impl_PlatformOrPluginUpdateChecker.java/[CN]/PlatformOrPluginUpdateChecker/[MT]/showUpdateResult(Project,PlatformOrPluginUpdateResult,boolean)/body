{
  PlatformOrPluginUpdateResult.Type type=targetsForUpdate.getType();
switch (type) {
case NO_UPDATE:
    if (showResults) {
      ourGroup.createNotification(IdeBundle.message("update.available.group"),"There no updates",NotificationType.INFORMATION,null).notify(project);
    }
  break;
case PLATFORM_UPDATE:
if (showResults) {
  showDialog(project,targetsForUpdate);
}
 else {
  Notification notification=ourGroup.createNotification(IdeBundle.message("update.available.group"),"Updates available",NotificationType.INFORMATION,null);
  notification.addAction(new NotificationAction("View updates"){
    @Override public void actionPerformed(    @NotNull AnActionEvent e,    @NotNull Notification notification){
      showDialog(project,targetsForUpdate);
    }
  }
);
  notification.notify(project);
}
break;
}
}
