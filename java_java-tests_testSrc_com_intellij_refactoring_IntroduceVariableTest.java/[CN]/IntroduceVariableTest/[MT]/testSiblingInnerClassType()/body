{
  doTest(new MockIntroduceVariableHandler("vari",true,false,false,"A.B"){
    @Override public IntroduceVariableSettings getSettings(    Project project,    Editor editor,    PsiExpression expr,    PsiExpression[] occurrences,    TypeSelectorManagerImpl typeSelectorManager,    boolean declareFinalIfAll,    boolean anyAssignmentLHS,    InputValidator validator,    final OccurrencesChooser.ReplaceChoice replaceChoice){
      final PsiType type=typeSelectorManager.getDefaultType();
      Assert.assertTrue(type.getPresentableText(),type.getPresentableText().equals("B"));
      return super.getSettings(project,editor,expr,occurrences,typeSelectorManager,declareFinalIfAll,anyAssignmentLHS,validator,replaceChoice);
    }
  }
);
}
