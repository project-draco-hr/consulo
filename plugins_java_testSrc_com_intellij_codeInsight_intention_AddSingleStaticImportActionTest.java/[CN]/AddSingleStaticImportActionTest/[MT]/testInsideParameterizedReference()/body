{
  myFixture.addClass("package foo; " + "public class Class1 {" + "  public static class Inner1 {}\n"+ "  public static class Inner2<T> {}"+ "}");
  myFixture.configureByFile(getTestName(false) + ".java");
  final IntentionAction intentionAction=myFixture.findSingleIntention("Add static import for 'foo.Class1.Inner2'");
  assertNotNull(intentionAction);
  myFixture.launchAction(intentionAction);
  myFixture.checkResultByFile(getTestName(false) + "_after.java");
}
