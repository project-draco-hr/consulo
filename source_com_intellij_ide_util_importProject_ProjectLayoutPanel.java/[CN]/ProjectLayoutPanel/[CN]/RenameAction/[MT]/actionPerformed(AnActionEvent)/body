{
  final List<T> elements=myEntriesChooser.getSelectedElements();
  if (elements.size() == 1) {
    final T element=elements.get(0);
    final String newName=Messages.showInputDialog(ProjectLayoutPanel.this,"Enter new name for " + getElementText(element),"Rename",Messages.getQuestionIcon(),getElementName(element),null);
    setElementName(element,newName);
    rebuild();
    myEntriesChooser.selectElements(Collections.singleton(element));
  }
}
