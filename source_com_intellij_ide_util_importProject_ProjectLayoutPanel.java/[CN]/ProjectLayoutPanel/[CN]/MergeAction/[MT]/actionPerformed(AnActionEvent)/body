{
  final List<T> elements=myEntriesChooser.getSelectedElements();
  if (elements.size() > 1) {
    final String newName=Messages.showInputDialog(ProjectLayoutPanel.this,"Enter new name for merge result:","Merge",Messages.getQuestionIcon(),getElementName(elements.get(0)),null);
    final T merged=merge(elements);
    setElementName(merged,newName);
    rebuild();
    myEntriesChooser.selectElements(Collections.singleton(merged));
  }
}
