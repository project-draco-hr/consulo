{
  if (SystemInfo.isMac) {
    myCbEnableWheelFontChange.setText(ApplicationBundle.message("checkbox.enable.ctrl.mousewheel.changes.font.size.macos"));
  }
  myStripTrailingSpacesCombo.addItem(STRIP_CHANGED);
