{
  return new ColoredItemPresentation(){
    @Override public String getPresentableText(){
      return PsiFormatUtil.formatMethod(psiMethod,PsiSubstitutor.EMPTY,PsiFormatUtil.SHOW_NAME | PsiFormatUtil.SHOW_PARAMETERS,PsiFormatUtil.SHOW_TYPE);
    }
    @Override public TextAttributesKey getTextAttributesKey(){
      if (psiMethod.isDeprecated()) {
        return CodeInsightColors.DEPRECATED_ATTRIBUTES;
      }
      return null;
    }
    @Override public String getLocationString(){
      return getJavaSymbolContainerText(psiMethod);
    }
    @Override public Icon getIcon(    boolean open){
      return psiMethod.getIcon(Iconable.ICON_FLAG_VISIBILITY);
    }
  }
;
}
