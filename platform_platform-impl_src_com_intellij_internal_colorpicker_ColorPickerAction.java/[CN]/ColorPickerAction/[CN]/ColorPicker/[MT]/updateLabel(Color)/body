{
  if (color == null) {
    return;
  }
  if (!myMultiline) {
    myLabel.setText(" " + getString(color.getRed()) + ","+ getString(color.getGreen())+ ","+ getString(color.getBlue())+ " ");
  }
 else {
    myLabel.setText("<html>&nbsp;" + getString(color.getRed()) + "&nbsp;<br>&nbsp;"+ getString(color.getGreen())+ "&nbsp;<br>&nbsp;"+ getString(color.getBlue()));
  }
}
