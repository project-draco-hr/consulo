{
  myNextLabel.setVisible(myTexts.size() > 1);
  if (!myTexts.isEmpty()) {
    String text=myTexts.get(myCurrentItem % myTexts.size());
    myTextPanel.setText(prepareText(text));
  }
 else {
    myTextPanel.setText("");
  }
  myCachedPrefSize=null;
  myComponent.revalidate();
  myComponent.repaint();
}
