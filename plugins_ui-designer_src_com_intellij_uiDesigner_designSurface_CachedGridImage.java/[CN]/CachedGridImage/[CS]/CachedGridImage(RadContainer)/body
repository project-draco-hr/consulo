{
  final GraphicsConfiguration graphicsConfiguration=WindowManagerEx.getInstanceEx().getFrame(container.getProject()).getGraphicsConfiguration();
  if (container.getWidth() * container.getHeight() < 4096 * 4096) {
    myImage=graphicsConfiguration.createCompatibleImage(container.getWidth(),container.getHeight(),Transparency.BITMASK);
    update(container);
  }
 else {
    myImage=graphicsConfiguration.createCompatibleImage(16,16,Transparency.BITMASK);
  }
}
