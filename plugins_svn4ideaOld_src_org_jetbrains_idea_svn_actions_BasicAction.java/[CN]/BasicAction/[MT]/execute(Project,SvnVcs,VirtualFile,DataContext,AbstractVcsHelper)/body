{
  if (file.isDirectory()) {
    perform(project,activeVcs,file,context);
    ApplicationManager.getApplication().runWriteAction(new Runnable(){
      public void run(){
        file.refresh(false,true);
      }
    }
);
    doVcsRefresh(project,file);
  }
 else {
    perform(project,activeVcs,file,context);
    ApplicationManager.getApplication().runWriteAction(new Runnable(){
      public void run(){
        file.refresh(false,true);
      }
    }
);
    doVcsRefresh(project,file);
  }
}
