{
  String hit=value.getHit();
  if (hit == null) {
    hit=value.getOption();
  }
  hit=StringUtil.unescapeXml(hit);
  if (hit.length() > 60) {
    hit=hit.substring(0,60) + "...";
  }
  hit=hit.replace("  "," ");
  String text=hit.trim();
  if (text.endsWith(":")) {
    text=text.substring(0,text.length() - 1);
  }
  return text;
}
