{
  InterruptedException ie=null;
synchronized (this) {
    if (!startReadFromNewReader()) {
      for (; ; ) {
        try {
          wait();
          if (startReadFromWaitingReader())           return;
        }
 catch (        InterruptedException ex) {
          cancelledWaitingReader();
          ie=ex;
          break;
        }
      }
    }
  }
  if (ie != null) {
    writerLock_.signalWaiters();
    throw ie;
  }
}
