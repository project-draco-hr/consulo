{
  if (myActive > 0 || !isSoftWrappingEnabled() || myStorage.isEmpty() || myEditor.getDocument().getTextLength() <= 0) {
    return myEditor.offsetToLogicalPosition(offset,false);
  }
  myActive++;
  try {
    return myDataMapper.offsetToLogicalPosition(offset);
  }
  finally {
    myActive--;
  }
}
