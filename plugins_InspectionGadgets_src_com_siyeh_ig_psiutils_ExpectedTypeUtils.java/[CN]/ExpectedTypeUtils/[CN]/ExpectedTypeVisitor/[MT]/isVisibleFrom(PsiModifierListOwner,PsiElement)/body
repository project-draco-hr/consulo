{
  final PsiClass containingClass=PsiTreeUtil.getParentOfType(member,PsiClass.class);
  if (containingClass == null) {
    return false;
  }
  final PsiClass referencingClass=PsiTreeUtil.getParentOfType(referencingLocation,PsiClass.class);
  if (referencingClass == null) {
    return false;
  }
  if (referencingLocation.equals(containingClass)) {
    return true;
  }
  if (member.hasModifierProperty(PsiModifier.PUBLIC)) {
    return true;
  }
  if (member.hasModifierProperty(PsiModifier.PRIVATE)) {
    return false;
  }
  return ClassUtils.inSamePackage(containingClass,referencingClass);
}
