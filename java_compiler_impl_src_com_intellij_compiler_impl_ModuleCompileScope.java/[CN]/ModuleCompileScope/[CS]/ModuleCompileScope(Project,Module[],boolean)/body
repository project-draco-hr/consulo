{
  myProject=project;
  myScopeModules=new HashSet<Module>();
  for (  Module module : modules) {
    if (module == null) {
      continue;
    }
    if (includeDependentModules) {
      buildScopeModulesSet(module);
    }
 else {
      myScopeModules.add(module);
    }
  }
  myModules=ModuleManager.getInstance(myProject).getModules();
}
