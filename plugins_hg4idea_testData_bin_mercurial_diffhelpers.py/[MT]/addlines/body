def addlines(fp, hunk, lena, lenb, a, b):
    while True:
        todoa = (lena - len(a))
        todob = (lenb - len(b))
        num = max(todoa, todob)
        if (num == 0):
            break
        for i in xrange(num):
            s = fp.readline()
            c = s[0]
            if (s == '\\ No newline at end of file\n'):
                fix_newline(hunk, a, b)
                continue
            if (c == '\n'):
                s = ' \n'
            hunk.append(s)
            if (c == '+'):
                b.append(s[1:])
            elif (c == '-'):
                a.append(s)
            else:
                b.append(s[1:])
                a.append(s)
    return 0
