{
  StringBuffer result=new StringBuffer();
  if (method == CvsMethod.LOCAL_METHOD)   return repository;
  result.append(SEPARATOR);
  result.append(method.getName());
  result.append(SEPARATOR);
  result.append(user);
  result.append(AT);
  result.append(host);
  if (port.length() > 0) {
    result.append(SEPARATOR);
    result.append(port);
  }
 else {
    result.append(SEPARATOR);
  }
  result.append(repository);
  return result.toString();
}
