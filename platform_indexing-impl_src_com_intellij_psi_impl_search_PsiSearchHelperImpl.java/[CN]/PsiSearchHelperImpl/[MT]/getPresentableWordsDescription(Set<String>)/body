{
  final StringBuilder result=new StringBuilder();
  for (  String string : allWords) {
    if (string != null && !string.isEmpty()) {
      if (result.length() > 50) {
        result.append("...");
        break;
      }
      if (result.length() != 0)       result.append(", ");
      result.append(string);
    }
  }
  return result.toString();
}
