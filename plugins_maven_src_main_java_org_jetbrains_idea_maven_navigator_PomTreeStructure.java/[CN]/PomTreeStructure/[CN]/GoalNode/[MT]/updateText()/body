{
  clearColoredText();
  addPlainText(goal);
  actionId=pomNode.actionIdPrefix + goal;
  if (!isMinimalView()) {
    String shortcut=myEventsHandler.getActionDescription(pomNode.savedPath,goal);
    if (shortcut != null) {
      addColoredFragment(" (" + shortcut + ")",SimpleTextAttributes.GRAY_ATTRIBUTES);
    }
  }
}
