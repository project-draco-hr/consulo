{
  final String[] pieces=text.split(",");
  if (pieces.length == 0) {
    myLabel.setText(ALL);
  }
 else   if (pieces.length == 1) {
    myLabel.setText(StringUtil.shortenTextWithEllipsis(pieces[0].trim(),20,0));
  }
 else {
    myLabel.setText(StringUtil.shortenTextWithEllipsis(pieces[0].trim(),20,0) + "+");
  }
}
