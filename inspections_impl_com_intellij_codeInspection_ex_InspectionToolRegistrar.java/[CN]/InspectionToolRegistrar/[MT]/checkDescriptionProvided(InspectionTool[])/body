{
  for (  InspectionTool tool : tools) {
    URL url=getDescriptionUrl(tool,tool.getDescriptionFileName());
    Class inspectionClass=tool instanceof LocalInspectionToolWrapper ? ((LocalInspectionToolWrapper)tool).getTool().getClass() : tool instanceof GlobalInspectionToolWrapper ? ((GlobalInspectionToolWrapper)tool).getTool().getClass() : tool.getClass();
    LOG.assertTrue(url != null,"Description is null for inspection '" + tool.getDisplayName() + "'; class "+ inspectionClass);
    try {
      InputStream inputStream=url.openStream();
      inputStream.close();
    }
 catch (    IOException e) {
      LOG.error("Problem reading description '" + url + "' when instantiating tool "+ inspectionClass,e);
    }
  }
}
