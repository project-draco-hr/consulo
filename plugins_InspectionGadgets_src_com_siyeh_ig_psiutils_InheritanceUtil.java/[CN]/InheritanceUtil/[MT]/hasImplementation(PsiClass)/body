{
  final SearchScope scope=GlobalSearchScope.projectScope(aClass.getProject());
  final Query<PsiClass> search=ClassInheritorsSearch.search(aClass,scope,true,true);
  for (  PsiClass inheritor : search) {
    if (!(inheritor.isInterface() || inheritor.isAnnotationType() || inheritor.hasModifierProperty(PsiModifier.ABSTRACT))) {
      return true;
    }
  }
  return false;
}
