{
  super(settings);
  myPanel.setLayout(new GridBagLayout());
  initTables();
  myTreeTable=createOptionsTree(settings);
  myPanel.add(ScrollPaneFactory.createScrollPane(myTreeTable),new GridBagConstraints(0,0,1,1,0,1,GridBagConstraints.WEST,GridBagConstraints.BOTH,new Insets(7,7,3,4),0,0));
  final JPanel previewPanel=createPreviewPanel();
  myPanel.add(previewPanel,new GridBagConstraints(1,0,1,1,1,1,GridBagConstraints.WEST,GridBagConstraints.BOTH,new Insets(0,0,0,4),0,0));
  installPreviewPanel(previewPanel);
  addPanelToWatch(myPanel);
}
