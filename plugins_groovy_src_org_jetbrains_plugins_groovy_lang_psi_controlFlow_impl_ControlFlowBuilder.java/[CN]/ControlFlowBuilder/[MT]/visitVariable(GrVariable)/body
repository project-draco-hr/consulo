{
  super.visitVariable(variable);
  if (variable.getInitializerGroovy() != null || variable.getParent() instanceof GrVariableDeclaration && ((GrVariableDeclaration)variable.getParent()).getTupleInitializer() != null) {
    ReadWriteVariableInstruction writeInst=new ReadWriteVariableInstruction(variable.getName(),variable,WRITE);
    addNodeAndCheckPending(writeInst);
  }
}
