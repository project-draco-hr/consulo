{
  if (mySelected) {
    return;
  }
  mySelected=true;
  if (myInputEvent.isControlDown()) {
    if (myArea.isSelected(myComponent)) {
      myArea.deselect(myComponent);
    }
 else {
      myArea.appendSelection(myComponent);
    }
  }
 else   if (myInputEvent.isShiftDown()) {
    myArea.appendSelection(myComponent);
  }
 else {
    myArea.select(myComponent);
  }
}
