{
  int oldIconsWidth=myLineMarkerAreaWidth;
  int oldAnnotationsWidth=myTextAnnotationGuttersSize;
  calcIconAreaWidth();
  calcAnnotationsSize();
  if (oldIconsWidth != myLineMarkerAreaWidth || oldAnnotationsWidth != myTextAnnotationGuttersSize) {
    revalidate();
  }
 else {
    repaint();
  }
}
