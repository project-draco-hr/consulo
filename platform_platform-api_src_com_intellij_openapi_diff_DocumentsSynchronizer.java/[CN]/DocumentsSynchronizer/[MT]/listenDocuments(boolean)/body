{
  int prevAssignedCount=myAssignedCount;
  if (startListen) {
    myAssignedCount++;
  }
 else {
    myAssignedCount--;
  }
  LOG.assertTrue(myAssignedCount >= 0);
  if (prevAssignedCount == 0 && myAssignedCount > 0)   startListen();
  if (myAssignedCount == 0 && prevAssignedCount > 0)   stopListen();
}
