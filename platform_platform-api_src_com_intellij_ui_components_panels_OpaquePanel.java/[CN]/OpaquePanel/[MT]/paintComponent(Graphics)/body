{
  if (myOpaqueActive) {
    final Color bg;
    if (myKey != null) {
      bg="List.background".equals(myKey) && UIUtil.isUnderGTKLookAndFeel() ? Color.WHITE : UIManager.getColor(myKey);
    }
 else {
      bg=getBackground();
    }
    g.setColor(bg);
    final Dimension size=getSize();
    g.fillRect(0,0,size.width,size.height);
  }
}
