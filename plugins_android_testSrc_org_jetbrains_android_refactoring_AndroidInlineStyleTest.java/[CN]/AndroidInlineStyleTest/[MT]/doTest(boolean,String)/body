{
  final String testName=getTestName(true);
  myFixture.copyFileToProject(BASE_PATH + testName + "_styles.xml","res/values/styles.xml");
  final VirtualFile f=myFixture.copyFileToProject(BASE_PATH + testName + ".xml",dirToCopy + "/test" + testName+ "_"+ Boolean.toString(inlineThisOnly)+ ".xml");
  myFixture.configureFromExistingVirtualFile(f);
  final Presentation p=myFixture.testAction(new AndroidInlineStyleReferenceAction(new AndroidInlineTestConfig(inlineThisOnly)));
  assertTrue(p.isEnabled());
  assertTrue(p.isVisible());
  myFixture.checkResultByFile(BASE_PATH + testName + "_after.xml");
  myFixture.checkResultByFile("res/values/styles.xml",BASE_PATH + testName + (inlineThisOnly ? "_styles.xml" : "_styles_after.xml"),true);
}
