{
  myActionManager=actionManagerEx;
  mySchemesManager=schemesManagerFactory.createSchemesManager("$ROOT_CONFIG$/quicklists",new BaseSchemeProcessor<QuickList>(){
    @Override public QuickList readScheme(    @NotNull final Document schemeContent) throws InvalidDataException, IOException, JDOMException {
      return loadListFromDocument(schemeContent);
    }
    @Override public Parent writeScheme(    @NotNull final QuickList scheme) throws WriteExternalException {
      Element element=new Element(LIST_TAG);
      scheme.writeExternal(element);
      return element;
    }
    @Override public boolean shouldBeSaved(    @NotNull final QuickList scheme){
      return true;
    }
  }
,RoamingType.PER_USER);
  loadAdditionalDefaultSchemes();
  registerActions();
}
