{
  DefaultActionGroup group=new DefaultActionGroup();
  group.add(new MyToolbarAddAction());
  group.add(new MyRemoveAction());
  group.add(new MyCopyAction());
  group.add(new MySaveAction());
  group.add(new AnAction(ExecutionBundle.message("run.configuration.edit.default.configuration.settings.button"),ExecutionBundle.message("run.configuration.edit.default.configuration.settings.button"),EDIT_DEFUALTS_ICON){
    public void actionPerformed(    final AnActionEvent e){
      new SingleConfigurableEditor(getProject(),new DefaultConfigurationSettingsEditor(myProject)).show();
    }
  }
);
  return group;
}
