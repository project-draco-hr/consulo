{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      myWholePanel.revalidate();
      myWholePanel.repaint();
      final Window window=SwingUtilities.windowForComponent(myWholePanel);
      if (window != null && (window.getSize().height < window.getMinimumSize().height || window.getSize().width < window.getMinimumSize().width)) {
        window.pack();
      }
    }
  }
);
}
