{
  boolean hasConstructor=false;
  boolean hasNoArgConstructor=false;
  final PsiMethod[] methods=ancestor.getMethods();
  for (  final PsiMethod method : methods) {
    if (method.isConstructor()) {
      hasConstructor=true;
      final PsiParameterList params=method.getParameterList();
      if (params != null) {
        if (params.getParameters().length == 0 && (method.hasModifierProperty(PsiModifier.PUBLIC) || method.hasModifierProperty(PsiModifier.PROTECTED))) {
          hasNoArgConstructor=true;
        }
      }
    }
  }
  return hasNoArgConstructor || !hasConstructor;
}
