{
  myRebuildAlarm.cancelAllRequests();
  final boolean isRefresh=event == DebuggerSession.EVENT_REFRESH || event == DebuggerSession.EVENT_REFRESH_VIEWS_ONLY || event == DebuggerSession.EVENT_THREADS_REFRESH;
  if (!isRefresh) {
    myPerformFullRebuild.set(true);
  }
  myRebuildAlarm.addRequest(new Runnable(){
    public void run(){
      try {
        doRebuild(!myPerformFullRebuild.getAndSet(false));
      }
 catch (      VMDisconnectedException e) {
      }
    }
  }
,100,ModalityState.NON_MODAL);
}
