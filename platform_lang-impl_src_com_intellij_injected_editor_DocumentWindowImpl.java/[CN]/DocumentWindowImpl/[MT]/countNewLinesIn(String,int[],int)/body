{
  int offsetInside=0;
  for (int i=text.indexOf('\n'); i != -1; i=text.indexOf('\n',offsetInside)) {
    int curLine=++pos[0];
    int lineLength=i + 1 - offsetInside;
    int offset=pos[1]+=lineLength;
    offsetInside+=lineLength;
    if (curLine == line)     return offset;
  }
  pos[1]+=text.length() - offsetInside;
  return -1;
}
