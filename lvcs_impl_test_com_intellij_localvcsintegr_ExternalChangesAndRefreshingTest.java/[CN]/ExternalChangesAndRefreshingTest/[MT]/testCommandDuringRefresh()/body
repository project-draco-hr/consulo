{
  createFileExternally("f.java");
  VirtualFileListener l=new VirtualFileAdapter(){
    @Override public void fileCreated(    VirtualFileEvent e){
      executeSomeCommand();
    }
  }
;
  addFileListenerDuring(l,new Callable(){
    public Object call() throws Exception {
      refreshVFS();
      return null;
    }
  }
);
}
