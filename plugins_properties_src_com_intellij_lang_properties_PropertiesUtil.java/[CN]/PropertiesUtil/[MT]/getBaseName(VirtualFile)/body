{
  String name=virtualFile.getNameWithoutExtension();
  String[] parts=name.split("_");
  if (parts.length == 1)   return parts[0];
  String baseName=parts[0];
  for (int i=1; i < parts.length; i++) {
    String part=parts[i];
    if (part.length() == 2) {
      break;
    }
    baseName+="_";
    baseName+=part;
  }
  return baseName;
}
