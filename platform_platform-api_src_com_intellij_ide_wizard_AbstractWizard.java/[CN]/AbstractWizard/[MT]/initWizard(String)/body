{
  setTitle(title);
  myCurrentStep=0;
  myPreviousButton=new JButton(IdeBundle.message("button.wizard.previous"));
  myNextButton=new JButton(IdeBundle.message("button.wizard.next"));
  myFinishButton=new JButton(IdeBundle.message("button.finish"));
