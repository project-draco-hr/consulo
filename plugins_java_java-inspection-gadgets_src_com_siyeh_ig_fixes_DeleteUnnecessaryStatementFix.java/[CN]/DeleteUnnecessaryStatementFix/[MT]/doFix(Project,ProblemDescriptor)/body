{
  final PsiElement keywordElement=descriptor.getPsiElement();
  final PsiStatement statement=PsiTreeUtil.getParentOfType(keywordElement,PsiStatement.class);
  if (statement == null) {
    return;
  }
  final PsiElement parent=statement.getParent();
  if (parent instanceof PsiIfStatement || parent instanceof PsiWhileStatement || parent instanceof PsiDoWhileStatement|| parent instanceof PsiForeachStatement|| parent instanceof PsiForStatement) {
    replaceStatement(statement,"{}");
  }
 else {
    deleteElement(statement);
  }
}
