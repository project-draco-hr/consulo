{
  final FileContent result=super.take();
synchronized (this) {
    try {
      final VirtualFile file=result.getVirtualFile();
      if (file == null || !file.isValid() || result.getLength() >= SIZE_THRESHOLD)       return result;
      myTotalSize-=result.getLength();
    }
  finally {
      notifyAll();
    }
  }
  return result;
}
