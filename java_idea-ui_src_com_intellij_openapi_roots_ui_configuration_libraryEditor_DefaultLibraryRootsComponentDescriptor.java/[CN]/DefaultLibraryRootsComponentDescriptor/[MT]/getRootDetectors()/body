{
  return Arrays.asList(new FileTypeBasedRootFilter(OrderRootType.CLASSES,false,StdFileTypes.CLASS,"classes"),new FileTypeBasedRootFilter(OrderRootType.CLASSES,true,StdFileTypes.CLASS,"jar directory"),PathUIUtils.JAVA_SOURCE_ROOT_DETECTOR,new FileTypeBasedRootFilter(OrderRootType.SOURCES,true,StdFileTypes.JAVA,"source archive directory"),new FileTypeBasedRootFilter(JavadocOrderRootType.getInstance(),false,StdFileTypes.HTML,"JavaDocs"),new AnnotationsRootFilter());
