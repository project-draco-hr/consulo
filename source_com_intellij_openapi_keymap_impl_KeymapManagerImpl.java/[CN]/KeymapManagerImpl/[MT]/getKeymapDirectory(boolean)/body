{
  String directoryPath=PathManager.getConfigPath() + File.separator + "keymaps";
  File directory=new File(directoryPath);
  if (!directory.exists()) {
    if (!toCreate)     return null;
    if (!directory.mkdir()) {
      LOG.error("Cannot create directory: " + directory.getAbsolutePath());
      return null;
    }
  }
  return directory;
}
