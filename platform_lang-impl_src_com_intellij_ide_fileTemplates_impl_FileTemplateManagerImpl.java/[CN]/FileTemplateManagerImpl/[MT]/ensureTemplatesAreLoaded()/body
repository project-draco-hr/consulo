{
  if (myLoaded) {
    return;
  }
  ApplicationManager.getApplication().runReadAction(new Runnable(){
    public void run(){
synchronized (LOCK) {
        if (myLoaded) {
          return;
        }
        loadTemplates();
        for (        FileTemplate template : myTemplates.getAllTemplates()) {
          template.setAdjust(!notAdjusted.contains(template.getName()));
        }
      }
      myLoaded=true;
    }
  }
);
}
