{
  dotest(new CheckAction(){
    public void testClassStructure(    StructureViewComponent structureViewComponent){
      structureViewComponent.setActionActive(InheritedMembersFilter.ID,true);
      IdeaTestUtil.assertTreeEqual(structureViewComponent.getTree(),"-Class2.java\n" + " -Class2\n" + "  __myPrivateFiield:int\n"+ "  _myProtectedField:int\n"+ "  myPublicField:int\n");
      structureViewComponent.setActionActive(VisibilitySorter.ID,true);
      IdeaTestUtil.assertTreeEqual(structureViewComponent.getTree(),"-Class2.java\n" + " -Class2\n" + "  myPublicField:int\n"+ "  _myProtectedField:int\n"+ "  __myPrivateFiield:int\n");
    }
  }
);
}
