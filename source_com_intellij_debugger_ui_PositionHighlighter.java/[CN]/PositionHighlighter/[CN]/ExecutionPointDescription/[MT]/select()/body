{
  if (myIsActive)   return;
  myIsActive=true;
  EditorColorsScheme scheme=EditorColorsManager.getInstance().getGlobalScheme();
  myHighlighter=myEditor.getMarkupModel().addLineHighlighter(myLineIndex,HighlighterLayer.SELECTION - 1,scheme.getAttributes(DebuggerColors.EXECUTIONPOINT_ATTRIBUTES));
  myHighlighter.setErrorStripeTooltip("Execution line");
}
