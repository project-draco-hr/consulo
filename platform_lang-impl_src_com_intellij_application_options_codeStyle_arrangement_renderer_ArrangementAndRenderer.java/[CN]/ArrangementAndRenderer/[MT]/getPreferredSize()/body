{
  int myWidth=0;
  int myHeight=0;
  for (  JComponent operand : myOperands) {
    Dimension size=operand.getPreferredSize();
    myWidth+=size.width;
    myHeight+=size.height;
  }
  if (myOperands.size() > 1) {
    myWidth+=(myOperands.size() - 1) * BUBBLE_CONNECTOR_LENGTH;
  }
  return new Dimension(myWidth,myHeight);
}
