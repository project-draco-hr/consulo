{
  final Lock lock=getWriteLock();
  try {
    lock.lock();
    try {
      myStorage.close();
    }
  finally {
      if (myInputsIndex != null) {
        try {
          myInputsIndex.close();
        }
 catch (        IOException e) {
          LOG.error(e);
        }
      }
    }
  }
 catch (  StorageException e) {
    LOG.error(e);
  }
 finally {
    lock.unlock();
  }
}
