{
  super(true);
  myProject=project;
  myFileName=fileName;
  myModuleName=moduleName;
  init();
  setTitle("Specify " + myTitle + " Scope");
  if (nonJavaFile) {
    myFileButton.setEnabled(false);
    myProjectButton.setSelected(true);
  }
 else {
    myFileButton.setSelected(true);
  }
  if (isProjectScope) {
    myFileButton.setVisible(false);
    myProjectButton.setSelected(true);
  }
}
