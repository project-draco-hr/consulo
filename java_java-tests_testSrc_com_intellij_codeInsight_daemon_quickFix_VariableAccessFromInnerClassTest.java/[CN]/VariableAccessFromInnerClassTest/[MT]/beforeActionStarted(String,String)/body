{
  for (int i=0; i < 10; i++) {
    ApplicationManager.getApplication().runWriteAction(new Runnable(){
      public void run(){
        myEditor.getDocument().insertString(myEditor.getCaretModel().getOffset(),"//");
      }
    }
);
    doHighlighting();
    delete();
    delete();
    doHighlighting();
  }
}
