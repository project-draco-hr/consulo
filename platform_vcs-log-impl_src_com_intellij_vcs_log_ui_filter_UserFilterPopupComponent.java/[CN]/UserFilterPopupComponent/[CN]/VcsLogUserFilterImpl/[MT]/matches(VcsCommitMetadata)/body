{
  return ContainerUtil.exists(getUserNames(commit.getRoot()),new Condition<String>(){
    @SuppressWarnings("StringToUpperCaseOrToLowerCaseWithoutLocale") @Override public boolean value(    String user){
      String lowerUser=user.toLowerCase();
      return commit.getAuthor().getName().toLowerCase().contains(lowerUser) || commit.getAuthor().getEmail().toLowerCase().contains(lowerUser);
    }
  }
);
}
