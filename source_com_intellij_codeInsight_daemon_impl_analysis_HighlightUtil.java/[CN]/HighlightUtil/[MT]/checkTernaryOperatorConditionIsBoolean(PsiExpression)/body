{
  if (expression.getParent() instanceof PsiConditionalExpression && ((PsiConditionalExpression)expression.getParent()).getCondition() == expression && expression.getType() != null && !TypeConversionUtil.isBooleanType(expression.getType())) {
    PsiType foundType=expression.getType();
    return createIncompatibleTypeHighlightInfo(PsiType.BOOLEAN,foundType,expression.getTextRange());
  }
  return null;
}
