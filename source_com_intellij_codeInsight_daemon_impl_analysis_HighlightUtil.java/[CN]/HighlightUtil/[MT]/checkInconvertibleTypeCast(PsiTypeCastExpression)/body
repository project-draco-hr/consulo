{
  PsiExpression operand=expression.getOperand();
  PsiType castType=expression.getCastType().getType();
  PsiType operandType=operand == null ? null : operand.getType();
  if (operandType != null && castType != null && !TypeConversionUtil.areTypesConvertible(operandType,castType)) {
    String message=MessageFormat.format(INCONVERTIBLE_TYPE_CAST,new Object[]{formatType(operandType),formatType(castType)});
    return HighlightInfo.createHighlightInfo(HighlightInfoType.ERROR,expression,message);
  }
  return null;
}
