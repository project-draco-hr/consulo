{
  if (statement.getLabelIdentifier() == null) {
    if (new PsiMatcherImpl(statement).ancestor(PsiMatcherExpression.ENCLOSING_LOOP).getElement() == null) {
      return HighlightInfo.createHighlightInfo(HighlightInfoType.ERROR,statement,"Continue outside of loop");
    }
  }
 else {
    PsiStatement exitedStatement=statement.findContinuedStatement();
    if (exitedStatement == null)     return null;
    if (!(exitedStatement instanceof PsiForStatement) && !(exitedStatement instanceof PsiWhileStatement) && !(exitedStatement instanceof PsiDoWhileStatement)&& !(exitedStatement instanceof PsiForeachStatement)) {
      String description=MessageFormat.format("Not a loop label: ''{0}''",new Object[]{statement.getLabelIdentifier().getText()});
      return HighlightInfo.createHighlightInfo(HighlightInfoType.ERROR,statement,description);
    }
  }
  return null;
}
