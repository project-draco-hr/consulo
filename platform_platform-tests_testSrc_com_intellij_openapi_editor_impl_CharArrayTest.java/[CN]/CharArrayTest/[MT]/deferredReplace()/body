{
  replace(1,3,"abc");
  checkText("1abc4");
  assertTrue(myArray.hasDeferredChanges());
  replace(2,3,"XY");
  checkText("1aXYc4");
  assertTrue(myArray.hasDeferredChanges());
  replace(3,6,"ABC");
  checkText("1aXABC");
  assertTrue(myArray.hasDeferredChanges());
  myArray.setDeferredChangeMode(false);
  checkText("1aXABC");
  assertFalse(myArray.hasDeferredChanges());
}
