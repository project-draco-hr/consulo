{
  final ActionCallback callback=new ActionCallback();
  final long executionRequest=++myRemoveDefferredRequest;
  myFocusManager.doWhenFocusSettlesDown(new Runnable(){
    public void run(){
      if (myRemoveDefferredRequest == executionRequest) {
        removeDeferredNow();
      }
      callback.setDone();
    }
  }
);
  return callback;
}
