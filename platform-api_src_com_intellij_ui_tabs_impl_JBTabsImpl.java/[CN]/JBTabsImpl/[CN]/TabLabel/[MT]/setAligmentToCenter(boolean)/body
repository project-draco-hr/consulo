{
  if (myCentered == toCenter && myLabel.getParent() != null)   return;
  myLabelPlaceholder.removeAll();
  if (toCenter) {
    final Centerizer center=new Centerizer(myLabel);
    myLabelPlaceholder.setContent(center);
  }
 else {
    myLabelPlaceholder.setContent(myLabel);
  }
  myCentered=toCenter;
}
