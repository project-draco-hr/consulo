{
  super(uiSettings);
  init();
  final JButton button=new JButton("Browse JetBrains repository");
  button.setMnemonic('b');
  button.addActionListener(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      new SingleConfigurableEditor(myActionsPanel,createAvailableConfigurable()){
        @Override protected Action[] createActions(){
          return new Action[]{getOKAction(),getCancelAction(),getHelpAction()};
        }
      }
.show();
    }
  }
);
  myActionsPanel.add(button,BorderLayout.NORTH);
}
