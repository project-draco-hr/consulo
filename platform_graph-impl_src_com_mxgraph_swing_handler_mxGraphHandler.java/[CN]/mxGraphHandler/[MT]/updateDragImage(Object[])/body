{
  dragImage=null;
  if (cells != null && cells.length > 0) {
    Image img=mxCellRenderer.createBufferedImage(graphComponent.getGraph(),cells,graphComponent.getGraph().getView().getScale(),null,graphComponent.isAntiAlias(),null,graphComponent.getCanvas());
    if (img != null) {
      dragImage=new ImageIcon(img);
      previewBounds.setSize(dragImage.getIconWidth(),dragImage.getIconHeight());
    }
  }
}
