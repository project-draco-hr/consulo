{
  info.getChangeSupport().addPropertyChangeListener(this);
  add(info.getComponent());
  final TabLabel label=new TabLabel(info);
  myInfo2Label.put(info,label);
  if (index < 0) {
    myInfos.add(0,info);
  }
 else   if (index > myInfos.size() - 1) {
    myInfos.add(info);
  }
 else {
    myInfos.add(index,info);
  }
  add(label);
  updateAll();
  return info;
}
