def _read_procfs_value(name):

    def read_value():
        try:
            return int(open(((procfs_path + '/') + name)).read())
        except OSError:
            return None
    read_value.__doc__ = ('Return the value of the %s setting from /proc.\n\n    If inotify is not enabled on this system, return None.' % name)
    return read_value
