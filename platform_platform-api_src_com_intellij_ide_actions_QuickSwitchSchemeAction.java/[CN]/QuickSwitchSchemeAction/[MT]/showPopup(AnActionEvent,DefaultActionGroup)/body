{
  if (!myShowPopupWithNoActions && group.getChildrenCount() == 0)   return;
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup(QuickSwitchSchemeAction.this.getPopupTitle(e),group,e.getDataContext(),getAidMethod(),true,myActionPlace);
  popup.showCenteredInCurrentWindow(e.getData(PlatformDataKeys.PROJECT));
}
