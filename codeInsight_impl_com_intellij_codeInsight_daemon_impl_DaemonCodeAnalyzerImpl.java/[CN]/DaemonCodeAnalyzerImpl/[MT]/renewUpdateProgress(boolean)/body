{
  myUpdateProgress.cancel();
  myPassExecutorService.cancelAll();
  myUpdateProgress=myUpdateProgress instanceof MyMockProgressIndicator ? new MyMockProgressIndicator(((MyMockProgressIndicator)myUpdateProgress).myStoppedNotify) : new DaemonProgressIndicator();
  if (start && myUpdateProgress instanceof DaemonProgressIndicator) {
    ((DaemonProgressIndicator)myUpdateProgress).restart();
  }
}
