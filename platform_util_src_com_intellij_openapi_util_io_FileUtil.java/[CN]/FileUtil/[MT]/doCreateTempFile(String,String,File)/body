{
  dir.mkdirs();
  if (prefix.length() < 3) {
    prefix=(prefix + "___").substring(0,3);
  }
  int exceptionsCount=0;
  while (true) {
    try {
      final File temp=File.createTempFile(prefix,suffix,dir);
      return normalizeFile(temp);
    }
 catch (    IOException e) {
      if (++exceptionsCount >= 100) {
        throw e;
      }
    }
  }
}
