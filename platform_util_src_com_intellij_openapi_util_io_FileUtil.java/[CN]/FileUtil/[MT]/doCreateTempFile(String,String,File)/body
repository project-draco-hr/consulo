{
  if (prefix.length() < 3) {
    prefix=(prefix + "___").substring(0,3);
  }
  int exceptionsCount=0;
  while (true) {
    try {
      return File.createTempFile(prefix,suffix,dir).getCanonicalFile();
    }
 catch (    IOException e) {
      if (++exceptionsCount >= 100) {
        throw e;
      }
    }
  }
}
