{
  final ArrayList<File> found=new ArrayList<File>();
  final File[] files=dir.listFiles();
  if (files != null) {
    for (    File file : files) {
      if (pattern.matcher(file.getName()).matches()) {
        found.add(file);
      }
      if (file.isDirectory()) {
        found.addAll(findFilesOrDirsByMask(pattern,file));
      }
    }
  }
  return found;
}
