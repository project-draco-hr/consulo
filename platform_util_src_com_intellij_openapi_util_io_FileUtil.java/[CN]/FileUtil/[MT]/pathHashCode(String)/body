{
  if (path == null) {
    return 0;
  }
  final int len=path.length();
  if (len == 0) {
    return 0;
  }
  path=toSystemIndependentName(path);
  if (SystemInfo.isFileSystemCaseSensitive) {
    return path.hashCode();
  }
  int h=0;
  for (int i=0; i < len; i++) {
    h=31 * h + StringUtil.toLowerCase(path.charAt(i));
  }
  return h;
}
