{
  final ArrayList<File> found=new ArrayList<File>();
  for (  File file : dir.listFiles()) {
    if (file.isDirectory()) {
      found.addAll(findFilesByMask(pattern,file));
    }
 else {
      if (pattern.matcher(file.getName()).matches()) {
        found.add(file);
      }
    }
  }
  return found;
}
