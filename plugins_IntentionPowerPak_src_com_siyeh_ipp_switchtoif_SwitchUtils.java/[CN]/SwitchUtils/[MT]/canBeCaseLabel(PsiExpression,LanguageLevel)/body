{
  if (expression == null) {
    return false;
  }
  if (languageLevel.compareTo(LanguageLevel.JDK_1_5) >= 0 && expression instanceof PsiReferenceExpression) {
    final PsiElement referent=((PsiReference)expression).resolve();
    if (referent instanceof PsiEnumConstant) {
      return true;
    }
  }
  final PsiType type=expression.getType();
  return type != null && (type.equals(PsiType.INT) || type.equals(PsiType.CHAR) || type.equals(PsiType.LONG)|| type.equals(PsiType.SHORT)) && PsiUtil.isConstantExpression(expression);
}
