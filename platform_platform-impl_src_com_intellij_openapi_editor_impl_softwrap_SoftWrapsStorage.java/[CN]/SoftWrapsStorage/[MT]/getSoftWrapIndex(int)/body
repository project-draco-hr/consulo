{
  int start=0;
  int end=myWraps.size() - 1;
  while (start <= end) {
    int i=(start + end) >>> 1;
    SoftWrap softWrap=myWraps.get(i);
    int softWrapOffset=softWrap.getStart();
    if (softWrapOffset > offset) {
      end=i - 1;
    }
 else     if (softWrapOffset < offset) {
      start=i + 1;
    }
 else {
      return i;
    }
  }
  return -(start + 1);
}
