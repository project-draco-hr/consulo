{
  return new DelegatingGlobalSearchScope(scope){
    @Override public boolean contains(    @NotNull final VirtualFile file){
      return !myBaseScope.contains(file);
    }
    @Override public boolean isSearchOutsideRootModel(){
      return true;
    }
    @Override public String toString(){
      return "NOT: " + myBaseScope;
    }
  }
;
}
