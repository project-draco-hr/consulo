{
  int start=0;
  int x=xStart;
  for (int i=0; i < text.length(); i++) {
    if (text.charAt(i) != '\t')     continue;
    if (i > start) {
      for (int j=start; j < i; j++)       x+=charWidth(text.charAt(j),fontType);
    }
    x=nextTabStop(x);
    start=i + 1;
  }
  if (start < text.length()) {
    for (int j=start; j < text.length(); j++)     x+=charWidth(text.charAt(j),fontType);
  }
  return x - xStart;
}
