{
  int x=xStart;
  final int textLength=text.length();
  for (int i=0; i < textLength && xStart < clip.x + clip.width; i++) {
    if (text.charAt(i) == '\t') {
      x=nextTabStop(x);
    }
 else {
      x+=charWidth(text.charAt(i),fontType);
    }
    if (x > clip.x + clip.width) {
      break;
    }
  }
  return x - xStart;
}
