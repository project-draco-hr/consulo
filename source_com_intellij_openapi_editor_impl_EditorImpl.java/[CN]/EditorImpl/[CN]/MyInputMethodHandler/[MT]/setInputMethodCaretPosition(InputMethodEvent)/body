{
  if (composedText != null) {
    int dot;
    dot=composedTextStart;
    TextHitInfo caretPos=e.getCaret();
    if (caretPos != null) {
      int index=caretPos.getInsertionIndex();
      dot+=index;
    }
    getCaretModel().moveToOffset(dot);
    getScrollingModel().scrollToCaret(ScrollType.RELATIVE);
  }
}
