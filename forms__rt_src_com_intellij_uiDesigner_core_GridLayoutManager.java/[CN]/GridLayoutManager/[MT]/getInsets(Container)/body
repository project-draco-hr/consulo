{
  final Insets insets=container.getInsets();
  while (container != null) {
    if (container instanceof JComponent && ((JComponent)container).getClientProperty(DESIGN_TIME_ROOT) != null) {
      return new Insets(insets.top + DESIGN_TIME_INSET,insets.left + DESIGN_TIME_INSET,insets.bottom + DESIGN_TIME_INSET,insets.right + DESIGN_TIME_INSET);
    }
    container=container.getParent();
  }
  return insets;
}
