{
  Color color;
  if (mySelected) {
    if (myHasFocus) {
      color=getSelectionBackground();
    }
 else {
      color=new Color(223,223,223);
    }
  }
 else {
    color=getTextBackground();
    if (color == null) {
      color=getBackground();
    }
  }
  if (color != null) {
    int i1=getBorderLeft();
    g.setColor(color);
    g.fillRect(i1 - 1,0,getWidth() - i1,getHeight());
  }
}
