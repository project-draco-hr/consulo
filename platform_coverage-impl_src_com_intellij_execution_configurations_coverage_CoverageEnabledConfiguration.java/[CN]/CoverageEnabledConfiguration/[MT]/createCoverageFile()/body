{
  if (myCoverageRunner == null) {
    return null;
  }
  @NonNls final String coverageRootPath=PathManager.getSystemPath() + File.separator + "coverage";
  final String path=coverageRootPath + File.separator + myProject.getName()+ coverageFileNameSeparator()+ FileUtil.sanitizeFileName(myConfiguration.getName())+ ".coverage";
  new File(coverageRootPath).mkdirs();
  return path;
}
