{
  myLock.lock();
  try {
    while (true) {
      if (myIsClosed) {
        throw new EventQueueClosedException();
      }
      for (int i=0; i < myEvents.length; i++) {
        final E event=getEventsList(i).poll();
        if (event != null) {
          return event;
        }
      }
      myEventsAvailable.awaitUninterruptibly();
    }
  }
  finally {
    myLock.unlock();
  }
}
