{
  final Project project=element.getProject();
  final Editor editor=FileEditorManager.getInstance(project).getSelectedTextEditor();
  if (editor != null) {
    final List<PsiMethodCallExpression> methodCalls=PsiSelectionSearcher.searchElementsInSelection(editor,project,PsiMethodCallExpression.class,false);
    if (methodCalls.size() > 0) {
      for (      PsiMethodCallExpression call : methodCalls) {
        flipCall(call);
      }
      editor.getSelectionModel().removeSelection();
      return;
    }
  }
  if (element instanceof PsiMethodCallExpression) {
    flipCall((PsiMethodCallExpression)element);
  }
}
