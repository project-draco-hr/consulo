{
  myColorDescriptor=value;
  clear();
  setIcon(myEmptyIcon);
  setBackground(selected ? UIUtil.getTableSelectionBackground() : UIUtil.getTableBackground());
  if (myColorDescriptor != null) {
    append(myColorDescriptor.toString(),selected ? SimpleTextAttributes.SELECTED_SIMPLE_CELL_ATTRIBUTES : SimpleTextAttributes.SIMPLE_CELL_ATTRIBUTES);
  }
}
