{
  final Semaphore semaphore=new Semaphore();
  semaphore.down();
  ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
    @Override public void run(){
      try {
        runnable.run();
      }
  finally {
        semaphore.up();
      }
    }
  }
);
  semaphore.waitFor();
}
