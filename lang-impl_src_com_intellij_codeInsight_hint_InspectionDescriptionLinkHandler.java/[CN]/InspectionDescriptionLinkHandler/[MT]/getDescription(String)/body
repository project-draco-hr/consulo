{
  final InspectionProfileEntry tool=((InspectionProfile)InspectionProfileManager.getInstance().getRootProfile()).getInspectionTool(shortName);
  if (tool == null)   return null;
  String description;
  description=tool.loadDescription();
  if (description == null) {
    description=InspectionsBundle.message("inspection.tool.description.under.construction.text");
  }
  return description;
}
