{
  if (full) {
    return ALL;
  }
 else   if (files.isEmpty()) {
    return "No " + category;
  }
 else {
    VirtualFile firstFile=Collections.min(files,shorten ? FILE_BY_NAME_COMPARATOR : FILE_BY_PATH_COMPARATOR);
    String firstFileName=shorten ? firstFile.getName() : StringUtil.shortenPathWithEllipsis(firstFile.getPresentableUrl(),FILTER_LABEL_LENGTH);
    if (files.size() == 1) {
      return firstFileName;
    }
 else {
      return firstFileName + " + " + (files.size() - 1);
    }
  }
}
