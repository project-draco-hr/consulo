{
  if (isFilterFieldVisible() && checkFocus && requestFocus&& !isSearchFieldFocused()) {
    UIUtil.requestFocus(mySearch);
    return;
  }
  mySearchWrapper.setContent(visible ? mySearch : null);
  myLeftSide.revalidate();
  myLeftSide.repaint();
  if (visible && requestFocus) {
    UIUtil.requestFocus(mySearch);
  }
}
