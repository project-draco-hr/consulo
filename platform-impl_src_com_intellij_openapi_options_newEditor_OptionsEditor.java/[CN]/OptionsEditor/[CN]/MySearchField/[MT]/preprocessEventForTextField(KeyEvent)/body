{
  if (getTextEditor().isFocusOwner() && !myDelegatingNow) {
    try {
      myDelegatingNow=true;
      final KeyStroke stroke=KeyStroke.getKeyStrokeForEvent(e);
      final Object action=getTextEditor().getInputMap().get(stroke);
      if (action == null) {
        onTextKeyEvent(e);
        return true;
      }
    }
  finally {
      myDelegatingNow=false;
    }
  }
  return false;
}
