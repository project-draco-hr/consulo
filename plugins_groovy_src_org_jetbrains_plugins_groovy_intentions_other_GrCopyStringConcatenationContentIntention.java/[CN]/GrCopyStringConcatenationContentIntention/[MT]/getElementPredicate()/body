{
  return new PsiElementPredicate(){
    @Override public boolean satisfiedBy(    PsiElement element){
      if (element instanceof GrLiteral && ((GrLiteral)element).getValue() instanceof String)       return true;
      return element instanceof GrBinaryExpression && ((GrBinaryExpression)element).getOperationTokenType() == GroovyTokenTypes.mPLUS && satisfiedBy(((GrBinaryExpression)element).getLeftOperand()) && satisfiedBy(((GrBinaryExpression)element).getRightOperand());
    }
  }
;
}
