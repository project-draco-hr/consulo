{
  final FileContent result=super.take();
synchronized (this) {
    try {
      final VirtualFile file=result.getVirtualFile();
      if (file == null || !file.isValid() || result.getPhysicalLength() >= SIZE_THRESHOLD)       return result;
      totalSize-=result.getPhysicalBytes().length;
    }
 catch (    IOException e) {
      LOG.error(e);
    }
 finally {
      notifyAll();
    }
  }
  return result;
}
