{
  if (myHasFocus) {
    int i1=getBorderLeft();
    if (myDrawsFocusBorderAroundIcon) {
      i1=0;
    }
 else     if (i1 == -1) {
      i1=getBorderLeft();
    }
    Color color=getSelectionBorderColor();
    if (color != null) {
      g.setColor(color);
      int j1=getWidth() - 1;
      int k1=getHeight() - 1;
      BegTreeHandleUtil.drawDottedRectangle(g,i1 > 0 ? i1 - 1 : i1,0,j1,k1);
    }
  }
}
