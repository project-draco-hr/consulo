{
  try {
    File configFile=getConfigFile();
    FileUtil.createParentDirs(configFile);
    Writer out=new BufferedWriter(new FileWriter(configFile));
    try {
      String s=saveToString();
      out.write(s);
      myConfiguration=s;
    }
  finally {
      out.close();
    }
  }
 catch (  IOException e) {
    LOG.info("Cannot save configuration of " + myConfiguration,e);
  }
}
