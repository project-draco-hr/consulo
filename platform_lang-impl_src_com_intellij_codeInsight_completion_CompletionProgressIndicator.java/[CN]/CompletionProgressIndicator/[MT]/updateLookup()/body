{
  ApplicationManager.getApplication().assertIsDispatchThread();
  if (isOutdated())   return;
  if (!myInitialized) {
    myInitialized=true;
    if (myLookup.isCalculating()) {
      final AsyncProcessIcon processIcon=myLookup.getProcessIcon();
      processIcon.setVisible(true);
      processIcon.resume();
    }
    myLookup.show();
  }
  myLookup.refreshUi();
}
