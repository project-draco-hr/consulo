{
  myQueue.cancelAllUpdates();
  super.stop();
  invokeLaterIfNotDispatch(new Runnable(){
    public void run(){
      if (myCount == 0 && !myLookup.isFocused()) {
        myPreventingAutoPopup=true;
        liveAfterDeath(null);
        return;
      }
      if (!isCanceled()) {
        myLookup.getProcessIcon().suspend();
        myLookup.getProcessIcon().setVisible(false);
        updateLookup();
      }
    }
  }
);
}
