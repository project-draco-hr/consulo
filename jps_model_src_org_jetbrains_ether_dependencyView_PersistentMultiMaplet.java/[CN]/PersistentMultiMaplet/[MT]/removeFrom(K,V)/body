{
  try {
    final Object got=map.get(key);
    if (got != null) {
      if (got instanceof Collection) {
        ((Collection)got).remove(value);
      }
 else       if (got.equals(value)) {
        map.remove(key);
      }
    }
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
