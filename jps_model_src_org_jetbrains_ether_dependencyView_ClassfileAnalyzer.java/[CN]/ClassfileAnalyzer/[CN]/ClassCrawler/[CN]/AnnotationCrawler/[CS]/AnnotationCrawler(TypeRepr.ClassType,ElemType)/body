{
  super(Opcodes.ASM4);
  this.myType=type;
  this.myTarget=target;
  final Set<ElemType> targets=myAnnotationTargets.get(type);
  if (targets == null) {
    myAnnotationTargets.put(type,EnumSet.of(target));
  }
 else {
    targets.add(target);
  }
  myUsages.add(UsageRepr.createClassUsage(myContext,type.myClassName));
}
