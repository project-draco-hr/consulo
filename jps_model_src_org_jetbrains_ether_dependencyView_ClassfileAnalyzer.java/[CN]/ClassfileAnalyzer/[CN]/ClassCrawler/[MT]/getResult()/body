{
  final ClassRepr repr=takeIntoAccount ? new ClassRepr(access,sourceFile,fileName,name,signature,superClass,interfaces,nestedClasses,fields,methods,targets,policy,outerClassName.get(),localClassFlag.get()) : null;
  if (repr != null) {
    repr.updateClassUsages(usages);
  }
  return new Pair<ClassRepr,Pair<UsageRepr.Cluster,Set<UsageRepr.Usage>>>(repr,new Pair<UsageRepr.Cluster,Set<UsageRepr.Usage>>(usages,annotationUsages));
}
