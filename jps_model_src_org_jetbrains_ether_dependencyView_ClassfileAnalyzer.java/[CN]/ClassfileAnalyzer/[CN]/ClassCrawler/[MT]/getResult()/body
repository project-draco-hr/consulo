{
  final ClassRepr repr=takeIntoAccount ? new ClassRepr(context,access,sourceFile,fileName,name,context.get(signature),context.get(superClass),interfaces,nestedClasses,fields,methods,targets,policy,context.get(denullify(outerClassName.get())),localClassFlag.get()) : null;
  if (repr != null) {
    repr.updateClassUsages(usages);
  }
  return new Pair<ClassRepr,Pair<UsageRepr.Cluster,Set<UsageRepr.Usage>>>(repr,new Pair<UsageRepr.Cluster,Set<UsageRepr.Usage>>(usages,annotationUsages));
}
