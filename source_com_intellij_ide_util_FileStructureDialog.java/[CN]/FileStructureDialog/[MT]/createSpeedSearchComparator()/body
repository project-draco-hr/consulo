{
  return new SpeedSearchBase.SpeedSearchComparator(){
    public void translateCharacter(    final StringBuffer buf,    final char ch){
      if (ch == '*') {
        buf.append(".*");
      }
 else {
        if (ch == ':') {
          buf.append(".*");
        }
        super.translateCharacter(buf,ch);
      }
    }
  }
;
}
