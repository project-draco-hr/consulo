{
  if (newFieldName.indexOf('_') < 0)   return newFieldName;
  if (oldResourceName.indexOf('_') < 0 && oldResourceName.indexOf('.') >= 0) {
    String suggestion=newFieldName.replace('_','.');
    newFieldName=Messages.showInputDialog(project,AndroidBundle.message("rename.resource.dialog.text",oldResourceName),RefactoringBundle.message("rename.title"),Messages.getQuestionIcon(),suggestion,null);
  }
  return newFieldName;
}
