{
  g.fillRect(x + 2,y,width,height);
  g.setPaint(UIUtil.getTextAreaForeground());
  final BasicStroke stroke;
  if (emphasize) {
    stroke=new BasicStroke(1);
  }
 else {
    stroke=new BasicStroke(1);
    g.setColor(Color.gray);
  }
  g.setStroke(stroke);
  g.drawRect(x + 2,y,width,height - 1);
}
