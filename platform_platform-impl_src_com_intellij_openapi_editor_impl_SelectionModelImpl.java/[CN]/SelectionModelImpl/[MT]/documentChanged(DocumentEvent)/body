{
  if (myIsInUpdate == event) {
    myIsInUpdate=null;
    myEditor.getCaretModel().doWithCaretMerging(new Runnable(){
      public void run(){
        for (        Caret caret : myEditor.getCaretModel().getAllCarets()) {
          ((CaretImpl)caret).documentChanged();
        }
      }
    }
);
  }
}
