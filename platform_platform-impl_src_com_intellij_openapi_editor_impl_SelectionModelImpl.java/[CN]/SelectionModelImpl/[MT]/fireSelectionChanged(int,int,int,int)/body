{
  repaintBySelectionChange(oldSelectionStart,startOffset,oldSelectionEnd,endOffset);
  SelectionEvent event=new SelectionEvent(myEditor,oldSelectionStart,oldSelectionEnd,startOffset,endOffset);
  for (  SelectionListener listener : mySelectionListeners) {
    try {
      listener.selectionChanged(event);
    }
 catch (    Exception e) {
      LOG.error(e);
    }
  }
}
