{
  PsiFile psiFile=ApplicationManager.getApplication().runReadAction(new Computable<PsiFile>(){
    @Override public PsiFile compute(){
      return file.isValid() ? PsiManager.getInstance(project).findFile(file) : null;
    }
  }
);
  return psiFile instanceof XmlFile && AndroidFacet.getInstance(psiFile) != null && LayoutDomFileDescription.isLayoutFile((XmlFile)psiFile);
}
