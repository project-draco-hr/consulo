{
  Document document=FileDocumentManager.getInstance().getDocument(file);
  if (document != null) {
    PsiFile psiFile=PsiDocumentManager.getInstance(project).getPsiFile(document);
    return psiFile instanceof XmlFile && AndroidFacet.getInstance(psiFile) != null && LayoutDomFileDescription.isLayoutFile((XmlFile)psiFile);
  }
  return false;
}
