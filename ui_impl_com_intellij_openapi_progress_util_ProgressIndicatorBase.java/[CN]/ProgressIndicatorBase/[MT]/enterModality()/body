{
  if (myModalityProgress == this) {
    if (!EventQueue.isDispatchThread()) {
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          LaterInvocator.enterModal(ProgressIndicatorBase.this);
        }
      }
);
    }
 else {
      LaterInvocator.enterModal(this);
    }
  }
}
