{
  if (currentElement == null) {
    XmlTag tag=PsiTreeUtil.getParentOfType(originalElement,XmlTag.class);
    LOG.assertTrue(false,"The validator message:" + message + " is bound to null node,\n"+ "initial element:"+ originalElement.getText()+ ",\n"+ "parent:"+ originalElement.getParent()+ ",\n"+ "tag:"+ (tag != null ? tag.getText() : "null")+ ",\n"+ "offset in tag: "+ (originalElement.getTextOffset() - (tag == null ? 0 : tag.getTextOffset())));
  }
}
