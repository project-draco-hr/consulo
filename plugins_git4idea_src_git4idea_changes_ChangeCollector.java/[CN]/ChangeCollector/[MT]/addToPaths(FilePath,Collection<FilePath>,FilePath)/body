{
  if (GitUtil.getGitRootOrNull(toAdd) != myVcsRoot) {
    return;
  }
  if (root.isUnder(toAdd,true)) {
    toAdd=root;
  }
  for (Iterator<FilePath> i=paths.iterator(); i.hasNext(); ) {
    FilePath p=i.next();
    if (p.isUnder(toAdd,true)) {
      i.remove();
    }
    if (toAdd.isUnder(p,false)) {
      return;
    }
  }
  paths.add(toAdd);
}
