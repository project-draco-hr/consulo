{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      String text=getTextEditor().getText();
      myModel.setSelectedItemAndCropList(text);
    }
  }
);
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      if (0 == myModel.getSize()) {
        hidePopup();
        myModel.uncropList();
      }
 else {
        refreshPopup();
      }
    }
  }
);
}
