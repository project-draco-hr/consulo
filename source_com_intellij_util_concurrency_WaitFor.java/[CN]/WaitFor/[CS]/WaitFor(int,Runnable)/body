{
  new Thread(WAIT_FOR_THREAD_NAME){
    public void run(){
      myConditionRealized=new WaitFor(timeoutMsecs){
        protected boolean condition(){
          return WaitFor.this.condition();
        }
      }
.isConditionRealized();
      if (myConditionRealized) {
        toRunOnTrue.run();
      }
    }
  }
.start();
}
