{
  if (!(r instanceof FutureTask))   return r;
  Object sync=ReflectionUtil.getField(FutureTask.class,r,null,"sync");
  Object o=sync == null ? r : sync;
  Object callable=ReflectionUtil.getField(o.getClass(),o,Callable.class,"callable");
  if (callable == null)   return null;
  Object task=ReflectionUtil.getField(callable.getClass(),callable,null,"task");
  return task == null ? callable : task;
}
