{
  try {
    setClosed(false);
    while (true) {
      final boolean read=readAvailable();
      if (myRemoteProcess.isDisconnected()) {
        myReader.close();
        break;
      }
      if (isStopped) {
        break;
      }
      Thread.sleep(mySleepingPolicy.getTimeToSleep(read));
    }
  }
 catch (  InterruptedException ignore) {
  }
catch (  IOException e) {
    LOG.warn(e);
  }
catch (  Exception e) {
    LOG.warn(e);
  }
 finally {
    setClosed(true);
  }
}
