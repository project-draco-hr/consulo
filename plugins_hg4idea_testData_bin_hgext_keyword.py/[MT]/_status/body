def _status(ui, repo, kwt, *pats, **opts):
    'Bails out if [keyword] configuration is not active.\n    Returns status of working directory.'
    if kwt:
        unknown = (opts.get('unknown') or opts.get('all') or opts.get('untracked'))
        return repo.status(match=cmdutil.match(repo, pats, opts), clean=True, unknown=unknown)
    if ui.configitems('keyword'):
        raise util.Abort(_('[keyword] patterns cannot match'))
    raise util.Abort(_('no [keyword] patterns configured'))
