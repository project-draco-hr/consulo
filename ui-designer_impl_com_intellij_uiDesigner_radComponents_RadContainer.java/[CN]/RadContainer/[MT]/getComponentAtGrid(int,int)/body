{
  for (int i=0; i < getComponentCount(); i++) {
    final GridConstraints c=getComponent(i).getConstraints();
    if (c.getRow() <= row && row < c.getRow() + c.getRowSpan() && c.getColumn() <= column && column < c.getColumn() + c.getColSpan()) {
      return getComponent(i);
    }
  }
  return null;
}
