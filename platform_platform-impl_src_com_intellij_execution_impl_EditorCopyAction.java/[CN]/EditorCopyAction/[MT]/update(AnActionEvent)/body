{
  final boolean enabled=isEnabled(e);
  e.getPresentation().setEnabled(enabled);
  e.getPresentation().setVisible(enabled);
  final Editor editor=e.getData(PlatformDataKeys.EDITOR);
  e.getPresentation().setText(editor != null && editor.getSelectionModel().hasSelection() ? ExecutionBundle.message("copy.selected.content.action.name") : ExecutionBundle.message("copy.content.action.name"));
}
