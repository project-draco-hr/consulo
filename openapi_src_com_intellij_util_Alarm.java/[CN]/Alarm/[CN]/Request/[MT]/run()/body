{
  try {
    if (!myDisposed) {
      if (myModalityState != null) {
synchronized (LOCK) {
          myRequests.remove(this);
        }
        ApplicationManager.getApplication().invokeLater(myTask,myModalityState);
      }
 else {
        myFuture=myExecutorService.submit(new Runnable(){
          public void run(){
synchronized (LOCK) {
              myRequests.remove(Request.this);
            }
            myTask.run();
          }
        }
);
      }
    }
  }
 catch (  Throwable e) {
    LOG.error(e);
  }
}
