{
synchronized (LOCK) {
    Runnable request1=new Runnable(){
      public void run(){
synchronized (LOCK) {
          myOriginalToThreadRequestMap.remove(request);
        }
        try {
          request.run();
        }
 catch (        Throwable e) {
          LOG.error(e);
        }
      }
    }
;
    myOriginalToThreadRequestMap.put(request,request1);
    myThread.addRequest(request1,delay,modalityState);
  }
}
