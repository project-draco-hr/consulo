{
  final CompilerProgressIndicator indicator=new CompilerProgressIndicator(myProject,CompilerWorkspaceConfiguration.getInstance(myProject).COMPILE_IN_BACKGROUND,contentName,false);
  final CompileContextImpl compileContext=new CompileContextImpl(myProject,indicator,scope,null,this,false);
  FileDocumentManager.getInstance().saveAllDocuments();
  ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
    public void run(){
synchronized (CompilerManager.getInstance(myProject)) {
        ProgressManager.getInstance().runProcess(new Runnable(){
          public void run(){
            try {
              task.execute(compileContext);
            }
 catch (            ProcessCanceledException ex) {
            }
 finally {
              if (onTaskFinished != null) {
                onTaskFinished.run();
              }
            }
          }
        }
,compileContext.getProgressIndicator());
      }
    }
  }
);
}
