{
  final CompilerTask progressManagerTask=new CompilerTask(myProject,CompilerWorkspaceConfiguration.getInstance(myProject).COMPILE_IN_BACKGROUND,contentName,false);
  final CompileContextImpl compileContext=new CompileContextImpl(myProject,progressManagerTask,scope,null,false);
  FileDocumentManager.getInstance().saveAllDocuments();
  progressManagerTask.start(new Runnable(){
    public void run(){
      try {
        task.execute(compileContext);
      }
 catch (      ProcessCanceledException ex) {
      }
 finally {
        if (onTaskFinished != null) {
          onTaskFinished.run();
        }
      }
    }
  }
,null);
}
