{
  char first=text.charAt(offset - 1);
  char second=text.charAt(offset);
  final boolean firstIsIdentifierPart=Character.isJavaIdentifierPart(first);
  final boolean secondIsIdentifierPart=Character.isJavaIdentifierPart(second);
  if (!firstIsIdentifierPart && secondIsIdentifierPart) {
    return true;
  }
  if (isCamel) {
    if (firstIsIdentifierPart && secondIsIdentifierPart && (Character.isLowerCase(first) && Character.isUpperCase(second) || first == '_' && second != '_' || offset + 1 < text.length() && Character.isUpperCase(first) && Character.isUpperCase(second))&& Character.isLowerCase(text.charAt(offset + 1))) {
      return true;
    }
  }
  return (Character.isWhitespace(first) || firstIsIdentifierPart) && !Character.isWhitespace(second) && !secondIsIdentifierPart;
}
