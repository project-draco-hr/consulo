{
  final boolean firstIsIdentifiePart=Character.isJavaIdentifierPart(first);
  final boolean secondIsIdentifierPart=Character.isJavaIdentifierPart(second);
  if (firstIsIdentifiePart && !secondIsIdentifierPart) {
    return true;
  }
  if (isCamel) {
    if (firstIsIdentifiePart && secondIsIdentifierPart && (Character.isLowerCase(first) && Character.isUpperCase(second) || first != '_' && second == '_')) {
      return true;
    }
  }
  return !Character.isWhitespace(first) && !firstIsIdentifiePart && (Character.isWhitespace(second) || secondIsIdentifierPart);
}
