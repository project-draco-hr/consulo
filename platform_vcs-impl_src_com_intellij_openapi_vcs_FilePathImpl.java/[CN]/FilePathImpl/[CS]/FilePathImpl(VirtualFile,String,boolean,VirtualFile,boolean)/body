{
  myLocal=true;
  myVirtualParent=virtualParent;
  myName=name;
  myIsDirectory=isDirectory;
  if (myVirtualParent == null) {
    myFile=new File(myName);
  }
 else {
    myFile=new File(new File(myVirtualParent.getPath()),myName);
  }
  if (!forDeleted) {
    if (child == null) {
      refresh();
    }
 else {
      myVirtualFile=child;
    }
  }
}
