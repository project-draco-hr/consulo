{
  myListener.canSelectStateChanged(this,false);
  myResultList.setPaintBusy(true);
  final String text=mySearchField.getText();
  myAlarm.cancelAllRequests();
  myAlarm.addRequest(new Runnable(){
    public void run(){
      try {
        doSearch(text);
      }
 catch (      Throwable e) {
        MavenLog.LOG.warn(e);
      }
    }
  }
,500);
}
