{
  writer.write('\n');
  myColumn=0;
  lineCount++;
  if (myPrintLineNumbers) {
    writer.write("<a name=\"l" + lineCount + "\">");
    writer.write("<span class=\"ln\">");
    String s=Integer.toString(lineCount);
    writer.write(s);
    int extraSpaces=4 - s.length();
    do {
      writer.write(' ');
    }
 while (extraSpaces-- > 0);
    writer.write("</span></a>");
  }
}
