{
  return new ToggleAction(UIBundle.message("autoscroll.from.source.action.name"),UIBundle.message("autoscroll.from.source.action.description"),IconLoader.getIcon("/general/autoscrollFromSource.png")){
    public boolean isSelected(    AnActionEvent event){
      return isAutoScrollMode();
    }
    public void setSelected(    AnActionEvent event,    boolean flag){
      setAutoScrollMode(flag);
    }
  }
;
}
