{
  while (true) {
    final Semaphore semaphore=new Semaphore();
synchronized (myLock) {
      if (!myRequestSubmitted && !myRequestRunning) {
        return;
      }
      semaphore.down();
      myWaitingUpdateCompletionSemaphores.add(semaphore);
    }
    if (!semaphore.waitFor(100 * 1000)) {
      LOG.error("Too long VCS update");
      return;
    }
  }
}
