{
  myPolicy=FilePathSplittingPolicy.SPLIT_BY_SEPARATOR;
  @NonNls String[] expectedStrings={"...","...","...","...","...","...","...","file.txt","file.txt","file.txt","...file.txt","...file.txt","c:...file.txt","c:.../file.txt","c:/.../file.txt","c:/.../file.txt","c:/.../file.txt","c:/.../file.txt","c:/...dir4/file.txt","c:/...dir4/file.txt","c:/...dir4/file.txt","c:/...dir4/file.txt","c:/dir1...dir4/file.txt","c:/dir1.../dir4/file.txt","c:/dir1/.../dir4/file.txt","c:/dir1/.../dir4/file.txt","c:/dir1/.../dir4/file.txt","c:/dir1/.../dir4/file.txt","c:/dir1/...dir3/dir4/file.txt","c:/dir1/...dir3/dir4/file.txt","c:/dir1/dir2/dir3/dir4/file.txt"};
  for (int i=0; i < expectedStrings.length; i++) {
    int count=i + 1;
    String expectedString=expectedStrings[i];
    assertTrue(expectedString,expectedString.length() <= count || i < 3);
    doTest(expectedString,count);
  }
}
