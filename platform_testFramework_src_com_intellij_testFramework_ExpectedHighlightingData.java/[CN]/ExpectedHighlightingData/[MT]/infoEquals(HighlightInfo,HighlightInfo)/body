{
  if (expectedInfo == info)   return true;
  return info.getSeverity() == expectedInfo.getSeverity() && info.startOffset == expectedInfo.startOffset && info.endOffset == expectedInfo.endOffset && info.isAfterEndOfLine == expectedInfo.isAfterEndOfLine && (expectedInfo.type == WHATEVER || expectedInfo.type.equals(info.type)) && (Comparing.strEqual(ANY_TEXT,expectedInfo.description) || Comparing.strEqual(info.description,expectedInfo.description)) && (expectedInfo.forcedTextAttributes == null || Comparing.equal(expectedInfo.getTextAttributes(null,null),info.getTextAttributes(null,null))) && (expectedInfo.forcedTextAttributesKey == null || expectedInfo.forcedTextAttributesKey.equals(info.forcedTextAttributesKey));
}
