{
  int x=(int)state.getX();
  int y=(int)state.getY();
  int width=(int)state.getWidth();
  int height=(int)state.getHeight();
  Dimension s=c.getMinimumSize();
  if (s.width > width) {
    x-=(s.width - width) / 2;
    width=s.width;
  }
  if (s.height > height) {
    y-=(s.height - height) / 2;
    height=s.height;
  }
  c.setBounds(x,y,width,height);
}
