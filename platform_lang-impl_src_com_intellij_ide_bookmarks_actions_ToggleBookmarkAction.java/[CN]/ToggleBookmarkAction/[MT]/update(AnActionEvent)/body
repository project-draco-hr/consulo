{
  DataContext dataContext=event.getDataContext();
  final Project project=PlatformDataKeys.PROJECT.getData(dataContext);
  event.getPresentation().setEnabled(project != null && (ToolWindowManager.getInstance(project).isEditorComponentActive() && PlatformDataKeys.EDITOR.getData(dataContext) != null || PlatformDataKeys.VIRTUAL_FILE.getData(dataContext) != null));
  event.getPresentation().setText(IdeBundle.message("action.toggle.bookmark"));
}
