{
  myTimeSpentField=new JTextField(String.valueOf(formatDuration(myTask.getTimeSpent())));
  myCommentField=new JTextArea();
  return FormBuilder.createFormBuilder().addComponent(new JLabel("Send information about activity on " + myTask.getPresentableName())).addLabeledComponent("Time spent:",myTimeSpentField,UIUtil.LARGE_VGAP).addLabeledComponent("Comment",ScrollPaneFactory.createScrollPane(myCommentField)).getPanel();
}
