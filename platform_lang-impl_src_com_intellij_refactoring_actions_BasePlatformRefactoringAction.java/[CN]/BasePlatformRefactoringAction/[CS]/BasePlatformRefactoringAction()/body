{
  LanguageRefactoringSupport.INSTANCE.addListener(new ExtensionPointListener<RefactoringSupportProvider>(){
    @Override public void extensionAdded(    @NotNull RefactoringSupportProvider extension,    @Nullable PluginDescriptor pluginDescriptor){
      myHidden=null;
    }
    @Override public void extensionRemoved(    @NotNull RefactoringSupportProvider extension,    @Nullable PluginDescriptor pluginDescriptor){
      myHidden=null;
    }
  }
);
}
