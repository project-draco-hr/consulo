{
  final Rectangle bounds=getUpdatedBounds(balloon.myLayeredPane.getSize(),balloon.myForcedBounds,balloon.myComp.getPreferredSize(),balloon.myShowPointer,balloon.myTargetPoint,balloon.myContainerInsets);
  final Point point=getShiftedPoint(bounds.getLocation(),-balloon.getShadowBorderSize());
  bounds.setLocation(point);
  balloon.myComp._setBounds(bounds);
}
