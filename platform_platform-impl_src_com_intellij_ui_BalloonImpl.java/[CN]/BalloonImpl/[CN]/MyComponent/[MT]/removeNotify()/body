{
  super.removeNotify();
  SwingUtilities.invokeLater(new Runnable(){
    @Override public void run(){
      if (myCloseRec != null && myCloseRec.getParent() != null) {
        Container parent=myCloseRec.getParent();
        parent.remove(myCloseRec);
        ((JComponent)parent).revalidate();
        parent.repaint();
      }
    }
  }
);
}
