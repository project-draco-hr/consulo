{
  if (fadeoutDelay > 0) {
    myFadeoutAlarm.cancelAllRequests();
    myFadeoutRequestMillis=System.currentTimeMillis();
    myFadeoutRequestDelay=fadeoutDelay;
    myFadeoutAlarm.addRequest(new Runnable(){
      @Override public void run(){
        BalloonImpl.this.hide();
      }
    }
,fadeoutDelay,null);
  }
}
