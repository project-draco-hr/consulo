{
  Dimension size=getContentSizeFor(position);
  Rectangle rec=new Rectangle(new Point(0,0),size);
  position.setRecToRelativePosition(rec,position.getShiftedPoint(myTargetPoint,myCalloutshift));
  if (adjust) {
    rec=myPosition.getUpdatedBounds(myLayeredPane.getSize(),myForcedBounds,rec.getSize(),myShowPointer,myTargetPoint,myContainerInsets,myCalloutshift);
  }
  return rec;
}
