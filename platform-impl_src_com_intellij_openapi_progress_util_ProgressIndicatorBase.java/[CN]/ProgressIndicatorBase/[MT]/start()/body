{
synchronized (this) {
    LOG.assertTrue(!isRunning(),"Attempt to start ProgressIndicator which is already running");
    myText="";
    myFraction=0;
    myText2="";
    myCanceled=false;
    myRunning=true;
    delegateRunningChange(new IndicatorAction(){
      public void execute(      final ProgressIndicatorEx each){
        each.start();
      }
    }
);
  }
  enterModality();
}
