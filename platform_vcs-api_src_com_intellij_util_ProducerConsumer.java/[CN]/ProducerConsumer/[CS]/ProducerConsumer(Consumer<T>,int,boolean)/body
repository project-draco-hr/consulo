{
  myConsumer=consumer;
  myQueue=new ArrayDeque<T>();
  myMaxSize=maxSize;
  myLock=new Object();
  if (onPooledThread) {
    myConsumerThread=new PooledConsumerRunnable();
    ApplicationManager.getApplication().executeOnPooledThread(myConsumerThread);
  }
 else {
    myConsumerThread=new ConsumerRunnable();
  }
}
