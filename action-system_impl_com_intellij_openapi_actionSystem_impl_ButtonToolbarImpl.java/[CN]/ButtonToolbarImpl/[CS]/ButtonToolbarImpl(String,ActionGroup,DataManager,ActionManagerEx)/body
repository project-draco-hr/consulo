{
  super(new GridBagLayout());
  myPlace=place;
  myPresentationFactory=new PresentationFactory();
  myTimerListener=new ButtonToolbarImpl.MyTimerListener();
  myDataManager=dataManager;
  initButtons(actionGroup);
  updateActions();
