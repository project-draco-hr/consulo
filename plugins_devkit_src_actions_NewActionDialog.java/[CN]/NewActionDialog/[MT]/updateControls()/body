{
  setOKActionEnabled(myActionIdEdit.getText().length() > 0 && myActionNameEdit.getText().length() > 0 && myActionTextEdit.getText().length() > 0 && PsiManager.getInstance(myProject).getNameHelper().isIdentifier(myActionNameEdit.getText()));
  myAnchorBeforeRadio.setEnabled(myActionList.getSelectedValue() != null);
  myAnchorAfterRadio.setEnabled(myActionList.getSelectedValue() != null);
}
