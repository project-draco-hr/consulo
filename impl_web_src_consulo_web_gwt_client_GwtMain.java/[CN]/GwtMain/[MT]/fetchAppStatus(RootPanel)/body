{
  GwtUtil.rpc().getApplicationStatus(new ReportableCallable<Boolean>(){
    @Override public void onSuccess(    Boolean result){
      if (result) {
        fetchServices(rootPanel);
      }
 else {
        new Timer(){
          @Override public void run(){
            fetchAppStatus(rootPanel);
          }
        }
.schedule(500);
      }
    }
  }
);
}
