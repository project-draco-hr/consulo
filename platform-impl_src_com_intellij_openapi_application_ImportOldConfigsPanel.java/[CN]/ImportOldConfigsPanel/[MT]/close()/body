{
  if (isImportEnabled()) {
    final String productWithVendor=ApplicationNamesInfo.getInstance().getFullProductName();
    String instHome=myPrevInstallation.getText();
    if ("".equals(instHome)) {
      JOptionPane.showMessageDialog(JOptionPane.getRootFrame(),ApplicationBundle.message("error.please.select.previous.installation.home",productWithVendor),ApplicationBundle.message("title.installation.home.required"),JOptionPane.ERROR_MESSAGE);
      return;
    }
    if (PathManager.getHomePath().equals(instHome)) {
      JOptionPane.showMessageDialog(JOptionPane.getRootFrame(),ApplicationBundle.message("error.selected.current.installation.home",productWithVendor,productWithVendor),ApplicationBundle.message("title.installation.home.required"),JOptionPane.ERROR_MESSAGE);
      return;
    }
    if (!ConfigImportHelper.isInstallationHome(instHome)) {
      JOptionPane.showMessageDialog(JOptionPane.getRootFrame(),ApplicationBundle.message("error.does.not.appear.to.be.installation.home",instHome,productWithVendor),ApplicationBundle.message("title.installation.home.required"),JOptionPane.ERROR_MESSAGE);
      return;
    }
    if (!new File(instHome).canRead()) {
      JOptionPane.showMessageDialog(JOptionPane.getRootFrame(),ApplicationBundle.message("error.no.read.permissions",instHome),ApplicationBundle.message("title.installation.home.required"),JOptionPane.ERROR_MESSAGE);
      return;
    }
  }
  dispose();
}
