{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      myListUpdateAlarm.cancelAllRequests();
      myListUpdateAlarm.addRequest(new Runnable(){
        public void run(){
          if (myProject.isDisposed())           return;
          updateList();
        }
      }
,50);
    }
  }
);
}
