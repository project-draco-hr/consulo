{
synchronized (myUpdateLock) {
    if (update) {
      myFirstIndex=0;
      final int selectedIndex1=-1;
      myModel.setSelectedIndex(selectedIndex1);
      myList.clear();
      for (int index=0; index < myModel.size(); index++) {
        final Object object=myModel.get(index);
        final Icon closedIcon=getIcon(object,false);
        final Icon openIcon=getIcon(object,true);
        final MyCompositeLabel label=new MyCompositeLabel(index,wrapIcon(openIcon,closedIcon,index),NavBarModel.getPresentableText(object,getWindow()),myModel.getTextAttributes(object,false),myModel);
        installActions(index,label);
        myList.add(label);
      }
      rebuildComponent();
    }
  }
}
