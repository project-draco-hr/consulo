{
  int index=myModel.getSelectedIndex();
  final int modelSize=myModel.size();
  if (index == -1) {
    index=modelSize - 1;
  }
  if (index > -1 && index < modelSize) {
    final MyCompositeLabel item=getItem(index);
    if (item != null) {
      return new Point(item.getX(),item.getY() + item.getHeight());
    }
  }
  return null;
}
