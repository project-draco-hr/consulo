{
  myContextObject=null;
  myUpdateQueue.cancelAllUpdates();
  queueModelUpdateForObject(object);
  queueRebuildUi();
  queueRevalidate(new Runnable(){
    public void run(){
      if (myModel.hasChildren(object)) {
        restorePopup();
      }
 else {
        doubleClick(object);
      }
    }
  }
);
}
