{
  myContextObject=null;
  myUpdateQueue.cancelAllUpdates();
  queueModelUpdateForObject(object);
  queueRebuildUi();
  queueAfterAll(new Runnable(){
    public void run(){
      int index=myModel.indexOf(object);
      if (index >= 0) {
        myModel.setSelectedIndex(index);
      }
      if (myModel.hasChildren(object)) {
        restorePopup();
      }
 else {
        doubleClick(object);
      }
    }
  }
,"navigateInside");
}
