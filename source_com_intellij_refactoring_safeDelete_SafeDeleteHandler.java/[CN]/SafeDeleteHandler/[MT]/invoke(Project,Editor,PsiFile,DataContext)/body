{
  PsiElement element=(PsiElement)dataContext.getData(DataConstants.PSI_ELEMENT);
  editor.getScrollingModel().scrollToCaret(ScrollType.MAKE_VISIBLE);
  if (element == null || !SafeDeleteProcessor.validElement(element)) {
    String message="Cannot perform the refactoring.\n" + "Safe delete is not supported in this context.";
    RefactoringMessageUtil.showErrorMessage(REFACTORING_NAME,message,null,project);
    return;
  }
  invoke(project,new PsiElement[]{element},dataContext);
}
