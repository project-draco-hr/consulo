{
  final String message=myAlwaysUseDefault && !myDetachIsDefault ? ExecutionBundle.message("terminate.process.confirmation.text",mySessionName) : ExecutionBundle.message("disconnect.process.confirmation.text",mySessionName);
  final JLabel label=new JLabel(message);
  final JPanel panel=new JPanel(new BorderLayout());
  panel.add(label,BorderLayout.CENTER);
  final Icon icon=UIUtil.getOptionPanelWarningIcon();
  if (icon != null) {
    label.setIcon(icon);
    label.setIconTextGap(ICON_TEXT_GAP);
  }
  return panel;
}
