{
  return new CvsLoginWorker(){
    public boolean promptForPassword(){
      return true;
    }
    public ThreeState silentLogin(    boolean forceCheck){
      VcsBalloonProblemNotifier.showOverChangesView(project,CvsBundle.message("message.error.invalid.cvs.root",getCvsRootAsString()),MessageType.ERROR);
      return ThreeState.NO;
    }
    public void goOffline(){
      setOffline(true);
    }
  }
;
}
