{
  if (project == null) {
    project=ProjectManager.getInstance().getDefaultProject();
  }
  final GradleApiFacade facade=myFacadeWrappers.get(project.getName());
  if (facade == null) {
    final GradleApiFacade newFacade=(GradleApiFacade)Proxy.newProxyInstance(GradleApiFacadeManager.class.getClassLoader(),new Class[]{GradleApiFacade.class},new MyHandler(project));
    myFacadeWrappers.putIfAbsent(project.getName(),newFacade);
  }
  return myFacadeWrappers.get(project.getName());
}
