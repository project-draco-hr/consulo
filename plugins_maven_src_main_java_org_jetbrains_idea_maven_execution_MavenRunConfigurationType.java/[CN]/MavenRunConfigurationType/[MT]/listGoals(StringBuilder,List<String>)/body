{
  int index=0;
  for (  String goal : goals) {
    if (index != 0) {
      if (stringBuilder.length() + goal.length() < MAX_NAME_LENGTH) {
        stringBuilder.append(",");
      }
 else {
        stringBuilder.append("...");
        break;
      }
    }
    stringBuilder.append(goal);
    index++;
  }
}
