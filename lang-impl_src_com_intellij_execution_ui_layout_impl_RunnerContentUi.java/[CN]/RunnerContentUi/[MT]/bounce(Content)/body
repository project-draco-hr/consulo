{
  final Grid grid=getGridFor(content,false);
  if (grid == null)   return;
  final GridCell cell=grid.findCell(content);
  if (cell == null)   return;
  final TabInfo tab=myTabs.findInfo(grid);
  if (tab == null)   return;
  if (getSelectedGrid() != grid) {
    tab.setAlertIcon(content.getAlertIcon());
    tab.fireAlert();
  }
 else {
    grid.alert(content);
  }
}
