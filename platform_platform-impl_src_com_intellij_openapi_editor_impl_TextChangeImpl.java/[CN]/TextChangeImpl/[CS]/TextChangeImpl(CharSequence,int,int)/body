{
  if (start < 0) {
    throw new IllegalArgumentException(String.format("Can't construct new %s object. Reason: given start index (%d) is negative. " + "End index: %d, text: '%s'",getClass().getName(),start,end,text));
  }
  if (end < start) {
    throw new IllegalArgumentException(String.format("Can't construct new %s object. Reason: given end index (%d) is less than " + "start index (%d). Text: '%s'",getClass().getName(),end,start,text));
  }
  myText.append(text);
  myStart=start;
  myEnd=end;
}
