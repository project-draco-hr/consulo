{
  final UsageViewPresentation presentation=new UsageViewPresentation();
  presentation.setCodeUsagesString(title);
  presentation.setTabName(title);
  presentation.setTabText(title);
  final UsageInfo[] usages=new UsageInfo[targets.length];
  for (int i=0; i < targets.length; i++) {
    usages[i]=new UsageInfo(targets[i]);
  }
  final UsageTarget[] usageTargets=sourceElement == null ? UsageTarget.EMPTY_ARRAY : new UsageTarget[]{new PsiElement2UsageTargetAdapter(sourceElement)};
  final Usage[] foundUsages=UsageInfoToUsageConverter.convert(new UsageInfoToUsageConverter.TargetElementsDescriptor(targets),usages);
  UsageViewManager.getInstance(project).showUsages(usageTargets,foundUsages,presentation);
}
