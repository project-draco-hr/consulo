{
  EntriesHandler entriesHandler=new EntriesHandler(dir);
  try {
    entriesHandler.read();
    return entriesHandler;
  }
 catch (  Exception ex) {
    final String entries=loadFrom(dir,ENTRIES,true);
    if (entries != null) {
      ApplicationManager.getApplication().invokeLater(new Runnable(){
        public void run(){
          Messages.showErrorDialog("Invalid CVS" + File.separatorChar + "Entries file for "+ dir.getAbsolutePath()+ " directory:\n"+ entries,"Invalid Entries");
        }
      }
);
    }
    return entriesHandler;
  }
}
