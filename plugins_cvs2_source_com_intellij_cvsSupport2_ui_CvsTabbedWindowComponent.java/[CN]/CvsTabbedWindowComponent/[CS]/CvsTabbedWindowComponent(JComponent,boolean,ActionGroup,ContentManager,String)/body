{
  super(new BorderLayout());
  myAddToolbar=addDefaultToolbar;
  myComponent=component;
  myContentManager=contentManager;
  myHelpId=helpId;
  add(myComponent,BorderLayout.CENTER);
  if (myAddToolbar) {
    DefaultActionGroup actionGroup=new DefaultActionGroup(null,false);
    actionGroup.add(new CloseAction());
    if (toolbarActions != null) {
      actionGroup.add(toolbarActions);
    }
    actionGroup.add(ActionManager.getInstance().getAction(IdeActions.ACTION_CONTEXT_HELP));
    add(ActionManager.getInstance().createActionToolbar("DefaultCvsComponentToolbar",actionGroup,false).getComponent(),BorderLayout.WEST);
  }
}
