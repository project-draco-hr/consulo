{
  final DefaultActionGroup dab=new DefaultActionGroup();
  if (myRootsUnderVcs.size() == 1) {
    dab.add(myDateOrder);
    dab.add(myTopoOrder);
    dab.add(new Separator());
  }
  dab.add(myMultiColorAction);
  dab.add(myCalmAction);
  dab.add(new Separator());
  dab.add(myRootsForTreeAction);
  return dab;
}
