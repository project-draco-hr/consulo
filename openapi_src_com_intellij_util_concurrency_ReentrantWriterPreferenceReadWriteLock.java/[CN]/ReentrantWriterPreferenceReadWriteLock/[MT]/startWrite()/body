{
  if (activeWriter_ == Thread.currentThread()) {
    ++writeHolds_;
    return true;
  }
 else   if (writeHolds_ == 0) {
    if (activeReaders_ == 0 || (readers_.size() == 1 && readers_.get(Thread.currentThread()) > 0)) {
      activeWriter_=Thread.currentThread();
      writeHolds_=1;
      return true;
    }
 else     return false;
  }
 else   return false;
}
