{
  final Runnable runnable=new Runnable(){
    public void run(){
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          if (!isDisplayable())           return;
          try {
            updateState();
          }
  finally {
            myAlarm.addRequest(this,1000);
          }
        }
      }
);
    }
  }
;
  myAlarm.addRequest(runnable,1000);
  super.addNotify();
}
