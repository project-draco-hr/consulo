{
  executeProcessUnderProgress(new Runnable(){
    public void run(){
synchronized (process) {
        process.notify();
      }
      try {
        if (progress != null && !progress.isRunning()) {
          progress.start();
        }
        process.run();
      }
  finally {
        if (progress != null && progress.isRunning()) {
          progress.stop();
          if (progress instanceof ProgressIndicatorEx) {
            ((ProgressIndicatorEx)progress).processFinish();
          }
        }
      }
    }
  }
,progress);
}
