{
  if (myUndoableGroup.getAffectedDocuments().size() < 2)   return true;
  String actionText=getActionName(myUndoableGroup.getCommandName());
  if (actionText.length() > 80) {
    actionText=actionText.substring(0,80) + "... ";
  }
  return Messages.showOkCancelDialog(myManager.getProject(),actionText + "?",getActionName(),Messages.getQuestionIcon()) == DialogWrapper.OK_EXIT_CODE;
}
