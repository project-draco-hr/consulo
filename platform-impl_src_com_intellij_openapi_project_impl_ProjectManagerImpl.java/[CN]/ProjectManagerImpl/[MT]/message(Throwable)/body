{
  String message=e.getMessage();
  if (message != null)   return message;
  message=e.getLocalizedMessage();
  if (message != null)   return message;
  message=e.toString();
  Throwable cause=e.getCause();
  if (cause != null) {
    String causeMessage=message(cause);
    return message + " (cause: " + causeMessage+ ")";
  }
  return message;
}
