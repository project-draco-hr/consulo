{
  final boolean isGestureAction=action instanceof KeyboardGestureAction;
  actionEvent.accept(new AnActionEventVisitor(){
    @Override public void visitGestureInitEvent(    final AnActionEvent anActionEvent){
      if (isGestureAction) {
        execute(anActionEvent,action,e);
      }
    }
    @Override public void visitGesturePerformedEvent(    final AnActionEvent anActionEvent){
      execute(anActionEvent,action,e);
    }
    @Override public void visitGestureFinishEvent(    final AnActionEvent anActionEvent){
      if (isGestureAction) {
        execute(anActionEvent,action,e);
      }
    }
  }
);
}
