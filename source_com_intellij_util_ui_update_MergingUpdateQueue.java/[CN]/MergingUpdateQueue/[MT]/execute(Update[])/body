{
  for (int i=0; i < update.length; i++) {
    final Update each=update[i];
    if (each.executeInWriteAction()) {
      ApplicationManager.getApplication().runWriteAction(new Runnable(){
        public void run(){
          each.run();
        }
      }
);
    }
 else {
      each.run();
    }
  }
}
