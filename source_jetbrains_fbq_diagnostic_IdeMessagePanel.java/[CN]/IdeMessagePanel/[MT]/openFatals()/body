{
  if (myDialog != null)   return;
  if (myOpeningInProgress)   return;
  myOpeningInProgress=true;
  new Thread(){
    public void run(){
      try {
        while (isOtherModalWindowActive()) {
          if (myDialog != null)           return;
          sleep(300);
        }
        _openFatals();
      }
 catch (      InterruptedException e) {
      }
 finally {
        myOpeningInProgress=false;
      }
    }
  }
.start();
}
