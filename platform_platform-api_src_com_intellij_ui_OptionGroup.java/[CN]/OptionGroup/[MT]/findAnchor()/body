{
  double maxWidth=-1;
  JComponent ans=null;
  for (  Object o : myOptions) {
    if (o instanceof Pair && ((Pair)o).getFirst() instanceof AnchorableComponent && ((JComponent)((Pair)o).getFirst()).getPreferredSize().getWidth() > maxWidth) {
      maxWidth=((JComponent)((Pair)o).getFirst()).getPreferredSize().getWidth();
      ans=(JComponent)((Pair)o).getFirst();
    }
  }
  return ans;
}
