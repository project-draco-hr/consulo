{
  if (myEffectiveBorder != null && myTabs.getTabsPosition() == myPosition)   return (Insets)myEffectiveBorder.clone();
  myPosition=myTabs.getTabsPosition();
  myEffectiveBorder=new Insets(myPosition == JBTabsPosition.top ? myTabBorderSize : myBorderSize.top,myPosition == JBTabsPosition.left ? myTabBorderSize : myBorderSize.left,myPosition == JBTabsPosition.bottom ? myTabBorderSize : myBorderSize.bottom,myPosition == JBTabsPosition.right ? myTabBorderSize : myBorderSize.right);
  return (Insets)myEffectiveBorder.clone();
}
