{
  Set<VirtualFile> roots=new HashSet<VirtualFile>();
  if (updateAllRoots) {
    for (    GitRepository repository : myRepositories) {
      roots.add(repository.getRoot());
    }
  }
 else {
    for (    GitRepository repository : rejectedPushesForCurrentBranch.keySet()) {
      roots.add(repository.getRoot());
    }
  }
  return roots;
}
