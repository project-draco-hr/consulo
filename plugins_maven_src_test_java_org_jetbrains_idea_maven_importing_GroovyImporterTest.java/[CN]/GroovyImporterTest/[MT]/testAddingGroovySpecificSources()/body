{
  createStdProjectFolders();
  createProjectSubDirs("src/main/groovy","src/test/groovy");
  importProject("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<build>"+ "  <plugins>"+ "    <plugin>"+ "      <groupId>org.codehaus.groovy.maven</groupId>"+ "      <artifactId>gmaven-plugin</artifactId>"+ "    </plugin>"+ "  </plugins>"+ "</build>");
  assertModules("project");
  assertSources("project","src/main/java","src/main/resources","src/main/groovy");
  assertTestSources("project","src/test/java","src/test/resources","src/test/groovy");
}
