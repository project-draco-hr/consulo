{
  VirtualFile dir=info.root;
  List<RootInfo> hierarchy=ContainerUtil.newArrayList();
  while (dir != null) {
    if (FileTypeManager.getInstance().isFileIgnored(dir)) {
      return null;
    }
    ContainerUtil.addIfNotNull(hierarchy,myRoots.get(dir));
    dir=dir.getParent();
  }
  return hierarchy;
}
