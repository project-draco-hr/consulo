{
  File lengthFile=getLengthFile();
  DataOutputStream stream=null;
  try {
    stream=new DataOutputStream(new FileOutputStream(lengthFile));
    stream.writeLong(len);
  }
 catch (  FileNotFoundException e) {
    LOG.error(e);
  }
catch (  IOException e) {
    LOG.error(e);
  }
 finally {
    if (stream != null) {
      try {
        stream.close();
      }
 catch (      IOException e) {
        LOG.error(e);
      }
    }
  }
}
