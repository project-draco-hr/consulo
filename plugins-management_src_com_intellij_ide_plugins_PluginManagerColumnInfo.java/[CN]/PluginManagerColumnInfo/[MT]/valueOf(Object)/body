{
  IdeaPluginDescriptor base=(IdeaPluginDescriptor)o;
  if (columnIdx == COLUMN_NAME)   return base.getName();
 else   if (columnIdx == COLUMN_DOWNLOADS) {
    return (o instanceof PluginNode) ? ((PluginNode)o).getDownloads() : ((IdeaPluginDescriptorImpl)o).getDownloads();
  }
  if (columnIdx == COLUMN_DATE) {
    long date=(o instanceof PluginNode) ? ((PluginNode)o).getDate() : ((IdeaPluginDescriptorImpl)o).getDate();
    if (date != Long.MIN_VALUE)     return DateFormat.getDateInstance(DateFormat.MEDIUM).format(new Date(date));
 else     return IdeBundle.message("plugin.info.not.available");
  }
 else   if (columnIdx == COLUMN_CATEGORY)   return base.getCategory();
 else   return "";
}
