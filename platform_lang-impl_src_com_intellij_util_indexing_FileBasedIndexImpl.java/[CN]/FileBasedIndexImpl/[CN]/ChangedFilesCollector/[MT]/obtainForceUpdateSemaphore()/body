{
  UpdateSemaphore newValue=null;
  while (true) {
    final UpdateSemaphore currentValue=myUpdateSemaphoreRef.get();
    if (currentValue != null) {
      return currentValue;
    }
    if (newValue == null) {
      newValue=new UpdateSemaphore();
    }
    if (myUpdateSemaphoreRef.compareAndSet(null,newValue)) {
      return newValue;
    }
  }
}
