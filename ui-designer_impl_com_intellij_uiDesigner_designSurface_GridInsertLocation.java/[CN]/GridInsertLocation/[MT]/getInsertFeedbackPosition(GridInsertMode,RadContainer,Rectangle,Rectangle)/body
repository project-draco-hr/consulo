{
  int[] vGridLines=container.getGridLayoutManager().getVerticalGridLines(container);
  int[] hGridLines=container.getGridLayoutManager().getHorizontalGridLines(container);
  int w=4;
switch (mode) {
case ColumnBefore:
    return new Rectangle(vGridLines[cellRect.x] - w,feedbackRect.y - INSERT_ARROW_SIZE,2 * w,feedbackRect.height + 2 * INSERT_ARROW_SIZE);
case ColumnAfter:
  return new Rectangle(vGridLines[cellRect.x + cellRect.width + 1] - w,feedbackRect.y - INSERT_ARROW_SIZE,2 * w,feedbackRect.height + 2 * INSERT_ARROW_SIZE);
case RowBefore:
return new Rectangle(feedbackRect.x - INSERT_ARROW_SIZE,hGridLines[cellRect.y] - w,feedbackRect.width + 2 * INSERT_ARROW_SIZE,2 * w);
case RowAfter:
return new Rectangle(feedbackRect.x - INSERT_ARROW_SIZE,hGridLines[cellRect.y + cellRect.height + 1] - w,feedbackRect.width + 2 * INSERT_ARROW_SIZE,2 * w);
default :
return feedbackRect;
}
}
