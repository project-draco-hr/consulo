{
  Breakpoint breakpoint=((ComboboxItem)value).getBreakpoint();
  final String text=breakpoint != null ? index == -1 ? breakpoint.getShortName() : breakpoint.getDisplayName() : DebuggerBundle.message("value.none");
  setText(text);
  final Icon icon;
  if (breakpoint != null) {
    icon=breakpoint instanceof BreakpointWithHighlighter ? breakpoint.ENABLED ? ((BreakpointWithHighlighter)breakpoint).getSetIcon(false) : ((BreakpointWithHighlighter)breakpoint).getDisabledIcon(false) : breakpoint.getIcon();
  }
 else {
    icon=null;
  }
  setIcon(icon);
}
