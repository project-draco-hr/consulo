{
  super.getListCellRendererComponent(list,value,index,isSelected,cellHasFocus);
  setPreferredSize(new Dimension(MAX_COMBO_WIDTH,getPreferredSize().height));
  Breakpoint breakpoint=((ComboboxItem)value).getBreakpoint();
  final String text=breakpoint != null ? breakpoint.getDisplayName() : DebuggerBundle.message("value.none");
  setText(text);
  final Icon icon;
  if (breakpoint != null) {
    icon=(breakpoint instanceof BreakpointWithHighlighter) ? breakpoint.ENABLED ? ((BreakpointWithHighlighter)breakpoint).getSetIcon(false) : ((BreakpointWithHighlighter)breakpoint).getDisabledIcon(false) : breakpoint.getIcon();
  }
 else {
    icon=null;
  }
  setIcon(icon);
  setDisabledIcon(icon);
  return this;
}
