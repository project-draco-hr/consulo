{
  boolean isEnabled=false;
  TreePath path=myTree.getSelectionPath();
  if (path != null) {
    Object o=path.getLastPathComponent();
    if (o instanceof DefaultMutableTreeNode && ((DefaultMutableTreeNode)o).getUserObject() instanceof ConfigurationType && ((DefaultMutableTreeNode)o).getParent() == myRoot) {
      isEnabled=true;
    }
  }
  e.getPresentation().setEnabled(isEnabled);
  e.getPresentation().setVisible(isEnabled);
}
