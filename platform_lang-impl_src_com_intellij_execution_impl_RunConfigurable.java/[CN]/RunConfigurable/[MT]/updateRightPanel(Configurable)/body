{
  myRightPanel.removeAll();
  mySelectedConfigurable=configurable;
  myRightPanel.add(configurable.createComponent(),BorderLayout.CENTER);
  if (configurable instanceof SingleConfigurationConfigurable) {
    RunManagerEx.getInstanceEx(myProject).invalidateConfigurationIcon((RunnerAndConfigurationSettings)((SingleConfigurationConfigurable)configurable).getSettings());
  }
  setupDialogBounds();
}
