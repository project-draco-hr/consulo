{
  final int size1=list1.size();
  final int size=size1 + list2.size();
  return new AbstractList<T>(){
    public T get(    int index){
      if (index < size1) {
        return list1.get(index);
      }
      return list2.get(index - size1);
    }
    public int size(){
      return size;
    }
  }
;
}
