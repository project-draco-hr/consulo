{
  int size=a.length;
  if (size < 2)   return;
  if (size == 2) {
    T t0=a[0];
    T t1=a[1];
    if (t0.compareTo(t1) > 0) {
      a[0]=t1;
      a[1]=t0;
    }
  }
 else   if (size < INSERTION_SORT_THRESHOLD) {
    for (int i=0; i < size; i++) {
      for (int j=0; j < i; j++) {
        T ti=a[i];
        T tj=a[j];
        if (ti.compareTo(tj) < 0) {
          a[i]=tj;
          a[j]=ti;
        }
      }
    }
  }
 else {
    Arrays.sort(a);
  }
}
