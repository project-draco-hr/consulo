{
  myBaseDirForLibrariesGetter=baseDirForLibrariesGetter;
  myProviders=providers;
  createNodes();
  final JPanel treePanel=new JPanel(new GridBagLayout());
  addSettingsComponents(myRoots,treePanel,0);
