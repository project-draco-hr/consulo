{
  if (buffer == null)   return true;
  if (!tryForce(buffer)) {
    return false;
  }
  return AccessController.doPrivileged(new PrivilegedAction<Object>(){
    public Object run(){
      try {
        Cleaner cleaner=((DirectBuffer)buffer).cleaner();
        if (cleaner != null)         cleaner.clean();
        return null;
      }
 catch (      Exception e) {
        return buffer;
      }
    }
  }
) == null;
}
