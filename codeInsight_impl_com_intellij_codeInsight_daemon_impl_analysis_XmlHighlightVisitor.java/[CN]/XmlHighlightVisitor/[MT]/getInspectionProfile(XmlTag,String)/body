{
  final PsiFile psiFile=tag.getContainingFile();
  InspectionProfile inspectionProfile=InspectionProjectProfileManager.getInstance(psiFile.getProject()).getInspectionProfile(psiFile);
  XmlEntitiesInspection inspection=(XmlEntitiesInspection)((LocalInspectionToolWrapper)inspectionProfile.getInspectionTool(inspectionName)).getTool();
  return inspection;
}
