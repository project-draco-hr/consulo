def _earlygetopt(aliases, args):
    'Return list of values for an option (or aliases).\n\n    The values are listed in the order they appear in args.\n    The options and values are removed from args.\n    '
    try:
        argcount = args.index('--')
    except ValueError:
        argcount = len(args)
    shortopts = [opt for opt in aliases if (len(opt) == 2)]
    values = []
    pos = 0
    while (pos < argcount):
        if (args[pos] in aliases):
            if ((pos + 1) >= argcount):
                break
            del args[pos]
            values.append(args.pop(pos))
            argcount -= 2
        elif (args[pos][:2] in shortopts):
            values.append(args.pop(pos)[2:])
            argcount -= 1
        else:
            pos += 1
    return values
