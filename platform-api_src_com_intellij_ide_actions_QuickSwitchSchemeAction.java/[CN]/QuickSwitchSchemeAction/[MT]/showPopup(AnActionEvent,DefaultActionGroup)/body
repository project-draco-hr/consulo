{
  if (group.getChildrenCount() == 0)   return;
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup(e.getPresentation().getText(),group,e.getDataContext(),JBPopupFactory.ActionSelectionAid.SPEEDSEARCH,true);
  popup.showCenteredInCurrentWindow(e.getData(PlatformDataKeys.PROJECT));
}
