{
  super.setUp();
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      try {
        LocalFileSystem fs=LocalFileSystem.getInstance();
        dir=fs.refreshAndFindFileByIoFile(createTempDirectory());
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
);
}
