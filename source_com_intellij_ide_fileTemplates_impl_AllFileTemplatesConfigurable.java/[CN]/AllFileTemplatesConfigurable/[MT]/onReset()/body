{
  FileTemplate selected=myCurrentTab.getSelectedTemplate();
  if (selected != null) {
    if (Messages.showOkCancelDialog("Reset to original template?","Reset Template",Messages.getQuestionIcon()) != DialogWrapper.OK_EXIT_CODE) {
      return;
    }
    FileTemplateImpl template=(FileTemplateImpl)selected;
    template.resetToDefault();
    myEditor.reset();
    myModified=true;
  }
}
