{
  super(project,editor,expr,localVariable,occurrences,typeSelectorManager,IntroduceConstantHandler.REFACTORING_NAME,parentClass,anchorElement,occurenceManager,anchorElementIfAll);
  myInitializerText=getExprText(expr,localVariable);
