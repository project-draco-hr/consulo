{
  if (jdk == null || DebuggerSettings.getInstance().DISABLE_JIT) {
    return true;
  }
  if (ApplicationManager.getApplication().isUnitTestMode()) {
    return true;
  }
  final String version=JdkUtil.getJdkMainAttribute(jdk,Attributes.Name.IMPLEMENTATION_VERSION);
  return version == null || version.startsWith("1.4") || version.startsWith("1.3") || version.startsWith("1.2") || version.startsWith("1.1") || version.startsWith("1.0");
}
