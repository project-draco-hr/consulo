{
  return showCheckboxMessageDialog(message,title,checkboxText,checked,defaultOptionIndex,focusedOptionIndex,icon,new PairFunction<Integer,JCheckBox,Integer>(){
    @Override public Integer fun(    final Integer exitCode,    final JCheckBox cb){
      return exitCode == -1 ? CANCEL : exitCode + (cb.isSelected() ? 1 : 0);
    }
  }
);
}
