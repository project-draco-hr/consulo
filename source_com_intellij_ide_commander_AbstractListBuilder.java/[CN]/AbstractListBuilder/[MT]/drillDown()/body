{
  final Object value=myList.getSelectedValue();
  if (value instanceof AbstractTreeNode) {
    try {
      final AbstractTreeNode node=(AbstractTreeNode)value;
      buildList(node);
      ListScrollingUtil.ensureSelectionExists(myList);
    }
  finally {
      updateParentTitle();
    }
  }
 else {
    goUp();
  }
}
