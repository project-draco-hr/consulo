{
  String[] command;
  try {
    String browserPath=GeneralSettings.getInstance().getBrowserPath();
    if (browserPath == null || browserPath.trim().length() == 0) {
      showErrorMessage(IdeBundle.message("error.please.specify.path.to.web.browser"),IdeBundle.message("title.browser.not.found"));
      return;
    }
    command=new String[]{browserPath};
  }
 catch (  NullPointerException e) {
    command=getDefaultBrowserCommand(null);
    if (command == null) {
      showErrorMessage(IdeBundle.message("error.please.open.url.manually",url,ApplicationNamesInfo.getInstance().getProductName()),IdeBundle.message("title.browser.path.not.found"));
      return;
    }
  }
  launchBrowser(url,command);
}
