{
  if (myRecreateMainLogHandler != null) {
    String message="Fatal error, VCS Log recreated: " + e.getMessage();
    if (isLogVisible()) {
      LOG.info(e);
      VcsBalloonProblemNotifier.showOverChangesView(myProject,message,MessageType.ERROR);
    }
 else {
      LOG.error(message,e);
    }
    myRecreateMainLogHandler.run();
  }
 else {
    LOG.error(e);
  }
}
