{
  if (watchRequests.isEmpty())   return;
  ApplicationManager.getApplication().runReadAction(new Runnable(){
    public void run(){
synchronized (myLock) {
        final boolean update=doRemoveWatchedRoots(watchRequests);
        if (update) {
          myNormalizedTree=null;
          setUpFileWatcher();
        }
      }
    }
  }
);
}
