{
  if (restructure) {
    final Collection<PomNode> allPomNodes=getAllPomNodes();
    for (    PomNode node : allPomNodes) {
      node.unlinkNested();
    }
    root.rebuild(allPomNodes);
  }
  treeBuilder.updateFromRoot(rebuild);
  if (rebuild) {
    tree.expandPath(new TreePath(tree.getModel().getRoot()));
  }
}
