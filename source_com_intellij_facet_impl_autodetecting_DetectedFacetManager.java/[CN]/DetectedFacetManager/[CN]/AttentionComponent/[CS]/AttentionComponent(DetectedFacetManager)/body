{
  myManager=manager;
  addMouseListener(new MouseAdapter(){
    public void mouseClicked(    final MouseEvent e){
      if (myActive && !e.isPopupTrigger() && myManager != null) {
        boolean valid=myManager.showImplicitFacetsDialog();
        if (!valid) {
          stopBlinking();
        }
      }
    }
  }
);
}
