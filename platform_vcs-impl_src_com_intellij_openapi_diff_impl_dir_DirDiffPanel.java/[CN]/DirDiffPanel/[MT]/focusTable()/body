{
  final IdeFocusManager focusManager=myModel.getProject().isDefault() ? IdeFocusManager.getGlobalInstance() : IdeFocusManager.getInstance(myModel.getProject());
  focusManager.doWhenFocusSettlesDown(new Runnable(){
    @Override public void run(){
      focusManager.requestFocus(myTable,true);
    }
  }
);
}
