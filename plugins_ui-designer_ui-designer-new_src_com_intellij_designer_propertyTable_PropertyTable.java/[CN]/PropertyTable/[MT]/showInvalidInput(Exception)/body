{
  Throwable cause=e.getCause();
  String message=cause == null ? e.getMessage() : cause.getMessage();
  if (cause == null) {
    e.printStackTrace();
  }
 else {
    cause.printStackTrace();
  }
  if (message == null || message.length() == 0) {
    message=DesignerBundle.message("designer.properties.no_message.error");
  }
  Messages.showMessageDialog(DesignerBundle.message("designer.properties.setting.error",message),DesignerBundle.message("designer.properties.invalid_input"),Messages.getErrorIcon());
}
