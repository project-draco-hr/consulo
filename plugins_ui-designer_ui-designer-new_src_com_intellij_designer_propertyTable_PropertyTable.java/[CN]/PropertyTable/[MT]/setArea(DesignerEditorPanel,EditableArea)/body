{
  myDesigner=designer;
  myInitialSelection=designer == null ? null : designer.getSelectionProperty();
  finishEditing();
  if (myArea != null) {
    myArea.removeSelectionListener(this);
  }
  myArea=area;
  if (myArea != null) {
    myArea.addSelectionListener(this);
  }
  updateProperties();
}
