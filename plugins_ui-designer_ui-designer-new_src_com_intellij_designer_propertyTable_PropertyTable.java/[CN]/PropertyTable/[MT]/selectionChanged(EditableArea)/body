{
  if (isEditing()) {
    cellEditor.stopCellEditing();
  }
  if (myArea == null) {
    myComponents=Collections.emptyList();
    myProperties=Collections.emptyList();
    myModel.fireTableDataChanged();
  }
 else {
    myComponents=new ArrayList<RadComponent>(myArea.getSelection());
    fillProperties();
    myModel.fireTableDataChanged();
  }
}
