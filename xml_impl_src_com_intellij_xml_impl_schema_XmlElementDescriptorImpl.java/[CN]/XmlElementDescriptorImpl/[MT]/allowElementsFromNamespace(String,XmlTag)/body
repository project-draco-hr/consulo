{
  final TypeDescriptor type=getType(context);
  if (type instanceof ComplexTypeDescriptor) {
    final ComplexTypeDescriptor typeDescriptor=(ComplexTypeDescriptor)type;
    return typeDescriptor.canContainTag("a",namespace,context) || typeDescriptor.getNsDescriptors().hasSubstitutions() || XmlUtil.nsFromTemplateFramework(namespace);
  }
  return false;
}
