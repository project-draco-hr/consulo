{
  PsiStatement statement=findStatement(flow,offset);
  if (statement != null) {
    if (classesFilter == null) {
      exitStatements.add(statement);
    }
 else {
      for (int i=0; i < classesFilter.length; i++) {
        if (classesFilter[i].isAssignableFrom(statement.getClass())) {
          exitStatements.add(statement);
          break;
        }
      }
    }
  }
}
