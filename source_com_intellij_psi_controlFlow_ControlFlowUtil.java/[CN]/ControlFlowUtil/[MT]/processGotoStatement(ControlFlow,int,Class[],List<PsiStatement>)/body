{
  PsiStatement statement=findStatement(flow,offset);
  if (statement != null) {
    if (classesFilter == null) {
      exitStatements.add(statement);
    }
 else {
      for (      Class aClassesFilter : classesFilter) {
        if (aClassesFilter.isAssignableFrom(statement.getClass())) {
          exitStatements.add(statement);
          break;
        }
      }
    }
  }
}
