{
  if (element == null)   return null;
  if (strict) {
    if (element instanceof PsiFile)     return null;
    element=element.getParent();
  }
  while (element != null && !aClass.isInstance(element)) {
    if (instanceOf(element,stopAt))     return null;
    if (element instanceof PsiFile)     return null;
    element=element.getParent();
  }
  return (T)element;
}
