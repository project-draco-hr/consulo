{
  super(CvsBundle.message("dialog.title.import.into.cvs"),project);
  ImportConfiguration importConfig=ImportConfiguration.getInstance();
  mySelectCVSConfigurationStep=new SelectCVSConfigurationStep(project,this);
  mySelectCvsElementStep=new SelectCvsElementStep(CvsBundle.message("dialog.title.select.directory.to.import.into"),this,project,mySelectCVSConfigurationStep,true,TreeSelectionModel.SINGLE_TREE_SELECTION,false,false);
  mySelectImportLocationStep=new SelectImportLocationStep(CvsBundle.message("dialog.title.select.import.directory"),this,project,selectedFile);
  myKeywordSubstitutionStep=new CustomizeKeywordSubstitutionStep(CvsBundle.message("dialog.title.customize.keyword.substitutions"),this,importConfig);
  mySettingsStep=new ImportSettingsStep(this,mySelectImportLocationStep,importConfig);
  addStep(mySelectCVSConfigurationStep);
  addStep(mySelectCvsElementStep);
  addStep(mySelectImportLocationStep);
  addStep(myKeywordSubstitutionStep);
  addStep(mySettingsStep);
  init();
}
