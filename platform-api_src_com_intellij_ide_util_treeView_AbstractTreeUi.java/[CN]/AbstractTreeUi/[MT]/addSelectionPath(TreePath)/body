{
  doWithUpdaterState(new Runnable(){
    public void run(){
      TreePath toSelect=null;
      if (isLoadingNode(path.getLastPathComponent())) {
        final TreePath parentPath=path.getParentPath();
        if (parentPath != null) {
          toSelect=parentPath;
        }
      }
 else {
        toSelect=path;
      }
      if (toSelect != null) {
        myTree.addSelectionPath(toSelect);
      }
    }
  }
);
}
