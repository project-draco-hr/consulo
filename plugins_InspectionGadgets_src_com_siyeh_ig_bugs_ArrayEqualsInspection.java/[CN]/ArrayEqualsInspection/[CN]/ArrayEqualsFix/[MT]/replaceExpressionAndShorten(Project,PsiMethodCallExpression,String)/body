{
  final PsiManager manager=PsiManager.getInstance(project);
  final PsiElementFactory factory=manager.getElementFactory();
  final PsiExpression newExp=factory.createExpressionFromText(newExpressionText,null);
  final PsiElement replacementExp=call.replace(newExp);
  final CodeStyleManager styleManager=manager.getCodeStyleManager();
  styleManager.shortenClassReferences(replacementExp);
  styleManager.reformat(replacementExp);
}
