{
  FontMetrics fm;
  if ((ta.getStyle() & SimpleTextAttributes.STYLE_BOLD) == SimpleTextAttributes.STYLE_BOLD) {
    if ((ta.getStyle() & SimpleTextAttributes.STYLE_ITALIC) == SimpleTextAttributes.STYLE_ITALIC) {
      fm=myBoldItalicsMetrics;
    }
 else {
      fm=myBoldMetrics;
    }
  }
 else {
    if ((ta.getStyle() & SimpleTextAttributes.STYLE_ITALIC) == SimpleTextAttributes.STYLE_ITALIC) {
      fm=myItalicsMetrics;
    }
 else {
      fm=myFontMetrics;
    }
  }
  return fm;
}
