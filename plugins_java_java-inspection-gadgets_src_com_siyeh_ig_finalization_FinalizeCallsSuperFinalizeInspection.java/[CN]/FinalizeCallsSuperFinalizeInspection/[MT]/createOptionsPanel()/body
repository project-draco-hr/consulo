{
  final MultipleCheckboxOptionsPanel optionsPanel=new MultipleCheckboxOptionsPanel(this);
  optionsPanel.addCheckbox(InspectionGadgetsBundle.message("finalize.doesnt.call.super.ignore.option"),"ignoreObjectSubclasses");
  optionsPanel.addCheckbox(InspectionGadgetsBundle.message("ignore.trivial.finalizers.option"),"ignoreTrivialFinalizers");
  return optionsPanel;
}
