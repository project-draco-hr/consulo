{
  Project project=context.getProject();
  if (CvsVcs2.getInstance(project).getEditOptions().getValue() || OptionsDialog.shiftIsPressed(context.getModifiers())) {
    EditOptionsDialog editOptionsDialog=new EditOptionsDialog(project);
    editOptionsDialog.show();
    if (!editOptionsDialog.isOK())     return CvsHandler.NULL;
  }
  return CommandCvsHandler.createEditHandler(context.getSelectedFiles(),CvsConfiguration.getInstance(project).RESERVED_EDIT);
}
