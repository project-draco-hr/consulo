{
  int start=off;
  int maxOffset=off + len;
  for (int i=off; i < maxOffset; i++) {
    if (b[i] == '\n') {
      if (myBuffer == null) {
        myBuffer=new StringBuilder();
      }
      myBuffer.append(new String(b,start,i - start + 1));
      doFlush();
      start=i + 1;
    }
  }
  if (start < maxOffset) {
    if (myBuffer == null) {
      myBuffer=new StringBuilder();
    }
    myBuffer.append(new String(b,start,maxOffset - start));
  }
}
