{
  super(fragment,viewer.getViewer().getEditors(),ComparisonPolicy.DEFAULT);
  myMergeViewer=viewer;
  myViewer=viewer.getViewer();
  myIndex=index;
  myFragment=fragment;
  myStartLine=myFragment.getStartLine(ThreeSide.BASE);
