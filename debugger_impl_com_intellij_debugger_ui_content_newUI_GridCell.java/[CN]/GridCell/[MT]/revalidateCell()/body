{
  if (myContents.size() == 0) {
    myPlaceholder.removeAll();
  }
 else {
    if (myPlaceholder.isNull()) {
      myPlaceholder.setContent(myTabs);
    }
    myTabs.removeAllTabs();
    for (    Content each : myContents) {
      myTabs.addTab(getTabInfoFor(each));
    }
  }
  restoreProportion();
  myTabs.revalidate();
  myTabs.repaint();
}
