{
  myContainer=container;
  myPlaceInGrid=placeInGrid;
  myPlaceholder=placeholder;
  myTabs=new JBTabs(project,container.myActionManager,container);
  myTabs.setUiDecorator(new JBTabs.UiDecorator(){
