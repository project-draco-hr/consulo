{
  if (!isOKActionEnabled())   return;
  if (!isValidCoordinateSelected()) {
    IdeFocusManager.findInstance().requestFocus(myCombobox,true);
    Messages.showErrorDialog("Please enter valid coordinate or select one from the list","Coordinate not specified");
    return;
  }
  if (!myManaged) {
    final File dir=new File(myDirectoryField.getText());
    if (!dir.exists() && !dir.mkdirs() || !dir.isDirectory()) {
      IdeFocusManager.findInstance().requestFocus(myDirectoryField.getChildComponent(),true);
      Messages.showErrorDialog("Please enter valid library files path","Library files path not specified");
      return;
    }
  }
  super.doOKAction();
}
