{
  if (row < getList().getWidgetCount()) {
    Widget widget=null;
    if (this.highlightRow >= 0 && getList().getWidgetCount() > this.highlightRow)     widget=getList().getWidget(this.highlightRow);
    if (widget != null)     widget.removeStyleName("selected-row");
    this.highlightRow=row;
    if (row >= 0) {
      widget=getList().getWidget(this.highlightRow);
      widget.addStyleName("selected-row");
    }
  }
}
