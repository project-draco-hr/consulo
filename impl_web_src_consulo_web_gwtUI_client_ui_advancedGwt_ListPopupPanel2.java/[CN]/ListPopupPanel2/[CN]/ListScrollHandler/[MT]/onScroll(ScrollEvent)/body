{
  if (isLazyRenderingEnabled() && !autoScrollingEnabled && getList().getOffsetHeight() - getScrollPanel().getScrollPosition() <= getScrollPanel().getOffsetHeight()) {
    int firstItemOnNextPage=getItemCount() - 1;
    fillList();
    if (firstItemOnNextPage >= 0 && firstItemOnNextPage < getItemCount()) {
      autoScrollingEnabled=true;
      ensureVisible(getItem(firstItemOnNextPage));
    }
  }
 else   autoScrollingEnabled=false;
}
