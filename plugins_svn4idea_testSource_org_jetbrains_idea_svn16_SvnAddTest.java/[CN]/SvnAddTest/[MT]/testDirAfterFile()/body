{
  disableSilentOperation(VcsConfiguration.StandardConfirmation.ADD);
  final VirtualFile dir=createDirInCommand(myWorkingCopyDir,"dir");
  final VirtualFile file=createFileInCommand(dir,"a.txt","content");
  final List<VirtualFile> files=new ArrayList<VirtualFile>();
  files.add(file);
  files.add(dir);
  final List<VcsException> errors=SvnVcs17.getInstance(myProject).getCheckinEnvironment().scheduleUnversionedFilesForAddition(files);
  Assert.assertEquals(0,errors.size());
}
