{
  if (!checkComment()) {
    return;
  }
  VcsConfiguration.getInstance(myProject).saveCommitMessage(getCommitMessage());
  try {
    saveState();
    runBeforeCommitHandlers(new Runnable(){
      public void run(){
        CommitChangeListDialog.super.doOKAction();
        doCommit();
      }
    }
);
  }
 catch (  InputException ex) {
    ex.show();
  }
}
