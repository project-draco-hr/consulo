{
  ((JTextField)getEditor().getEditorComponent()).addActionListener(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      if (isPopupVisible()) {
        ComboPopup popup=getPopup();
        if (popup != null) {
          setSelectedItem(popup.getList().getSelectedValue());
        }
      }
    }
  }
);
}
