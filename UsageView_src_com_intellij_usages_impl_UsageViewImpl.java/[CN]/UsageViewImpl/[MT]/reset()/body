{
  myUsageNodes.clear();
  myIsFirstVisibleUsageFound=false;
  if (!myPresentation.isDetachedMode()) {
    ((UsageViewTreeModelBuilder)myTree.getModel()).reset();
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        TreeUtil.expand(myTree,2);
      }
    }
);
  }
  myUsages.clear();
}
