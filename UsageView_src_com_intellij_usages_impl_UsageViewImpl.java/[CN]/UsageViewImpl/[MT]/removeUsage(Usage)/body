{
  final UsageNode node=myUsageNodes.remove(usage);
  if (node != NULL_NODE) {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        ((DefaultTreeModel)myTree.getModel()).removeNodeFromParent(node);
        ((GroupNode)myTree.getModel().getRoot()).removeUsage(node);
      }
    }
);
  }
}
