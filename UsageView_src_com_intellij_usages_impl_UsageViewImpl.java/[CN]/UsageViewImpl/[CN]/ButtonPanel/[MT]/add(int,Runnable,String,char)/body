{
  final JButton button=new JButton(text);
  button.setFocusable(false);
  button.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      runnable.run();
    }
  }
);
  button.setMnemonic(mnemonic);
  add(button,index);
  invalidate();
  if (getParent() != null) {
    getParent().validate();
  }
}
