{
  if (myDocument == null) {
    try {
      if (!myFile.exists() || myFile.length() == 0) {
        myDocument=new Document(new Element(myRootElementName));
      }
 else {
        myDocument=JDOMUtil.loadDocument(myFile);
      }
    }
 catch (    IOException e) {
      throw new StateStorageException(e);
    }
catch (    JDOMException e) {
      throw new StateStorageException(e);
    }
  }
  return myDocument;
}
