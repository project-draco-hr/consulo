{
  boolean ret=false;
  Iterator iter=myScopeClasses.iterator();
  while (iter.hasNext()) {
    final Class aClass=((Scope)iter.next()).myClass;
    if (aClass.isAssignableFrom(scopeClass)) {
      ret=true;
      break;
    }
  }
  if (ret) {
    iter=myScopeClassExceptions.iterator();
    while (iter.hasNext()) {
      final Class aClass=(Class)iter.next();
      if (aClass.isAssignableFrom(scopeClass)) {
        ret=false;
        break;
      }
    }
  }
  return ret;
}
