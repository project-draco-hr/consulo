{
  try {
    Collection<IndexingContext> contexts=myIndexer.getIndexingContexts().values();
    for (    IndexingContext c : new ArrayList<IndexingContext>(contexts)) {
      myIndexer.removeIndexingContext(c,false);
    }
    myContexts.clear();
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
