{
  final XmlDocument document=myFile.getDocument();
  if (document != null) {
    final XmlTag tag=document.getRootTag();
    if (tag != null) {
      if (tag.getTextLength() > 0 && ((DomElement)this).getRoot().getFileDescription().acceptsOtherRootTagNames())       return tag;
      if (myRootTagName.getXmlName().getLocalName().equals(tag.getLocalName()) && myRootTagName.isNamespaceAllowed(this,tag.getNamespace())) {
        return tag;
      }
    }
  }
  return null;
}
