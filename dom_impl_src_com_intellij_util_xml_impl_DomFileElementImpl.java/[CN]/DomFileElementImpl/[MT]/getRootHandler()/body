{
  r.lock();
  try {
    if (myRootHandler == null) {
      r.unlock();
      final XmlTag tag=getRootTag();
      w.lock();
      try {
        if (myRootHandler == null) {
          myRootHandler=new DomRootInvocationHandler(myRootElementClass,tag,this,myRootTagName);
        }
      }
  finally {
        r.lock();
        w.unlock();
      }
    }
    return myRootHandler;
  }
  finally {
    r.unlock();
  }
}
