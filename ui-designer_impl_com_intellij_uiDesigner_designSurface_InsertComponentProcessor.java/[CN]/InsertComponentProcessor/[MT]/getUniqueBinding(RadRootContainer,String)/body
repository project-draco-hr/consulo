{
  for (int i=0; true; i++) {
    final String nameCandidate=baseName + (i + 1);
    final String binding=CodeStyleManager.getInstance(root.getModule().getProject()).propertyNameToVariableName(nameCandidate,VariableKind.FIELD);
    if (!FormEditingUtil.bindingExists(root,binding)) {
      return binding;
    }
  }
}
