def limit_arglist(self, arglist, cmd, *args, **kwargs):
    limit = (self.getargmax() - len(self._cmdline(cmd, *args, **kwargs)))
    bytes = 0
    fl = []
    for fn in arglist:
        b = (len(fn) + 3)
        if (((bytes + b) < limit) or (len(fl) == 0)):
            fl.append(fn)
            bytes += b
        else:
            yield fl
            fl = [fn]
            bytes = b
    if fl:
        yield fl
