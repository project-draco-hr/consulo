{
  final PsiMethod containingMethod=PsiTreeUtil.getParentOfType(context,PsiMethod.class);
  if (TestUtils.isJUnit4TestMethod(containingMethod)) {
    final PsiReferenceExpression methodExpression=context.getMethodExpression();
    if (methodExpression.isQualified() || !ImportUtils.nameCanBeStaticallyImported("org.junit.Assert",memberName,context)) {
      out.append("org.junit.Assert.");
    }
 else {
      ImportUtils.addStaticImport("org.junit.Assert",memberName,context);
    }
  }
}
