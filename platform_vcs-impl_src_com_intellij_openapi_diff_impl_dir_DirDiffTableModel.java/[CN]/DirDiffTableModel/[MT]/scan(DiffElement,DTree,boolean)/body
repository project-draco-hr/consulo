{
  if (!myUpdating.get())   return;
  if (element.isContainer()) {
    try {
      text.set(prepareText(element.getPath()));
      for (      DiffElement child : element.getChildren()) {
        if (!myUpdating.get())         return;
        scan(child,root.addChild(child,source),source);
      }
    }
 catch (    IOException e) {
    }
  }
}
