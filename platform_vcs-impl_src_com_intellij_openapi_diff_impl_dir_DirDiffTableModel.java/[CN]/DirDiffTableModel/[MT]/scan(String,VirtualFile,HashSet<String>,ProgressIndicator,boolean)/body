{
  if (file.isDirectory()) {
    indicator.setText2(file.getPath());
    String p=isRoot ? "" : prefix + file.getName() + "/";
    if (!isRoot) {
      files.add(p);
    }
    for (    VirtualFile f : file.getChildren()) {
      scan(p,f,files,indicator,false);
    }
  }
 else {
    files.add(prefix + file.getName());
  }
}
