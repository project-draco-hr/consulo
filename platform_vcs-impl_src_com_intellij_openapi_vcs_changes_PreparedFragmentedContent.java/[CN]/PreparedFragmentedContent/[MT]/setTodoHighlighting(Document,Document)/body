{
  final List<Pair<TextRange,TextAttributes>> beforeTodoRanges=new TodoForRanges(myProject,myFileName,oldDocument.getText(),true,getBeforeFragments(),myFileType).execute();
  final List<Pair<TextRange,TextAttributes>> afterTodoRanges=new TodoForRanges(myProject,myFileName,document.getText(),false,getAfterFragments(),myFileType).execute();
  setBeforeTodoRanges(beforeTodoRanges);
  setAfterTodoRanges(afterTodoRanges);
}
