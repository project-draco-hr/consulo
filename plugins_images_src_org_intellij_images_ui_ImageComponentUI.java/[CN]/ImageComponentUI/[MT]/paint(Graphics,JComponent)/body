{
  ImageComponent ic=(ImageComponent)c;
  if (ic != null) {
    ImageDocument document=ic.getDocument();
    BufferedImage image=document.getValue();
    if (image != null) {
      if (ic.isTransparencyChessboardVisible()) {
        paintChessboard(g,ic);
      }
      paintImage(g,ic);
      if (ic.isGridVisible()) {
        paintGrid(g,ic);
      }
    }
  }
}
