{
  String target=getTargetName(location);
  if (target != null) {
    configuration.setScriptParameters(target);
    configuration.setName(configuration.getName() + "." + target);
  }
  final CompileStepBeforeRun.MakeBeforeRunTask runTask=RunManagerEx.getInstanceEx(file.getProject()).getBeforeRunTask(configuration,CompileStepBeforeRun.ID);
  if (runTask != null) {
    runTask.setEnabled(false);
  }
}
