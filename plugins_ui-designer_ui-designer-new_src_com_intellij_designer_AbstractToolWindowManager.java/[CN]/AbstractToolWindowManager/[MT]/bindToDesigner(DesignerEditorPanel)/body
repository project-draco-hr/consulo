{
  myWindowQueue.cancelAllUpdates();
  myWindowQueue.queue(new Update("update"){
    @Override public void run(){
      if (!myToolWindowReady || myToolWindowDisposed) {
        return;
      }
      if (myToolWindow == null) {
        if (designer == null) {
          return;
        }
        initToolWindow();
      }
      updateToolWindow(designer);
    }
  }
);
}
