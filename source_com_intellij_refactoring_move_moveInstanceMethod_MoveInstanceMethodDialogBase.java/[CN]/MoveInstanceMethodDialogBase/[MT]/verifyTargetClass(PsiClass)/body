{
  if (targetClass.isInterface()) {
    if (targetClass.getManager().getSearchHelper().findInheritors(targetClass,GlobalSearchScope.allScope(myProject),false).length == 0) {
      final String message=UsageViewUtil.getDescriptiveName(targetClass) + " is an interface. \n" + "that has no implementing classes.";
      Messages.showErrorDialog(myProject,message,myRefactoringName);
      return false;
    }
    final String message=UsageViewUtil.getDescriptiveName(targetClass) + " is an interface. \n" + "Method implementation will be added to all directly implementing classes.\n Proceed?";
    final int result=Messages.showYesNoDialog(myProject,message,myRefactoringName,Messages.getQuestionIcon());
    if (result != 0)     return false;
  }
  return true;
}
