{
  if (mySpeedSearch != null && mySpeedSearch.isPopupActive())   return;
switch (e.getKeyCode()) {
case VK_UP:
    goBack();
  break;
case VK_DOWN:
goForward();
break;
case VK_ESCAPE:
cancel();
break;
case VK_PAGE_DOWN:
ListScrollingUtil.movePageDown(getSelectedList());
break;
case VK_PAGE_UP:
ListScrollingUtil.movePageUp(getSelectedList());
break;
case VK_DELETE:
case VK_BACK_SPACE:
closeTabOrToolWindow();
break;
}
if (e.getKeyCode() == ALT_KEY) {
if (isFilesSelected()) {
goLeft();
}
 else {
goRight();
}
}
}
