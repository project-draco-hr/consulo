{
  if (toolwindows.isSelectionEmpty() && files.isSelectionEmpty()) {
    if (files.getModel().getSize() > 1) {
      files.setSelectedIndex(0);
      return files;
    }
 else {
      toolwindows.setSelectedIndex(0);
      return toolwindows;
    }
  }
 else {
    return toolwindows.isSelectionEmpty() ? files : toolwindows;
  }
}
