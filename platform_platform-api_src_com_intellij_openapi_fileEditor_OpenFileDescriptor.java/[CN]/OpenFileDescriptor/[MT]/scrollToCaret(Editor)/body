{
  final Project project=e.getProject();
  if (project != null) {
    IdeFocusManager.getInstance(project).doWhenFocusSettlesDown(new Runnable(){
      public void run(){
        e.getScrollingModel().scrollToCaret(ScrollType.CENTER);
      }
    }
);
  }
 else {
    e.getScrollingModel().scrollToCaret(ScrollType.CENTER);
  }
}
