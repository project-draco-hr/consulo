{
  myProject=project;
  myFile=file;
  myLine=line;
  myColumn=col;
  myOffset=offset;
  if (offset >= 0) {
    myRangeMarker=LazyRangeMarkerFactory.getInstance(project).createRangeMarker(file,offset);
  }
 else   if (line >= 0) {
    myRangeMarker=LazyRangeMarkerFactory.getInstance(project).createRangeMarker(file,line,Math.max(0,col));
  }
 else {
    myRangeMarker=null;
  }
}
