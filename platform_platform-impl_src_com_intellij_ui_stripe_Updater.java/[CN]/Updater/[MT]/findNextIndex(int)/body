{
  int count=myPainter.getErrorStripeCount();
  int foundIndex=-1;
  int foundLayer=0;
  if (0 <= current && current < count) {
    current++;
    for (int index=current; index < count; index++) {
      int layer=getLayer(index);
      if (layer > foundLayer) {
        foundIndex=index;
        foundLayer=layer;
      }
    }
    for (int index=0; index < current; index++) {
      int layer=getLayer(index);
      if (layer > foundLayer) {
        foundIndex=index;
        foundLayer=layer;
      }
    }
  }
 else {
    for (int index=0; index < count; index++) {
      int layer=getLayer(index);
      if (layer > foundLayer) {
        foundIndex=index;
        foundLayer=layer;
      }
    }
  }
  return foundIndex;
}
