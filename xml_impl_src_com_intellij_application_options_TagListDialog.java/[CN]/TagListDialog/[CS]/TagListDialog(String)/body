{
  super(true);
  myPanel=ToolbarDecorator.createDecorator(myList).setAddAction(new AnActionButtonRunnable(){
    @Override public void run(    AnActionButton button){
      final String tagName=Messages.showInputDialog(ApplicationBundle.message("editbox.enter.tag.name"),ApplicationBundle.message("title.tag.name"),Messages.getQuestionIcon());
      if (tagName != null) {
        while (myData.contains(tagName)) {
          myData.remove(tagName);
        }
        myData.add(tagName);
        updateData();
        myList.setSelectedIndex(myData.size() - 1);
      }
    }
  }
).setRemoveAction(new AnActionButtonRunnable(){
    @Override public void run(    AnActionButton button){
      int selectedIndex=myList.getSelectedIndex();
      if (selectedIndex >= 0) {
        myData.remove(selectedIndex);
        updateData();
        if (selectedIndex >= myData.size()) {
          selectedIndex-=1;
        }
        if (selectedIndex >= 0) {
          myList.setSelectedIndex(selectedIndex);
        }
      }
    }
  }
).disableUpDownActions().createPanel();
  setTitle(title);
  init();
}
