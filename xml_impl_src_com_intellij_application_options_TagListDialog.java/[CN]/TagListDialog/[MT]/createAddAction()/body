{
  return new IconWithTextAction(ApplicationBundle.message("action.add"),null,PlatformIcons.ADD_ICON){
    public void actionPerformed(    AnActionEvent e){
      final String tagName=Messages.showInputDialog(ApplicationBundle.message("editbox.enter.tag.name"),ApplicationBundle.message("title.tag.name"),Messages.getQuestionIcon());
      if (tagName != null) {
        while (myData.contains(tagName)) {
          myData.remove(tagName);
        }
        myData.add(tagName);
        updateData();
        myList.setSelectedIndex(myData.size() - 1);
      }
    }
  }
;
}
