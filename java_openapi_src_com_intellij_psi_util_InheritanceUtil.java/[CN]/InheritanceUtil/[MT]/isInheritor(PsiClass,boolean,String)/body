{
  if (psiClass == null) {
    return false;
  }
  final PsiClass base=JavaPsiFacade.getInstance(psiClass.getProject()).findClass(baseClassName,psiClass.getResolveScope());
  if (base == null) {
    return false;
  }
  return strict ? psiClass.isInheritor(base,true) : isInheritorOrSelf(psiClass,base,true);
}
