{
  if (component instanceof JComponent) {
    if (((JComponent)component).getBorder() == null) {
      ((JComponent)component).setBorder(new EmptyBorder(UIUtil.PANEL_SMALL_INSETS));
    }
 else {
      ((JComponent)component).setBorder(new CompoundBorder(new EmptyBorder(UIUtil.PANEL_SMALL_INSETS),((JComponent)component).getBorder()));
    }
  }
}
