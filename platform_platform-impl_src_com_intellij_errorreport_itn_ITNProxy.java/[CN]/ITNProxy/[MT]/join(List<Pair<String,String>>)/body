{
  StringBuilder buffer=new StringBuilder();
  for (  Pair<String,String> param : params) {
    if (StringUtil.isEmpty(param.first))     throw new IllegalArgumentException(param.toString());
    if (StringUtil.isNotEmpty(param.second))     buffer.append(param.first + "=" + URLEncoder.encode(param.second,ENCODING)+ POST_DELIMITER);
  }
  return buffer.toString().getBytes();
}
