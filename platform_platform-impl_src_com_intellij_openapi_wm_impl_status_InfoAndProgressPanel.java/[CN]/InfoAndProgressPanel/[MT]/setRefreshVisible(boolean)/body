{
  myRefreshAlarm.cancelAllRequests();
  myRefreshAlarm.addRequest(new Runnable(){
    @Override public void run(){
      if (visible) {
        myRefreshIcon.resume();
      }
 else {
        myRefreshIcon.suspend();
      }
      myRefreshIcon.revalidate();
      myRefreshIcon.repaint();
    }
  }
,visible ? 100 : 300);
}
