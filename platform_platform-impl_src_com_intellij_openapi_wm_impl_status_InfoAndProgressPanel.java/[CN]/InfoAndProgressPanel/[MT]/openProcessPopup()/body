{
synchronized (myOriginals) {
    if (myPopup.isShowing())     return;
    if (!myOriginals.isEmpty()) {
      myShouldClosePopupAndOnProcessFinish=true;
      buildInProcessCount();
    }
 else {
      myShouldClosePopupAndOnProcessFinish=false;
      restoreEmptyStatus();
    }
    myPopup.show();
  }
}
