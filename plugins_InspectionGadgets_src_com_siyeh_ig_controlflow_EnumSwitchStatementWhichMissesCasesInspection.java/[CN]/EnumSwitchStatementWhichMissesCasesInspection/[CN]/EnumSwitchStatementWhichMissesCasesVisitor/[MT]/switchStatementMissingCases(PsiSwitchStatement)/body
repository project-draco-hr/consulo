{
  final PsiExpression expression=statement.getExpression();
  if (expression == null) {
    return false;
  }
  final PsiType type=expression.getType();
  if (type == null || !(type instanceof PsiClassType)) {
    return false;
  }
  final PsiClassType classType=(PsiClassType)type;
  final PsiClass aClass=classType.resolve();
  if (aClass == null || !aClass.isEnum()) {
    return false;
  }
  final PsiCodeBlock body=statement.getBody();
  if (body == null) {
    return false;
  }
  final PsiStatement[] statements=body.getStatements();
  int numCases=0;
  for (  final PsiStatement child : statements) {
    if (child instanceof PsiSwitchLabelStatement) {
      final PsiSwitchLabelStatement switchLabelStatement=(PsiSwitchLabelStatement)child;
      if (!switchLabelStatement.isDefaultCase()) {
        numCases++;
      }
 else       if (ignoreSwitchStatementsWithDefault) {
        return false;
      }
    }
  }
  final PsiField[] fields=aClass.getFields();
  int numEnums=0;
  for (  final PsiField field : fields) {
    if (!(field instanceof PsiEnumConstant)) {
      continue;
    }
    numEnums++;
  }
  return numEnums != numCases;
}
