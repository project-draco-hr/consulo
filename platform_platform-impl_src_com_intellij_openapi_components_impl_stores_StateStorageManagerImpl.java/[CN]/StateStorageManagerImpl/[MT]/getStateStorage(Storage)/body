{
  String key=getStorageSpecId(storageSpec);
  myStorageLock.lock();
  try {
    StateStorage stateStorage=myStorages.get(key);
    if (stateStorage == null) {
      stateStorage=createStateStorage(storageSpec);
      putStorageToMap(key,stateStorage);
    }
    return stateStorage;
  }
  finally {
    myStorageLock.unlock();
  }
}
