{
  int groupNumber=1;
  group:   while (true) {
    @NonNls String suggestedName="buttonGroup" + groupNumber;
    SuggestedNameInfo nameInfo=JavaCodeStyleManager.getInstance(getProject()).suggestVariableName(VariableKind.FIELD,suggestedName,null,null);
    for (    RadButtonGroup group : myButtonGroups) {
      if (group.getName().equals(nameInfo.names[0])) {
        groupNumber++;
        continue group;
      }
    }
    return nameInfo.names[0];
  }
}
