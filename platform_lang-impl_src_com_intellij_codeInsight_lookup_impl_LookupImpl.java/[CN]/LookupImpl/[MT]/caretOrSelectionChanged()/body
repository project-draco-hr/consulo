{
  if (!myChangeGuard) {
    hide();
    return;
  }
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    @Override public void run(){
      if (!myProject.isDisposed() && !myEditor.isDisposed() && myShouldUpdateBounds) {
        myShouldUpdateBounds=false;
        refreshUi();
      }
    }
  }
);
}
