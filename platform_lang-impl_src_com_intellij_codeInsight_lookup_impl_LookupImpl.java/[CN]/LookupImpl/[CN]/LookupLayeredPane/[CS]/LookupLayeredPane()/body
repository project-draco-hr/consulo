{
  add(mainPanel,0,0);
  add(myIconPanel,42,0);
  add(mySortingLabel,10,0);
  addComponentListener(new ComponentAdapter(){
    @Override public void componentResized(    ComponentEvent e){
      mainPanel.setSize(getSize());
      mainPanel.validate();
      layoutStatusIcons();
      layoutHint();
      revalidate();
      repaint();
    }
  }
);
}
