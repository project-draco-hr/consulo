{
synchronized (myMap) {
    if (myAuthors.size() > ourMaxAuthorsCached) {
      final Iterator<Map.Entry<String,Long>> iterator=myAuthors.entrySet().iterator();
      int cnt=10;
      while (iterator.hasNext() && cnt > 0) {
        Map.Entry<String,Long> next=iterator.next();
        iterator.remove();
        --cnt;
      }
    }
    myAuthors.put(name,pk);
  }
}
