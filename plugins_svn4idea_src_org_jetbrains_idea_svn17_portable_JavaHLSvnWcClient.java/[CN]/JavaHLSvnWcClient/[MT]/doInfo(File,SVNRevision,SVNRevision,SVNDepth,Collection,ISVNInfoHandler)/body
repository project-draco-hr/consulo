{
  final SVNException[] exc=new SVNException[1];
  try {
    new SVNClient().info2(path.getPath(),RevisionConvertor.convert(revision),RevisionConvertor.convert(pegRevision),DepthConvertor.convert(depth),null,InfoCallbackConvertor.create(handler,new Consumer<SVNException>(){
      @Override public void consume(      SVNException e){
        exc[0]=e;
      }
    }
));
  }
 catch (  ClientException e) {
    throw ExceptionConvertor.convert(e);
  }
  if (exc[0] != null) {
    throw exc[0];
  }
}
