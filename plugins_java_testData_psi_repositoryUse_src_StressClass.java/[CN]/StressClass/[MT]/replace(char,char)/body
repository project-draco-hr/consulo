{
  if (oldChar != newChar) {
    int len=count;
    int i=-1;
    char[] val=value;
    int off=offset;
    while (++i < len) {
      if (val[off + i] == oldChar) {
        break;
      }
    }
    if (i < len) {
      char buf[]=new char[len];
      for (int j=0; j < i; j++) {
        buf[j]=val[off + j];
      }
      while (i < len) {
        char c=val[off + i];
        buf[i]=(c == oldChar) ? newChar : c;
        i++;
      }
      return new String(0,len,buf);
    }
  }
  return this;
}
