{
  if (myPluginManagerMain.isRequireShutdown()) {
    if (Messages.showYesNoDialog("You need to shut down " + ApplicationNamesInfo.getInstance().getProductName() + " to activate changes in plugins. Would you like do it now?","Plugins",Messages.getQuestionIcon()) == 0) {
      ApplicationManagerEx.getApplicationEx().exit(true);
    }
 else {
      myPluginManagerMain.ignoreChages();
    }
  }
}
