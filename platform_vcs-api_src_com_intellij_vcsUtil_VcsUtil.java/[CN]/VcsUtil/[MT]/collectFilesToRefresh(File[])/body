{
  final ArrayList<VirtualFile> result=new ArrayList<VirtualFile>();
  for (  File root : roots) {
    VirtualFile vFile=findFileFor(root);
    if (vFile != null) {
      result.add(vFile);
    }
 else {
      LOG.info("Failed to find VirtualFile for one of refresh roots: " + root.getAbsolutePath());
    }
  }
  return result;
}
