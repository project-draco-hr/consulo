{
  if (ApplicationManagerEx.getApplicationEx().isDoNotSave())   return;
  try {
    doSave();
  }
 catch (  IComponentStore.SaveCancelledException e) {
    LOG.info(e);
  }
catch (  PluginException e) {
    LOG.info(e);
    PluginManager.disablePlugin(e.getPluginId().getIdString());
    MessagesEx.error(this,"The plugin " + e.getPluginId() + " failed to save settings and has been disabled. Please restart "+ ApplicationNamesInfo.getInstance().getFullProductName());
  }
catch (  IOException e) {
    LOG.info(e);
    MessagesEx.error(this,ProjectBundle.message("project.save.error",e.getMessage())).showLater();
  }
}
