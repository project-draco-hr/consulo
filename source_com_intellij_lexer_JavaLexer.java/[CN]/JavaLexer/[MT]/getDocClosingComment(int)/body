{
  final int lBufferEnd=myBufferEndOffset;
  final CharSequence lBuffer=myBuffer;
  if (offset < lBufferEnd && lBuffer.charAt(offset) == '/')   return offset + 1;
  int pos=offset;
  while (pos < lBufferEnd - 1 && (lBuffer.charAt(pos) != '*' || lBuffer.charAt(pos + 1) != '/')) {
    pos++;
  }
  return pos + 2;
}
