{
  return new HgGlobalCommandBuilder(){
    public HgGlobalCommand build(    Collection<VirtualFile> repos){
      HgSwitchDialog dialog=new HgSwitchDialog(project);
      dialog.setRoots(repos);
      dialog.show();
      if (dialog.isOK()) {
        return buildCommand(dialog,project);
      }
      return null;
    }
  }
;
}
