{
  for (int i=0; i < exts.length; i++) {
    PsiClass extendee=exts[i].resolve();
    if (extendee != null) {
      Pair<T,InheritDocProvider<T>> tag=searchDocTagInOverridenMethod(method,extendee,loc);
      if (tag != null) {
        return tag;
      }
      if (deep) {
        tag=findInheritDocTagInClass(method,extendee,loc);
        if (tag != null) {
          return tag;
        }
      }
    }
  }
  return null;
}
