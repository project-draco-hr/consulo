{
  Document document=myEditor.getDocument();
  LogicalPosition position;
  int offset=descriptor.getOffset();
  if (offset < 0)   position=new LogicalPosition(Math.min(document.getLineCount() - 1,descriptor.getLine()),descriptor.getColumn());
 else   position=myEditor.offsetToLogicalPosition(Math.min(document.getTextLength(),offset));
  myEditor.getCaretModel().moveToLogicalPosition(position);
  myEditor.getScrollingModel().scrollToCaret(ScrollType.CENTER);
}
