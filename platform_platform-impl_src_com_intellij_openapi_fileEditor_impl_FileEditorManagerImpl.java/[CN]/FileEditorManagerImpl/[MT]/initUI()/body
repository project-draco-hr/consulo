{
  if (myPanels == null) {
synchronized (myInitLock) {
      if (myPanels == null) {
        myPanels=new JPanel(new BorderLayout());
        myPanels.setBorder(new EmptyBorder(1,0,0,0));
        mySplitters=new EditorsSplitters(this);
        myPanels.add(mySplitters,BorderLayout.CENTER);
      }
    }
  }
}
