{
  Set<EditorsSplitters> target=new HashSet<EditorsSplitters>();
  if (splitters == null) {
    target.addAll(getAllSplitters());
  }
 else {
    target.add(splitters);
  }
  for (  EditorsSplitters each : target) {
    each.myInsideChange++;
    try {
      change.run(each);
    }
  finally {
      each.myInsideChange--;
    }
  }
}
