{
  myParentNode=parentNode;
  myModalityState=modalityState;
  myProject=project;
  addListener(this);
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    @Override public void run(){
      mySelectionPath=myTree.getSelectionPath();
      if (mySelectionPath == null) {
        selectRoot();
        mySelectionPath=myTree.getSelectionPath();
      }
    }
  }
,myModalityState);
}
