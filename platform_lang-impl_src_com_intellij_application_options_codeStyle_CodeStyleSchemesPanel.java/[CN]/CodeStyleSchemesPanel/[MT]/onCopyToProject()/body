{
  myModel.copyToProject(getSelectedScheme());
  int switchToProject=Messages.showYesNoDialog("Scheme '" + getSelectedScheme().getName() + "' was copied to be used as the project scheme.\n"+ "Switch to this created scheme?","Copy Scheme to Project",Messages.getQuestionIcon());
  if (switchToProject == 0) {
    myModel.setUsePerProjectSettings(true);
  }
}
