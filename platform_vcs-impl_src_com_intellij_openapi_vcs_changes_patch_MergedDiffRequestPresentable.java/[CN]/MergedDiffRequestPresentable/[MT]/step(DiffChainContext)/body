{
  if (myTexts.getBase() == null) {
    final SimpleDiffRequest badDiffRequest=ApplyPatchAction.createBadDiffRequest(myProject,myFile,myTexts,true);
    return new MyResult(badDiffRequest,DiffPresentationReturnValue.useRequest);
  }
  final MergeRequest request=DiffRequestFactory.getInstance().create3WayDiffRequest(myTexts.getLocal().toString(),myTexts.getPatched(),myTexts.getBase().toString(),myProject,null,null);
  request.setWindowTitle(VcsBundle.message("patch.apply.conflict.title",myFile.getPresentableUrl()));
  request.setVersionTitles(new String[]{"Current Version","Base Version",myAfterTitle});
  return new MyResult(request,DiffPresentationReturnValue.useRequest);
}
