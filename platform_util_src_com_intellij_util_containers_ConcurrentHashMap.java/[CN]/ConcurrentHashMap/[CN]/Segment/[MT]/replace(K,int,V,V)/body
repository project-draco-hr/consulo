{
  lock();
  try {
    HashEntry<K,V> e=getFirst(hash);
    while (e != null && (e.hash != hash || !myHashingStrategy.equals(key,e.key)))     e=e.next;
    boolean replaced=false;
    if (e != null && oldValue.equals(e.value)) {
      replaced=true;
      e.value=newValue;
    }
    return replaced;
  }
  finally {
    unlock();
  }
}
