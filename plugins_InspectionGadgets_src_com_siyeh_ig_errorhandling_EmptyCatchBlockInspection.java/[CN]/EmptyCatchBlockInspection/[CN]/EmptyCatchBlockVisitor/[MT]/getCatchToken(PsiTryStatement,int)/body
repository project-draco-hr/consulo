{
  final PsiElement[] children=statement.getChildren();
  int catchNumber=0;
  for (int j=0; j < children.length; j++) {
    final PsiElement child=children[j];
    final String childText=child.getText();
    if ("catch".equals(childText)) {
      if (catchNumber == i) {
        return child;
      }
      catchNumber++;
    }
  }
  return null;
}
