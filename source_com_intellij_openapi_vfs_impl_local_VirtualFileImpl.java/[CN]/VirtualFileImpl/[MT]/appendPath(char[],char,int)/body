{
  String name=myName;
  if (myParent != null)   currentLength=myParent.appendPath(buffer,separatorChar,0);
 else   name=name.replace('/',separatorChar);
  if (currentLength > 0 && buffer[currentLength - 1] != separatorChar)   buffer[currentLength++]=separatorChar;
  final int nameLength=name.length();
  name.getChars(0,nameLength,buffer,currentLength);
  return currentLength + nameLength;
}
