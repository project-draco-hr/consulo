{
  ApplicationManager.getApplication().assertIsDispatchThread();
  RangeHighlighterImpl highlighter=new RangeHighlighterImpl(this,startOffset,endOffset,layer,HighlighterTargetArea.LINES_IN_RANGE,textAttributes,false);
  myHighlighters.add(highlighter);
  myCachedHighlighters=null;
  myHighlighterList.addSegmentHighlighter(highlighter);
  fireSegmentHighlighterChanged(highlighter);
  return highlighter;
}
