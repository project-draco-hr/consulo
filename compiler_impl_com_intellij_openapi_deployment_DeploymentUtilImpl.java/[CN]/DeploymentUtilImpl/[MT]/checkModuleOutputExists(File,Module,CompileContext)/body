{
  if (outputPath == null || !outputPath.exists()) {
    String moduleName=ModuleUtil.getModuleNameInReadAction(sourceModule);
    final String message=CompilerBundle.message("message.text.directory.not.found.please.recompile",outputPath == null ? moduleName : FileUtil.toSystemDependentName(outputPath.getPath()),moduleName);
    context.addMessage(CompilerMessageCategory.ERROR,message,null,-1,-1);
    return false;
  }
  return true;
}
