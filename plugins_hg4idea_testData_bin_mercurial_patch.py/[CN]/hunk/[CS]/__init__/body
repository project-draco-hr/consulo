def __init__(self, desc, num, lr, context, create=False, remove=False):
    self.number = num
    self.desc = desc
    self.hunk = [desc]
    self.a = []
    self.b = []
    self.starta = self.lena = None
    self.startb = self.lenb = None
    if (lr is not None):
        if context:
            self.read_context_hunk(lr)
        else:
            self.read_unified_hunk(lr)
    self.create = create
    self.remove = (remove and (not create))
