{
  response.setHeader(CONTENT_TYPE,"text/html");
  addServer(response);
  addDate(response);
  String message=response.getStatus().toString();
  response.setContent(ChannelBuffers.copiedBuffer("<!doctype html><title>" + message + "</title>"+ "<h1 style=\"text-align: center\">"+ message+ "</h1><hr/><p style=\"text-align: center\">"+ SERVER_HEADER_VALUE+ "</p>",CharsetUtil.US_ASCII));
  send(response,request,context);
}
