{
  int low=0;
  int high=array.length - 1;
  while (low <= high) {
    int mid=low + high >>> 1;
    int cmp=-compareNames(VfsData.getNameByFileId(array[mid]),name,ignoreCase);
    if (cmp > 0)     low=mid + 1;
 else     if (cmp < 0)     high=mid - 1;
 else     return mid;
  }
  return -(low + 1);
}
