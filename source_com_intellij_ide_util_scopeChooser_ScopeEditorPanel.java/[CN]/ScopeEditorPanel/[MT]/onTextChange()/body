{
  if (!myIsInUpdate) {
    myUpdateAlarm.cancelAllRequests();
    myCurrentScope=null;
    try {
      myCurrentScope=PackageSetFactory.getInstance().compile(myPatternField.getText());
      myErrorMessage=null;
      myTextChanged=true;
      rebuild(false);
    }
 catch (    Exception e) {
      myErrorMessage=e.getMessage();
      showErrorMessage();
    }
  }
 else {
    myErrorMessage=null;
  }
}
