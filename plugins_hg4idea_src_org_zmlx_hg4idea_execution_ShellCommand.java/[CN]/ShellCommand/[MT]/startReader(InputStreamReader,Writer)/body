{
  Thread readingThread=new Thread(new Runnable(){
    public void run(){
      char[] buffer=new char[BUFFER_SIZE];
      int count;
      try {
        while ((count=in.read(buffer)) > 0) {
          writer.write(buffer,0,count);
        }
        writer.flush();
      }
 catch (      IOException e) {
        LOG.info(e.getMessage());
      }
 finally {
        try {
          in.close();
        }
 catch (        IOException e) {
        }
      }
    }
  }
);
  readingThread.start();
  return readingThread;
}
