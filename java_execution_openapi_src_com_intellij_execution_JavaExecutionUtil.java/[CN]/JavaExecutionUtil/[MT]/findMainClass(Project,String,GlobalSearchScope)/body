{
  final PsiManager psiManager=PsiManager.getInstance(project);
  final String shortName=StringUtil.getShortName(mainClassName);
  final String packageName=StringUtil.getPackageName(mainClassName);
  return JavaPsiFacade.getInstance(psiManager.getProject()).findClass(StringUtil.getQualifiedName(packageName,shortName.replace('$','.')),scope);
}
