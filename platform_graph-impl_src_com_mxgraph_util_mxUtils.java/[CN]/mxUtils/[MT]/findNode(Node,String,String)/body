{
  String tmp=(node instanceof Element) ? ((Element)node).getAttribute(attr) : null;
  if (tmp != null && tmp.equals(value)) {
    return node;
  }
  node=node.getFirstChild();
  while (node != null) {
    Node result=findNode(node,attr,value);
    if (result != null) {
      return result;
    }
    node=node.getNextSibling();
  }
  return null;
}
