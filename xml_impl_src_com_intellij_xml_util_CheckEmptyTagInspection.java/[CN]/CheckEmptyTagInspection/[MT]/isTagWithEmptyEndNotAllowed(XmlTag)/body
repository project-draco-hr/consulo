{
  String tagName=tag.getName();
  if (tag instanceof HtmlTag)   tagName=tagName.toLowerCase();
  Language language=tag.getLanguage();
  return ourTagsWithEmptyEndsNotAllowed.contains(tagName) && language != XMLLanguage.INSTANCE || language == HTMLLanguage.INSTANCE && !HtmlUtil.isSingleHtmlTagL(tagName) && tagName.indexOf(':') == -1;
}
