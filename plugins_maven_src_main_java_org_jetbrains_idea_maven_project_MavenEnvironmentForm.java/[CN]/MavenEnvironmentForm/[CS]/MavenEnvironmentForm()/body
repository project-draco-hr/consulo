{
  DocumentAdapter listener=new DocumentAdapter(){
    @Override protected void textChanged(    DocumentEvent e){
      myUpdateAlarm.cancelAllRequests();
      myUpdateAlarm.addRequest(new Runnable(){
        @Override public void run(){
          mavenHomeOverrider.updateDefault();
          userSettingsFileOverrider.updateDefault();
          localRepositoryOverrider.updateDefault();
        }
      }
,100);
    }
  }
;
  mavenHomeOverrider=new PathOverrider(mavenHomeComponent,mavenHomeOverrideCheckBox,listener,new PathProvider(){
    @Nullable protected File getFile(){
      return MavenUtil.resolveMavenHomeDirectory("");
    }
  }
);
  userSettingsFileOverrider=new PathOverrider(settingsFileComponent,settingsOverrideCheckBox,listener,new PathProvider(){
    @Nullable protected File getFile(){
      return MavenUtil.resolveUserSettingsFile("");
    }
  }
);
  localRepositoryOverrider=new PathOverrider(localRepositoryComponent,localRepositoryOverrideCheckBox,listener,new PathProvider(){
    @Nullable protected File getFile(){
      return MavenUtil.resolveLocalRepository("",mavenHomeComponent.getComponent().getText(),settingsFileComponent.getComponent().getText());
    }
  }
);
}
