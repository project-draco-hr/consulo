def listexts(header, exts, maxlength, indent=1):
    'return a text listing of the given extensions'
    if (not exts):
        return ''
    result = ('\n%s\n\n' % header)
    for (name, desc) in sorted(exts.iteritems()):
        result += ('%s%-*s %s\n' % ((' ' * indent), (maxlength + 2), (':%s:' % name), desc))
    return result
