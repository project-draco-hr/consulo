{
  if (result.contains(pass))   return;
  for (  int id : pass.getCompletionPredecessorIds()) {
    TextEditorHighlightingPass pred=id2Pass.get(id);
    if (pred != null) {
      layout(pred,result,id2Pass);
    }
  }
  for (  int id : pass.getStartingPredecessorIds()) {
    TextEditorHighlightingPass pred=id2Pass.get(id);
    if (pred != null) {
      layout(pred,result,id2Pass);
    }
  }
  result.add(pass);
}
