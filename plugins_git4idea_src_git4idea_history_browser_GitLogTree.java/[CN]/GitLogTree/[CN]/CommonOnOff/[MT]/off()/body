{
  if (!isOn())   return;
  if (myIsFirst) {
    myFiltersSplitter.setFirstComponent(null);
  }
 else {
    myFiltersSplitter.setSecondComponent(null);
  }
  myFiltersSplitter.doLayout();
  myState=false;
  if (!myPeer.isOn()) {
    myMainSplitter.setFirstComponent(null);
    myMainSplitter.doLayout();
  }
}
