{
  if (value > ((yDim * xDim) - 1) || xDim < 0 || yDim < 0 || value < 0) {
    throw new IllegalArgumentException();
  }
  int yCoord=(int)Math.floor(value / xDim);
  int xCoord=(value - yCoord * xDim) + 1;
  yCoord+=1;
  int[] coords=new int[2];
  coords[0]=xCoord;
  coords[1]=yCoord;
  return coords;
}
