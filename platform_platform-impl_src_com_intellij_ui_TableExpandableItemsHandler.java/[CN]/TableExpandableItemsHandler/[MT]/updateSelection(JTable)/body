{
  boolean hasSingleSelection=table.getSelectedRowCount() == 1 && table.convertRowIndexToModel(table.getSelectedRow()) < table.getModel().getRowCount();
  int row=hasSingleSelection ? table.getSelectedRow() : -1;
  int column=table.getSelectedColumnCount() == 1 ? table.getSelectedColumn() : -1;
  handleSelectionChange((row == -1 || column == -1) ? null : new TableCell(row,column));
}
