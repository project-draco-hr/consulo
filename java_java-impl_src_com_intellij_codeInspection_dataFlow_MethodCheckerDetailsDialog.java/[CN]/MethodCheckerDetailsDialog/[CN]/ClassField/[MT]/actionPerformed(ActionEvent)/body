{
  final TreeClassChooser chooser=TreeClassChooserFactory.getInstance(myProject).createNoInnerClassesScopeChooser("Choose Class",new EverythingGlobalScope(myProject),new ClassFilter(){
    @Override public boolean isAccepted(    PsiClass aClass){
      return !aClass.isAnnotationType();
    }
  }
,null);
  chooser.showDialog();
  PsiClass psiClass=chooser.getSelected();
  if (psiClass != null)   setText(chooser.getSelected().getQualifiedName());
}
