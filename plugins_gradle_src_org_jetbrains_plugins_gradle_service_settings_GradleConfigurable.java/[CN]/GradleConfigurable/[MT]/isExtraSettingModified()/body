{
  Project project=getProject();
  if (project == null) {
    return false;
  }
  GradleSettings settings=getSettings(project);
  if (myUseWrapperButton.isEnabled() && settings.isPreferLocalInstallationToWrapper() != myUseLocalDistributionButton.isSelected()) {
    return true;
  }
  if (myGradleHomeModifiedByUser && !Comparing.equal(normalizePath(myGradleHomePathField.getText()),normalizePath(settings.getGradleHome()))) {
    return true;
  }
  if (myServiceDirectoryModifiedByUser && !Comparing.equal(normalizePath(myServiceDirectoryPathField.getText()),normalizePath(settings.getServiceDirectoryPath()))) {
    return true;
  }
  return false;
}
