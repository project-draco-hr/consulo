{
  updateChangedFiles();
  if (myAllFiles == null) {
    myAllFiles=new HashSet<VirtualFile>();
    for (    Collection<VirtualFile> vFiles : myPropertiesMap.values()) {
      for (      VirtualFile vFile : vFiles) {
        if (vFile.isValid()) {
          myAllFiles.add(vFile);
        }
      }
    }
  }
}
