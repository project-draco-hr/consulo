{
  int count=getCount();
  int dirCount=getDirectoryCount();
  String result="";
  if (dirCount != 0 || count != 0) {
    result=spaceAndThinSpace() + (dirCount == 0 ? VcsBundle.message("changes.nodetitle.changecount",count) : count == 0 ? VcsBundle.message("changes.nodetitle.directory.changecount",dirCount) : VcsBundle.message("changes.nodetitle.directory.file.changecount",dirCount,count));
  }
  return result;
}
