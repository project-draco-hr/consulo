{
  if (icon == null) {
    return myEmptyIcon;
  }
  if (icon.getIconWidth() < myEmptyIcon.getIconWidth()) {
    final RowIcon rowIcon=new RowIcon(2);
    rowIcon.setIcon(icon,0);
    rowIcon.setIcon(new EmptyIcon(myEmptyIcon.getIconWidth() - icon.getIconWidth()),1);
    return rowIcon;
  }
  return icon;
}
