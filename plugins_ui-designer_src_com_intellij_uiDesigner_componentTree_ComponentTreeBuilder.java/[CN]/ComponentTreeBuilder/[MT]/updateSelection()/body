{
  final PropertyInspector propertyInspector=UIDesignerToolWindowManager.getInstance(myEditor.getProject()).getPropertyInspector();
  if (propertyInspector.isEditing()) {
    propertyInspector.stopEditing();
  }
  if (myInsideChange > 0) {
    return;
  }
  myInsideChange++;
  try {
    updateFromRoot();
    syncSelection();
  }
  finally {
    myInsideChange--;
  }
}
