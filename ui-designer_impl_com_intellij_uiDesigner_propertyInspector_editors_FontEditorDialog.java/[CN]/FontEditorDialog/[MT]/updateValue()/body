{
  final int fontSize=((Integer)myFontSizeEdit.getValue()).intValue();
  myValue=new FontDescriptor(myFontNameCheckbox.isSelected() ? (String)myFontNameList.getSelectedValue() : null,myFontStyleCheckbox.isSelected() ? myFontStyleList.getSelectedIndex() : -1,myFontSizeCheckbox.isSelected() ? fontSize : -1);
