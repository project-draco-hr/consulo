{
  if (SystemInfo.isMac) {
    return 1.0f;
  }
  if (SystemProperties.has("hidpi") && !SystemProperties.is("hidpi")) {
    return 1.0f;
  }
  final int dpi=getSystemDPI();
  if (dpi <= 96)   return 1.0f;
  if (dpi <= 120)   return 1.25f;
  if (dpi <= 144)   return 1.5f;
  if (dpi <= 168)   return 1.75f;
  return 2.0f;
}
