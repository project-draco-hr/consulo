{
  DaemonCodeAnalyzerImpl codeHighlighter=(DaemonCodeAnalyzerImpl)DaemonCodeAnalyzer.getInstance(project);
  String message=codeHighlighter.isErrorAnalyzingFinished(file) ? InspectionsBundle.message("no.errors.found.in.this.file") : InspectionsBundle.message("error.analysis.is.in.progress");
  HintManager.getInstance().showInformationHint(editor,message);
}
