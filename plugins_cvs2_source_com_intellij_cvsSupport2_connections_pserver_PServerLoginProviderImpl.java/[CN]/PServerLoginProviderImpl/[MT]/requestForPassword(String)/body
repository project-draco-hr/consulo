{
  PasswordPromptDialog passwordDialog=new PasswordPromptDialog(com.intellij.CvsBundle.message("propmt.text.enter.password.for.cvs.root",cvsroot),com.intellij.CvsBundle.message("propmt.title.enter.password.for.cvs.root"),null);
  passwordDialog.show();
  if (!passwordDialog.isOK())   return null;
  return PServerPasswordScrambler.getInstance().scramble(passwordDialog.getPassword());
}
