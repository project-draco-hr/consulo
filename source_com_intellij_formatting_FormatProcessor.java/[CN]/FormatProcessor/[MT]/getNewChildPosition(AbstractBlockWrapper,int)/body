{
  final List<Block> subBlocks=parent.getBlock().getSubBlocks();
  if (subBlocks != null) {
    for (int i=0; i < subBlocks.size(); i++) {
      Block block=subBlocks.get(i);
      if (myInfos.get(block).getTextRange().getStartOffset() >= offset)       return i;
    }
    return subBlocks.size();
  }
 else {
    return 0;
  }
}
