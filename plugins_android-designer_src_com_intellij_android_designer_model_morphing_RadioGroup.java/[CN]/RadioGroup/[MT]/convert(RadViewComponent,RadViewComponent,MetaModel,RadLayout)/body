{
  final boolean horizontal=((RadRadioGroupLayout)oldComponent.getLayout()).isHorizontal();
  return new ComponentMorphingTool(oldComponent,newComponent,target,layout){
    @Override protected void convertTag(){
      if (horizontal) {
        ModelParser.deleteAttribute(myNewComponent,"android:orientation");
      }
 else {
        myNewComponent.getTag().setAttribute("android:orientation","vertical");
      }
    }
  }
.result();
}
