{
  List<T> list=forKey(l);
  if (list.isEmpty()) {
    Language base=l.getBaseLanguage();
    if (base != null) {
      return allForLanguage(base);
    }
  }
  if (l != Language.ANY) {
    final List<T> all=allForLanguage(Language.ANY);
    if (!all.isEmpty()) {
      if (list.isEmpty()) {
        return all;
      }
      list=new ArrayList<T>(list);
      list.addAll(all);
    }
  }
  return list;
}
