{
  return WolfTheProblemSolver.getInstance(getProject()).hasProblemFilesBeneath(new Condition<VirtualFile>(){
    public boolean value(    final VirtualFile virtualFile){
      return contains(virtualFile) && (getValue() instanceof PsiElement && PsiUtilBase.getVirtualFile((PsiElement)getValue()) == virtualFile || someChildContainsFile(virtualFile));
    }
  }
);
}
