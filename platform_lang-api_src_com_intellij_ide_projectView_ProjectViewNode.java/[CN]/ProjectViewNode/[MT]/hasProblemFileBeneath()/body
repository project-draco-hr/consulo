{
  if (!Registry.is("projectView.showHierarchyErrors"))   return false;
  return WolfTheProblemSolver.getInstance(getProject()).hasProblemFilesBeneath(new Condition<VirtualFile>(){
    public boolean value(    final VirtualFile virtualFile){
      return contains(virtualFile) && (getValue() instanceof PsiElement && Comparing.equal(PsiUtilBase.getVirtualFile((PsiElement)getValue()),virtualFile) || someChildContainsFile(virtualFile));
    }
  }
);
}
