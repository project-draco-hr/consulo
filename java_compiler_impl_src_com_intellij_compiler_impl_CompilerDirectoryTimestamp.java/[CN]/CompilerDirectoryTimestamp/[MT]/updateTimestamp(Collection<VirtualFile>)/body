{
  try {
    final ManagingFS managingFS=ManagingFS.getInstance();
    for (    VirtualFile file : files) {
      if (!file.isValid()) {
        continue;
      }
      final DataOutputStream stream=INSTANCE.writeAttribute(file);
      try {
        stream.writeInt(managingFS.getModificationCount(file));
      }
  finally {
        stream.close();
      }
    }
  }
 catch (  IOException e) {
    LOG.info(e);
  }
}
