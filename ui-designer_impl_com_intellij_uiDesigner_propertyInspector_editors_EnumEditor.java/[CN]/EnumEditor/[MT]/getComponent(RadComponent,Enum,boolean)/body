{
  if (value == null) {
    return myCbx;
  }
  final ComboBoxModel model=myCbx.getModel();
  for (int i=model.getSize() - 1; i >= 0; i--) {
    if (model.getElementAt(i) == value) {
      myCbx.setSelectedIndex(i);
      return myCbx;
    }
  }
  throw new IllegalArgumentException("unknown value: " + value);
}
