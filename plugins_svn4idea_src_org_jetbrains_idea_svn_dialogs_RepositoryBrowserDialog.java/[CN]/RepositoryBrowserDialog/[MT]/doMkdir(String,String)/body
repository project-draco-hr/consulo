{
  final SVNException[] exception=new SVNException[1];
  Runnable command=new Runnable(){
    public void run(){
      ProgressIndicator progress=ProgressManager.getInstance().getProgressIndicator();
      if (progress != null) {
        progress.setText("Creating " + url);
      }
      SvnVcs vcs=SvnVcs.getInstance(myProject);
      try {
        SVNCommitClient committer=vcs.createCommitClient();
        committer.doMkDir(new String[]{url},comment);
      }
 catch (      SVNException e) {
        exception[0]=e;
      }
    }
  }
;
  ApplicationManager.getApplication().runProcessWithProgressSynchronously(command,"Create Remote Folder",false,myProject);
  if (exception[0] != null) {
    Messages.showErrorDialog(exception[0].getMessage(),"Error");
  }
}
