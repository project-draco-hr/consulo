{
  RepositoryTreeNode node=getNotNullSelectedNode();
  SVNURL url=node.getURL();
  if (url != null) {
    int rc=Messages.showYesNoDialog(myProject,SvnBundle.message("repository.browser.discard.location.prompt",url.toString()),SvnBundle.message("repository.browser.discard.location.title"),Messages.getQuestionIcon());
    if (rc == 1) {
      return;
    }
    SvnApplicationSettings.getInstance().removeCheckoutURL(url.toString());
    getRepositoryBrowser().removeURL(url.toString());
  }
}
