{
  RepositoryTreeNode node=myBrowserComponent.getSelectedNode();
  if (node == null) {
    return;
  }
  SVNURL url=node.getURL();
  if (url != null) {
    int rc=Messages.showYesNoDialog(myBrowserComponent.getProject(),SvnBundle.message("repository.browser.discard.location.prompt",url.toString()),SvnBundle.message("repository.browser.discard.location.title"),Messages.getQuestionIcon());
    if (rc != 0) {
      return;
    }
    SvnApplicationSettings.getInstance().removeCheckoutURL(url.toString());
    myBrowserComponent.removeURL(url.toString());
  }
}
