{
  final FileType fileType=file.getFileType();
  if (fileType instanceof LanguageFileType) {
    if (fileType != StdFileTypes.JAVA && isTooLarge(file))     return StdLanguages.TEXT;
    final LanguageFileType languageFileType=(LanguageFileType)fileType;
    return languageFileType.getLanguage();
  }
 else   if (fileType instanceof CustomFileType || fileType == StdFileTypes.GUI_DESIGNER_FORM || fileType == StdFileTypes.IDEA_MODULE || fileType == StdFileTypes.IDEA_PROJECT || fileType == StdFileTypes.IDEA_WORKSPACE) {
    return StdLanguages.TEXT;
  }
  return Language.ANY;
}
