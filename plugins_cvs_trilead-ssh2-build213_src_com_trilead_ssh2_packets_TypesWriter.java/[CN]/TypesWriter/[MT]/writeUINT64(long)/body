{
  if ((pos + 8) > arr.length)   resize(arr.length + 32);
  arr[pos++]=(byte)(val >> 56);
  arr[pos++]=(byte)(val >> 48);
  arr[pos++]=(byte)(val >> 40);
  arr[pos++]=(byte)(val >> 32);
  arr[pos++]=(byte)(val >> 24);
  arr[pos++]=(byte)(val >> 16);
  arr[pos++]=(byte)(val >> 8);
  arr[pos++]=(byte)val;
}
