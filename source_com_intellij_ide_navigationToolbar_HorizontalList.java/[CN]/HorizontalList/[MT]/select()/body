{
  if (!myList.isEmpty()) {
    clearBorder();
    mySelectedIndex=myModel.size() - 1;
    while (getWidth() < getChainWidth()) {
      scrollToVisible(1);
    }
    paintBorder();
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        requestFocusInWindow();
      }
    }
);
  }
}
