{
  return with(new PatternCondition<XmlFile>(){
    public boolean accepts(    @NotNull final XmlFile xmlFile,    final MatchingContext matchingContext,    @NotNull final TraverseContext traverseContext){
      XmlDocument document=xmlFile.getDocument();
      return document != null && rootTag.accepts(document.getRootTag(),matchingContext,traverseContext);
    }
  }
);
}
