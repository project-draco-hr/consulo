{
  if (element != myElement && element.isValid()) {
    hideCurrentHintIfAny();
    setCurrentHint(hint,element);
    HintManagerImpl.getInstanceImpl().showEditorHint(hint,editor,HintManagerImpl.getHintPosition(hint,editor,getLogicalPosition(element),HintManagerImpl.RIGHT_UNDER),HintManagerImpl.HIDE_BY_ANY_KEY | HintManagerImpl.HIDE_BY_OTHER_HINT | HintManagerImpl.HIDE_BY_SCROLLING| HintManagerImpl.HIDE_BY_TEXT_CHANGE| HintManagerImpl.HIDE_IF_OUT_OF_EDITOR,0,false);
  }
}
