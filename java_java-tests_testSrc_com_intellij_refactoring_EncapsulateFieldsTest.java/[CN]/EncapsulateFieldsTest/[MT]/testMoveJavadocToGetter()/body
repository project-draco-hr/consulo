{
  doTest(new PerformAction(){
    public void performAction(    VirtualFile rootDir,    VirtualFile rootAfter) throws Exception {
      final PsiClass aClass=myJavaFacade.findClass("A",GlobalSearchScope.projectScope(myProject));
