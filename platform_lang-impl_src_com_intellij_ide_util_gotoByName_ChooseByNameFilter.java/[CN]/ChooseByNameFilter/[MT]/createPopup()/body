{
  if (myPopup != null) {
    return;
  }
  myPopup=JBPopupFactory.getInstance().createComponentPopupBuilder(myChooserPanel,myChooser).setModalContext(false).setFocusable(false).setResizable(true).setCancelOnClickOutside(false).setMinSize(new Dimension(200,200)).setDimensionServiceKey(myProject,"GotoFile_FileTypePopup",false).createPopup();
  myPopup.addListener(new JBPopupListener.Adapter(){
    public void onClosed(    LightweightWindowEvent event){
      myPopup=null;
    }
  }
);
  myPopup.showUnderneathOf(myToolbar.getComponent());
}
