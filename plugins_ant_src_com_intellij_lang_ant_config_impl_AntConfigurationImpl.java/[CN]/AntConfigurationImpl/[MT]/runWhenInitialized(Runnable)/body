{
  if (getProject().isInitialized()) {
    ApplicationManager.getApplication().runReadAction(new Runnable(){
      public void run(){
        runnable.run();
      }
    }
);
  }
 else {
    myStartupManager.runWhenProjectIsInitialized(new Runnable(){
      public void run(){
        runnable.run();
      }
    }
);
  }
}
