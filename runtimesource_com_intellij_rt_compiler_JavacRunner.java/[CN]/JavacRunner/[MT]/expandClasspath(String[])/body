{
  for (int idx=0; idx < args.length; idx++) {
    final String arg=args[idx];
    if ("-classpath".equals(arg) || "-cp".equals(arg)) {
      final String cpValue=args[idx + 1];
      if (cpValue.startsWith("@")) {
        args[idx + 1]=readClasspath(cpValue.substring(1));
      }
      break;
    }
  }
}
