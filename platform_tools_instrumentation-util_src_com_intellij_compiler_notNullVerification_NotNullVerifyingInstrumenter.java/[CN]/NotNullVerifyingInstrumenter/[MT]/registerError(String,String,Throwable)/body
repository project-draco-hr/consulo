{
  if (myPostponedError == null) {
    Throwable err=e.getCause();
    if (err == null) {
      err=e;
    }
    myPostponedError=new RuntimeException("Operation '" + operationName + "' failed for "+ myClassName+ "."+ methodName+ "(): "+ err.getMessage(),err);
  }
  if (myIsModification) {
    processPostponedErrors();
  }
}
