{
  final Project project=e.getData(PlatformDataKeys.PROJECT);
  if (project != null) {
    final MavenRunner runner=project.getComponent(MavenRunner.class);
    if (!runner.isRunning()) {
      final MavenRunnerParameters runnerParameters=new MavenTask(myPomPath,myGoal).createBuildParameters(MavenProjectsManager.getInstance(project));
      if (runnerParameters != null) {
        runner.run(runnerParameters);
      }
    }
  }
}
