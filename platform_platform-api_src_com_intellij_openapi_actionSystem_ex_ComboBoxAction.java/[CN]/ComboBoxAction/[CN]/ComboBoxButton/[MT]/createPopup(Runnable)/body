{
  DefaultActionGroup group=createPopupActionGroup(this);
  DataContext context=getDataContext();
  myDataContext=null;
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup(myPopupTitle,group,context,false,false,false,onDispose,getMaxRows(),getPreselectCondition());
  popup.setMinimumSize(new Dimension(getMinWidth(),getMinHeight()));
  return popup;
}
