{
  DefaultActionGroup group=createPopupActionGroup(this);
  DataContext context=myDataContext == null ? DataManager.getInstance().getDataContext() : myDataContext;
  myDataContext=null;
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup(null,group,context,JBPopupFactory.ActionSelectionAid.SPEEDSEARCH,false,onDispose,getMaxRows());
  popup.setMinimumSize(new Dimension(getMinWidth(),getMinHeight()));
  return popup;
}
