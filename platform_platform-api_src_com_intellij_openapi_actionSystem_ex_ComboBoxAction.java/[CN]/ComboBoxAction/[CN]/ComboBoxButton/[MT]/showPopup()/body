{
  myForcePressed=true;
  repaint();
  Runnable onDispose=new Runnable(){
    public void run(){
      UIUtil.invokeLaterIfNeeded(new Runnable(){
        public void run(){
          myForcePressed=false;
          myPopup=null;
        }
      }
);
      repaint();
    }
  }
;
  myPopup=createPopup(onDispose);
  myPopup.show(new RelativePoint(this,new Point(0,this.getHeight() - 1)));
}
