{
  DefaultActionGroup group=createPopupActionGroup(this);
  myForcePressed=true;
  repaint();
  Runnable onDispose=new Runnable(){
    public void run(){
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          myForcePressed=false;
        }
      }
);
      repaint();
    }
  }
;
  final ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup(null,group,DataManager.getInstance().getDataContext(),JBPopupFactory.ActionSelectionAid.SPEEDSEARCH,false,onDispose,30);
  popup.showUnderneathOf(this);
}
