{
  myForcePressed=true;
  repaint();
  Runnable onDispose=new Runnable(){
    public void run(){
      UIUtil.invokeLaterIfNeeded(new Runnable(){
        public void run(){
          myForcePressed=false;
        }
      }
);
      repaint();
    }
  }
;
  JBPopup popup=createPopup(onDispose);
  popup.show(new RelativePoint(this,new Point(0,this.getHeight() - 1)));
}
