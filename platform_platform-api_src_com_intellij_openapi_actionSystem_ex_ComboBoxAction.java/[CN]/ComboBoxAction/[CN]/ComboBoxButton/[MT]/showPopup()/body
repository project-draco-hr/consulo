{
  myForcePressed=true;
  repaint();
  Runnable onDispose=new Runnable(){
    public void run(){
      UIUtil.invokeLaterIfNeeded(new Runnable(){
        public void run(){
          myForcePressed=false;
        }
      }
);
      repaint();
    }
  }
;
  ListPopup popup=createPopup(onDispose);
  popup.showUnderneathOf(this);
}
