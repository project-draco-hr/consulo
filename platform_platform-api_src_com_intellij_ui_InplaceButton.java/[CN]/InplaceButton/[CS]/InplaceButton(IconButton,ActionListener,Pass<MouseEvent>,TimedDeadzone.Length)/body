{
  myListener=listener;
  myBehavior=new BaseButtonBehavior(this,mouseDeadzone){
    @Override protected void execute(    final MouseEvent e){
      doClick(e);
    }
    @Override protected void repaint(    Component c){
      doRepaintComponent(c);
    }
    @Override protected void pass(    final MouseEvent e){
      if (me != null) {
        me.pass(e);
      }
    }
  }
;
  setIcons(source);
  setToolTipText(source.getTooltip());
  setOpaque(false);
  setHoveringEnabled(true);
}
