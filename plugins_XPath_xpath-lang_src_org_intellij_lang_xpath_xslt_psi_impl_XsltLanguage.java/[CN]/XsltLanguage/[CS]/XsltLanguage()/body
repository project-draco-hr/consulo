{
  super(ID);
  LanguageFindUsages.INSTANCE.addExpicitExtension(this,FIND_USAGES_PROVIDER);
  LanguageNamesValidation.INSTANCE.addExpicitExtension(this,LanguageNamesValidation.INSTANCE.forLanguage(XPathFileType.XPATH.getLanguage()));
  LanguageRefactoringSupport.INSTANCE.addExpicitExtension(this,new DefaultRefactoringSupportProvider(){
    @Override public boolean isSafeDeleteAvailable(    PsiElement element){
      return element instanceof XPathVariable || element instanceof XsltTemplate;
    }
  }
);
}
