{
  myNameField.setEnabled(!isChainedConstructor());
  if (myCbMakeStatic != null) {
    myCbMakeStatic.setEnabled(!isChainedConstructor());
  }
  updateSignature();
  setOKActionEnabled(PsiManager.getInstance(myProject).getNameHelper().isIdentifier(myNameField.getText()) || isChainedConstructor());
}
