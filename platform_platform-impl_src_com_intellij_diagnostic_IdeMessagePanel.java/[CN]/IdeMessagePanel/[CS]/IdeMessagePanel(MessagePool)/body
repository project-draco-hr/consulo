{
  super(new BorderLayout());
  myIdeFatal=new IdeFatalErrorsIcon(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      openFatals(null);
    }
  }
);
  myIdeFatal.setVerticalAlignment(SwingConstants.CENTER);
