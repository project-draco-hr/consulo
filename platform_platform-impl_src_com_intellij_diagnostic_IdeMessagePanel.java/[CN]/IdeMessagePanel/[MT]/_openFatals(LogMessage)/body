{
  myDialog=new IdeErrorsDialog(myMessagePool,message){
    @Override public void doOKAction(){
      super.doOKAction();
      disposeDialog(this);
    }
    @Override public void doCancelAction(){
      super.doCancelAction();
      disposeDialog(this);
    }
    @Override protected void updateOnSubmit(){
      super.updateOnSubmit();
      updateState(computeState());
    }
  }
;
  myMessagePool.addListener(myDialog);
  if (!isOtherModalWindowActive()) {
    myDialog.show();
  }
 else {
    myDialog.close(0);
    disposeDialog(myDialog);
  }
}
