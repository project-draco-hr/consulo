{
  File scriptPath=myTempDir != null ? FileUtilRt.createTempFile(myTempDir,myPrefix,SCRIPT_EXT,true) : FileUtilRt.createTempFile(myPrefix,SCRIPT_EXT);
  scriptPath.deleteOnExit();
  PrintWriter out=new PrintWriter(new FileWriter(scriptPath));
  try {
    if (SystemInfo.isWindows) {
      out.println("@echo off");
    }
 else {
      out.println("#!/bin/sh");
    }
    String line=commandLine();
    if (SystemInfo.isWindows) {
      line+=" %*";
    }
 else {
      line+=" \"$@\"";
    }
    out.println(line);
  }
  finally {
    out.close();
  }
  FileUtilRt.setExecutableAttribute(scriptPath.getPath(),true);
  return scriptPath;
}
