{
  if ((myActiveVcses == null) || (myActiveVcses.length == 0))   return;
  keepActiveVcs(new Runnable(){
    public void run(){
      myVcsToPaths.clear();
      myActiveVcses=new AbstractVcs[0];
      mySortedMappings=new VcsDirectoryMapping[0];
    }
  }
);
  myFileWatchRequestsManager.ping();
}
