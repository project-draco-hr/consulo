{
synchronized (this) {
    if (isClosed()) {
      return;
    }
    myIsClosed=true;
  }
  try {
    if (Thread.currentThread() != this) {
      join(0);
    }
  }
 catch (  InterruptedException e) {
  }
  try {
    myReader.close();
  }
 catch (  IOException e1) {
    LOG.error(e1);
  }
  checkTextAvailable();
}
