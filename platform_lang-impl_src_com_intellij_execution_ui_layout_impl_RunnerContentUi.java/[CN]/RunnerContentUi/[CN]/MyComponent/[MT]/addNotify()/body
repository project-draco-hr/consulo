{
  super.addNotify();
  if (!myUiLastStateWasRestored && myOriginal == null) {
    myUiLastStateWasRestored=true;
    SwingUtilities.invokeLater(new Runnable(){
      @Override public void run(){
        restoreLastUiState().doWhenDone(new Runnable(){
          @Override public void run(){
            if (!myWasEverAdded) {
              myWasEverAdded=true;
              attractOnStartup();
              myInitialized.setDone();
            }
          }
        }
);
      }
    }
);
  }
}
