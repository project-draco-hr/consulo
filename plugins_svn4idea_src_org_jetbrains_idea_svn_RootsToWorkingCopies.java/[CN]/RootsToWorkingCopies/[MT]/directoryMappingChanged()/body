{
  final SvnVcs svnVcs=SvnVcs.getInstance(myProject);
  svnVcs.getAuthNotifier().clear();
  final VirtualFile[] roots=ProjectLevelVcsManager.getInstance(myProject).getRootsUnderVcs(svnVcs);
synchronized (myLock) {
    clear();
    for (    VirtualFile root : roots) {
      addRoot(root);
    }
  }
}
