{
  if (paintNodes()) {
    g.setColor(getBackground());
    g.fillRect(0,0,getWidth(),getHeight());
    paintNodeContent(g);
  }
  if (isFileColorsEnabled()) {
    g.setColor(getBackground());
    g.fillRect(0,0,getWidth(),getHeight());
    paintFileColorGutter(g);
  }
  super.paintComponent(new Graphics2DLog(g));
  myEmptyText.paint(this,g);
}
