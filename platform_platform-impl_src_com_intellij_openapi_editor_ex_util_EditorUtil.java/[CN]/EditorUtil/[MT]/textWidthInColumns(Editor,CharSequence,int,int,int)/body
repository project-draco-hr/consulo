{
  int result=0;
  int prevX;
  int spaceSize=getSpaceWidth(Font.PLAIN,editor);
  for (int i=start; i < end; i++) {
    char c=text.charAt(i);
    prevX=x;
switch (c) {
case '\t':
      x=nextTabStop(x,editor);
    result+=columnsNumber(x - prevX,spaceSize);
  break;
case '\n':
x=result=0;
break;
default :
x+=charWidth(c,Font.PLAIN,editor);
result++;
}
}
return result;
}
