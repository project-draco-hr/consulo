{
  NotificationType type=notificationType.equals("success") ? NotificationType.INFORMATION : notificationType.equals("warning") ? NotificationType.WARNING : notificationType.equals("error") ? NotificationType.ERROR : null;
  assertEquals("Notification type is incorrect",type,lastNotification().getType());
  assertEquals("Notification title is incorrect",title,lastNotification().getTitle());
  assertEquals("Notification content is incorrect",virtualCommits.replaceVirtualHashes(content),convertNotificationHtml(lastNotification().getContent()));
}
