{
  setIcon(task.getIcon());
  if (task.isIssue()) {
    final String url=task.getIssueUrl();
    if (url == null) {
      append(task.getId());
    }
 else {
      append(task.getId(),SimpleTextAttributes.LINK_ATTRIBUTES,new Runnable(){
        public void run(){
          BrowserUtil.launchBrowser(url);
        }
      }
);
    }
    append(": " + task.getSummary());
  }
 else {
    append(task.getSummary());
  }
}
