{
  try {
    XmlTag newTag=xmlTag.getManager().getElementFactory().createTagFromText("<" + xmlTag.getName() + ">"+ newName+ "</"+ xmlTag.getName()+ ">");
    final PsiElement element=xmlTag.replace(newTag);
    listener.elementRenamed(element);
  }
 catch (  IncorrectOperationException e) {
    LOG.error(e);
  }
}
