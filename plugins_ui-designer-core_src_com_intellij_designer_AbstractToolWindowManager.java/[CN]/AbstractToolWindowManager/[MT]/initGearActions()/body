{
  if (!ApplicationManager.getApplication().isInternal()) {
    return;
  }
  DefaultActionGroup group=new DefaultActionGroup();
  group.add(new ToggleAction("In Editor Mode","Pin/unpin tool window to Designer Editor",null){
    @Override public boolean isSelected(    AnActionEvent e){
      return false;
    }
    @Override public void setSelected(    AnActionEvent e,    boolean state){
      setEditorMode(true);
    }
  }
);
  ((ToolWindowEx)myToolWindow).setAdditionalGearActions(group);
}
