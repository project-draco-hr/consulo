{
  try {
    while (true) {
synchronized (LOCK) {
        if (!myRunning || myDisposed) {
          myRunner=null;
          resetToStart();
          break;
        }
      }
      if (myTakeInitialDelay || myInitiallySlept) {
        Thread.sleep(mySpan);
      }
      myInitiallySlept=true;
      if (myRestartRequest) {
        myRestartRequest=false;
        continue;
      }
      onTimer();
    }
  }
 catch (  InterruptedException e) {
    myInterruptedException=e;
    resetToStart();
  }
}
