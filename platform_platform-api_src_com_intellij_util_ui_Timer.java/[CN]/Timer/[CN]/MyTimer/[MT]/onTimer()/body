{
  System.out.println("Timer.onTimer");
  myCount[0]--;
  if (myCount[0] == 0) {
    suspend();
    new Thread(){
      @Override public void run(){
        try {
          Thread.currentThread().sleep(2000);
        }
 catch (        InterruptedException e) {
          e.printStackTrace();
        }
        myCount[0]=3;
        MyTimer.this.restart();
      }
    }
.start();
  }
}
