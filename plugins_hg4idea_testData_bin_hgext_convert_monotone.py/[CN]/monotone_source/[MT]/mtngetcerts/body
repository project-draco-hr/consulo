def mtngetcerts(self, rev):
    certs = {'author': '<missing>', 'date': '<missing>', 'changelog': '<missing>', 'branch': '<missing>', }
    certlist = self.mtnrun('certs', rev)
    certlist = re.split('\n\n      key ["\\[]', certlist)
    for e in certlist:
        m = self.cert_re.match(e)
        if m:
            (name, value) = m.groups()
            value = value.replace('\\"', '"')
            value = value.replace('\\\\', '\\')
            certs[name] = value
    certs['date'] = (certs['date'].split('.')[0] + ' UTC')
    return certs
