{
  UIUtil.invokeAndWaitIfNeeded(new Runnable(){
    @Override public void run(){
      myPlatformFacade.runReadAction(new Runnable(){
        @Override public void run(){
          myPlatformFacade.getLocalFileSystem().refreshAndFindFileByPath(projectDir.getPath() + "/.git");
        }
      }
);
    }
  }
);
}
