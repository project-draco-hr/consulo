{
  PsiComment comment=factory.createCommentFromText(javadoc,null);
  PsiDocComment doc=method.getDocComment();
  if (doc != null) {
    if (replace) {
      doc.replace(comment);
      codeStyleManager.reformat(method);
      return comment;
    }
 else {
      return null;
    }
  }
 else {
    method.addBefore(comment,method.getFirstChild());
    codeStyleManager.reformat(method);
    return comment;
  }
}
