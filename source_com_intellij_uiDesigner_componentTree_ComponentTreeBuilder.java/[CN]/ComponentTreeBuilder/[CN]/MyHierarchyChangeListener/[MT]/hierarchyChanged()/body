{
  if (myInsideChange > 0) {
    return;
  }
  myInsideChange++;
  try {
    updateFromRoot();
    final RadRootContainer rootContainer=myEditor.getRootContainer();
    mySelectionWatcher.deinstall(rootContainer);
    mySelectionWatcher.install(rootContainer);
    syncSelection();
  }
  finally {
    myInsideChange--;
  }
}
