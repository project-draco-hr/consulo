{
  final Semaphore semaphore=new Semaphore();
  final Runnable waiter=new Runnable(){
    public void run(){
      semaphore.up();
    }
  }
;
  if (isOnlyInit) {
    myRequestMerger.ensureInitialization(waiter);
  }
 else {
    myRequestMerger.waitRefresh(waiter);
  }
  semaphore.down();
  while (true) {
    if (semaphore.waitFor(ourQueryInterval))     break;
    if (pi != null) {
      pi.checkCanceled();
    }
  }
}
