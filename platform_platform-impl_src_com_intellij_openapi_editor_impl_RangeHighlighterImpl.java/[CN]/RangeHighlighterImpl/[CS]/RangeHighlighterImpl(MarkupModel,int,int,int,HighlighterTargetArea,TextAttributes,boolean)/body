{
  myRangeMarker=persistent ? new PersistentLineMarker((DocumentEx)model.getDocument(),start) : (RangeMarkerEx)model.getDocument().createRangeMarker(start,end);
  myTextAttributes=textAttributes;
  myTargetArea=target;
  myLayer=layer;
  myModel=model;
  if (textAttributes != null) {
    myErrorStripeColor=textAttributes.getErrorStripeColor();
  }
}
