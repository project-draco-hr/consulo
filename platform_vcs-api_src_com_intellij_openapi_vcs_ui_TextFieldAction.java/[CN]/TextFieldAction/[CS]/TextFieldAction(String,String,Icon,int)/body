{
  super(text,description,icon);
  myDescription=description;
  myIcon=icon;
  myField=new JTextField(initSize);
  myField.addKeyListener(new KeyAdapter(){
    @Override public void keyTyped(    KeyEvent e){
      if ('\n' == e.getKeyChar()) {
        e.consume();
        actionPerformed(null);
      }
    }
  }
);
}
