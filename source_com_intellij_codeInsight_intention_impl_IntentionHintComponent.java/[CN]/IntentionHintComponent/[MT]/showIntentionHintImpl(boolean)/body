{
  final int offset=myEditor.getCaretModel().getOffset();
  final HintManager hintManager=HintManager.getInstance();
  myComponentHint.setShouldDelay(delay);
  hintManager.showQuestionHint(myEditor,getHintPosition(myEditor,offset),offset,offset,myComponentHint,new QuestionAction(){
    public boolean execute(){
      showPopup();
      return true;
    }
  }
);
}
