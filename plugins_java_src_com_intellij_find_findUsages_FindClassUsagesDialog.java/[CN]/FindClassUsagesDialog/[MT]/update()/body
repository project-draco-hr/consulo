{
  if (myCbToSearchForTextOccurrences != null) {
    if (isSelected(myCbUsages)) {
      myCbToSearchForTextOccurrences.makeSelectable();
    }
 else {
      myCbToSearchForTextOccurrences.makeUnselectable(false);
    }
  }
  boolean hasSelected=isSelected(myCbUsages) || isSelected(myCbFieldsUsages) || isSelected(myCbMethodsUsages)|| isSelected(myCbImplementingClasses)|| isSelected(myCbDerivedInterfaces)|| isSelected(myCbDerivedClasses);
  setOKActionEnabled(hasSelected);
}
