{
  ChangeList[] lists=e.getData(DataKeys.CHANGE_LISTS);
  final boolean visible=lists != null && lists.length == 1 && lists[0] instanceof LocalChangeList && !((LocalChangeList)lists[0]).isReadOnly();
  if (e.getPlace().equals(ActionPlaces.CHANGES_VIEW_POPUP))   e.getPresentation().setVisible(visible);
 else   e.getPresentation().setEnabled(visible);
}
