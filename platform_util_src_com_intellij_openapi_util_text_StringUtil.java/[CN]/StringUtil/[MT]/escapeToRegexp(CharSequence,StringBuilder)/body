{
  for (int i=0; i < text.length(); i++) {
    final char c=text.charAt(i);
    if (c == ' ' || Character.isLetter(c) || Character.isDigit(c) || c == '_') {
      builder.append(c);
    }
 else     if (c == '\n') {
      builder.append("\\n");
    }
 else {
      builder.append('\\').append(c);
    }
  }
  return builder;
}
