{
  long minDelta=(new Date().getTime() - timestamp) / (1000 * 60);
  if (minDelta < 2) {
    return "Moments ago";
  }
  if (minDelta < 10) {
    return "Few minutes ago";
  }
  if (minDelta <= 30) {
    return "Last 30 minutes";
  }
  int hoursDelta=Math.round(minDelta / 60f);
  if (hoursDelta <= 1) {
    return "Last hour";
  }
  if (hoursDelta < 5) {
    return hoursDelta + " hours ago";
  }
  return format.format(timestamp);
}
