{
  StringTokenizer tokenizer=new StringTokenizer(text);
  String out="";
  String delim="";
  boolean toCapitalize=true;
  while (tokenizer.hasMoreTokens()) {
    String word=tokenizer.nextToken();
    out+=delim + (toCapitalize ? capitalize(word) : word);
    delim=" ";
    if (!allWords) {
      toCapitalize=false;
    }
  }
  return out;
}
