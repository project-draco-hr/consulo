{
  return Arrays.asList(new FileTypeBasedRootFilter(OrderRootType.CLASSES,false,StdFileTypes.CLASS,"classes"),new FileTypeBasedRootFilter(OrderRootType.CLASSES,true,StdFileTypes.CLASS,"jar directory"),new FileTypeBasedRootFilter(OrderRootType.SOURCES,true,StdFileTypes.JAVA,"source archive directory"),new JavadocRootDetector());
}
