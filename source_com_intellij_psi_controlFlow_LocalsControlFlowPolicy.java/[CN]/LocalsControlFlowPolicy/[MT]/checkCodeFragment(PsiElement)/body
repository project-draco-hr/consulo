{
  PsiElement codeFragement;
  if (refElement instanceof PsiParameter && ((PsiParameter)refElement).getDeclarationScope() instanceof PsiMethod) {
    codeFragement=((PsiMethod)((PsiParameter)refElement).getDeclarationScope()).getBody();
  }
 else {
    codeFragement=ControlFlowUtil.findCodeFragment(refElement);
  }
  if (myCodeFragment.getContainingFile() == codeFragement.getContainingFile() && !myCodeFragment.equals(codeFragement))   return null;
  return (PsiVariable)refElement;
}
