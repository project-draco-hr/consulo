{
  if (isValid()) {
    final String[] result=new String[1];
    final Runnable runnable=new Runnable(){
      public void run(){
        PsiMethod psiMethod=(PsiMethod)getElement();
        result[0]=PsiFormatUtil.formatMethod(psiMethod,PsiSubstitutor.EMPTY,PsiFormatUtil.SHOW_NAME | PsiFormatUtil.SHOW_PARAMETERS,PsiFormatUtil.SHOW_TYPE);
      }
    }
;
    ApplicationManager.getApplication().runReadAction(runnable);
    return result[0];
  }
 else {
    return super.getName();
  }
}
