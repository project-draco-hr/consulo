def explain_pushable(self, idx, all_patches=False):
    write = ((all_patches and self.ui.write) or self.ui.warn)
    if (all_patches or self.ui.verbose):
        if isinstance(idx, str):
            idx = self.series.index(idx)
        (pushable, why) = self.pushable(idx)
        if (all_patches and pushable):
            if (why is None):
                write((_('allowing %s - no guards in effect\n') % self.series[idx]))
            elif (not why):
                write((_('allowing %s - no matching negative guards\n') % self.series[idx]))
            else:
                write((_('allowing %s - guarded by %r\n') % (self.series[idx], why)))
        if (not pushable):
            if why:
                write((_('skipping %s - guarded by %r\n') % (self.series[idx], why)))
            else:
                write((_('skipping %s - no matching guards\n') % self.series[idx]))
