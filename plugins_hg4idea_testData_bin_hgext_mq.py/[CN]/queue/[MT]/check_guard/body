def check_guard(self, guard):
    if (not guard):
        return _('guard cannot be an empty string')
    bad_chars = '# \t\r\n\x0c'
    first = guard[0]
    if (first in '-+'):
        return (_('guard %r starts with invalid character: %r') % (guard, first))
    for c in bad_chars:
        if (c in guard):
            return (_('invalid character in guard %r: %r') % (guard, c))
