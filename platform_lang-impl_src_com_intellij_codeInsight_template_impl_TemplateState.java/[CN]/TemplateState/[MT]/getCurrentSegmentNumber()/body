{
  int varNumber=myCurrentVariableNumber;
  if (varNumber == -1) {
    return -1;
  }
  String variableName=myTemplate.getVariableNameAt(varNumber);
  int segmentNumber=myTemplate.getVariableSegmentNumber(variableName);
  if (segmentNumber < 0) {
    LOG.error("No segment for variable: var=" + varNumber + "; name="+ variableName+ "; "+ presentTemplate(myTemplate)+ "; offset: "+ myEditor.getCaretModel().getOffset(),AttachmentFactory.createAttachment(myDocument));
  }
  return segmentNumber;
}
