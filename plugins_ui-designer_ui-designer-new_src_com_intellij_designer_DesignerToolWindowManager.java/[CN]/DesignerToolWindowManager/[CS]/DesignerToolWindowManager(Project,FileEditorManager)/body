{
  myProject=project;
  myFileEditorManager=fileEditorManager;
  project.getMessageBus().connect(project).subscribe(FileEditorManagerListener.FILE_EDITOR_MANAGER,new FileEditorManagerListener(){
    @Override public void fileOpened(    FileEditorManager source,    VirtualFile file){
      bindToDesigner(getActiveDesigner());
    }
    @Override public void fileClosed(    FileEditorManager source,    VirtualFile file){
      bindToDesigner(getActiveDesigner());
    }
    @Override public void selectionChanged(    FileEditorManagerEvent event){
      bindToDesigner(getDesigner(event.getNewEditor()));
    }
  }
);
}
