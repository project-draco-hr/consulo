{
  UIUtil.invokeAndWaitIfNeeded(new Runnable(){
    @Override public void run(){
      try {
        LanguageLevelProjectExtension.getInstance(myFixture.getProject()).setLanguageLevel(myLanguageLevel);
        myFixture.tearDown();
        myFixture=null;
        myEnabledTool=null;
      }
 catch (      Exception e) {
        throw new RuntimeException(e);
      }
    }
  }
);
}
