{
  super.paintComponent(g);
switch (getState()) {
case DONT_CARE:
    Icon icon=getIcon();
  if (icon == null) {
    icon=UIManager.getIcon("CheckBox.icon");
  }
if (icon != null) {
  final Insets i=getInsets();
  final Rectangle r=getBounds();
  final Rectangle r1=new Rectangle();
  r1.x=i.left;
  r1.y=i.top;
  r1.width=r.width - (i.right + r1.x);
  r1.height=r.height - (i.bottom + r1.y);
  final Rectangle r2=new Rectangle();
  final Rectangle r3=new Rectangle();
  SwingUtilities.layoutCompoundLabel(this,getFontMetrics(getFont()),getText(),icon,getVerticalAlignment(),getHorizontalAlignment(),getVerticalTextPosition(),getHorizontalTextPosition(),r1,r2,r3,getText() == null ? 0 : getIconTextGap());
  g.fillRect(r2.x + r2.width / 2 - r2.width / 5,r2.y + r2.height / 2 - 1,r2.width / 3,2);
}
break;
default :
break;
}
}
