{
  for (  TaskRepository repository : getAllRepositories()) {
    if (repository.extractId(id) == null) {
      continue;
    }
    try {
      Task issue=repository.findTask(id);
      if (issue != null) {
        LocalTaskImpl localTask=myTasks.get(id);
        if (localTask != null) {
          localTask.updateFromIssue(issue);
          return localTask;
        }
        return issue;
      }
    }
 catch (    Exception e) {
      LOG.info(e);
    }
  }
  return null;
}
