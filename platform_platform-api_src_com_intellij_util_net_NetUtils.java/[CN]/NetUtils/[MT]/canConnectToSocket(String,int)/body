{
  if (host.equals("localhost") || host.equals("127.0.0.1")) {
    try {
      ServerSocket socket=new ServerSocket();
      try {
        socket.bind(new InetSocketAddress(host,port));
      }
  finally {
        try {
          socket.close();
        }
 catch (        IOException ignored) {
        }
      }
      return false;
    }
 catch (    IOException e) {
      LOG.debug(e);
      return true;
    }
  }
 else {
    try {
      Socket socket=new Socket(host,port);
      socket.close();
      return true;
    }
 catch (    IOException ignored) {
      return false;
    }
  }
}
