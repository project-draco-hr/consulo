{
  if (type instanceof PsiWildcardType) {
    return true;
  }
  if (type instanceof PsiPrimitiveType) {
    return true;
  }
  if (type instanceof PsiArrayType) {
    final PsiArrayType arrayType=(PsiArrayType)type;
    final PsiType componentType=arrayType.getComponentType();
    return isProbablySerializable(componentType);
  }
  if (type instanceof PsiClassType) {
    final PsiClassType classTYpe=(PsiClassType)type;
    final PsiClass psiClass=classTYpe.resolve();
    if (isSerializable(psiClass)) {
      return true;
    }
    if (isExternalizable(psiClass)) {
      return true;
    }
    if (InheritanceUtil.isInheritor(psiClass,CommonClassNames.JAVA_UTIL_COLLECTION) || InheritanceUtil.isInheritor(psiClass,CommonClassNames.JAVA_UTIL_MAP)) {
      final PsiType[] parameters=classTYpe.getParameters();
      for (      PsiType parameter : parameters) {
        if (!isProbablySerializable(parameter)) {
          return false;
        }
      }
      return true;
    }
    return false;
  }
  return false;
}
