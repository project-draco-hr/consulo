{
  IDevice device=(IDevice)myDeviceCombo.getSelectedItem();
  if (myDevice != device) {
synchronized (myLock) {
      myDevice=device;
      if (myCurrentReader != null) {
        try {
          myCurrentReader.close();
        }
 catch (        IOException e) {
          LOG.error(e);
        }
      }
      if (device != null) {
        myCurrentReader=AndroidLogcatUtil.startLoggingThread(myProject,device,false,myLogConsole);
      }
    }
  }
}
