{
  if (r == null)   return null;
  if (r.getId() == id)   return r;
  final VirtualFile[] children=r.getChildren();
  if (children != null) {
    for (    VirtualFile f : children) {
      final VirtualFile child=findById(id,(VirtualFileImpl)f);
      if (child != null)       return child;
    }
  }
  return null;
}
