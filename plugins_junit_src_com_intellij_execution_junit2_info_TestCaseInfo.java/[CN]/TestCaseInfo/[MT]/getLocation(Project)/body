{
  final Location<PsiClass> classLocation=(Location<PsiClass>)super.getLocation(project);
  if (classLocation == null)   return getPsiFile(project);
  final PsiMethod method=MethodSignatureUtil.findMethodBySignature(classLocation.getPsiElement(),MethodSignatureUtil.createMethodSignature(myMethod,PsiType.EMPTY_ARRAY,PsiTypeParameter.EMPTY_ARRAY,PsiSubstitutor.EMPTY),true);
  if (method != null)   return new MethodLocation(project,method,classLocation);
  final Location<PsiFile> fileLocation=getPsiFile(project);
  if (fileLocation == null)   return classLocation;
 else   return fileLocation;
}
