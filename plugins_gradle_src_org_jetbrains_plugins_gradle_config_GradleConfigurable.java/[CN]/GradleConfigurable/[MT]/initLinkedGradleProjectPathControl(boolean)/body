{
  myLinkedGradleProjectPathField=new TextFieldWithBrowseButton();
  FileChooserDescriptor fileChooserDescriptor=testMode ? new FileChooserDescriptor(true,false,false,false,false,false) : GradleUtil.getGradleProjectFileChooserDescriptor();
  myLinkedGradleProjectPathField.addBrowseFolderListener("",ExternalSystemBundle.message("gradle.settings.label.select.project"),myProject,fileChooserDescriptor,TextComponentAccessor.TEXT_FIELD_WHOLE_TEXT,false);
  myLinkedGradleProjectPathField.getTextField().getDocument().addDocumentListener(new DocumentListener(){
    @Override public void insertUpdate(    DocumentEvent e){
      onLinkedProjectPathChange();
    }
    @Override public void removeUpdate(    DocumentEvent e){
      onLinkedProjectPathChange();
    }
    @Override public void changedUpdate(    DocumentEvent e){
      onLinkedProjectPathChange();
    }
  }
);
}
