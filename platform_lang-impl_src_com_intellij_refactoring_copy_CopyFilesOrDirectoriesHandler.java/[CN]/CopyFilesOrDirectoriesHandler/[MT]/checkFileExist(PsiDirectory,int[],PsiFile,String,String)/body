{
  final PsiFile existing=targetDirectory.findFile(name);
  if (existing != null && !existing.equals(file)) {
    int selection=choice == null || choice[0] == -1 ? Messages.showDialog(String.format("File '%s' already exists in directory '%s'",name,targetDirectory.getVirtualFile().getPath()),title,choice == null ? new String[]{"Overwrite","Skip"} : new String[]{"Overwrite","Skip","Overwrite for all","Skip for all"},0,Messages.getQuestionIcon()) : choice[0];
    if (choice != null && selection > 1) {
      choice[0]=selection % 2;
      selection=choice[0];
    }
    if (selection == 0 && file != existing) {
      existing.delete();
    }
 else     return true;
  }
  return false;
}
