{
  ToolWindow toolWindow=ToolWindowManager.getInstance(myProject).getToolWindow(ToolWindowId.FIND);
  SliceAnalysisParams params=new SliceAnalysisParams();
  params.dataFlowToThis=true;
  params.scope=new AnalysisScope(myProject);
  SliceRootNode rootNode=new SliceRootNode(myProject,new DuplicateMap(),SliceManager.createRootUsage(element,params));
  return new SlicePanel(myProject,true,rootNode,false,toolWindow){
    @Override public boolean isToShowAutoScrollButton(){
      return false;
    }
    @Override public boolean isToShowPreviewButton(){
      return false;
    }
    @Override public boolean isToShowCloseButton(){
      return false;
    }
    @Override public boolean isAutoScroll(){
      return false;
    }
    @Override public void setAutoScroll(    boolean autoScroll){
    }
    @Override public boolean isPreview(){
      return false;
    }
    @Override public void setPreview(    boolean preview){
    }
  }
;
}
