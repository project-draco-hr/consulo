{
  IdeFrameImpl frame=component instanceof IdeFrameImpl ? (IdeFrameImpl)component : (IdeFrameImpl)SwingUtilities.getAncestorOfClass(IdeFrameImpl.class,component);
  if (frame != null) {
    StatusBar statusBar=frame.getStatusBar();
    if (isIncluded) {
      statusBar.setInfo(description);
    }
 else {
      statusBar.setInfo(null);
    }
  }
}
