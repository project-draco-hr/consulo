{
  HgContentRevision beforeRevision=fileBefore == null ? null : new HgContentRevision(project,new HgFile(root,new File(root.getPath(),fileBefore)),new HgWorkingCopyRevisionsCommand(project).parent(root,vcsRevisionNumber));
  HgContentRevision afterRevision=fileAfter == null ? null : new HgContentRevision(project,new HgFile(root,new File(root.getPath(),fileAfter)),vcsRevisionNumber);
  return new Change(beforeRevision,afterRevision);
}
