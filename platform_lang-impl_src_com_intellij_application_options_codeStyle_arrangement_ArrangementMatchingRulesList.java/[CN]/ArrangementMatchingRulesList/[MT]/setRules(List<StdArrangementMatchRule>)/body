{
  myComponents.clear();
  getModel().clear();
  if (rules == null) {
    return;
  }
  for (  StdArrangementMatchRule rule : rules) {
    getModel().addElement(rule);
  }
  if (ArrangementConstants.LOG_RULE_MODIFICATION) {
    LOG.info("Arrangement matching rules list is refreshed. Given rules:");
    for (    StdArrangementMatchRule rule : rules) {
      LOG.info("  " + rule.toString());
    }
  }
}
