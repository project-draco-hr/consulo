{
  myApplication.assertWriteAccessAllowed();
synchronized (myLock) {
    if (myBulkUpdate)     return;
    try {
      mySuppressUpdate=true;
      task.run();
    }
 catch (    Error e) {
      reinstallRanges();
      throw e;
    }
catch (    RuntimeException e) {
      reinstallRanges();
      throw e;
    }
 finally {
      mySuppressUpdate=false;
    }
  }
}
