{
  myApplication.assertWriteAccessAllowed();
synchronized (myLock) {
    if (!isValid())     return;
    try {
      myDuringRollback=true;
      task.run();
    }
 catch (    Error e) {
      reinstallRanges();
      throw e;
    }
catch (    RuntimeException e) {
      reinstallRanges();
      throw e;
    }
 finally {
      myDuringRollback=false;
    }
  }
}
