{
  super.install(statusBar);
  myProject.getMessageBus().connect().subscribe(ProjectTopics.MODULE_LAYERS,new ModuleRootLayerListener.Adapter(){
    @Override public void layerRemove(    @NotNull Module module,    @NotNull ModuleRootLayer removed){
      update();
    }
    @Override public void layerAdded(    @NotNull Module module,    @NotNull ModuleRootLayer added){
      update();
    }
    @Override public void currentLayerChanged(    @NotNull Module module,    @NotNull String oldName,    @NotNull String newName){
      update();
    }
  }
);
}
