{
  if (isOffline())   return true;
  Throwable cause=e.getCause();
  if (cause instanceof SocketTimeoutException) {
    showConnectionErrorMessage(CvsBundle.message("error.message.timeout.error"),CvsBundle.message("error.dialog.title.timeout.error"),true);
    return true;
  }
 else   if (cause instanceof UnknownHostException) {
    showConnectionErrorMessage(CvsBundle.message("error.message.unknown.host",HOST),CvsBundle.message("error.title.inknown.host"),true);
    return true;
  }
 else   if (cause instanceof ConnectException) {
    showConnectionErrorMessage(CvsBundle.message("error.message.connection.error",HOST),CvsBundle.message("error.title.connection.error"),true);
    return true;
  }
  return false;
}
