{
  try {
    return doResolveProjectInfo(id,projectPath,downloadLibraries);
  }
 catch (  Throwable e) {
    throw new GradleApiException(e);
  }
 finally {
    final ProjectConnection connection=myCurrentConnection.get();
    if (connection != null) {
      myCurrentConnection.set(null);
      myConnections.remove();
      try {
        connection.close();
      }
 catch (      Throwable e) {
      }
    }
  }
}
