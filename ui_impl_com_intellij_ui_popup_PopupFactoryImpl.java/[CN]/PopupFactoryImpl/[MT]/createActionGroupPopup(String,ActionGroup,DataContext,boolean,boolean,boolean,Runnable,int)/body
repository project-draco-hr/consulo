{
  final Component component=(Component)dataContext.getData(DataConstants.CONTEXT_COMPONENT);
  LOG.assertTrue(component != null);
  ListPopupStep<ActionItem> step=createActionsStep(actionGroup,dataContext,showNumbers,showDisabledActions,title,component,honorActionMnemonics);
  return new ListPopupImpl(step,maxRowCount){
    protected void dispose(){
      if (disposeCallback != null) {
        disposeCallback.run();
      }
      super.dispose();
    }
  }
;
}
