{
  place.accept(new GroovyRecursiveElementVisitor(){
    @Override public void visitVariableDeclaration(    GrVariableDeclaration variableDeclaration){
      final GrVariable[] variables=variableDeclaration.getVariables();
      for (      GrVariable variable : variables) {
        if (variable.getName().equals(newName)) {
          visitor.visitCollidingVariable(variable);
        }
      }
    }
    @Override public void visitMethod(    GrMethod method){
    }
    @Override public void visitClosure(    GrClosableBlock closure){
    }
    @Override public void visitTypeDefinition(    GrTypeDefinition typeDefinition){
    }
  }
);
}
