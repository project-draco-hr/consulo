{
  JBPopup popup=null;
  if (myPopupRef != null) {
    popup=myPopupRef.get();
    myPopupRef=null;
  }
  if (popup != null && popup.isVisible()) {
    popup.cancel();
  }
 else {
    JBPopup jbPopup=NotificationsListPanel.show(getProject(),(JComponent)myStatusBar);
    myPopupRef=new WeakReference<JBPopup>(jbPopup);
  }
}
