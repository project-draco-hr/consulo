{
  PsiFile[] files=psiDirectory.getFiles();
  for (  PsiFile file : files) {
    filesList.add(file);
  }
  if (isRecursive) {
    PsiDirectory[] directories=psiDirectory.getSubdirectories();
    for (    PsiDirectory directory : directories) {
      addToPsiFileList(directory,filesList,isRecursive);
    }
  }
}
