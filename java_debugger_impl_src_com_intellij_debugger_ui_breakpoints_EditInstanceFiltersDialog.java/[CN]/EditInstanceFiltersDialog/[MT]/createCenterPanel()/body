{
  JPanel contentPanel=new JPanel(new BorderLayout());
  Box mainPanel=Box.createHorizontalBox();
  myInstanceFilterEditor=new InstanceFilterEditor(myProject);
  myInstanceFilterEditor.setPreferredSize(new Dimension(400,200));
  myInstanceFilterEditor.setBorder(IdeBorderFactory.createTitledBorderBoldWithIndent(DebuggerBundle.message("instance.filters.dialog.instance.filters.group")));
  mainPanel.add(myInstanceFilterEditor);
  contentPanel.add(mainPanel,BorderLayout.CENTER);
  return contentPanel;
}
