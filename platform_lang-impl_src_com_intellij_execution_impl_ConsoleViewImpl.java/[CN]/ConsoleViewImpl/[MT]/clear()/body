{
  if (myEditor == null)   return;
synchronized (LOCK) {
    myContentSize=0;
    myBuffer.clear();
    myHyperlinks.clearHyperlinks();
  }
  if (myFlushAlarm.isDisposed())   return;
  myFlushAlarm.cancelAllRequests();
  myFlushAlarm.addRequest(myClearRequest,0,getStateForUpdate());
  cancelHeavyAlarm();
}
