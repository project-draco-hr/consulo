{
  if (myEditor == null)   return;
synchronized (LOCK) {
    myContentSize=0;
    myBuffer.clear();
    myFolding.clear();
    final EditorHyperlinkSupport hyperlinks=myHyperlinks;
    if (hyperlinks != null) {
      hyperlinks.clearHyperlinks();
    }
  }
  if (myFlushAlarm.isDisposed())   return;
  cancelAllFlushRequests();
  addFlushRequest(new MyClearRunnable());
  cancelHeavyAlarm();
}
