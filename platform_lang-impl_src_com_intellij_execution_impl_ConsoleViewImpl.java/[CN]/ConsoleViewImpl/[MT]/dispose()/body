{
  myState=myState.dispose();
  if (myEditor != null) {
    cancelAllFlushRequests();
    mySpareTimeAlarm.cancelAllRequests();
    disposeEditor();
synchronized (LOCK) {
      myBuffer.clear();
    }
    myEditor=null;
    myHyperlinks=null;
  }
  if (myJLayeredPane != null) {
    myJLayeredPane.dispose();
  }
}
