{
  MyInputValidator validator=new MyValidator(project,directory);
  if (ApplicationManager.getApplication().isUnitTestMode()) {
    try {
      return validator.create("test");
    }
 catch (    Exception e) {
      throw new RuntimeException(e);
    }
  }
 else {
    Messages.showInputDialog(project,IdeBundle.message("prompt.enter.new.file.name"),IdeBundle.message("title.new.file"),Messages.getQuestionIcon(),null,validator);
    return validator.getCreatedElements();
  }
}
