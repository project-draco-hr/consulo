{
  boolean checkSource=true;
  int old=myIsDisabledCount.getAndDecrement();
  if (old <= 0) {
    checkSource=false;
    LOG.error("enableFormatting()/disableFormatting() not paired. DisabledLevel = " + old + ", request source: "+ myDisabledFormattingRequests);
  }
  Source source=myDisabledFormattingRequests.pollLast();
  if (checkSource && requestSource != source) {
    LOG.error("enableFormatting()/disableFormatting() from different sources detected! 'Disable source': " + source + ", 'enable source': "+ requestSource);
  }
}
