{
  setRepositoryPath(myDir.getPath() + "/repo");
  String mirrorPath=FileUtil.toSystemIndependentName(myDir.getPath() + "/mirror");
  updateSettingsXmlFully("<settings>" + "  <mirrors>" + "    <mirror>"+ "      <id>foo</id>"+ "      <url>file://" + mirrorPath + "</url>"+ "      <mirrorOf>*</mirrorOf>"+ "    </mirror>"+ "  </mirrors>"+ "</settings>");
  importProject("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<dependencies>"+ "  <dependency>"+ "    <groupId>junit</groupId>"+ "    <artifactId>junit</artifactId>"+ "    <version>4.0</version>"+ "  </dependency>"+ "</dependencies>");
  assertFalse(new File(getRepositoryFile(),"junit").exists());
  assertTrue(myProjectsTree.findProject(myProjectPom).hasUnresolvedArtifacts());
}
