{
  if (SystemInfo.isWindows) {
    try {
      new WinProcess(process).killRecursively();
      return true;
    }
 catch (    Throwable e) {
      LOG.info("Cannot kill process tree");
      LOG.info(e);
    }
  }
 else   if (SystemInfo.isUnix) {
    return UnixProcessManager.sendSigKillToProcessTree(process);
  }
  return false;
}
