{
  if ((e.getChangeFlags() & HierarchyEvent.SHOWING_CHANGED) > 0) {
    ApplicationManager.getApplication().invokeLater(new Runnable(){
      public void run(){
        if (myComponent.isShowing()) {
          myTarget.showNotify();
        }
 else {
          myTarget.hideNotify();
        }
      }
    }
,ModalityState.stateForComponent(myComponent));
  }
}
