{
  scheduleUpdateTask(new Runnable(){
    public void run(){
      final PomNode pomNode=myFileToNode.get(project.getFile());
      if (pomNode != null) {
        myFileToNode.remove(project.getFile());
        pomNode.removeFromParent();
      }
      myRoot.updateProfileNodes();
      myTree.repaint();
    }
  }
);
}
