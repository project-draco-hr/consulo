{
  if (isUnitTestMode()) {
    r.run();
    return;
  }
  if (myToolWindow == null)   return;
  MavenUtil.invokeLater(myProject,new Runnable(){
    public void run(){
      if (!myToolWindow.isVisible())       return;
      if (myStructure == null) {
        initStructure();
      }
      r.run();
    }
  }
);
}
