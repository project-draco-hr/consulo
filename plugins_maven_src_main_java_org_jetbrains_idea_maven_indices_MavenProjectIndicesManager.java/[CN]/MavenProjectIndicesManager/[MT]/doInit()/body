{
  if (ApplicationManager.getApplication().isUnitTestMode()) {
    updateIndicesList();
  }
  getMavenProjectManager().addListener(new MavenProjectsManager.Listener(){
    public void activated(){
      updateIndicesList();
    }
    public void setIgnored(    MavenProject project,    boolean on){
    }
  }
);
  getMavenProjectManager().addProjectsTreeListener(new MavenProjectsTree.ListenerAdapter(){
    @Override public void projectsReadQuickly(    List<MavenProject> projects){
      updateIndicesList();
    }
    @Override public void projectRead(    MavenProject project,    org.apache.maven.project.MavenProject nativeMavenProject){
      updateIndicesList();
    }
    @Override public void projectResolved(    MavenProject project){
      updateIndicesList();
    }
    @Override public void projectRemoved(    MavenProject project){
      updateIndicesList();
    }
  }
);
}
