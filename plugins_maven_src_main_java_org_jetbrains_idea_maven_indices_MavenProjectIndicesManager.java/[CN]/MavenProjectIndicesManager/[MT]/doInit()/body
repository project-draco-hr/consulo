{
  if (ApplicationManager.getApplication().isUnitTestMode()) {
    updateIndicesList();
  }
  getMavenProjectManager().addListener(new MavenProjectsManager.ListenerAdapter(){
    @Override public void activate(){
      updateIndicesList();
    }
    public void projectReadQuickly(    MavenProject project){
      updateIndicesList();
    }
    @Override public void projectRead(    MavenProject project,    org.apache.maven.project.MavenProject nativeMavenProject){
      updateIndicesList();
    }
    @Override public void projectRemoved(    MavenProject project){
      updateIndicesList();
    }
  }
);
}
