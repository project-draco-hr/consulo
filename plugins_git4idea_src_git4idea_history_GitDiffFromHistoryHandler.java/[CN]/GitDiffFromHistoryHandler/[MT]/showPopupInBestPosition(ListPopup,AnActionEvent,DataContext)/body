{
  if (event.getInputEvent() instanceof MouseEvent) {
    if (!event.getPlace().equals(ActionPlaces.UPDATE_POPUP)) {
      popup.show(new RelativePoint((MouseEvent)event.getInputEvent()));
    }
 else {
      popup.showInBestPositionFor(dataContext);
    }
  }
 else {
    popup.showInBestPositionFor(dataContext);
  }
}
