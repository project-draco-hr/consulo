{
  PsiComment comment=JavaPsiFacade.getInstance(containingClass.getProject()).getElementFactory().createCommentFromText(newText.toString(),null);
  PsiElement tag=PsiTreeUtil.getChildOfType(comment,PsiDocTag.class);
  PsiElement ref=PsiTreeUtil.getChildOfType(tag,PsiDocMethodOrFieldRef.class);
  return replace(ref);
}
