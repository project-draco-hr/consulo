{
  addMouseListener(new MouseAdapter(){
    public void mouseClicked(    final MouseEvent e){
      if (e.getClickCount() == 2) {
        processDoubleClick();
      }
    }
  }
);
  setIconTextGap(0);
  new StatusBarInformer(this,null,status){
    protected String getText(){
      final FileEditorManager editor=getEditor();
      if (editor == null)       return null;
      return isReadOnlyApplicable(editor.getSelectedFiles()) ? UIBundle.message("read.only.attr.panel.double.click.to.toggle.attr.tooltip.text") : null;
    }
  }
;
}
