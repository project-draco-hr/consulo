{
  if (keymap.getName().equals(KeymapManager.DEFAULT_IDEA_KEYMAP)) {
    return !SystemInfo.isMac;
  }
 else   if (keymap.getName().equals(KeymapManager.MAC_OS_X_KEYMAP)) {
    return SystemInfo.isMac;
  }
 else   if (keymap.getName().equals("Default for GNOME") || keymap.getName().equals("Default for KDE") || keymap.getName().equals("Default for XWin")) {
    return SystemInfo.isLinux;
  }
  return true;
}
