{
  try {
    if (!iHaveEventsToFire)     return;
    if (hasWriteAction) {
      fireEventsInWriteAction();
    }
 else {
      ApplicationManager.getApplication().runWriteAction(new Runnable(){
        @Override public void run(){
          fireEventsInWriteAction();
        }
      }
);
    }
  }
  finally {
    mySemaphore.up();
  }
}
