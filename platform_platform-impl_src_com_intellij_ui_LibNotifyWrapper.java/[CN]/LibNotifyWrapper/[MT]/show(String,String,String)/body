{
  if (!available)   return;
  try {
    showNotification(title,description,iconPath);
  }
 catch (  UnsatisfiedLinkError ule) {
    available=false;
    NotificationGroup.balloonGroup("Linux configuration messages");
    Notifications.Bus.notify(new Notification("Linux configuration messages","Notification library has not been installed",message,NotificationType.INFORMATION));
  }
}
