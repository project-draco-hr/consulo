{
  Calendar cal=Calendar.getInstance();
  cal.setTime(new Date());
  cal.add(Calendar.DAY_OF_YEAR,-1);
  Date oneDayBefore=cal.getTime();
  cal.add(Calendar.DAY_OF_YEAR,-6);
  Date oneWeekBefore=cal.getTime();
  DumbAwareAction allAction=new DumbAwareAction(ALL){
    @Override public void actionPerformed(    AnActionEvent e){
      myAfter=null;
      myBefore=null;
      applyFilters();
      setValue(ALL);
    }
  }
;
  return new DefaultActionGroup(allAction,new DateAction(oneDayBefore,"Last 24 hours"),new DateAction(oneWeekBefore,"Last 7 days"),new SelectAction());
}
