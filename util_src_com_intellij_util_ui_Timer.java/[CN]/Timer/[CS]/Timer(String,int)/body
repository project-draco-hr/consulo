{
  myName=name;
  mySpan=span;
  myThread=new Thread(name){
    public void run(){
      try {
        while (true) {
          sleep(mySpan);
          if (myRestartRequest) {
            myRestartRequest=false;
            continue;
          }
          if (myRunning) {
            onTimer();
          }
        }
      }
 catch (      InterruptedException e) {
      }
      myDisposed=true;
    }
  }
;
}
