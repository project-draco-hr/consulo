{
  if ((~(STYLE_PLAIN | STYLE_BOLD | STYLE_ITALIC| STYLE_STRIKEOUT| STYLE_WAVED| STYLE_UNDERLINE| STYLE_BOLD_DOTTED_LINE| STYLE_SEARCH_MATCH| STYLE_SMALLER| STYLE_OPAQUE) & style) != 0) {
    throw new IllegalArgumentException("Wrong style: " + style);
  }
  myBgColor=bgColor;
  myFgColor=fgColor;
  myWaveColor=waveColor;
  myStyle=style;
}
