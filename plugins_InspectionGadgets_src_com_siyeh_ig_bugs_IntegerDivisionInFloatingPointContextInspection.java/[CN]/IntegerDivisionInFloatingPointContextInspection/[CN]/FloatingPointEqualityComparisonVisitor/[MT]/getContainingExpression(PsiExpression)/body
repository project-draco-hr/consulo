{
  final PsiElement parent=expression.getParent();
  if (parent == null) {
    return expression;
  }
  if (parent instanceof PsiPrefixExpression || parent instanceof PsiPostfixExpression || parent instanceof PsiBinaryExpression|| parent instanceof PsiParenthesizedExpression) {
    return getContainingExpression((PsiExpression)parent);
  }
  return expression;
}
