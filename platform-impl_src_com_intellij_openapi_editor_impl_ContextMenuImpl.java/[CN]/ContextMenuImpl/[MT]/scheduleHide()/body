{
  if (myHideTimer != null && myHideTimer.isRunning()) {
    myHideTimer.stop();
    myHideTimer=null;
  }
  myHideTimer=new Timer(1500,new ActionListener(){
    public void actionPerformed(    final ActionEvent e){
      toggleContextToolbar(false);
    }
  }
);
  myHideTimer.setRepeats(false);
  myHideTimer.start();
}
