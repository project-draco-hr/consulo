def lookup(self, id):
    'locate a node based on:\n            - revision number or str(revision number)\n            - nodeid or subset of hex nodeid\n        '
    n = self._match(id)
    if (n is not None):
        return n
    n = self._partialmatch(id)
    if n:
        return n
    raise LookupError(id, self.indexfile, _('no match found'))
