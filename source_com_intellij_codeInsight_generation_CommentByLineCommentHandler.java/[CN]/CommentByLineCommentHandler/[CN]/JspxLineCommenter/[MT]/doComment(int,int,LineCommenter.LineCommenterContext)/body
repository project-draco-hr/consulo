{
  final Document myDocument=context.getDocument();
  if (!initialized) {
    PsiDocumentManager.getInstance(context.getProject()).commitAllDocuments();
    initialize(context);
    initialized=true;
  }
  if (myJavaComment) {
    myDocument.insertString(offset,"//");
  }
 else {
    super.doComment(offset,line,context);
  }
}
