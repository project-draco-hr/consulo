{
  if (c1.getAnchor() == null) {
    c1.setAnchor(c2.getAnchor());
  }
 else {
    if (c2.getAnchor() == null) {
      c2.setAnchor(c1.getAnchor());
    }
 else {
      JComponent anchor=c1.getAnchor().getPreferredSize().getWidth() > c2.getAnchor().getPreferredSize().getWidth() ? c1.getAnchor() : c2.getAnchor();
      c2.setAnchor(anchor);
      c1.setAnchor(anchor);
    }
  }
}
