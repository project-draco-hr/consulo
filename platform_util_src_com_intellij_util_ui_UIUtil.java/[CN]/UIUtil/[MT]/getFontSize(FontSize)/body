{
  int defSize=getLabelFont().getSize();
switch (size) {
case BIGGER:
    return Math.max(defSize + JBUI.scale(2f),JBUI.scale(13f));
case SMALL:
  return Math.max(defSize - JBUI.scale(2f),JBUI.scale(11f));
case MINI:
return Math.max(defSize - JBUI.scale(4f),JBUI.scale(9f));
default :
return defSize;
}
}
