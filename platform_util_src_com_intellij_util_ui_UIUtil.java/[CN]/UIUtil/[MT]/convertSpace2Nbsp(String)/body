{
  StringBuilder result=new StringBuilder();
  int currentPos=0;
  int braces=0;
  while (currentPos < html.length()) {
    String each=html.substring(currentPos,currentPos + 1);
    if ("<".equals(each)) {
      braces++;
    }
 else     if (">".equals(each)) {
      braces--;
    }
    if (" ".equals(each) && braces == 0) {
      result.append("&nbsp;");
    }
 else {
      result.append(each);
    }
    currentPos++;
  }
  return result.toString();
}
