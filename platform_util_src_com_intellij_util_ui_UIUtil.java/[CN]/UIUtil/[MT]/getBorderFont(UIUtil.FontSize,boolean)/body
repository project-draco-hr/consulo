{
  Font defFont=getBorderFont();
  if (size == UIUtil.FontSize.SMALL) {
    defFont=defFont.deriveFont(defFont.getSize() - 2f);
    if (isBold) {
      defFont=defFont.deriveFont(Font.BOLD);
    }
    return defFont;
  }
  if (isBold) {
    return defFont.deriveFont(Font.BOLD);
  }
  return defFont;
}
