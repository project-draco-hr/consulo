{
  Font defFont=getLabelFont();
  if (base == null)   base=defFont;
switch (size) {
case SMALL:
    return base.deriveFont(defFont.getSize() * (SystemInfo.isMac ? 0.85f : 0.8f));
case MINI:
  return base.deriveFont(defFont.getSize() * 0.7f);
default :
return base.deriveFont(defFont.getSize());
}
}
