{
  int i1;
  for (i1=x; i1 <= x1; i1+=2) {
    drawLine(g,i1,y,i1,y);
  }
  for (i1=i1 != x1 + 1 ? y + 2 : y + 1; i1 <= y1; i1+=2) {
    drawLine(g,x1,i1,x1,i1);
  }
  for (i1=i1 != y1 + 1 ? x1 - 2 : x1 - 1; i1 >= x; i1-=2) {
    drawLine(g,i1,y1,i1,y1);
  }
  for (i1=i1 != x - 1 ? y1 - 2 : y1 - 1; i1 >= y; i1-=2) {
    drawLine(g,x,i1,x,i1);
  }
}
