{
  if (x == x1) {
    int minY=Math.min(y,y1);
    int maxY=Math.max(y,y1);
    graphics.drawLine(x,minY + 1,x1,maxY - 1);
  }
 else   if (y == y1) {
    int minX=Math.min(x,x1);
    int maxX=Math.max(x,x1);
    graphics.drawLine(minX + 1,y,maxX - 1,y1);
  }
 else {
    drawLine(graphics,x,y,x1,y1);
  }
}
