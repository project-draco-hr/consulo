{
  final JComponent repositoryPanel=super.createCenterPanel();
  final JPanel wrapper=new JPanel(new GridBagLayout());
  final GridBagConstraints gb=new GridBagConstraints(0,0,1,1,0,0,GridBagConstraints.NORTHWEST,GridBagConstraints.BOTH,new Insets(1,1,1,1),0,0);
  gb.weightx=1;
  gb.weighty=1;
  wrapper.add(repositoryPanel,gb);
  ++gb.gridy;
  gb.fill=GridBagConstraints.NONE;
  gb.weightx=1;
  gb.weighty=0;
  gb.fill=GridBagConstraints.HORIZONTAL;
  wrapper.add(createFolderPanel(),gb);
  return wrapper;
}
