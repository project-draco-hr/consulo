{
  myAlarm.cancelAllRequests();
  myAlarm.addRequest(new Runnable(){
    public void run(){
      final ValidationResult result=doValidate();
      if (result == null) {
        clearProblems();
      }
 else {
        reportProblem(result.message,result.component);
      }
      if (!myDisposed) {
        scheduleValidation();
      }
    }
  }
,myValidationDelay,ModalityState.current());
}
