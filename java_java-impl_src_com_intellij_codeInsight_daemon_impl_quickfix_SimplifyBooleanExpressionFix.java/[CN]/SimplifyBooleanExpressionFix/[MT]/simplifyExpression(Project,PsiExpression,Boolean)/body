{
  PsiExpression expression;
  if (subExpressionValue == null) {
    expression=subExpression;
  }
 else {
    PsiExpression constExpression=JavaPsiFacade.getInstance(project).getElementFactory().createExpressionFromText(Boolean.toString(subExpressionValue.booleanValue()),subExpression);
    expression=(PsiExpression)subExpression.replace(constExpression);
  }
  while (expression.getParent() instanceof PsiExpression) {
    expression=(PsiExpression)expression.getParent();
  }
  simplifyExpression(expression);
}
