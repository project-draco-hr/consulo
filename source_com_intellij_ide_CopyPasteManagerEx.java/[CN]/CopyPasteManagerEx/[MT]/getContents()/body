{
  Transferable contents=null;
  for (int i=0; i < 3; i++) {
    try {
      contents=getSystemClipboardContents();
    }
 catch (    IllegalStateException e) {
      try {
        Thread.sleep(50);
      }
 catch (      InterruptedException e1) {
      }
      continue;
    }
    break;
  }
  return contents;
}
