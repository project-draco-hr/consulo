{
  final Map<String,PsiMethod> map=new HashMap<String,PsiMethod>();
  final PsiMethod[] methods=includeSuperClass ? psiClass.getAllMethods() : psiClass.getMethods();
  for (  PsiMethod method : methods) {
    if (filterMethods(method))     continue;
    if (acceptSetters && PropertyUtil.isSimplePropertySetter(method) || acceptGetters && PropertyUtil.isSimplePropertyGetter(method)) {
      map.put(PropertyUtil.getPropertyName(method),method);
    }
  }
  return map;
}
