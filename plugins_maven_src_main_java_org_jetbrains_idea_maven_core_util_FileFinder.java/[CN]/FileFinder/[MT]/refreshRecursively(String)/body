{
  final Ref<VirtualFile> dir=new Ref<VirtualFile>();
  ApplicationManager.getApplication().runWriteAction(new Runnable(){
    public void run(){
      dir.set(LocalFileSystem.getInstance().refreshAndFindFileByPath(path));
      if (!dir.isNull()) {
        dir.get().refresh(false,true);
      }
    }
  }
);
  return dir.get();
}
