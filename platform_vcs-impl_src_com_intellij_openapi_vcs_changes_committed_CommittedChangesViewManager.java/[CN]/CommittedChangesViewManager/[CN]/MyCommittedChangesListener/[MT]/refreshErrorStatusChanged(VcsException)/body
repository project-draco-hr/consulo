{
  ApplicationManager.getApplication().invokeLater(new Runnable(){
    public void run(){
      if (myComponent != null && !myProject.isDisposed()) {
        if (lastError != null) {
          myComponent.setErrorText("Error refreshing changes: " + lastError.getMessage());
        }
 else {
          myComponent.setErrorText("");
        }
      }
    }
  }
);
}
