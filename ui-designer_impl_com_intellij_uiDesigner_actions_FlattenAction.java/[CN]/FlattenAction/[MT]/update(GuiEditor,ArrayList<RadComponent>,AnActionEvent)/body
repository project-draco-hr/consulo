{
  for (  RadComponent c : selection) {
    if (!(c instanceof RadContainer)) {
      e.getPresentation().setVisible(false);
      return;
    }
    RadContainer container=(RadContainer)c;
    if (!container.isGrid() || !container.getParent().isGrid()) {
      e.getPresentation().setVisible(false);
      return;
    }
  }
}
