def getzcpaths():
    ip = getip()
    if ip.startswith('127.'):
        return
    server = Zeroconf.Zeroconf(ip)
    l = listener()
    Zeroconf.ServiceBrowser(server, '_hg._tcp.local.', l)
    time.sleep(1)
    server.close()
    for value in l.found.values():
        name = value.name[:value.name.index('.')]
        url = ('http://%s:%s%s' % (socket.inet_ntoa(value.address), value.port, value.properties.get('path', '/')))
        yield (('zc-' + name), url)
