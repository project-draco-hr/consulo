{
  builder.addOkAction().setText("Apply");
  builder.addCancelAction();
  builder.setCancelOperation(new Runnable(){
    public void run(){
      if (Messages.showYesNoDialog(getProject(),"Are you sure you want to exit without applying changes?","Cancel Visual Merge",Messages.getQuestionIcon()) == 0) {
        builder.getDialogWrapper().close(DialogWrapper.CANCEL_EXIT_CODE);
      }
    }
  }
);
  new AllResolvedListener(mergePanel,builder.getDialogWrapper());
}
