{
  JBPopupFactory.getInstance().createListPopup(new BaseListPopupStep<ConfigurationErrorQuickFix>(null,myDescription.getFixes()){
    @NotNull @Override public String getTextFor(    ConfigurationErrorQuickFix value){
      return value.getActionName();
    }
    @Override public PopupStep onChosen(    final ConfigurationErrorQuickFix selectedValue,    boolean finalChoice){
      return doFinalStep(new Runnable(){
        @Override public void run(){
          selectedValue.performFix();
        }
      }
);
    }
  }
).show(relativePoint);
}
