{
  if (myDownloadListener != null) {
    MavenServerManager.getInstance().removeDownloadListener(myDownloadListener);
    myDownloadListener=null;
  }
  if (myIndices != null) {
    try {
      myIndices.close();
    }
 catch (    Exception e) {
      MavenLog.LOG.error("",e);
    }
    myIndices=null;
  }
  clear();
  myIndexer=null;
}
