{
  final UsageViewImpl[] usageView=new UsageViewImpl[]{null};
  final Application application=ApplicationManager.getApplication();
  application.runProcessWithProgressSynchronously(createSearchRunnable(usageView,presentation,searchFor,searcherFactory,showNotFoundMessage,showPanelIfOnlyOneUsage,application),getProgressTitle(presentation),true,myProject);
  return usageView[0];
}
