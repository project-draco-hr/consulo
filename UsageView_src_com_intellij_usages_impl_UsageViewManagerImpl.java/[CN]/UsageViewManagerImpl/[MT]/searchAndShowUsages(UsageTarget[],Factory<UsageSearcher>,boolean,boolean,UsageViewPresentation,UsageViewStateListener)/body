{
  final UsageViewImpl[] usageView=new UsageViewImpl[]{null};
  FindUsagesProcessPresentation processPresentation=new FindUsagesProcessPresentation();
  processPresentation.setShowNotFoundMessage(showNotFoundMessage);
  processPresentation.setShowPanelIfOnlyOneUsage(showPanelIfOnlyOneUsage);
  final Application application=ApplicationManager.getApplication();
  application.runProcessWithProgressSynchronously(new SearchForUsagesRunnable(usageView,presentation,searchFor,searcherFactory,processPresentation,listener),getProgressTitle(presentation),true,myProject);
  return usageView[0];
}
