{
  SoftWrapModelImpl model=myEditor.getSoftWrapModel();
  if (!myEditor.offsetToVisualPosition(marker.getStartOffset(),true,false).equals(myRangeMarkerStartPosition) && model.getSoftWrap(marker.getStartOffset()) == null || !myEditor.offsetToVisualPosition(marker.getEndOffset(),false,true).equals(myRangeMarkerEndPosition) && model.getSoftWrap(marker.getEndOffset()) == null) {
    myRangeMarkerStartPosition=null;
    myRangeMarkerEndPosition=null;
  }
}
