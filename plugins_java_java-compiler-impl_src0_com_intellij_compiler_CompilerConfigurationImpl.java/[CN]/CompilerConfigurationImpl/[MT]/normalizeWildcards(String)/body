{
  wildcardPattern=StringUtil.replace(wildcardPattern,"\\!","!");
  wildcardPattern=StringUtil.replace(wildcardPattern,".","\\.");
  wildcardPattern=StringUtil.replace(wildcardPattern,"*?",".+");
  wildcardPattern=StringUtil.replace(wildcardPattern,"?*",".+");
  wildcardPattern=StringUtil.replace(wildcardPattern,"*",".*");
  wildcardPattern=StringUtil.replace(wildcardPattern,"?",".");
  return wildcardPattern;
}
