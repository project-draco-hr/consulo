{
  int i=rowAtPoint(e.getPoint());
  if (i < 0) {
    return;
  }
  if (myEditorRow > 0 && myEditorRow == i + 1 && e.getID() == MouseEvent.MOUSE_PRESSED) {
    hideEditor();
  }
 else {
    ListSelectionModel selectionModel=getSelectionModel();
    if (myEditorRow < 0 && selectionModel.isSelectedIndex(i) && selectionModel.getMinSelectionIndex() == selectionModel.getMaxSelectionIndex() && e.getID() == MouseEvent.MOUSE_PRESSED) {
      showEditor(i);
    }
  }
  ArrangementListRowDecorator decorator=myComponents.get(i);
  if (decorator != null) {
    decorator.onMousePress(e);
  }
}
