{
  myAlarm.cancelAllRequests();
  if (myRow < 0) {
    return;
  }
  String namePattern=myNameField.getText();
  if (StringUtil.isEmpty(namePattern)) {
    namePattern=null;
  }
  if (Comparing.equal(namePattern,myRuleInfo.getNamePattern())) {
    return;
  }
  myRuleInfo.setNamePattern(namePattern);
  apply();
}
