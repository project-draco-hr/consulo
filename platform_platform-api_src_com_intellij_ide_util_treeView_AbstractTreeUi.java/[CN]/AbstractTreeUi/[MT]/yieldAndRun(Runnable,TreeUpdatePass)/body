{
  myYieldingPasses.add(pass);
  myYieldingNow=true;
  yield(new Runnable(){
    public void run(){
      if (isReleased())       return;
      runOnYieldingDone(new Runnable(){
        public void run(){
          if (isReleased())           return;
          executeYieldingRequest(runnable,pass);
        }
      }
);
    }
  }
);
  return true;
}
