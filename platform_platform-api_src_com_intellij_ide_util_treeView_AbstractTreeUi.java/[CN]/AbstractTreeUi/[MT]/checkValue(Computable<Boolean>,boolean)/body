{
  boolean toRelease=true;
  try {
    if (attempt) {
      if (!attemptLock()) {
        toRelease=false;
        return computable.compute();
      }
    }
 else {
      acquireLock();
    }
    return computable.compute();
  }
 catch (  InterruptedException e) {
    LOG.info(e);
    return null;
  }
 finally {
    if (toRelease) {
      releaseLock();
    }
  }
}
