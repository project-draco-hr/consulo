{
  processInnerChange(new Runnable(){
    public void run(){
      if (willAdjustSelection) {
        final TreePath path=getPathFor(node);
        if (myTree.isPathSelected(path)) {
          myTree.removeSelectionPath(path);
        }
      }
      myTreeModel.removeNodeFromParent(node);
    }
  }
);
}
