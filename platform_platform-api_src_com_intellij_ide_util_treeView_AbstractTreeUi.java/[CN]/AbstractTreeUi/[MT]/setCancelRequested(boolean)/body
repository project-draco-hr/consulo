{
  try {
    if (isUnitTestingMode()) {
      myStateLock.writeLock().acquire();
    }
 else {
      myStateLock.writeLock().attempt(Sync.ONE_SECOND);
    }
    myCancelRequest.set(requested);
  }
 catch (  InterruptedException e) {
    return;
  }
 finally {
    myStateLock.writeLock().release();
  }
}
