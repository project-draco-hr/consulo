{
  assertIsDispatchThread();
  final ActionCallback done=new ActionCallback();
  if (myResettingToReadyNow.get()) {
    getReady(this).notify(done);
  }
 else   if (isReady()) {
    resetToReadyNow();
    done.setDone();
  }
 else {
    myCancelRequest.set(true);
    getReady(this).notify(done);
  }
  maybeReady();
  return done;
}
