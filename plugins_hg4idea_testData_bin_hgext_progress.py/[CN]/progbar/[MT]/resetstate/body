def resetstate(self):
    self.topics = []
    self.printed = False
    self.lastprint = (time.time() + float(self.ui.config('progress', 'delay', default=3)))
    self.indetcount = 0
    self.refresh = float(self.ui.config('progress', 'refresh', default=0.1))
    self.order = self.ui.configlist('progress', 'format', default=['topic', 'bar', 'number'])
