{
  if (isDispatchThread()) {
    runnable.run();
    return;
  }
  if (isExceptionalThreadWithReadAccess()) {
    LaterInvocator.invokeAndWait(runnable,modalityState);
    return;
  }
  if (holdsReadLock()) {
    LOG.error("Calling invokeAndWait from read-action leads to possible deadlock.");
  }
  LaterInvocator.invokeAndWait(runnable,modalityState);
}
