{
  if (isReadAccessAllowed()) {
    action.run();
  }
 else {
    assertReadActionAllowed();
    try {
      myActionsLock.readLock().acquire();
      action.run();
    }
 catch (    InterruptedException e) {
      throw new RuntimeInterruptedException(e);
    }
 finally {
      myActionsLock.readLock().release();
    }
  }
}
