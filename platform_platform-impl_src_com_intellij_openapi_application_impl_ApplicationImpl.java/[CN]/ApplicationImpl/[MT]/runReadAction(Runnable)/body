{
  if (isReadAccessAllowed()) {
    action.run();
  }
 else {
    assertReadActionAllowed();
    try {
      myLock.readLock().lockInterruptibly();
    }
 catch (    InterruptedException e) {
      throw new RuntimeInterruptedException(e);
    }
    try {
      action.run();
    }
  finally {
      myLock.readLock().unlock();
    }
  }
}
