{
  new NotificationGroup(IdeBundle.message("update.available.group"),NotificationDisplayType.STICKY_BALLOON,true).createNotification(IdeBundle.message("updates.info.dialog.title"),message,NotificationType.INFORMATION,new NotificationListener(){
    @Override public void hyperlinkUpdate(    @NotNull Notification notification,    @NotNull HyperlinkEvent event){
      notification.expire();
      showUpdatesDialogRunnable.run();
    }
  }
).notify(null);
}
