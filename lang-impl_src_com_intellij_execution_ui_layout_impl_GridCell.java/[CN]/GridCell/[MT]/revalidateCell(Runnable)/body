{
  if (myContents.size() == 0) {
    myPlaceholder.removeAll();
    myTabs.removeAllTabs();
  }
 else {
    if (myPlaceholder.isNull() && !isDetached()) {
      myPlaceholder.setContent(myTabs);
    }
    contentAction.run();
  }
  restoreProportions();
  myTabs.revalidate();
  myTabs.repaint();
}
