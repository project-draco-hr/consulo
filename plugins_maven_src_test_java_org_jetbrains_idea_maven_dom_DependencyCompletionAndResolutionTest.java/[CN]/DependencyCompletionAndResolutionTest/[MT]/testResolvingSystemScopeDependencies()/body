{
  String libPath=myIndicesFixture.getRepositoryHelper().getTestDataPath("local1/junit/junit/4.0/junit-4.0.jar");
  updateProjectPom("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<dependencies>"+ "  <dependency>"+ "    <groupId>xxx</groupId>"+ "    <artifactId>xxx</artifactId>"+ "    <version><caret>xxx</version>"+ "    <scope>system</scope>"+ "    <systemPath>" + libPath + "</systemPath>"+ "  </dependency>"+ "</dependencies>");
  PsiReference ref=getReferenceAtCaret(myProjectPom);
  assertNotNull(ref);
  assertEquals(getPsiFile(LocalFileSystem.getInstance().findFileByPath(libPath)),ref.resolve());
  checkHighlighting();
}
