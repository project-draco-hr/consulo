{
  myLogMode=logMode;
  if (logMode) {
    new Runnable(){
      @Override public void run(){
        setText(myLogMessage + " (" + StringUtil.decapitalize(DateFormatUtil.formatPrettyDateTime(myLogTime))+ ")");
        myLogAlarm.addRequest(this,30000);
      }
    }
.run();
  }
 else {
    setText(nonLogText);
    myLogAlarm.cancelAllRequests();
  }
}
