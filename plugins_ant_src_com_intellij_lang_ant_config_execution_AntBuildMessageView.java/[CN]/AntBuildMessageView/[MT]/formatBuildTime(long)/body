{
  if (seconds == 0) {
    return "0s";
  }
  final StringBuilder sb=new StringBuilder();
  if (seconds >= 3600) {
    sb.append(seconds / 3600).append("h ");
    seconds%=3600;
  }
  if (seconds >= 60 || sb.length() > 0) {
    sb.append(seconds / 60).append("m ");
    seconds%=60;
  }
  if (seconds > 0 || sb.length() > 0) {
    sb.append(seconds).append("s");
  }
  return sb.toString();
}
