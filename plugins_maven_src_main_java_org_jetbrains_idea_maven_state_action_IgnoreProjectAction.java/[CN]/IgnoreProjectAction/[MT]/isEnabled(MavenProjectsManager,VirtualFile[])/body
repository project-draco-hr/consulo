{
  int ignoredCount=0;
  int individuallyIgnoredCount=0;
  for (  VirtualFile file : files) {
    if (projectsManager.isIgnored(file)) {
      ignoredCount++;
    }
    if (projectsManager.getIgnoredFlag(file)) {
      individuallyIgnoredCount++;
    }
  }
  return (ignoredCount == 0 || ignoredCount == files.length) && (individuallyIgnoredCount == 0 || individuallyIgnoredCount == files.length);
}
