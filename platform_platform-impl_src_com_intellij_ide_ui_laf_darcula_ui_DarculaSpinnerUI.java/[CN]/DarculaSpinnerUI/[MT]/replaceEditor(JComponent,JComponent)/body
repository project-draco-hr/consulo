{
  super.replaceEditor(oldEditor,newEditor);
  if (newEditor != null) {
    newEditor.getComponents()[0].addFocusListener(new FocusAdapter(){
      @Override public void focusGained(      FocusEvent e){
        spinner.repaint();
      }
      @Override public void focusLost(      FocusEvent e){
        spinner.repaint();
      }
    }
);
  }
}
