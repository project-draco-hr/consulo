{
  if (filename.contains("/") || filename.contains("\\") || filename.contains(":")) {
    return false;
  }
  final File tempFile=new File(FileUtil.getTempDirectory() + File.separator + filename);
  if (!tempFile.exists()) {
    try {
      if (!tempFile.createNewFile()) {
        return false;
      }
      FileUtil.delete(tempFile);
    }
 catch (    IOException e) {
      return false;
    }
  }
  return true;
}
