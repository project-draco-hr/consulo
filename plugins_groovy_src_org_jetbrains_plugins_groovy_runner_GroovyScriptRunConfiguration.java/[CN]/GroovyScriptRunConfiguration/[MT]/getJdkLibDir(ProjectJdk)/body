{
  String jdkLibDir;
  if (SystemInfo.isMac) {
    String path=jdk.getBinPath();
    jdkLibDir=new File(new File(path).getParentFile().getParentFile(),"Classes").getAbsolutePath();
  }
 else {
    String path=jdk.getRtLibraryPath();
    jdkLibDir=new File(path).getParentFile().getAbsolutePath();
  }
  return jdkLibDir;
}
