{
  if (myDumb) {
    myDumb=false;
  }
 else {
    myDumb=true;
    final Project project=PlatformDataKeys.PROJECT.getData(e.getDataContext());
    if (project == null)     return;
    CacheUpdater updater=new CacheUpdater(){
      public int getNumberOfPendingUpdateJobs(){
