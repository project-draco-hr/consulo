{
  int number=durations.size();
  int[] duration=durations.toArray();
  int total=0;
  for (  int d : duration) {
    total+=d;
  }
  return myName + " Statistics" + (totalNumberRecorded == number ? "" : " (" + totalNumberRecorded + " events was recorded in total, but only last "+ number+ " are reported here)")+ ":"+ "\nEvent number:     "+ number+ "\nTotal time spent: "+ total+ "ms"+ "\nAverage duration: "+ (number == 0 ? 0 : total / number)+ "ms"+ "\nMedian  duration: "+ ArrayUtil.averageAmongMedians(duration,3)+ "ms"+ "\nMax  duration:    "+ (maxDuration == 65535 ? ">" : "")+ maxDuration+ "ms (it was '"+ maxDurationDescription+ "')";
}
