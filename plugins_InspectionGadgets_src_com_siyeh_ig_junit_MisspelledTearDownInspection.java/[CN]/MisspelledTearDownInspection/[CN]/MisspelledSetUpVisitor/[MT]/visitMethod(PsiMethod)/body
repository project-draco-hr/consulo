{
  final PsiClass aClass=method.getContainingClass();
  if (aClass == null) {
    return;
  }
  if (!ClassUtils.isSubclass(aClass,"junit.framework.TestCase")) {
    return;
  }
  final String methodName=method.getName();
  if (!"teardown".equals(methodName)) {
    return;
  }
  registerMethodError(method);
}
