{
  final Project project=PlatformDataKeys.PROJECT.getData(dataContext);
  if (project == null) {
    return false;
  }
  final ResourceBundle bundle=ResourceBundleUtil.getResourceBundleFromDataContext(dataContext);
  if (bundle == null) {
    return false;
  }
  ResourceBundleEditor editor=ResourceBundleUtil.getEditor(dataContext);
  return (editor == null || editor.getState(FileEditorStateLevel.NAVIGATION).getPropertyName() == null) && bundle.getPropertiesFiles(project).size() > 1;
}
