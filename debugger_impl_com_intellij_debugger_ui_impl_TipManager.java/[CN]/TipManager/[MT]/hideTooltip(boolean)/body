{
  if (myTipPopup == null)   return;
  if (now) {
    myHideAlarm.cancelAllRequests();
    myTipPopup.hide();
    myTipPopup=null;
    myCurrentTooltip=null;
  }
 else {
    myHideAlarm.addRequest(new Runnable(){
      public void run(){
        if (myInsideComponent) {
          hideTooltip(true);
        }
      }
    }
,100);
  }
}
