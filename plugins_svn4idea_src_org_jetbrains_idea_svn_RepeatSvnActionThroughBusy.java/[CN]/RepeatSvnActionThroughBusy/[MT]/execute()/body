{
  while (true) {
    try {
      executeImpl();
      break;
    }
 catch (    SVNException e) {
      if (SvnVcs.ourBusyExceptionProcessor.process(e)) {
        if (myCnt > 0) {
          try {
            Thread.sleep(myTimeout * (REPEAT - myCnt + 1));
          }
 catch (          InterruptedException e1) {
          }
          --myCnt;
          continue;
        }
      }
      throw e;
    }
  }
}
