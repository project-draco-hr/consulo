{
  ApplicationManager.getApplication().invokeAndWait(new Runnable(){
    public void run(){
      if (myProject.isDisposed())       return;
      if (!isDumb()) {
        updateStarted();
        myProcessedItems=0;
        myTotalItems=0;
        myCurrentUpdateTotal=0;
      }
    }
  }
,ModalityState.defaultModalityState());
}
