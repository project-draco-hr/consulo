{
  while (true) {
    if (myProject.isDisposed())     break;
    queryNeededFiles(runner,indicator);
    processFiles(runner,indicator);
    updatingDone(runner);
    try {
      if (myProject.isDisposed())       break;
      runner=myUpdatesQueue.poll(100,TimeUnit.MILLISECONDS);
      if (runner == null)       return;
    }
 catch (    InterruptedException e) {
      LOG.info(e);
      break;
    }
  }
}
