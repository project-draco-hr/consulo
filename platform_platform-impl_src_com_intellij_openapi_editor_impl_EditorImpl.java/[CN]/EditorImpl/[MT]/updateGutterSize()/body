{
  assertIsDispatchThread();
  if (!updatingSize) {
    updatingSize=true;
    SwingUtilities.invokeLater(new Runnable(){
      @Override public void run(){
        try {
          if (!isDisposed()) {
            myGutterComponent.updateSize();
          }
        }
  finally {
          updatingSize=false;
        }
      }
    }
);
  }
}
