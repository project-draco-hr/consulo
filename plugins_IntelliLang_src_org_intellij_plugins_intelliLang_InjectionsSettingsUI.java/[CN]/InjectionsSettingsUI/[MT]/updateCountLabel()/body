{
  int placesCount=0;
  int enablePlacesCount=0;
  for (  BaseInjection injection : myInjections) {
    for (    InjectionPlace place : injection.getInjectionPlaces()) {
      placesCount++;
      if (place.isEnabled())       enablePlacesCount++;
    }
  }
  if (!myInjections.isEmpty()) {
    final StringBuilder sb=new StringBuilder();
    sb.append(myInjections.size()).append(" injection").append(myInjections.size() > 1 ? "s" : "").append(" (").append(enablePlacesCount).append(" of ").append(placesCount).append(" place").append(placesCount > 1 ? "s" : "").append(" enabled) ");
    myCountLabel.setText(sb.toString());
  }
 else {
    myCountLabel.setText("no injections configured ");
  }
}
