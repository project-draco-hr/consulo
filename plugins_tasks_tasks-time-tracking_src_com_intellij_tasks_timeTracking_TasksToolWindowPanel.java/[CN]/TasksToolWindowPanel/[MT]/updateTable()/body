{
  myTableModel.setItems(ContainerUtil.filter(myTaskManager.getLocalTasks(),new Condition<LocalTask>(){
    @Override public boolean value(    final LocalTask task){
      return task.isActive() || (task.getTimeSpent() != 0 && (myTimeTrackingManager.getState().showClosedTasks || !myTaskManager.isLocallyClosed(task)));
    }
  }
));
}
