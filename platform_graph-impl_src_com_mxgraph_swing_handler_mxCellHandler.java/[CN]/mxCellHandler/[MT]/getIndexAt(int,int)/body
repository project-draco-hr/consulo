{
  if (handles != null && isHandlesVisible()) {
    int tol=graphComponent.getTolerance();
    Rectangle rect=new Rectangle(x - tol / 2,y - tol / 2,tol,tol);
    for (int i=handles.length - 1; i >= 0; i--) {
      if (isHandleVisible(i) && handles[i].intersects(rect)) {
        return i;
      }
    }
  }
  return -1;
}
