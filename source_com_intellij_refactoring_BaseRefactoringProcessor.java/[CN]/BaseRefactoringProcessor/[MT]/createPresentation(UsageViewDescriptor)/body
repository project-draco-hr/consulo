{
  UsageViewPresentation presentation=new UsageViewPresentation();
  presentation.setTabText("Refactoring preview");
  presentation.setTargetsNodeText(descriptor.getProcessedElementsHeader());
  presentation.setShowReadOnlyStatusAsRed(true);
  presentation.setShowCancelButton(true);
  presentation.setCodeUsagesString(descriptor.getCodeReferencesText(1,1));
  presentation.setNonCodeUsagesString(descriptor.getCommentReferencesText(1,1));
  return presentation;
}
