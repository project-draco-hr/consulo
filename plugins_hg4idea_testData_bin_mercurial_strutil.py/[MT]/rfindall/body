def rfindall(haystack, needle, start=0, end=None):
    if (end is None):
        end = len(haystack)
    if (end < 0):
        end += len(haystack)
    if (start < 0):
        start += len(haystack)
    while (end >= 0):
        c = haystack.rfind(needle, start, end)
        if (c == (-1)):
            break
        yield c
        end = (c - 1)
