{
  if (cr == null)   return "";
  final Ref<VcsException> ref=new Ref<VcsException>();
  final String s=new BackgroundSynchronousInvisibleComputable<String>(){
    @Override protected String runImpl(){
      try {
        return cr.getContent();
      }
 catch (      VcsException e) {
        ref.set(e);
        return null;
      }
    }
  }
.compute();
  if (!ref.isNull()) {
    throw ref.get();
  }
  return s == null ? "" : s;
}
