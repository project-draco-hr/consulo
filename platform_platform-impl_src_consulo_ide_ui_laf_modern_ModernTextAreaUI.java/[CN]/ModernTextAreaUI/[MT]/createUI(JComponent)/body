{
  final ModernTextAreaUI ui=new ModernTextAreaUI(c);
  c.addFocusListener(new FocusAdapter(){
    @Override public void focusGained(    FocusEvent e){
      ui.myFocused=true;
      c.repaint();
    }
    @Override public void focusLost(    FocusEvent e){
      ui.myFocused=false;
      c.repaint();
    }
  }
);
  return ui;
}
