{
  final List<ActionItem> items=makeActionItemsFromActionGroup(actionGroup,dataContext,showNumbers,useAlphaAsNumbers,showDisabledActions,honorActionMnemonics);
  return new ActionPopupStep(items,title,component,showNumbers || honorActionMnemonics && itemsHaveMnemonics(items),new Condition<AnAction>(){
    @Override public boolean value(    AnAction action){
      return defaultOptionIndex >= 0 && defaultOptionIndex < items.size() && items.get(defaultOptionIndex).getAction().equals(action);
    }
  }
,autoSelectionEnabled,showDisabledActions);
}
