{
  BreakpointPanel panel=new BreakpointPanel(new MethodBreakpointPropertiesPanel(project),new BreakpointPanelAction[]{new SwitchViewAction(),new GotoSourceAction(project){
    public void actionPerformed(    ActionEvent e){
      super.actionPerformed(e);
      parentDialog.close(DialogWrapper.OK_EXIT_CODE);
    }
  }
,new ViewSourceAction(project),new RemoveAction(project),new ToggleGroupByClassesAction(),new ToggleFlattenPackagesAction()},getBreakpointCategory(),"Method Breakpoints",HelpID.METHOD_BREAKPOINTS);
  panel.getTree().setGroupByMethods(false);
  return panel;
}
