{
  if (!myModes.contains(mode)) {
    throw new IllegalArgumentException(String.format("Can't activate given mode (%s) to the %s object. Reason: it's not contained in registered modes (%s)",mode,getClass().getName(),myModes));
  }
  myMode.onChosen(false);
  myMode=mode;
  myMode.onChosen(true);
  update();
}
