{
  if (oldInfo != newInfo) {
    if (myProject != null) {
      myProject.getMessageBus().syncPublisher(TabsListener.TOPIC).selectionChanged(oldInfo,newInfo);
    }
    for (    TabsListener eachListener : myTabListeners) {
      if (eachListener != null) {
        eachListener.selectionChanged(oldInfo,newInfo);
      }
    }
  }
}
