{
  if (blocked && !myPaintBlocked) {
    if (takeSnapshot) {
      if (getWidth() > 0 && getHeight() > 0) {
        myImage=new BufferedImage(getWidth(),getHeight(),BufferedImage.TYPE_INT_ARGB);
        final Graphics2D g=myImage.createGraphics();
        super.paint(g);
        g.dispose();
      }
    }
  }
  myPaintBlocked=blocked;
  if (!myPaintBlocked) {
    if (myImage != null) {
      myImage.flush();
    }
    myImage=null;
    repaint();
  }
}
