{
  myView=view;
  ContentManager contentManager=getContentManager();
  myContent=PeerFactory.getInstance().getContentFactory().createContent(view,view.getCurrentProfileName() == null ? InspectionsBundle.message("inspection.results.title") : InspectionsBundle.message("inspection.results.for.profile.toolwindow.title",view.getCurrentProfileName()),false);
  myContent.setDisposer(myView);
  contentManager.addContent(myContent);
  contentManager.setSelectedContent(myContent);
  ToolWindowManager.getInstance(myProject).getToolWindow(ToolWindowId.INSPECTION).activate(null);
}
