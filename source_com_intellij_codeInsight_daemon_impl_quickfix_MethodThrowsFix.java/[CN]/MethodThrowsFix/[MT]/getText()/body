{
  String methodName=PsiFormatUtil.formatMethod(myMethod,PsiSubstitutor.EMPTY,PsiFormatUtil.SHOW_NAME | (myShowContainingClass ? PsiFormatUtil.SHOW_CONTAINING_CLASS : 0),0);
  final String text=MessageFormat.format("{0} ''{1}'' {2} ''{3}'' throws list",new Object[]{(myShouldThrow ? "Add" : "Remove"),myThrowsClassType.getCanonicalText(),(myShouldThrow ? "to" : "from"),methodName});
  return text;
}
