{
  StringBuffer s=new StringBuffer(text);
  for (int i=0; i < s.length(); i++) {
    if (s.charAt(i) == '\\' && (i + 1 < s.length())) {
switch (s.charAt(i + 1)) {
case 'n':
        s.setCharAt(i,'\n');
      s.deleteCharAt(i + 1);
    break;
case '\\':
  s.deleteCharAt(i + 1);
break;
case 't':
s.setCharAt(i,'\t');
s.deleteCharAt(i + 1);
break;
case ' ':
s.deleteCharAt(i);
break;
}
}
}
return s.toString();
}
