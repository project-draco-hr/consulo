{
  if (myPopupRef != null) {
    final JBPopup popup=myPopupRef.get();
    if (popup != null && !popup.isVisible()) {
      myPopupRef=null;
    }
 else     if (popup == null)     myPopupRef=null;
  }
  if (myPopupRef == null) {
    myPopupRef=new WeakReference<JBPopup>(NotificationsListPanel.show(getProject(),this));
  }
}
