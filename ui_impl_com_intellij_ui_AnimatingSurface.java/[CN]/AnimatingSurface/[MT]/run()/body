{
  Thread me=Thread.currentThread();
  while (thread == me && !isShowing() || getSize().width == 0) {
    try {
      Thread.sleep(300);
    }
 catch (    InterruptedException e) {
    }
  }
  while (thread == me) {
    repaint();
    try {
      Thread.sleep(sleepAmount);
    }
 catch (    InterruptedException e) {
    }
  }
  thread=null;
}
