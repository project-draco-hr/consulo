{
  if (s == null) {
    super.setText(null);
  }
 else {
    final int length=s.length();
    final String alignedText;
    if (length < 100 && !s.contains("\n")) {
      alignedText=s;
    }
 else {
      alignedText=s.replaceAll("(\n)|(\r\n)"," \n ");
    }
    super.setText(" " + alignedText + " ");
  }
}
