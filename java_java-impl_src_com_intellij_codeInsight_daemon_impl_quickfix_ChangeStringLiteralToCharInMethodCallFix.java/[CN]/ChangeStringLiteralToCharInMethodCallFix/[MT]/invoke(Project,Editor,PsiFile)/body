{
  if (!FileModificationService.getInstance().prepareFileForWrite(file))   return;
  final Object value=myLiteral.getValue();
  if (value != null && value.toString().length() == 1) {
    final PsiElementFactory factory=JavaPsiFacade.getInstance(project).getElementFactory();
    final PsiExpression newExpression=factory.createExpressionFromText(quote(convertedValue(),!isString(myLiteral.getType())),myLiteral.getParent());
    myLiteral.replace(newExpression);
  }
}
