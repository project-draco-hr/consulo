{
  try {
    if (myTempDir == null) {
      File th=getTempHome();
      myTempDir=th != null ? FileUtil.createTempDirectory(th,"unitTest",null) : FileUtil.createTempDirectory("unitTest",null);
      myFilesToDelete.add(myTempDir);
    }
    return myTempDir;
  }
 catch (  IOException e) {
    throw new RuntimeException("Cannot create temp dir",e);
  }
}
