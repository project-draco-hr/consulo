{
  try {
    if (myDataDirName == null) {
      myDataDirName=findAvailableDataDir();
    }
    myData=openData(myDataDirName);
  }
 catch (  Exception e) {
    try {
      close();
    }
 catch (    Exception ignore) {
      MavenLog.warn(e);
    }
    FileUtil.delete(getCurrentDataDir());
    myDataDirName=null;
    myUpdateTimestamp=null;
    throw e;
  }
}
