{
  StartupManager.getInstance(myProject).registerPostStartupActivity(new Runnable(){
    public void run(){
      myPaletteWindow=new PaletteWindow(myProject);
      ToolWindowManager.getInstance(myProject).registerToolWindow("Palette",new JScrollPane(myPaletteWindow),ToolWindowAnchor.RIGHT);
    }
  }
);
}
