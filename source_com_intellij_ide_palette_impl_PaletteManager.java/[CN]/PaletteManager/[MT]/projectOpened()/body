{
  StartupManager.getInstance(myProject).registerPostStartupActivity(new Runnable(){
    public void run(){
      myPaletteWindow=new PaletteWindow(myProject);
      myPaletteToolWindow=ToolWindowManager.getInstance(myProject).registerToolWindow("Palette",myPaletteWindow,ToolWindowAnchor.RIGHT);
    }
  }
);
}
