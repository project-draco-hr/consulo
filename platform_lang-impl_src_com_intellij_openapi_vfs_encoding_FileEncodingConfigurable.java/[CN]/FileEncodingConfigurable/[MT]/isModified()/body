{
  if (isEncodingModified())   return true;
  EncodingProjectManager encodingManager=EncodingProjectManager.getInstance(myProject);
  Map<VirtualFile,Charset> editing=myTreeView.getValues();
  Map<VirtualFile,Charset> mapping=EncodingProjectManager.getInstance(myProject).getAllMappings();
  boolean same=editing.equals(mapping) && Comparing.equal(encodingManager.getDefaultCharsetForPropertiesFiles(null),mySelectedCharsetForPropertiesFiles) && encodingManager.isUseUTFGuessing(null) == myAutodetectUTFEncodedFilesCheckBox.isSelected() && encodingManager.isNative2AsciiForPropertiesFiles(null) == myTransparentNativeToAsciiCheckBox.isSelected();
  return !same;
}
