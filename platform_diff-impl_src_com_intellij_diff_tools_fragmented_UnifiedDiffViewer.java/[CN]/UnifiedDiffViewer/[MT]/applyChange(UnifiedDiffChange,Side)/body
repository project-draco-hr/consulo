{
  if (myStateIsOutOfDate || myChangedBlockData == null)   return;
  Side affectedSide=sourceSide.other();
  if (!isEditable(affectedSide,true))   return;
  Document document1=getDocument(Side.LEFT);
  Document document2=getDocument(Side.RIGHT);
  LineFragment lineFragment=change.getLineFragment();
  DiffUtil.applyModification(affectedSide.select(document1,document2),affectedSide.getStartLine(lineFragment),affectedSide.getEndLine(lineFragment),sourceSide.select(document1,document2),sourceSide.getStartLine(lineFragment),sourceSide.getEndLine(lineFragment));
  scheduleRediff();
}
