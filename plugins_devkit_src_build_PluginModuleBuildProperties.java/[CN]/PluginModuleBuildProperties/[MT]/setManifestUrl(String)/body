{
  if (manifestUrl == null || manifestUrl.length() == 0) {
    myManifestFilePointer=null;
  }
 else {
    ApplicationManager.getApplication().runWriteAction(new Runnable(){
      public void run(){
        myManifestFilePointer=VirtualFilePointerManager.getInstance().create(LocalFileSystem.getInstance().refreshAndFindFileByPath(manifestUrl.replace(File.separatorChar,'/')),null);
      }
    }
);
  }
}
