{
  final JBPopupFactory popupFactory=JBPopupFactory.getInstance();
  final ListPopupStep popupStep=popupFactory.createActionsStep(myGroup,e.getDataContext(),false,false,myGroup.getTemplatePresentation().getText(),myToolbarComponent,false,0);
  popupFactory.createListPopup(popupStep).showUnderneathOf(myToolbarComponent);
}
