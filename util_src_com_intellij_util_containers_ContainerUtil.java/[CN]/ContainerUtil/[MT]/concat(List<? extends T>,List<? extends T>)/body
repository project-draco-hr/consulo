{
  return new AbstractList<T>(){
    public T get(    final int index){
      T t;
      if (index < list1.size()) {
        t=list1.get(index);
      }
 else {
        t=list2.get(index - list1.size());
      }
      return t;
    }
    public int size(){
      return list1.size() + list2.size();
    }
  }
;
}
