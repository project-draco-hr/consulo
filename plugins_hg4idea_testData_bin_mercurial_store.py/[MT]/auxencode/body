def auxencode(path):
    res = []
    for n in path.split('/'):
        if n:
            base = n.split('.')[0]
            if (base and (base in _windows_reserved_filenames)):
                ec = ('~%02x' % ord(n[2]))
                n = ((n[0:2] + ec) + n[3:])
            if (n[(-1)] in '. '):
                n = (n[:(-1)] + ('~%02x' % ord(n[(-1)])))
        res.append(n)
    return '/'.join(res)
