{
  StringBuilder buffer=new StringBuilder();
  for (int i=0; i < text.length(); i++) {
    char c=text.charAt(i);
    if ((i == 0 && (c == ' ' || c == '\t')) || c == '\n' || c == ESCAPE_SYMBOL || SYMBOLS_TO_ESCAPE.contains(c)) {
      buffer.append(ESCAPE_SYMBOL);
    }
    buffer.append(c);
  }
  return buffer.toString();
}
