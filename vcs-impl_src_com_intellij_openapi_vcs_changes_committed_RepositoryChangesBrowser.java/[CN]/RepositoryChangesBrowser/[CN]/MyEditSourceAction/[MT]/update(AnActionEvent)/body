{
  super.update(event);
  event.getPresentation().setIcon(myEditSourceIcon);
  event.getPresentation().setText("Edit Source");
  if ((!ModalityState.NON_MODAL.equals(ModalityState.current())) || CommittedChangesBrowserUseCase.IN_AIR.equals(event.getDataContext().getData(CommittedChangesBrowserUseCase.CONTEXT_NAME))) {
    event.getPresentation().setEnabled(false);
  }
}
