{
  if (name == null)   return null;
  for (  NamedScope scope : myScopes) {
    if (name.equals(scope.getName()))     return scope;
  }
  final List<NamedScope> predefinedScopes=getPredefinedScopes();
  for (  NamedScope scope : predefinedScopes) {
    if (name.equals(scope.getName()))     return scope;
  }
  return null;
}
