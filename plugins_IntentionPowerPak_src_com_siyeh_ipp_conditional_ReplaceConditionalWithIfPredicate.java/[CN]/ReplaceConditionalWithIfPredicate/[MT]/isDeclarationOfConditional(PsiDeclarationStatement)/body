{
  final PsiElement[] variables=declarationStatement.getDeclaredElements();
  if (variables.length != 1) {
    return false;
  }
  if (!(variables[0] instanceof PsiLocalVariable)) {
    return false;
  }
  final PsiLocalVariable variable=(PsiLocalVariable)variables[0];
  final PsiExpression initializer=variable.getInitializer();
  if (initializer == null) {
    return false;
  }
  if (!(initializer instanceof PsiConditionalExpression)) {
    return false;
  }
  final PsiConditionalExpression condition=(PsiConditionalExpression)initializer;
  return condition.getThenExpression() != null && condition.getElseExpression() != null;
}
