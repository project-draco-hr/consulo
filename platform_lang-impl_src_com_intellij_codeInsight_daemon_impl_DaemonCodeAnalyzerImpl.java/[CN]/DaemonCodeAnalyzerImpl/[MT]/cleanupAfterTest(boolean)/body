{
  if (!myProject.isOpen())   return;
  stopProcess(false);
  if (dispose) {
    projectClosed();
    Disposer.dispose(myStatusBarUpdater);
    myStatusBarUpdater=null;
    Disposer.dispose(myDaemonListeners);
    myDaemonListeners=null;
  }
  setUpdateByTimerEnabled(false);
  waitForTermination();
}
