{
  setUpdateByTimerEnabled(false);
  myDisableCount++;
  ApplicationManager.getApplication().assertIsDispatchThread();
  Disposer.register(parentDisposable,new Disposable(){
    @Override public void dispose(){
      myDisableCount--;
      if (myDisableCount == 0) {
        setUpdateByTimerEnabled(true);
      }
    }
  }
);
}
