{
  if (!createStoreFolder())   return;
  StatisticsUnit unit=getUnit(unitNumber);
  String path=getPathToUnit(unitNumber);
  try {
    OutputStream out=new BufferedOutputStream(new FileOutputStream(path));
    out=new ScrambledOutputStream(out);
    try {
      unit.write(out);
    }
  finally {
      out.close();
    }
  }
 catch (  IOException e) {
    Messages.showMessageDialog("Error saving system information: " + e.getMessage(),"Error",Messages.getErrorIcon());
  }
}
