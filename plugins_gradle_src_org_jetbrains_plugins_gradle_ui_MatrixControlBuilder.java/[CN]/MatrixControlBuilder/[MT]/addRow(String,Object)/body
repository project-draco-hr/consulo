{
  if (values.length != myModel.getColumnCount() - 1) {
    StringBuilder columns=new StringBuilder();
    for (int i=1, max=myModel.getColumnCount(); i < max; i++) {
      columns.append(myModel.getColumnName(i)).append(", ");
    }
    if (columns.length() > 2) {
      columns.setLength(columns.length() - 2);
    }
    throw new IllegalArgumentException(String.format("Can't add row '%s' to the matrix control. Reason: the row specifies incorrect number of values (%d, expected %d). " + "Registered columns: %s. Given values: %s",name,values.length,myModel.getColumnCount() - 1,columns,Arrays.toString(values)));
  }
  Object[] rowData=new Object[values.length + 1];
  rowData[0]=name;
  System.arraycopy(values,0,rowData,1,values.length);
  myModel.addRow(rowData);
}
