{
  return new UsageSearcher(){
    @Override public void generate(    @NotNull final Processor<Usage> processor){
      try {
        myIsFindInProgress=true;
        FindInProjectUtil.findUsages(myFindModelCopy,myPsiDirectory,myProject,true,new AdapterProcessor<UsageInfo,Usage>(processor,UsageInfo2UsageAdapter.CONVERTER),myProcessPresentation);
      }
  finally {
        myIsFindInProgress=false;
      }
    }
  }
;
}
