{
  return with(new PatternCondition<XmlTag>(){
    public boolean accepts(    @NotNull final XmlTag xmlTag,    final MatchingContext matchingContext,    @NotNull final TraverseContext traverseContext){
      final XmlTag parent=xmlTag.getParentTag();
      return parent != null && pattern.getCondition().accepts(parent,matchingContext,traverseContext) && parent.getSubTags()[0] == xmlTag;
    }
  }
);
}
