{
  if (pos == null) {
    return null;
  }
  final PsiClass psiClass=getClassAt(pos);
  if (psiClass == null) {
    return null;
  }
  if (!PsiUtil.isLocalOrAnonymousClass(psiClass)) {
    final String name=getNonAnonymousClassName(psiClass);
    if (name != null) {
      return getJVMRawText(name);
    }
  }
  return new JVMClassAt(pos);
}
