{
  myConsumer=consumer;
  myQueue=new ArrayDeque<T>();
  myMaxSize=maxSize;
  myLock=new Object();
  myConsumerThread=new Thread(new Runnable(){
    @Override public void run(){
synchronized (myLock) {
        while (myIsAlive) {
          if (!myQueue.isEmpty()) {
            myConsumer.consume(myQueue.removeFirst());
          }
 else {
            try {
              myLock.wait(10);
            }
 catch (            InterruptedException e) {
            }
          }
        }
      }
    }
  }
);
}
