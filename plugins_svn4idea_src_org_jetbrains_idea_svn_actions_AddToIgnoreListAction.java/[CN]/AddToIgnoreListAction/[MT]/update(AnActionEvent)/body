{
  final Presentation presentation=e.getPresentation();
  presentation.setVisible(true);
  presentation.setEnabled(true);
  presentation.setText(myActionName,false);
  presentation.setDescription(SvnBundle.message((myUseCommonExtension) ? "action.Subversion.Ignore.MatchExtension.description" : "action.Subversion.Ignore.ExactMatch.description",myActionName));
}
