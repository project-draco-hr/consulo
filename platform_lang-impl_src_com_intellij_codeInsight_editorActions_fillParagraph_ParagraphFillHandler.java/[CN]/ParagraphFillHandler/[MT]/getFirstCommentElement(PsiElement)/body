{
  PsiElement prevSibling=element.getPrevSibling();
  PsiElement result=element;
  while (prevSibling instanceof PsiComment || (prevSibling instanceof PsiWhiteSpace && StringUtil.countChars(prevSibling.getText(),'\n') <= 1)) {
    final String text=prevSibling.getText();
    if (prevSibling instanceof PsiComment && StringUtil.isEmptyOrSpaces(StringUtil.trimStart(text.trim(),getPrefix(element)))) {
      break;
    }
    if (prevSibling instanceof PsiComment)     result=prevSibling;
    prevSibling=prevSibling.getPrevSibling();
  }
  return result;
}
