{
  int oldLastId=myLastId;
  myLastComponent.dispatchEvent(new MouseEvent(myLastComponent,myLastId=MouseEvent.MOUSE_RELEASED,System.currentTimeMillis(),getModifiers(),myX,myY,clickCount,false,myButton));
  if (oldLastId == MouseEvent.MOUSE_PRESSED) {
    myLastComponent.dispatchEvent(new MouseEvent(myLastComponent,myLastId=MouseEvent.MOUSE_CLICKED,System.currentTimeMillis(),getModifiers(),myX,myY,clickCount,false,myButton));
  }
  myLastComponent=null;
  return this;
}
