{
  if (!Registry.is("actionSystem.mouseGesturesEnabled"))   return;
  if (SystemInfo.isMacOSSnowLeopard) {
    try {
      if (myListeners.containsKey(frame)) {
        remove(frame);
      }
      Object listener=new MacGestureAdapter(this,frame);
      myListeners.put(frame,listener);
    }
 catch (    Throwable e) {
      LOG.debug(e);
    }
  }
}
