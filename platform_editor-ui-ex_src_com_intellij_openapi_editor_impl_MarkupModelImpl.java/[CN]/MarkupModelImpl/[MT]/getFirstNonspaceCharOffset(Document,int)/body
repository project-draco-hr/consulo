{
  int lineStart=doc.getLineStartOffset(lineNumber);
  int lineEnd=doc.getLineEndOffset(lineNumber);
  CharSequence text=doc.getCharsSequence();
  int offset=lineStart;
  for (int i=lineStart; i < lineEnd; i++) {
    char c=text.charAt(i);
    if (c != ' ' && c != '\t') {
      offset=i;
      break;
    }
  }
  return offset;
}
