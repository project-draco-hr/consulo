{
  final Color bg=myHovered ? BreadcrumbsComponent.HOVERED_BG_COLOR : myLight ? BreadcrumbsComponent.LIGHT_BG_COLOR : mySelected ? BreadcrumbsComponent.CURRENT_BG_COLOR : BreadcrumbsComponent.DEFAULT_BG_COLOR;
  final Color text=myHovered ? BreadcrumbsComponent.DEFAULT_TEXT_COLOR : myLight ? BreadcrumbsComponent.LIGHT_TEXT_COLOR : BreadcrumbsComponent.DEFAULT_TEXT_COLOR;
  final Color border=myHovered ? BreadcrumbsComponent.DEFAULT_BORDER_COLOR : myLight ? BreadcrumbsComponent.LIGHT_BORDER_COLOR : BreadcrumbsComponent.DEFAULT_BORDER_COLOR;
  CrumbPainter.paint(this,height,g2,text,bg,border);
}
