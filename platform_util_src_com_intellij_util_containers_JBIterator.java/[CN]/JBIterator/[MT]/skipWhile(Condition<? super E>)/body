{
  return addOp(new Op<Condition<? super E>>(condition){
    boolean active=true;
    @Override public Object apply(    Object o){
      if (active && condition.value((E)o))       return SKIP;
      active=false;
      return o;
    }
    @Override public String toString(){
      return "skipWhile:" + super.toString();
    }
  }
);
}
