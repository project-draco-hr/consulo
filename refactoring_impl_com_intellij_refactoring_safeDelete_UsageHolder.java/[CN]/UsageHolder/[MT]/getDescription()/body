{
  final int nonCodeUsages=getNonCodeUsagesNumber();
  final int unsafeUsages=getUnsafeUsagesNumber();
  if (unsafeUsages == 0)   return null;
  final PsiElement element=myElementPointer.getElement();
  if (unsafeUsages == nonCodeUsages) {
    return RefactoringBundle.message("0.has.1.usages.in.comments.and.strings",RefactoringUIUtil.getDescription(element,true),unsafeUsages);
  }
  return RefactoringBundle.message("0.has.1.usages.that.are.not.safe.to.delete.of.those.2",RefactoringUIUtil.getDescription(element,true),unsafeUsages,nonCodeUsages);
}
