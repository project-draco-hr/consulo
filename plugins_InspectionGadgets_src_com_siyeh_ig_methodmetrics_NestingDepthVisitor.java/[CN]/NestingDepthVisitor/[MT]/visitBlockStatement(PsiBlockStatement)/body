{
  final PsiElement parent=statement.getParent();
  final boolean isAlreadyCounted=parent instanceof PsiDoWhileStatement || parent instanceof PsiWhileStatement || parent instanceof PsiForStatement|| parent instanceof PsiIfStatement|| parent instanceof PsiSynchronizedStatement|| parent instanceof PsiTryStatement;
  if (!isAlreadyCounted) {
    enterScope();
  }
  super.visitBlockStatement(statement);
  if (!isAlreadyCounted) {
    exitScope();
  }
}
