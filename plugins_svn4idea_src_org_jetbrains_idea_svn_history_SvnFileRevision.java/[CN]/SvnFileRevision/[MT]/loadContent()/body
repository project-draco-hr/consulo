{
  ByteArrayOutputStream contents=new ByteArrayOutputStream();
  ConentLoader loader=new ConentLoader(myURL,contents,myRevision,myPegRevision);
  if (ApplicationManager.getApplication().isDispatchThread() && !myRevision.isLocal()) {
    ApplicationManager.getApplication().runProcessWithProgressSynchronously(loader,"Loading Remote File Content",false,null);
  }
 else {
    loader.run();
  }
  if (loader.getException() == null) {
    myContent=contents.toByteArray();
  }
 else {
    myContent=new byte[0];
  }
}
