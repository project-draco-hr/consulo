{
  new WriteAction(){
    @Override protected void run(    final Result result){
      if (!isRegistered(facet)) {
        return;
      }
      ModifiableFacetModel model=FacetManager.getInstance(facet.getModule()).createModifiableModel();
      model.removeFacet(facet);
      model.commit();
    }
  }
.execute();
}
