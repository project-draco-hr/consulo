{
  super("PACKAGE_FILTER",5);
  getTextEditor().addKeyListener(new KeyAdapter(){
    public void keyPressed(    final KeyEvent e){
      if (e.getKeyCode() == KeyEvent.VK_ENTER) {
        e.consume();
        filter();
        myPackages.requestFocus();
      }
 else       if (e.getKeyCode() == KeyEvent.VK_ESCAPE) {
        onEscape(e);
      }
    }
  }
);
}
