{
  if (decoration.getLabelFont() != null) {
    setFont(decoration.getLabelFont());
  }
  Insets insets=decoration.getLabelInsets();
  if (insets != null) {
    Insets current=ourDefaultDecorator.getDecoration().getLabelInsets();
    setBorder(new EmptyBorder(getValue(current.top,insets.top) + 2,getValue(current.left,insets.left),getValue(current.bottom,insets.bottom) + 1,getValue(current.right,insets.right)));
  }
}
