{
  if (FONT_FACE == null || FONT_SIZE <= 0) {
    if (SystemInfo.isWindows) {
      Font font=(Font)Toolkit.getDefaultToolkit().getDesktopProperty("win.messagebox.font");
      if (font != null) {
        FONT_FACE=font.getName();
        FONT_SIZE=font.getSize();
      }
 else {
        setDefaultFontSettings();
      }
    }
 else {
      setDefaultFontSettings();
    }
  }
}
