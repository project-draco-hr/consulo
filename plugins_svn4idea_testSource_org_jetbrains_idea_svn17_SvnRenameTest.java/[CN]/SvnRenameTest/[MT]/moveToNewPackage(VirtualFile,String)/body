{
  new WriteCommandAction.Simple(myProject){
    @Override public void run(){
      try {
        final VirtualFile dir=myWorkingCopyDir.createChildDirectory(this,packageName);
        file.move(this,dir);
      }
 catch (      IOException e) {
        throw new RuntimeException(e);
      }
    }
  }
.execute().throwException();
}
