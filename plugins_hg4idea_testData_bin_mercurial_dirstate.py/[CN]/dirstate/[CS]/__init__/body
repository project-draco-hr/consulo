def __init__(self, opener, ui, root):
    'Create a new dirstate object.\n\n        opener is an open()-like callable that can be used to open the\n        dirstate file; root is the root of the directory tracked by\n        the dirstate.\n        '
    self._opener = opener
    self._root = root
    self._rootdir = os.path.join(root, '')
    self._dirty = False
    self._dirtypl = False
    self._ui = ui
