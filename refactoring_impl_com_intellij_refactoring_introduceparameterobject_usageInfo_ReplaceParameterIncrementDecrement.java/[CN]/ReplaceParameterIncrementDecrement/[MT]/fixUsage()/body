{
  final PsiJavaToken sign=expression instanceof PsiPrefixExpression ? ((PsiPrefixExpression)expression).getOperationSign() : ((PsiPostfixExpression)expression).getOperationSign();
  final String operator=sign.getText();
  final String strippedOperator=operator.substring(0,operator.length() - 1);
  final String newExpression=newParameterName + '.' + parameterSetterName+ '('+ newParameterName+ '.'+ parameterGetterName+ "()"+ strippedOperator+ "1)";
  MutationUtils.replaceExpression(newExpression,expression);
}
