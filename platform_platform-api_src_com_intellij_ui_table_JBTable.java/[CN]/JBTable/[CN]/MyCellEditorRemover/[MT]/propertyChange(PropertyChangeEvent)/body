{
  if (!isEditing()) {
    return;
  }
  Component c=myFocusManager.getFocusOwner();
  while (c != null) {
    if (c == JBTable.this) {
      return;
    }
 else     if (c instanceof Window) {
      if (c == SwingUtilities.getWindowAncestor(JBTable.this)) {
        getCellEditor().stopCellEditing();
      }
      break;
    }
    c=c.getParent();
  }
}
