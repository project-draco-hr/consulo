{
  String pathToJUnit="junit/junit/4.0";
  File junitDir=new File(getRepositoryPath(),pathToJUnit);
  removeFromLocalRepository(pathToJUnit);
  assertFalse(junitDir.exists());
  createProjectPom("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<parent>"+ "  <groupId>junit</groupId>"+ "  <artifactId>junit</artifactId>"+ "  <version>4.0</version>"+ "</parent>");
  importProject();
  assertModules("project");
  assertTrue(junitDir.exists());
  assertEquals("junit",myProjectsTree.getRootProjects().get(0).getParentId().artifactId);
  assertTrue(new File(junitDir,"junit-4.0.pom").exists());
}
