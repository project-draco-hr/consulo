{
  final Runnable runnable=updateFoldRegions(editor,firstTime,false);
  return new Runnable(){
    @Override public void run(){
      if (runnable != null) {
        runnable.run();
      }
      if (firstTime && !isFoldingsInitializedInEditor(editor)) {
        initFolding(editor);
      }
    }
  }
;
}
