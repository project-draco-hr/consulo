{
  if (!marker.isValid()) {
    return false;
  }
  Color color=marker.getErrorStripeMarkColor();
  if (color == null) {
    return false;
  }
  int visLine=myEditor.logicalToVisualPosition(new LogicalPosition(marker.getDocument().getLineNumber(marker.getStartOffset()),0)).line;
  int visEndLine=myEditor.logicalToVisualPosition(new LogicalPosition(marker.getDocument().getLineNumber(marker.getEndOffset()),0)).line;
  int y=visibleLineToYPosition(visLine,scrollBarHeight);
  int endY=visibleLineToYPosition(visEndLine,scrollBarHeight);
  if (m_x >= 0 && m_x <= getWidth() && m_y >= y && m_y <= y + Math.max(endY - y,2)) {
    return true;
  }
  return false;
}
