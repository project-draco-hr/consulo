{
  try {
    while (true) {
      boolean read=readAvailable();
      if (isStopped) {
        break;
      }
      TimeoutUtil.sleep(mySleepingPolicy.getTimeToSleep(read));
    }
  }
 catch (  IOException e) {
    LOG.info(e);
  }
catch (  Exception e) {
    LOG.error(e);
  }
 finally {
    try {
      close();
    }
 catch (    IOException e) {
      LOG.error("Can't close stream",e);
    }
  }
}
