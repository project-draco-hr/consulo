{
  getSettings().ALIGN_MULTILINE_TERNARY_OPERATION=true;
  doMethodTest("String s = x == 0 ? \"hello\" :\n" + "                x == 5 ? \"something else\" :\n" + "                        x > 0 ? \"bla, bla\" :\n"+ "                                \"\";","String s = x == 0 ? \"hello\" :\n" + "           x == 5 ? \"something else\" :\n" + "           x > 0 ? \"bla, bla\" :\n"+ "           \"\";");
  getSettings().TERNARY_OPERATION_SIGNS_ON_NEXT_LINE=true;
  doMethodTest("int someVariable = a ?\n" + "x :\n" + "y;","int someVariable = a ?\n" + "                   x :\n" + "                   y;");
}
