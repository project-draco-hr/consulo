  doTextTest("class Foo {\n" + "    void foo() {\n" + "        fooFooFoo(1,2);"+ "    }\n"+ "}","class Foo {\n" + "    void foo() {\n" + "        fooFooFoo(1,\n"+ "                2);\n"+ "    }\n"+ "}");
