def read(self, bufsize=None):
    'Read a list of queued inotify events.\n\n        If bufsize is zero, only return those events that can be read\n        immediately without blocking.  Otherwise, block until events are\n        available.'
    events = []
    for evt in inotify.read(self.fd, bufsize):
        events.append(event(evt, self._wds[evt.wd][0]))
        if (evt.mask & inotify.IN_IGNORED):
            self._remove(evt.wd)
        elif (evt.mask & inotify.IN_UNMOUNT):
            self.close()
    return events
