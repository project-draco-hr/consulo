{
  for (  ModuleAwareContentRoot root : myPlatformFacade.getContentRoots(module)) {
    final VirtualFile file=root.getFile();
    if (!file.isDirectory()) {
      continue;
    }
    final VirtualFile child=file.findChild(GradleConstants.DEFAULT_SCRIPT_NAME);
    if (child != null) {
      return true;
    }
  }
  return false;
}
