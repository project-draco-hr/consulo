{
  if (aClass == null) {
    return 0;
  }
  int pos=ElementBase.getClassKind(aClass);
  if (pos == ElementBase.CLASS_KIND_CLASS || pos == ElementBase.CLASS_KIND_EXCEPTION) {
    boolean isAbstract=aClass.hasModifierProperty(PsiModifier.ABSTRACT) && !aClass.isInterface();
    if (isAbstract) {
      pos--;
    }
  }
  return pos;
}
