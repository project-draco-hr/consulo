{
synchronized (myMessageViewLock) {
    final CompilerMessageCategory category=message.getCategory();
    final boolean shouldAutoActivate=!myMessagesAutoActivated && (CompilerMessageCategory.ERROR.equals(category) || (CompilerMessageCategory.WARNING.equals(category) && !ProblemsView.getInstance(myProject).isHideWarnings()));
    if (shouldAutoActivate) {
      myMessagesAutoActivated=true;
      activateMessageView();
    }
  }
}
