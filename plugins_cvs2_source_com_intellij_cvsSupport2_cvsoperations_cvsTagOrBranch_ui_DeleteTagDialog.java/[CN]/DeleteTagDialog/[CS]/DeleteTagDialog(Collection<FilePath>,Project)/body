{
  myFiles=files;
  myProject=project;
  myTagName.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      selectTag();
    }
  }
);
  CvsFieldValidator.installOn(this,myTagName.getTextField(),myErrorLabel);
