{
  final Context context=new Context(document);
  context.init();
  myMockery.checking(new Expectations(){
{
      allowing(myScrollingModel).getVisibleArea();
      will(returnValue(new Rectangle(0,0,context.visualWidth,Integer.MAX_VALUE)));
      allowing(myDocument).getLineEndOffset(0);
      will(returnValue(context.document.length()));
    }
  }
);
  myManager.registerSoftWrapIfNecessary(context.document,0,context.document.length(),0,Font.PLAIN);
}
