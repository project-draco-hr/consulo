{
  if (this == o)   return true;
  if (o == null || getClass() != o.getClass())   return false;
  PsiLanguageInjectionHost.Shred shred=(PsiLanguageInjectionHost.Shred)o;
  PsiLanguageInjectionHost host=getHost();
  Segment hostRangeMarker=shred.getHostRangeMarker();
  return host != null && host.equals(shred.getHost()) && prefix.equals(shred.getPrefix()) && suffix.equals(shred.getSuffix()) && range.equals(shred.getRange()) && hostRangeMarker != null && TextRange.create(relevantRangeInHost).equals(TextRange.create(hostRangeMarker));
}
