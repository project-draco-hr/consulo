{
  myVcsManager.addInitializationRequest(VcsInitObject.DIRTY_SCOPE_MANAGER,new Runnable(){
    @Override public void run(){
      boolean ready=false;
synchronized (LOCK) {
        if (!myProject.isDisposed()) {
          myReady=ready=true;
        }
      }
      if (ready) {
        VcsDirtyScopeVfsListener.install(myProject);
        markEverythingDirty();
      }
    }
  }
);
}
