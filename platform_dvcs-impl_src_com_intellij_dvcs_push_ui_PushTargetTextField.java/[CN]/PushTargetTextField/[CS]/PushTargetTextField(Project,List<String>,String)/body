{
  super(project,getCompletionProvider(targetVariants),true,defaultTargetName);
  setOneLineMode(true);
  addFocusListener(new FocusAdapter(){
    @Override public void focusGained(    FocusEvent e){
      selectAll();
    }
    @Override public void focusLost(    FocusEvent e){
      removeSelection();
    }
  }
);
}
