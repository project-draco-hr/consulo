{
  final Color color;
  if (component == null) {
    color=Color.GRAY;
  }
 else {
    color=component.getBackground();
  }
  final int dx=size - 2;
  final int dy;
  if (descending) {
    dy=dx - 2;
  }
 else {
    dy=-(dx - 3);
  }
  y+=4 * size / 6;
  if (descending) {
    y+=-dy;
  }
  g.translate(x,y);
  g.setColor(color.darker());
  g.fillPolygon(new int[]{dx >> 1,0,dx},new int[]{0,dy,dy},3);
  g.setColor(color);
  g.translate(-x,-y);
}
