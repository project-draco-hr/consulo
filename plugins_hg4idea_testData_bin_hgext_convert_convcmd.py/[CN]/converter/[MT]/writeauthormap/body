def writeauthormap(self):
    authorfile = self.authorfile
    if authorfile:
        self.ui.status((_('Writing author map file %s\n') % authorfile))
        ofile = open(authorfile, 'w+')
        for author in self.authors:
            ofile.write(('%s=%s\n' % (author, self.authors[author])))
        ofile.close()
