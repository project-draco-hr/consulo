{
  if (options.isEmpty())   return;
  if (options.size() == 1) {
    options.get(0).actionPerformed(null);
    return;
  }
  DefaultActionGroup group=new DefaultActionGroup();
  for (  AnAction each : options) {
    group.add(each);
  }
  DataContext context=DataManager.getInstance().getDataContext(editor.getContentComponent());
  ListPopup popup=JBPopupFactory.getInstance().createActionGroupPopup("Choose statement to remove",group,context,JBPopupFactory.ActionSelectionAid.NUMBERING,false);
  popup.showInBestPositionFor(editor);
}
