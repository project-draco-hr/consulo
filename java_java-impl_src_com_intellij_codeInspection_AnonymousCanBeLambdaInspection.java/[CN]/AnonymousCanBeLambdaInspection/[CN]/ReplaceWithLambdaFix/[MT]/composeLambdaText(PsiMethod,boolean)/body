{
  final StringBuilder buf=new StringBuilder();
  if (appendType) {
    buf.append(method.getParameterList().getText());
  }
 else {
    buf.append("(").append(StringUtil.join(method.getParameterList().getParameters(),new Function<PsiParameter,String>(){
      @Override public String fun(      PsiParameter parameter){
        String parameterName=parameter.getName();
        if (parameterName == null) {
          parameterName="";
        }
        return parameterName;
      }
    }
,",")).append(")");
  }
  buf.append("->");
  final PsiCodeBlock body=method.getBody();
  LOG.assertTrue(body != null);
  buf.append(body.getText());
  return buf.toString();
}
