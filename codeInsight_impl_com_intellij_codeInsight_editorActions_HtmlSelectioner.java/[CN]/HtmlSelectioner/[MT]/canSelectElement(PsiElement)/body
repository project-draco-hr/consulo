{
  if (e instanceof XmlToken) {
    Language language=e.getLanguage();
    if (language == StdLanguages.XML)     language=e.getParent().getLanguage();
    return language instanceof HTMLLanguage || language instanceof XHTMLLanguage || language == StdLanguages.JSP || language == StdLanguages.JSPX || (ourStyleSelectioner != null && ourStyleSelectioner.canSelect(e));
  }
  return false;
}
