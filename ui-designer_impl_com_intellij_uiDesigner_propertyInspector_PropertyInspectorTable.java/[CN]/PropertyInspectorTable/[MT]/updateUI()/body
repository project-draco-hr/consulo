{
  myPropertyNameAttrs=SimpleTextAttributes.REGULAR_ATTRIBUTES;
  myModifiedPropertyNameAttrs=SimpleTextAttributes.REGULAR_BOLD_ATTRIBUTES;
  myErrorPropertyNameAttrs=new SimpleTextAttributes(SimpleTextAttributes.STYLE_WAVED,null,Color.RED);
  myModifiedErrorPropertyNameAttrs=new SimpleTextAttributes(SimpleTextAttributes.STYLE_WAVED | SimpleTextAttributes.STYLE_BOLD,null,Color.RED);
  myWarningPropertyNameAttrs=new SimpleTextAttributes(SimpleTextAttributes.STYLE_WAVED,null,Color.ORANGE);
  myModifiedWarningPropertyNameAttrs=new SimpleTextAttributes(SimpleTextAttributes.STYLE_WAVED | SimpleTextAttributes.STYLE_BOLD,null,Color.ORANGE);
