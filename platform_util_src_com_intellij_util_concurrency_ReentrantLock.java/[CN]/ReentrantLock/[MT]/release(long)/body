{
  if (Thread.currentThread() != owner_ || n > holds_)   throw new Error("Illegal Lock usage");
  holds_-=n;
  if (holds_ == 0) {
    owner_=null;
    notify();
    if (myActionOnRelease != null) {
      Runnable action=myActionOnRelease;
      myActionOnRelease=null;
      action.run();
    }
  }
}
