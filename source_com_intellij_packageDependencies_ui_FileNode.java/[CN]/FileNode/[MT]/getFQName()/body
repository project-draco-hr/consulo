{
  if (myFile instanceof PsiJavaFile) {
    StringBuffer buf=new StringBuffer(20);
    String packageName=((PsiJavaFile)myFile).getPackageName();
    if (packageName != null) {
      buf.append(packageName);
    }
    if (buf.length() > 0) {
      buf.append('.');
    }
    buf.append(myFile.getVirtualFile().getNameWithoutExtension());
    return buf.toString();
  }
  return null;
}
