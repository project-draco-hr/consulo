{
  IConnection connection=env.createConnection(new ReadWriteStatistics());
  try {
    connection.open(new StreamLogger());
    return true;
  }
 catch (  AuthenticationException ex) {
    if (env.checkReportOfflineException(ex)) {
      return false;
    }
    return relogin(ex,env,executor);
  }
catch (  Exception ex) {
    return relogin(ex,env,executor);
  }
 finally {
    try {
      connection.close();
    }
 catch (    IOException e) {
      LOG.error(e);
    }
  }
}
