{
  if (!file.exists()) {
    final String baseName=file.getName() + ".";
    final File[] files=file.getParentFile().listFiles(new FileFilter(){
      public boolean accept(      final File pathname){
        return pathname.getName().startsWith(baseName);
      }
    }
);
    if (files != null) {
      for (      File f : files) {
        FileUtil.delete(f);
      }
    }
  }
  return file;
}
