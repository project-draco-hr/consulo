{
  if (mode) {
    while (myHolds < 0) {
      try {
        wait();
      }
 catch (      InterruptedException ignored) {
      }
    }
    myHolds++;
    return myTrueHolder;
  }
 else {
    while (myHolds > 0) {
      try {
        wait();
      }
 catch (      InterruptedException ignored) {
      }
    }
    myHolds--;
    return myFalseHolder;
  }
}
