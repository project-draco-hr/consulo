{
  final List<Runnable> tasks=new ArrayList<Runnable>();
  invalidateIndex(file,tasks);
  if (tasks.size() > 0) {
    adjustInvalidateTasksCount(+1);
    ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
      public void run(){
        try {
          for (          Runnable task : tasks) {
            task.run();
          }
        }
  finally {
          adjustInvalidateTasksCount(-1);
        }
      }
    }
);
  }
}
