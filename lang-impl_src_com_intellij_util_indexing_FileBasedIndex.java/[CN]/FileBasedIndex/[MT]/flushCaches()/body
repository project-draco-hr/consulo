{
  ApplicationManager.getApplication().executeOnPooledThread(new Runnable(){
    public void run(){
      for (      ID<?,?> indexId : myIndices.keySet()) {
        try {
          getIndex(indexId).flush();
        }
 catch (        StorageException e) {
          LOG.info(e);
          requestRebuild(indexId);
        }
      }
    }
  }
);
}
