{
  if (isProgressRunning()) {
    final int answer=Messages.showDialog(getComponent(),myPromptStopSearch,IdeBundle.message("title.question"),new String[]{IdeBundle.message("action.continue.searching"),IdeBundle.message("action.stop.searching")},0,Messages.getWarningIcon());
    if (answer == 1) {
      cancelSearch();
    }
    return false;
  }
  return true;
}
