{
  if (!(start <= end && start >= 0 && end <= document.getTextLength())) {
    LOG.assertTrue(start <= end);
    if (start < 0) {
      LOG.assertTrue(false,"Wrong start: " + start);
    }
    if (end > document.getTextLength()) {
      LOG.assertTrue(false,"Wrong end: " + end);
    }
  }
  myDocument=document;
  myStart=start;
  myEnd=end;
  myId=counter;
  counter++;
  registerInDocument();
}
