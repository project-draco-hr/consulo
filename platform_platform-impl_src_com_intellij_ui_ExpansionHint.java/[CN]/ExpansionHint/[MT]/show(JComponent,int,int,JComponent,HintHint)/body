{
  myPopup=JBPopupFactory.getInstance().createComponentPopupBuilder(myComponent,null).setRequestFocus(false).setFocusable(false).setResizable(false).setMovable(false).setModalContext(false).setShowShadow(false).setShowBorder(false).setCancelKeyEnabled(false).setCancelOnClickOutside(false).setCancelOnOtherWindowOpen(false).createPopup();
  myPopup.show(new RelativePoint(parentComponent,new Point(x,y)));
}
