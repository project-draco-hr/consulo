{
  if (configDirPath != null) {
    int result;
    if (component == null) {
      result=Messages.showYesNoDialog(project,SvnBundle.message("confirmation.text.delete.stored.authentication.information"),SvnBundle.message("confirmation.title.clear.authentication.cache"),Messages.getWarningIcon());
    }
 else {
      result=Messages.showYesNoDialog(component,SvnBundle.message("confirmation.text.delete.stored.authentication.information"),SvnBundle.message("confirmation.title.clear.authentication.cache"),Messages.getWarningIcon());
    }
    if (result == 0) {
      SvnConfiguration.RUNTIME_AUTH_CACHE.clear();
      SvnConfiguration.getInstance(project).clearAuthenticationDirectory(project);
    }
  }
}
