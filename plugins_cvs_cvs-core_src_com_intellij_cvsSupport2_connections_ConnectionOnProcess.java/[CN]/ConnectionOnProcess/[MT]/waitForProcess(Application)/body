{
  myWaitSemaphore=new Semaphore();
  myWaitSemaphore.down();
  myWaitForThreadFuture=application.executeOnPooledThread(new Runnable(){
    public void run(){
      try {
        myProcess.waitFor();
      }
 catch (      InterruptedException ignored) {
      }
 finally {
        myWaitSemaphore.up();
      }
    }
  }
);
}
