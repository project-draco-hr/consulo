{
  VirtualFile r1=getFileRoot(file1);
  VirtualFile r2=getFileRoot(file2);
  if (Comparing.equal(r1,r2))   return 0;
  if (r1 == null)   return -1;
  if (r2 == null)   return 1;
  int i1=myRoots.get(r1);
  int i2=myRoots.get(r2);
  if (i1 == 0 && i2 == 0)   return 0;
  if (i1 > 0 && i2 > 0)   return i2 - i1;
  return i1 > 0 ? 1 : -1;
}
