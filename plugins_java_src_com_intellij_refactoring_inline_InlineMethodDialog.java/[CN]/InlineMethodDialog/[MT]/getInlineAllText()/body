{
  final String occurrencesString=myOccurrencesNumber > -1 ? " (" + myOccurrencesNumber + " occurrence"+ (myOccurrencesNumber == 1 ? ")" : "s)") : "";
  return (myMethod.isWritable() ? RefactoringBundle.message("all.invocations.and.remove.the.method") : RefactoringBundle.message("all.invocations.in.project")) + occurrencesString;
}
