{
  if (nameSuggestionContext == null || !(element instanceof GroovyPsiElement))   return null;
  if (element instanceof GrVariable) {
    final PsiType type=((GrVariable)element).getTypeGroovy();
    if (type != null) {
      final String[] names=GroovyNameSuggestionUtil.suggestVariableNameByType(type,new DefaultGroovyVariableNameValidator(nameSuggestionContext));
      result.addAll(Arrays.asList(names));
      return new SuggestedNameInfo(names){
        @Override public void nameChoosen(        String name){
          JavaStatisticsManager.incVariableNameUseCount(name,JavaCodeStyleManager.getInstance(element.getProject()).getVariableKind((GrVariable)element),((GrVariable)element).getName(),type);
        }
      }
;
    }
  }
  return null;
}
