{
  File gradleHome=getGradleHome(project);
  if (gradleHome == null || !gradleHome.isDirectory()) {
    return null;
  }
  File libs=new File(gradleHome,"lib");
  File[] files=libs.listFiles();
  if (files == null) {
    return null;
  }
  List<File> result=new ArrayList<File>();
  for (  File file : files) {
    if (file.getName().endsWith(".jar")) {
      result.add(file);
    }
  }
  return result;
}
