{
  GradleSettings settings=GradleSettings.getInstance(project);
  String path=settings.getGradleHome();
  if (path == null) {
    return null;
  }
  File candidate=new File(path);
  if (isGradleSdkHome(candidate)) {
    return candidate;
  }
  return isGradleSdkHome(candidate) ? candidate : null;
}
