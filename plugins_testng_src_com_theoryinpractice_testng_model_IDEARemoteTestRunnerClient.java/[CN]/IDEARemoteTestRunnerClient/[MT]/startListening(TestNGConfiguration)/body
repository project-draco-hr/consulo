{
  final IMessageSender messageSender=TestNGRunnableState.supportSerializationProtocol(config) ? new SerializedMessageSender("localhost",myPort) : new StringMessageSender("localhost",myPort);
  final ServerConnection srvConnection=new ServerConnection(messageSender){
    @Override protected void handleThrowable(    Throwable cause){
      cause.printStackTrace();
    }
  }
;
  try {
    messageSender.initReceiver();
  }
 catch (  SocketTimeoutException e) {
    e.printStackTrace();
  }
  startListening(new IRemoteSuiteListener[]{myListener},new IRemoteTestListener[]{myListener},srvConnection);
}
