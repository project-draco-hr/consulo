{
  final boolean defaultFonts=hasDefaultFontSetting(this);
  if (defaultFonts) {
    String oldFontFace=FONT_FACE;
    int oldFontSize=FONT_SIZE;
    FONT_FACE=null;
    FONT_SIZE=-1;
    try {
      DefaultJDOMExternalizer.writeExternal(this,element);
    }
  finally {
      FONT_FACE=oldFontFace;
      FONT_SIZE=oldFontSize;
    }
  }
 else {
    DefaultJDOMExternalizer.writeExternal(this,element);
  }
}
