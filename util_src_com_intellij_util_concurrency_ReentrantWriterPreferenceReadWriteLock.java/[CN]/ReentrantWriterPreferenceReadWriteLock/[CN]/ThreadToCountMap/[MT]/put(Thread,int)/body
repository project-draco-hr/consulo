{
  myLastThread=null;
  int index=myThreads.indexOf(thread);
  if (index >= 0) {
    if (count == 0) {
      myThreads.remove(index);
      myCounters.remove(index);
    }
 else {
      myCounters.setQuick(index,count);
    }
  }
 else {
    if (count != 0) {
      myThreads.add(thread);
      myCounters.add(count);
    }
  }
}
