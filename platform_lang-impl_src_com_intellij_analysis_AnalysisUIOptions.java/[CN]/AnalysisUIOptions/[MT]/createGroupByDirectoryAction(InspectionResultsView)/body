{
  return new ToggleAction("Group by directory","Group by directory",PlatformIcons.DIRECTORY_CLOSED_ICON){
    @Override public boolean isSelected(    AnActionEvent e){
      return SHOW_STRUCTURE;
    }
    @Override public void setSelected(    AnActionEvent e,    boolean state){
      SHOW_STRUCTURE=state;
      view.update();
    }
  }
;
}
