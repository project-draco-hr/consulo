{
  return new ToggleAction(InspectionsBundle.message("inspection.filter.show.diff.action.text"),InspectionsBundle.message("inspection.filter.show.diff.action.text"),IconLoader.getIcon("/actions/diff.png")){
    @Override public boolean isSelected(    AnActionEvent e){
      return SHOW_DIFF_WITH_PREVIOUS_RUN;
    }
    @Override public void setSelected(    AnActionEvent e,    boolean state){
      SHOW_DIFF_WITH_PREVIOUS_RUN=state;
      if (!SHOW_DIFF_WITH_PREVIOUS_RUN) {
        SHOW_ONLY_DIFF=false;
      }
      view.update();
    }
  }
;
}
