{
  if (myRoots.size() == 1) {
    VirtualFile root=myRoots.iterator().next();
    return "Directory '" + root.getName() + "'";
  }
  return "Directories " + StringUtil.join(myRoots,new Function<VirtualFile,String>(){
    @Override public String fun(    VirtualFile file){
      return "'" + file.getName() + "'";
    }
  }
,", ");
}
