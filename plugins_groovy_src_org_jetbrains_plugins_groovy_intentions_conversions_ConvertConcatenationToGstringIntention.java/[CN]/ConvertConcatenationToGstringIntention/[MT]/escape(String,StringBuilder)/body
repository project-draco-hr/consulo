{
  final char[] chars=s.toCharArray();
  final int len=chars.length - 1;
  int i;
  for (i=0; i < len; i++) {
    if (chars[i] == '\\' && chars[i + 1] == '\'') {
      b.append('\'');
      i+=1;
      continue;
    }
    if (chars[i] == '"' || chars[i] == '$')     b.append('\\');
    b.append(chars[i]);
  }
  if (i == len) {
    if (chars[i] == '"')     b.append('\\');
    b.append(chars[i]);
  }
}
