{
  DiffRequest request=e.getData(DIFF_REQUEST);
  if (request != null) {
    return true;
  }
  VirtualFile[] files=e.getData(CommonDataKeys.VIRTUAL_FILE_ARRAY);
  if (files == null) {
    return false;
  }
  if (files.length == 1) {
    return files[0].isValid();
  }
 else   if (files.length == 2) {
    return files[0].isValid() && files[1].isValid();
  }
 else {
    return false;
  }
}
