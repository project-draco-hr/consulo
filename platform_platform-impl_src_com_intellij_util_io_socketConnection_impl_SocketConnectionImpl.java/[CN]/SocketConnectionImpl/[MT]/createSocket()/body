{
  final InetAddress host=myHost != null ? myHost : InetAddress.getLocalHost();
  IOException exc=null;
  for (int i=0; i < myPortsNumberToTry; i++) {
    int port=myInitialPort + i;
    try {
      return new Socket(host,port);
    }
 catch (    IOException e) {
      exc=e;
      LOG.debug(e);
    }
  }
  throw exc;
}
