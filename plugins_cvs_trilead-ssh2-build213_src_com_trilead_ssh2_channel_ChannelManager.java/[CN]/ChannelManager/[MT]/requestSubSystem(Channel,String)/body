{
  PacketSessionSubsystemRequest ssr;
synchronized (c) {
    if (c.state != Channel.STATE_OPEN)     throw new IOException("Cannot request subsystem on this channel (" + c.getReasonClosed() + ")");
    ssr=new PacketSessionSubsystemRequest(c.remoteID,true,subSystemName);
    c.successCounter=c.failedCounter=0;
  }
synchronized (c.channelSendLock) {
    if (c.closeMessageSent)     throw new IOException("Cannot request subsystem on this channel (" + c.getReasonClosed() + ")");
    tm.sendMessage(ssr.getPayload());
  }
  try {
    if (waitForChannelRequestResult(c) == false)     throw new IOException("The server denied the request.");
  }
 catch (  IOException e) {
    throw (IOException)new IOException("The subsystem request failed.").initCause(e);
  }
}
