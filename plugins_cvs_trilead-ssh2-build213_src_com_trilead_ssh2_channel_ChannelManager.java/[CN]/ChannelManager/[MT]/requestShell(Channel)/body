{
  PacketSessionStartShell sm;
synchronized (c) {
    if (c.state != Channel.STATE_OPEN)     throw new IOException("Cannot start shell on this channel (" + c.getReasonClosed() + ")");
    sm=new PacketSessionStartShell(c.remoteID,true);
    c.successCounter=c.failedCounter=0;
  }
synchronized (c.channelSendLock) {
    if (c.closeMessageSent)     throw new IOException("Cannot start shell on this channel (" + c.getReasonClosed() + ")");
    tm.sendMessage(sm.getPayload());
  }
  try {
    if (waitForChannelRequestResult(c) == false)     throw new IOException("The server denied the request.");
  }
 catch (  IOException e) {
    throw (IOException)new IOException("The shell request failed.").initCause(e);
  }
}
