{
  if (myCrumbs != null) {
    final Rectangle r=getBounds();
    p.translate(r.x,r.y);
    if (!r.contains(p)) {
      return null;
    }
    if (myBuffer == null) {
      return null;
    }
    final int offset=myBuffer.getPageOffset();
    for (    final Crumb each : myCrumbs) {
      if (((p.x + offset) >= each.getOffset()) && ((p.x + offset) < (each.getOffset() + each.getWidth()))) {
        return each;
      }
    }
  }
  return null;
}
