{
  final JPanel panel=new JPanel(new BorderLayout());
  final ListTable table=new ListTable(new ListWrappingTableModel(Arrays.asList(classNames,methodNamePatterns),InspectionGadgetsBundle.message("result.of.method.call.ignored.class.column.title"),InspectionGadgetsBundle.message("result.of.method.call.ignored.method.column.title")));
  final JPanel tablePanel=UiUtils.createAddRemovePanel(table);
  final CheckBox checkBox=new CheckBox(InspectionGadgetsBundle.message("result.of.method.call.ignored.non.library.option"),this,"m_reportAllNonLibraryCalls");
  panel.add(tablePanel,BorderLayout.CENTER);
  panel.add(checkBox,BorderLayout.SOUTH);
  return panel;
}
