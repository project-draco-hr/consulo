{
  super(project,true);
  myMethod=method;
  myReferenceElement=ref;
  myEditor=editor;
  myInvokedOnReference=ref != null;
  setTitle(REFACTORING_NAME);
  init();
  String methodText=PsiFormatUtil.formatMethod(myMethod,PsiSubstitutor.EMPTY,PsiFormatUtil.SHOW_NAME | PsiFormatUtil.SHOW_PARAMETERS,PsiFormatUtil.SHOW_TYPE);
  myMethodNameLabel.setText("Method " + methodText);
}
