{
switch (ch) {
case '<':
    return Factory.createLeafElement(XmlTokenType.XML_CHAR_ENTITY_REF,"&lt;".toCharArray(),0,4,-1,charTable);
case '>':
  return Factory.createLeafElement(XmlTokenType.XML_CHAR_ENTITY_REF,"&gt;".toCharArray(),0,4,-1,charTable);
case '&':
return Factory.createLeafElement(XmlTokenType.XML_CHAR_ENTITY_REF,"&amp;".toCharArray(),0,5,-1,charTable);
default :
final String charEncoding="&#" + (int)ch + ";";
return Factory.createLeafElement(XmlTokenType.XML_CHAR_ENTITY_REF,charEncoding.toCharArray(),0,charEncoding.length(),-1,charTable);
}
}
