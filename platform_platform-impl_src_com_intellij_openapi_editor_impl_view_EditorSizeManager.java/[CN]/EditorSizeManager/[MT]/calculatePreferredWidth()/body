{
  int lineCount=myLineWidths.size();
  int maxWidth=0;
  for (int i=0; i < lineCount; i++) {
    int width=myLineWidths.get(i);
    if (width < 0) {
      width=myView.getMaxWidthInLineRange(i,i);
      myLineWidths.set(i,width);
    }
    maxWidth=Math.max(maxWidth,width);
  }
  return maxWidth;
}
