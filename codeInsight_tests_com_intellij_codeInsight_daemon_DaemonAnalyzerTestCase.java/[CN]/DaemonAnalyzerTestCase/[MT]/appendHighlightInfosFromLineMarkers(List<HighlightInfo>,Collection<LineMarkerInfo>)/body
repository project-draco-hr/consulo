{
  for (  LineMarkerInfo lineMarkerInfo : infoCollection) {
    GutterIconRenderer gutterIconRenderer=lineMarkerInfo.createGutterRenderer();
    final HighlightInfo highlightInfo=HighlightInfo.createHighlightInfo(HighlightInfoType.INFO,lineMarkerInfo.startOffset,lineMarkerInfo.endOffset,gutterIconRenderer != null ? gutterIconRenderer.getTooltipText() : lineMarkerInfo.getLineMarkerTooltip());
    result.add(highlightInfo);
    highlightInfo.setGutterIconRenderer(gutterIconRenderer);
  }
}
