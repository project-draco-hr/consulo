{
  super(new BorderLayout());
  myProject=project;
  myTree=createTree();
  myBuilder=new SliceTreeBuilder(myTree,project,root);
  layoutPanel();
  myBuilder.addSubtreeToUpdate((DefaultMutableTreeNode)myTree.getModel().getRoot(),new Runnable(){
    public void run(){
      treeSelectionChanged();
    }
  }
);
}
