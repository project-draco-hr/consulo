{
  String xml="<?xml version=\"1.0\" encoding=\"UTF-8\"?><metadata>" + "  <groupId>%s</groupId>" + "  <artifactId>%s</artifactId>"+ "  <version>%s</version>"+ "  <versioning>"+ "    <snapshot>"+ "      <timestamp>%s</timestamp>"+ "      <buildNumber>%s</buildNumber>"+ "    </snapshot>"+ "    <lastUpdated>00000000000000</lastUpdated>"+ "  </versioning>"+ "</metadata>";
  String formatted=String.format(xml,groupId,artefactId,version,timestamp,build);
  String name=groupId + "/" + artefactId+ "/"+ version+ "/maven-metadata-internal.xml";
  writeFile(new File(repoDir,name),formatted);
}
