{
  String value=getValue(project,root,key);
  if (value == null) {
    return null;
  }
  value=value.trim();
  if (value.length() == 0) {
    return null;
  }
  if ("yes".equals(value) || "true".equals(value)) {
    return Boolean.TRUE;
  }
  if ("no".equals(value) || "false".equals(value)) {
    return Boolean.FALSE;
  }
  try {
    int i=Integer.parseInt(value);
    return i != 0;
  }
 catch (  NumberFormatException ex) {
    return null;
  }
}
