{
  ServerSocket socket=null;
  try {
    socket=new ServerSocket(PORT_NUMBER);
  }
 catch (  BindException e) {
    return false;
  }
catch (  IOException e) {
    LOG.error(e);
    return false;
  }
 finally {
    if (socket != null) {
      try {
        socket.close();
      }
 catch (      IOException e) {
        LOG.error(e);
        return false;
      }
    }
  }
  return true;
}
