{
synchronized (connectionSemaphore) {
    if (connectionClosed) {
      throw (IOException)new IOException("Sorry, this connection is closed.").initCause(reasonClosedCause);
    }
    flagKexOngoing=true;
    try {
      tc.sendMessage(msg);
    }
 catch (    IOException e) {
      close(e,false);
      throw e;
    }
  }
}
