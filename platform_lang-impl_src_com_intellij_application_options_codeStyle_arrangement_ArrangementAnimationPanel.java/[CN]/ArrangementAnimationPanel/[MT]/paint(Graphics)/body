{
  if (myImage == null) {
    super.paint(g);
    return;
  }
  g.drawImage(myImage,0,0,getImageWidthToUse(),getImageHeightToUse(),null);
  myAnimationSteps--;
  if (myAnimationSteps <= 0) {
    myImage=null;
    if (myListener != null) {
      myListener.onFinished();
    }
  }
 else   if (myListener != null) {
    myListener.onNewIteration();
  }
}
