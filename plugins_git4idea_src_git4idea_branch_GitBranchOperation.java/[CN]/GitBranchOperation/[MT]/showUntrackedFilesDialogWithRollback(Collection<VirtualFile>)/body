{
  String title="Couldn't " + getOperationName();
  String description=UntrackedFilesNotifier.createUntrackedFilesOverwrittenDescription(getOperationName(),true);
  final SelectFilesDialog dialog=new UntrackedFilesDialog(myProject,new ArrayList<VirtualFile>(untrackedFiles),stripHtml(description,true));
  dialog.setTitle(title);
  UIUtil.invokeAndWaitIfNeeded(new Runnable(){
    @Override public void run(){
      ServiceManager.getService(myProject,PlatformFacade.class).showDialog(dialog);
    }
  }
);
  if (dialog.isOK()) {
    rollback();
  }
}
