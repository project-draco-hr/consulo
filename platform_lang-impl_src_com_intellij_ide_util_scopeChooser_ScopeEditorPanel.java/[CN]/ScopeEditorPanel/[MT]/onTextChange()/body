{
  if (!myIsInUpdate) {
    myUpdateAlarm.cancelAllRequests();
    myCurrentScope=null;
    try {
      final String text=myPatternField.getText();
      myCurrentScope=StringUtil.isEmpty(text) ? null : PackageSetFactory.getInstance().compile(text);
      myErrorMessage=null;
      myTextChanged=true;
      rebuild(false);
    }
 catch (    Exception e) {
      myErrorMessage=e.getMessage();
      showErrorMessage();
    }
  }
 else {
    myErrorMessage=null;
  }
}
