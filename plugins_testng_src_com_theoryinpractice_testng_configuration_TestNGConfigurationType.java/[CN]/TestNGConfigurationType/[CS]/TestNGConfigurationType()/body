{
  myFactory=new ConfigurationFactoryEx(this){
    @Override public RunConfiguration createTemplateConfiguration(    Project project){
      LOGGER.info("Create TestNG Template Configuration");
      return new TestNGConfiguration("",project,this);
    }
    @Override public Icon getIcon(    @NotNull final RunConfiguration configuration){
      return ICON;
    }
    @Override public void onNewConfigurationCreated(    @NotNull RunConfiguration configuration){
      ((ModuleBasedConfiguration)configuration).onNewConfigurationCreated();
    }
  }
;
}
