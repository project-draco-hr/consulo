{
  MarkupModel markupModel=getMarkupModel();
  if (operation == null || markupModel == null) {
    return null;
  }
  RangeHighlighter highlighter=markupModel.addRangeHighlighter(lineStartOffset,lineStartOffset,HighlighterLayer.ADDITIONAL_SYNTAX,new TextAttributes(null,null,null,null,Font.PLAIN),HighlighterTargetArea.LINES_IN_RANGE);
  final MergeActionGroup.OperationAction action=new MergeActionGroup.OperationAction(operation);
  highlighter.setGutterIconRenderer(new GutterActionRenderer(action));
  return highlighter;
}
