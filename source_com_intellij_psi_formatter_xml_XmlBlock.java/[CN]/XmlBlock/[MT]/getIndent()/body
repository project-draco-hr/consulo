{
  if (myNode.getElementType() == ElementType.XML_PROLOG || myNode.getElementType() == ElementType.XML_DOCTYPE || SourceTreeToPsiMap.treeElementToPsi(myNode) instanceof XmlDocument) {
    return getFormatter().getNoneIndent();
  }
 else   if (myNode.getElementType() == ElementType.XML_COMMENT && myNode.textContains('\n')) {
    return getFormatter().createAbsoluteNoneIndent();
  }
  return myIndent;
}
