{
  StartupManager.getInstance(myModule.getProject()).runWhenProjectIsInitialized(new Runnable(){
    public void run(){
      if (myPluginXmlUrl != null) {
        setPluginXmlUrl(myPluginXmlUrl);
      }
 else {
        setPluginXmlUrl(VfsUtil.pathToUrl(getDefaultLocation()));
      }
      myPluginXmlUrl=null;
    }
  }
);
}
