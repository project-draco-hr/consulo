{
  GitRepository repository=GitUtil.getRepositoryForRootOrLogError(project,root);
  if (repository == null) {
    return null;
  }
  GitRemote remote=GitUtil.findRemoteByName(repository,remoteName);
  if (remote == null) {
    LOG.warn("Couldn't find remote with name " + remoteName);
    return null;
  }
  return remote;
}
