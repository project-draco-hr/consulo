{
  r.lock();
  try {
    final int parentId=myConnection.getRecords().getInt(id * RECORD_SIZE + PARENT_OFFSET);
    if (parentId == id) {
      LOG.error("Cyclic parent child relations in the database. id = " + id);
      return 0;
    }
    return parentId;
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    r.unlock();
  }
}
