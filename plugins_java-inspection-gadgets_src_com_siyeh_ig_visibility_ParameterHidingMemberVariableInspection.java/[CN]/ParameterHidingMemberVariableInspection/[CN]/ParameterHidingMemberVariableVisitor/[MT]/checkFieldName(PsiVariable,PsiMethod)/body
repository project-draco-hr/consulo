{
  final String variableName=variable.getName();
  if (variableName == null) {
    return null;
  }
  PsiClass aClass=ClassUtils.getContainingClass(variable);
  while (aClass != null) {
    final PsiField[] fields=aClass.getAllFields();
    for (    PsiField field : fields) {
      final String fieldName=field.getName();
      if (!variableName.equals(fieldName)) {
        continue;
      }
      if (m_ignoreStaticMethodParametersHidingInstanceFields && !field.hasModifierProperty(PsiModifier.STATIC) && method.hasModifierProperty(PsiModifier.STATIC)) {
        continue;
      }
      if (!m_ignoreInvisibleFields || ClassUtils.isFieldVisible(field,aClass)) {
        return aClass;
      }
    }
    aClass=ClassUtils.getContainingClass(aClass);
  }
  return null;
}
