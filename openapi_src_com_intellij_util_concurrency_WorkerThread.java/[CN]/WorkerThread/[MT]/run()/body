{
  while (true) {
    while (true) {
      Runnable task;
synchronized (myTasks) {
        if (myTasks.isEmpty())         break;
        task=(Runnable)myTasks.removeFirst();
      }
      task.run();
    }
synchronized (myTasks) {
      if (myToDispose && myTasks.isEmpty()) {
        myDisposed=true;
        return;
      }
      try {
        myTasks.wait();
      }
 catch (      InterruptedException e) {
      }
    }
  }
}
