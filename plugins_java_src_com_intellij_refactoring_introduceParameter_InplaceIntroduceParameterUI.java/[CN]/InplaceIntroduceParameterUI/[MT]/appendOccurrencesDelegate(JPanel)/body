{
  final GridBagConstraints gc=new GridBagConstraints(0,0,1,1,0,0,GridBagConstraints.NORTHWEST,GridBagConstraints.NONE,new Insets(0,0,0,0),0,0);
  if (myOccurrences.length > 1 && !myIsInvokedOnDeclaration) {
    gc.gridy++;
    createOccurrencesCb(gc,myWholePanel,myOccurrences.length);
    myCbReplaceAllOccurences.addItemListener(new ItemListener(){
      public void itemStateChanged(      ItemEvent e){
        updateControls(new JCheckBox[0]);
      }
    }
);
  }
  gc.gridy++;
  gc.insets.left=0;
  createDelegateCb(gc,myWholePanel);
}
