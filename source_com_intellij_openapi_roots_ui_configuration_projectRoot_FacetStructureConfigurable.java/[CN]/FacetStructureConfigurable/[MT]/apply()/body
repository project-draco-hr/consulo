{
  super.apply();
  for (  FacetTypeEditor editor : myFacetTypeEditors.values()) {
    editor.apply();
  }
  new WriteAction(){
    protected void run(    final Result result){
      ((FacetAutodetectingManagerImpl)FacetAutodetectingManager.getInstance(myProject)).redetectFacets();
    }
  }
.execute();
}
