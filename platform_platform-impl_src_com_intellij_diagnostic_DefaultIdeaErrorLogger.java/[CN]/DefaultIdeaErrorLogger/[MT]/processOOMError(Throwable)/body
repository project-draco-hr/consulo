{
  ourOomOccurred=true;
  SwingUtilities.invokeAndWait(new Runnable(){
    public void run(){
      String message=throwable.getMessage();
      OutOfMemoryDialog.MemoryKind k=message != null && message.contains(PARAM_PERM_GEN) ? OutOfMemoryDialog.MemoryKind.PERM_GEN : message != null && message.contains("CodeCache") ? OutOfMemoryDialog.MemoryKind.CODE_CACHE : OutOfMemoryDialog.MemoryKind.HEAP;
      new OutOfMemoryDialog(k).show();
    }
  }
);
}
