{
  boolean notificationEnabled=!DISABLED_VALUE.equals(System.getProperty(FATAL_ERROR_NOTIFICATION_PROPERTY,ENABLED_VALUE));
  return notificationEnabled || !(IdeErrorsDialog.getSubmitter(event.getThrowable()) instanceof ITNReporter) || ApplicationManagerEx.getApplicationEx().isInternal()|| isOOMError(event.getThrowable())|| event.getThrowable() instanceof MappingFailedException;
}
