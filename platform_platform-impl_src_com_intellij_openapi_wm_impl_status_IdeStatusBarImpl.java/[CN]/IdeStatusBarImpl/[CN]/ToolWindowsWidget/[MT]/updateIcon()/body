{
  if (isActive()) {
    setVisible(true);
    setIcon(UISettings.getInstance().HIDE_TOOL_STRIPES ? IconLoader.getIcon("/general/slideOut.png") : IconLoader.getIcon("/general/slideIn.png"));
    revalidate();
    repaint();
    setToolTipText("Click to show/hide tool windows side bars");
  }
 else {
    setVisible(false);
    setToolTipText(null);
  }
}
