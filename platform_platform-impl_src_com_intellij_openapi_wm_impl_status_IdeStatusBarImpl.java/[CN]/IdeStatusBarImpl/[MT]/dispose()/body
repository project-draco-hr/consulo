{
  final List<StatusBarWidget> widgets=ContainerUtil.map(myWidgetMap.values(),new Function<WidgetBean,StatusBarWidget>(){
    @Override public StatusBarWidget fun(    final WidgetBean bean){
      return bean.widget;
    }
  }
);
  for (  final StatusBarWidget widget : widgets) {
    Disposer.dispose(widget);
  }
  myWidgetMap.clear();
}
