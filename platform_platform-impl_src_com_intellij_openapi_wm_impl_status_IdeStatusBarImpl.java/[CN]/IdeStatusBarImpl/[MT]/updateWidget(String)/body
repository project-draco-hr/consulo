{
  UIUtil.invokeLaterIfNeeded(new Runnable(){
    public void run(){
      final WidgetBean bean=myWidgetMap.get(id);
      if (bean != null) {
        if (bean.component instanceof StatusBarWrapper) {
          ((StatusBarWrapper)bean.component).beforeUpdate();
        }
        bean.component.repaint();
      }
    }
  }
);
}
