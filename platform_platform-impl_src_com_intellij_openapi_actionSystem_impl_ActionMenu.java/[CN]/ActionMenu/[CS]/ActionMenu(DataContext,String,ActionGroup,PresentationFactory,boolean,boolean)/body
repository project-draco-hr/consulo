{
  super(topLevel ? MARK : "");
  myContext=context;
  myPlace=place;
  myGroup=ActionRef.fromAction(group);
  myPresentationFactory=presentationFactory;
  myPresentation=myPresentationFactory.getPresentation(group);
  myMnemonicEnabled=enableMnemonics;
  myTopLevel=topLevel;
  init();
  if (SystemInfo.isMacSystemMenu) {
    installSynchronizer();
  }
}
