{
  final Color color=g.getColor();
  for (int i=0; i < getRowCount(); i++) {
    if (getSelectedRow() == i) {
      drawStripe(g,i,UIUtil.getTableSelectionBackground());
    }
 else     if (i % 2 == 0) {
      drawStripe(g,i,myStripeColor1);
    }
 else {
      drawStripe(g,i,myStripeColor2);
    }
  }
  g.setColor(color);
  super.paint(g);
}
