{
  String fullMessage=commit.getFullMessage();
  int separator=fullMessage.indexOf("\n\n");
  String subject=separator > 0 ? fullMessage.substring(0,separator) : fullMessage;
  String description=fullMessage.substring(subject.length());
  return "<b>" + getHtmlWithFonts(escapeMultipleSpaces(IssueLinkHtmlRenderer.formatTextWithLinks(myProject,subject)),Font.BOLD) + "</b>"+ getHtmlWithFonts(escapeMultipleSpaces(IssueLinkHtmlRenderer.formatTextWithLinks(myProject,description)));
}
