{
  final Info info;
  try {
    info=getInfoAt(myEditor,myPosition,myBrowseMode);
  }
 catch (  IndexNotReadyException e) {
    showDumbModeNotification(myProject);
    return;
  }
  if (info == null)   return;
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      showHint(info);
    }
  }
);
}
