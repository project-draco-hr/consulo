{
  final long keep2weeks=2 * 1000L * 60* 60* 24* 7;
  final long curTime=System.currentTimeMillis();
  File[] files=dir.listFiles();
  if (files != null) {
    for (    File file : files) {
      if (file.isFile() && file.getName().endsWith(".hist.xml") && curTime - file.lastModified() > keep2weeks) {
        file.delete();
      }
    }
  }
}
