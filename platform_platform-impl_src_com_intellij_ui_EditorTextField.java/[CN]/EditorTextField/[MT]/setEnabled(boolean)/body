{
  if (isEnabled() != enabled) {
    super.setEnabled(enabled);
    myIsViewer=!enabled;
    if (myEditor == null) {
      return;
    }
    Editor editor=myEditor;
    releaseEditor(editor);
    myEditor=createEditor();
    add(myEditor.getComponent(),BorderLayout.CENTER);
    revalidate();
  }
}
