{
  try {
    if (SystemInfo.isWindows) {
      sendCtrlBreakThroughStream(process);
      return true;
    }
 else     if (SystemInfo.isUnix) {
      return UnixProcessManager.sendSigKillToProcessTree(process);
    }
 else {
      return false;
    }
  }
 catch (  Exception e) {
    LOG.error("Couldn't terminate the process",e);
    return false;
  }
}
