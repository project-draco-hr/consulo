{
  if (clear) {
    setIcon(EMPTY_ICON);
    setToolTipText(null);
    return;
  }
  if (isStateChangeable()) {
    if (HighlightUtil.isRootInspected(getCurrentFile())) {
      setIcon(INSPECTIONS_ICON);
    }
 else {
      setIcon(INSPECTIONS_OFF_ICON);
    }
    setToolTipText("Click to configure highlighting for this file");
  }
 else {
    setIcon(EMPTY_ICON);
    setToolTipText(null);
  }
}
