{
  if (!application.isUnitTestMode() && !Comparing.equal(System.getProperty(PROCESS_CANCELED_EXCEPTION),"disabled")) {
    new Thread("Progress Cancel Checker"){
      public void run(){
        while (true) {
          try {
            sleep(10);
          }
 catch (          InterruptedException e) {
          }
          ourNeedToCheckCancel=true;
        }
      }
    }
.start();
  }
}
