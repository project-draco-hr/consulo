{
  System.setProperty("maven.test.property","foo");
  MavenEmbedderFactory.resetSystemPropertiesCacheInTests();
  createProjectPom("<profiles>" + "  <profile>" + "    <id>one</id>"+ "    <activation>"+ "      <property>"+ "        <name>maven.test.property</name>"+ "        <value>foo</value>"+ "      </property>"+ "    </activation>"+ "  </profile>"+ "  <profile>"+ "    <id>two</id>"+ "    <activation>"+ "      <property>"+ "        <name>maven.test.property</name>"+ "        <value>bar</value>"+ "      </property>"+ "    </activation>"+ "  </profile>"+ "</profiles>");
  assertActiveProfiles("one");
}
