{
  createProjectSubFile("dir/file.txt");
  createProjectPom("<profiles>" + "  <profile>" + "    <id>one</id>"+ "    <activation>"+ "      <file>"+ "        <exists>${basedir}/dir/file.txt</exists>"+ "      </file>"+ "    </activation>"+ "  </profile>"+ "  <profile>"+ "    <id>two</id>"+ "    <activation>"+ "      <file>"+ "        <missing>${basedir}/dir/file.txt</missing>"+ "      </file>"+ "    </activation>"+ "  </profile>"+ "</profiles>");
  assertActiveProfiles("one");
}
