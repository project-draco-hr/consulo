{
  createFullProfilesXml("<?xml version=\"1.0\"?>" + "<profilesXml>" + "  <profiles>"+ "    <profile>"+ "      <id>profiles</id>"+ "    </profile>"+ "  </profiles>"+ "  <activeProfiles>"+ "    <activeProfile>profiles</activeProfile>"+ "  </activeProfiles>"+ "</profilesXml>");
