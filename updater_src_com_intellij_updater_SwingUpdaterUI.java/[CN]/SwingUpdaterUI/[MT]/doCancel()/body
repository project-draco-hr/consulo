{
  if (isRunning.get()) {
    int result=JOptionPane.showConfirmDialog(myFrame,"The patch has not been applied yet.\nAre you sure you want to abort the operation?",TITLE,JOptionPane.YES_NO_OPTION);
    if (result == JOptionPane.YES_OPTION) {
      isCancelled.set(true);
      myCancelButton.setEnabled(false);
    }
  }
 else {
    exit();
  }
}
