{
  myFuture=future;
  final Timer t=new Timer(initial ? START_DELAY : PROGRESS_DELAY,new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      if (!myFuture.isDone()) {
        myLoading.set(true);
        myLoadingIcon.setObserver(tree,RepositoryNode.this);
        tree.repaint();
      }
    }
  }
);
  t.setRepeats(false);
  t.start();
}
