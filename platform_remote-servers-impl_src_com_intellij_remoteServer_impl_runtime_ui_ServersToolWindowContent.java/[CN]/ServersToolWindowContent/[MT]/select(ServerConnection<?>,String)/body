{
  myBuilder.getUi().queueUpdate(connection).doWhenDone(new Runnable(){
    @Override public void run(){
      myBuilder.select(ServersTreeStructure.DeploymentNodeImpl.class,new TreeVisitor<ServersTreeStructure.DeploymentNodeImpl>(){
        @Override public boolean visit(        @NotNull ServersTreeStructure.DeploymentNodeImpl node){
          AbstractTreeNode parent=node.getParent();
          return parent instanceof ServersTreeStructure.RemoteServerNode && ((ServersTreeStructure.RemoteServerNode)parent).getValue().equals(connection.getServer()) && node.getValue().getName().equals(deploymentName);
        }
      }
,null,false);
    }
  }
);
}
