{
  final RunResult<T> result=new RunResult<T>();
  if (canWriteNow()) {
    executeCommand(result);
    return result;
  }
  try {
    if (EventQueue.isDispatchThread()) {
      getApplication().runWriteAction(new Runnable(){
        public void run(){
          executeCommand(result);
        }
      }
);
    }
 else {
      SwingUtilities.invokeAndWait(new Runnable(){
        public void run(){
          getApplication().runWriteAction(new Runnable(){
            public void run(){
              executeCommand(result);
            }
          }
);
        }
      }
);
    }
  }
 catch (  Exception e) {
    throw new Error(e);
  }
  return result;
}
