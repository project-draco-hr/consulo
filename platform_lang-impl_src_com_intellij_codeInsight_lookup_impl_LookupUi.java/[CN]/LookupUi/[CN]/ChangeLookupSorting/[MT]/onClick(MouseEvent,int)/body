{
  DataContext context=DataManager.getInstance().getDataContext(mySortingLabel);
  DefaultActionGroup group=new DefaultActionGroup();
  group.add(createSortingAction(true));
  group.add(createSortingAction(false));
  JBPopupFactory.getInstance().createActionGroupPopup("Change sorting",group,context,JBPopupFactory.ActionSelectionAid.SPEEDSEARCH,false).showInBestPositionFor(context);
  return true;
}
