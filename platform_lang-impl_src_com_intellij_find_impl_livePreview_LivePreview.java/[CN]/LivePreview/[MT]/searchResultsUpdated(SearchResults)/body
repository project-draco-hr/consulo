{
  if (mySearchResults.getProject().isDisposed())   return;
  if (mySuppressedUpdate) {
    mySuppressedUpdate=false;
    return;
  }
  if (!myInSmartUpdate) {
    removeFromEditor();
  }
  highlightUsages();
  updateCursorHighlighting(false);
  if (myInSmartUpdate) {
    clearUnusedHightlighters();
    myInSmartUpdate=false;
  }
}
