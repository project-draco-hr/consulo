{
  int add=0;
  if (t1 != null)   add++;
  if (t2 != null)   add++;
  if (add == 0)   return base;
  TextAttributesKey[] result=new TextAttributesKey[base.length + add];
  add=base.length;
  System.arraycopy(base,0,result,0,base.length);
  if (t1 != null)   result[add++]=t1;
  if (t2 != null)   result[add++]=t2;
  return result;
}
