{
  ApplicationManager.getApplication().assertIsDispatchThread();
  MethodBreakpoint breakpoint=MethodBreakpoint.create(myProject,document,lineIndex);
  if (breakpoint == null) {
    return null;
  }
  ToolWindowManager.getInstance(myProject).notifyByBalloon(ToolWindowId.DEBUG,MessageType.WARNING,"Method breakpoints may dramatically slow down debugging",null,null);
  addBreakpoint(breakpoint);
  return breakpoint;
}
