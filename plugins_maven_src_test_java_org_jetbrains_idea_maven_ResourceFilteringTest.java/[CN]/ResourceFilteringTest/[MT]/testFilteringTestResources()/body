{
  createProjectSubFile("resources/file.properties").setBinaryContent("value=${project.version}".getBytes());
  importProject("<groupId>test</groupId>" + "<artifactId>project</artifactId>" + "<version>1</version>"+ "<build>"+ "  <testResources>"+ "    <testResource>"+ "      <directory>resources</directory>"+ "      <filtering>true</filtering>"+ "    </testResource>"+ "  </testResources>"+ "</build>");
  assertTestSources("project","resources");
  compileModules("project");
  assertResult("target/test-classes/file.properties","value=1");
}
