{
  final ByteBuffer buffer=myBuffer.getAndSet(null);
  try {
    if (buffer != null) {
      if (buffer instanceof MappedByteBuffer) {
        final MappedByteBuffer mappedByteBuffer=(MappedByteBuffer)buffer;
        mappedByteBuffer.force();
      }
    }
  }
  finally {
    myBuffer.set(buffer);
  }
}
