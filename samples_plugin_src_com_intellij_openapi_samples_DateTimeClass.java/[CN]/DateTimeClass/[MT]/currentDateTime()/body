{
  Calendar instance=Calendar.getInstance();
  currentDate=String.valueOf(instance.get(Calendar.DAY_OF_MONTH)) + "/" + String.valueOf(instance.get(Calendar.MONTH) + 1)+ "/"+ String.valueOf(instance.get(Calendar.YEAR));
  int min=instance.get(Calendar.MINUTE);
  String strMin;
  if (min < 10) {
    strMin="0" + String.valueOf(min);
  }
 else {
    strMin=String.valueOf(min);
  }
  currentTime=instance.get(Calendar.HOUR_OF_DAY) + ":" + strMin;
}
