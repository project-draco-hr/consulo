{
  try {
    myCache.remove(key);
    myMap.appendData(key,new PersistentHashMap.ValueDataAppender(){
      public void append(      DataOutput out) throws IOException {
        for (        V v : value) {
          myValueExternalizer.save(out,v);
        }
      }
    }
);
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
}
