{
  if (value instanceof GradleTasksModel.MyEmptyDescriptor) {
    return EMPTY_RENDERER;
  }
 else   if (value instanceof GradleTaskDescriptor) {
    GradleTaskDescriptor descriptor=(GradleTaskDescriptor)value;
    setText(descriptor.getName());
switch (descriptor.getType()) {
case GENERAL:
      setIcon(GradleIcons.Task);
    break;
case RUN:
  setIcon(DefaultRunExecutor.getRunExecutorInstance().getIcon());
break;
case DEBUG:
setIcon(DefaultDebugExecutor.getDebugExecutorInstance().getIcon());
break;
}
}
return super.getListCellRendererComponent(list,value,index,isSelected,cellHasFocus);
}
