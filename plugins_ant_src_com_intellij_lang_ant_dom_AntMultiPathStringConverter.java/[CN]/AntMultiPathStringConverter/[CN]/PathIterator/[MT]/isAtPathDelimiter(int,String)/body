{
  final char ch=path.charAt(index);
  if (ch == ';') {
    return true;
  }
  if (ch != ':') {
    return false;
  }
  if (!SystemInfo.isWindows) {
    return true;
  }
  final int nextIndex=index + 1;
  if (nextIndex < path.length()) {
    final char nextCh=path.charAt(nextIndex);
    if (nextCh == '/' || nextCh == '\\') {
      return false;
    }
  }
  return true;
}
