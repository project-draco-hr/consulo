{
  int start=Math.max(0,pos.getStartOffset() - myEditor.getLineHeight());
  int end=myEditorScrollbarTop + myEditorTargetHeight == 0 ? pos.getEndOffset() + myEditor.getLineHeight() : Math.min(myEditorScrollbarTop + myEditorTargetHeight,pos.getEndOffset() + myEditor.getLineHeight());
  ProperTextRange adj=new ProperTextRange(start,Math.max(end,start));
  if (myDirtyYPositions == null) {
    myDirtyYPositions=adj;
  }
 else {
    myDirtyYPositions=myDirtyYPositions.union(adj);
  }
  myEditorScrollbarTop=0;
  myEditorSourceHeight=0;
  myEditorTargetHeight=0;
  dimensionsAreValid=false;
}
