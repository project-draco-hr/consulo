{
  return new TrafficTooltipRenderer(){
    @Override public void repaintTooltipWindow(){
    }
    @Override public LightweightHint show(    Editor editor,    Point p,    boolean alignToRight,    TooltipGroup group){
      JLabel label=new JLabel("WTF");
      return new LightweightHint(label){
        @Override public void hide(){
          super.hide();
          onHide.run();
        }
      }
;
    }
  }
;
}
