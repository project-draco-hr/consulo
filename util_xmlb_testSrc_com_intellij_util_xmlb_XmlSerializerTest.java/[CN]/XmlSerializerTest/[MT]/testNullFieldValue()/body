{
  BeanWithPublicFields bean1=new BeanWithPublicFields();
  assertSerialization("<BeanWithPublicFields><option name=\"INT_V\" value=\"1\"/><option name=\"STRING_V\" value=\"hello\"/></BeanWithPublicFields>",bean1);
  bean1.STRING_V=null;
  assertSerialization("<BeanWithPublicFields><option name=\"INT_V\" value=\"1\"/></BeanWithPublicFields>",bean1);
  BeanWithSubBean bean2=new BeanWithSubBean();
  bean2.BEAN1=null;
  bean2.BEAN2=null;
  assertSerialization("<BeanWithSubBean/>",bean2);
}
