{
  BeanWithMap bean=new BeanWithMap();
  assertSerialization("<BeanWithMap><option name=\"VALUES\"><map><entry key=\"a\" value=\"1\"/><entry key=\"c\" value=\"3\"/><entry key=\"b\" value=\"2\"/></map></option></BeanWithMap>",bean);
  bean.VALUES.clear();
  bean.VALUES.put("1","a");
  bean.VALUES.put("2","b");
  bean.VALUES.put("3","c");
  assertSerialization("<BeanWithMap><option name=\"VALUES\"><map><entry key=\"3\" value=\"c\"/><entry key=\"2\" value=\"b\"/><entry key=\"1\" value=\"a\"/></map></option></BeanWithMap>",bean);
}
