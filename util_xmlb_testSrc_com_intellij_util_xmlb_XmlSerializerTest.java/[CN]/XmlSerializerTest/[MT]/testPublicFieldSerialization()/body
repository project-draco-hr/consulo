{
  BeanWithPublicFields bean=new BeanWithPublicFields();
  assertSerialization("<BeanWithPublicFields><option name=\"INT_V\" value=\"1\"/><option name=\"STRING_V\" value=\"hello\"/></BeanWithPublicFields>",bean);
  bean.INT_V=2;
  bean.STRING_V="bye";
  assertSerialization("<BeanWithPublicFields><option name=\"INT_V\" value=\"2\"/><option name=\"STRING_V\" value=\"bye\"/></BeanWithPublicFields>",bean);
}
