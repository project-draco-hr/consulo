{
  final Block firstBlock=subBlocks.get(0);
  if (firstBlock instanceof AbstractBlock && !isTagDescription(((AbstractBlock)firstBlock).getNode()) && (policy.getShouldKeepWhiteSpaces() || policy.keepWhiteSpacesInsideTag(((XmlTagBlock)parent).getTag()))) {
    return new ReadOnlySyntheticBlock(subBlocks,parent,policy,indent);
  }
 else {
    return new SyntheticBlock(subBlocks,parent,indent,policy);
  }
}
