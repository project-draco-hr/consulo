{
  if (!myEnabled)   return;
  if (selected == null || !myComponent.isEnabled() || !myComponent.isShowing() || !myComponent.getVisibleRect().intersects(getVisibleRect(selected)) || !myComponent.isFocusOwner() && !processIfUnfocused || isPopup()) {
    hideHint();
    return;
  }
  if (!Comparing.equal(myKey,selected)) {
    hideHint();
  }
  myKey=selected;
  Point location=createToolTipImage(myKey);
  if (location == null) {
    hideHint();
  }
 else   if (myHint == null) {
    showHint(location);
  }
 else {
    repaintHint(location);
  }
}
