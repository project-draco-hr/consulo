{
  if (!myEnabled || !myComponent.isEnabled() || !myComponent.isShowing()|| !myComponent.getVisibleRect().intersects(getVisibleRect(selected))|| !myComponent.isFocusOwner() && !processIfUnfocused || isPopup()) {
    hideHint();
    return;
  }
  myKey=selected;
  Point location=createToolTipImage(myKey);
  if (location == null) {
    hideHint();
  }
 else {
    Rectangle bounds=new Rectangle(location,myTipComponent.getPreferredSize());
    myPopup.setBounds(bounds);
    myPopup.setVisible(noIntersections(bounds));
    repaintKeyItem();
  }
}
