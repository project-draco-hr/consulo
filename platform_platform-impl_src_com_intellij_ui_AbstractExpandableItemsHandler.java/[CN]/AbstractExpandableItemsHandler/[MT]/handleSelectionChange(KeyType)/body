{
  Object oldKey=myKey;
  myKey=selected;
  if (myKey == null || !myComponent.isShowing()) {
    hideHint();
    return;
  }
  Point location=createToolTipImage(myKey);
  if (location == null) {
    hideHint();
  }
 else   if (myHint == null) {
    show(location);
  }
 else   if (!Comparing.equal(oldKey,myKey)) {
    hideHint();
    show(location);
  }
 else {
    repaintHint(location);
  }
}
