{
  try {
    List<Accessor> accessors=new ArrayList<Accessor>();
    BeanInfo info=Introspector.getBeanInfo(aClass,Introspector.IGNORE_ALL_BEANINFO);
    PropertyDescriptor[] propertyDescriptors=info.getPropertyDescriptors();
    for (    PropertyDescriptor propertyDescriptor : propertyDescriptors) {
      if (propertyDescriptor.getName().equals(CLASS_PROPERTY))       continue;
      final Method readMethod=propertyDescriptor.getReadMethod();
      final Method writeMethod=propertyDescriptor.getWriteMethod();
      if (readMethod != null && writeMethod != null && XmlSerializerImpl.findAnnotation(readMethod.getAnnotations(),Transient.class) == null && XmlSerializerImpl.findAnnotation(writeMethod.getAnnotations(),Transient.class) == null) {
        accessors.add(new PropertyAccessor(propertyDescriptor));
      }
    }
    Field[] fields=aClass.getFields();
    for (    Field field : fields) {
      final int modifiers=field.getModifiers();
      if (Modifier.isPublic(modifiers) && !Modifier.isStatic(modifiers) && !Modifier.isFinal(modifiers)&& !Modifier.isTransient(modifiers)&& XmlSerializerImpl.findAnnotation(field.getAnnotations(),Transient.class) == null) {
        accessors.add(new FieldAccessor(field));
      }
    }
    return accessors;
  }
 catch (  IntrospectionException e) {
    throw new XmlSerializationException(e);
  }
}
