{
  if (myCurrentTip != null) {
    myCurrentTip.hide();
    myShowDelay=false;
    myHideAlarm.addRequest(new Runnable(){
      @Override public void run(){
        myShowDelay=true;
      }
    }
,1000);
  }
  myCurrentTip=null;
  myCurrentComponent=null;
  myCurrentEvent=null;
  myX=-1;
  myY=-1;
}
