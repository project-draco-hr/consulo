{
  myInitialDelay.cancelAllRequests();
  myReshowDelay.cancelAllRequests();
  myDismissAlarm.cancelAllRequests();
  show(tooltip,new Runnable(){
    @Override public void run(){
      myInitialDelay.cancelAllRequests();
      myReshowDelay.cancelAllRequests();
      myDismissAlarm.cancelAllRequests();
      hideCurrent(null);
    }
  }
);
  return tooltip;
}
