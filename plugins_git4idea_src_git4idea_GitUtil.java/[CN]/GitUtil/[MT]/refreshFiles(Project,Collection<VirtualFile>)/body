{
  final VcsDirtyScopeManager dirty=VcsDirtyScopeManager.getInstance(project);
  for (  VirtualFile file : affectedFiles) {
    if (!file.isValid()) {
      continue;
    }
    file.refresh(false,true);
    if (file.isDirectory()) {
      dirty.dirDirtyRecursively(file);
    }
 else {
      dirty.fileDirty(file);
    }
  }
}
