{
  Map<VirtualFile,List<FilePath>> rc=new HashMap<VirtualFile,List<FilePath>>();
  for (  FilePath p : files) {
    VirtualFile root=VcsUtil.getVcsRootFor(project,p);
    if (root == null) {
      continue;
    }
    List<FilePath> l=rc.get(root);
    if (l == null) {
      l=new ArrayList<FilePath>();
      rc.put(root,l);
    }
    l.add(p);
  }
  return rc;
}
