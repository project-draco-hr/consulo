{
  if (event.getAction() == SVNEventAction.ADD && event.getFile() != null) {
    VirtualFile vfile=VirtualFileManager.getInstance().findFileByUrl("file://" + event.getFile().getAbsolutePath().replace(File.separatorChar,'/'));
    if (vfile != null) {
      FileStatusManager.getInstance(myProject).fileStatusChanged(vfile);
    }
  }
}
