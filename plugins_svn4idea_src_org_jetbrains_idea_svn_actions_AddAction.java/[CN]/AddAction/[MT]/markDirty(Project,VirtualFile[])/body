{
  final List<VirtualFile> vDirs=new ArrayList<VirtualFile>();
  final List<VirtualFile> vFiles=new ArrayList<VirtualFile>();
  for (  VirtualFile file : items) {
    if (file.isDirectory()) {
      vDirs.add(file);
    }
 else {
      vFiles.add(file);
    }
  }
  VcsDirtyScopeManager.getInstance(project).filesDirty(vFiles,vDirs);
}
