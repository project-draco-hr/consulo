{
  final int offset=myEditor.getCaretModel().getOffset();
  myComponentHint.setShouldDelay(delay);
  HintManager.getInstance().showQuestionHint(myEditor,getHintPosition(myEditor,offset),offset,offset,myComponentHint,new QuestionAction(){
    public boolean execute(){
      showPopup();
      return true;
    }
  }
);
}
