{
  final CheckoutProjectOperation checkoutOperation=CheckoutProjectOperation.create(environment,checkoutPath,target,useAltCheckoutDir,makeNewFilesReadOnly);
  return new CommandCvsHandler(CvsBundle.message("operation.name.check.out.project"),checkoutOperation,FileSetToBeUpdated.allFiles(),(option == null) ? PerformInBackgroundOption.DEAF : option){
    @Override public void finish(){
      CvsEntriesManager.getInstance().clearAll();
    }
  }
;
}
