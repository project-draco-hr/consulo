{
  final RemoveFilesOperation operation=new RemoveFilesOperation();
  for (  final File file : files) {
    operation.addFile(file.getPath());
  }
  return new CommandCvsHandler(CvsBundle.message("action.name.remove"),operation,FileSetToBeUpdated.selectedFiles(getAdminDirectoriesFor(files)),VcsConfiguration.getInstance(project).getAddRemoveOption());
}
