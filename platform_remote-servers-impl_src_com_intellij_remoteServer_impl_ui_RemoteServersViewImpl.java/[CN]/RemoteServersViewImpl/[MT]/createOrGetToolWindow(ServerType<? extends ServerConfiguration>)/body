{
  ToolWindow toolWindow=ToolWindowManager.getInstance(myProject).getToolWindow(type.getPresentableName());
  if (toolWindow == null) {
    toolWindow=ToolWindowManager.getInstance(myProject).registerToolWindow(type.getPresentableName(),true,ToolWindowAnchor.BOTTOM);
    toolWindow.setIcon(type.getIcon());
  }
  return toolWindow;
}
