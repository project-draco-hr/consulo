def drop_scheme(scheme, path):
    sc = (scheme + ':')
    if path.startswith(sc):
        path = path[len(sc):]
        if path.startswith('//'):
            if (scheme == 'file'):
                i = path.find('/', 2)
                if (i == (-1)):
                    return ''
                if (os.name == 'nt'):
                    droot = (os.path.splitdrive(os.getcwd())[0] + '/')
                    path = os.path.join(droot, path[(i + 1):])
                else:
                    path = path[i:]
            else:
                path = path[2:]
    return path
