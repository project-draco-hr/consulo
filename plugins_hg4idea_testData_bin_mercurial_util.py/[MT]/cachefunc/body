def cachefunc(func):
    'cache the result of function calls'
    cache = {}
    if (func.func_code.co_argcount == 1):

        def f(arg):
            if (arg not in cache):
                cache[arg] = func(arg)
            return cache[arg]
    else:

        def f(*args):
            if (args not in cache):
                cache[args] = func(*args)
            return cache[args]
    return f
