{
  super(layoutManager);
  setOpaque(false);
  add(getComponent(),BorderLayout.CENTER);
  getComponent().addFocusListener(new FocusAdapter(){
    public void focusGained(    FocusEvent e){
      componentFocusGained(e);
    }
    public void focusLost(    FocusEvent e){
      componentFocusLost(e);
    }
  }
);
  _initialized=true;
}
