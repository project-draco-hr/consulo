{
  ApplicationManager.getApplication().assertWriteAccessAllowed();
  if (myMergedCallStarted) {
    LOG.assertTrue(!filetypes,"Filetypes change is not supported inside merged call");
  }
  if (myRootsChangesDepth++ == 0) {
    if (myMergedCallStarted) {
      myMergedCallHasRootChange=true;
      myRootsChangesDepth++;
    }
    myProject.getMessageBus().syncPublisher(ProjectTopics.PROJECT_ROOTS).beforeRootsChange(new ModuleRootEventImpl(myProject,filetypes));
    return true;
  }
  return false;
}
