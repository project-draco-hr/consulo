{
  super.update(e);
  IdeFrameImpl frame=getFrame(e);
  final boolean operational=frame != null && frame.getGraphicsConfiguration().getDevice().isFullScreenSupported() && (!SystemInfo.isMac || SystemInfo.isMacOSSnowLeopard);
  e.getPresentation().setVisible(operational);
  e.getPresentation().setEnabled(operational);
}
