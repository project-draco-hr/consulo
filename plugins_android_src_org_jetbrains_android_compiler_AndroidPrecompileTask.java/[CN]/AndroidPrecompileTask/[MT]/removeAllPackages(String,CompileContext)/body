{
  final File sourceRoot=new File(sourceRootPath);
  final File[] children=sourceRoot.listFiles();
  if (children != null) {
    for (    File child : children) {
      if (child.isDirectory() && child.getName() != null && StringUtil.isJavaIdentifier(child.getName())) {
        if (!FileUtil.delete(child)) {
          context.addMessage(CompilerMessageCategory.ERROR,"Cannot delete file " + child.getAbsolutePath(),null,-1,-1);
        }
      }
    }
  }
  final VirtualFile vFile=LocalFileSystem.getInstance().refreshAndFindFileByIoFile(sourceRoot);
  if (vFile != null) {
    vFile.refresh(false,true);
  }
}
