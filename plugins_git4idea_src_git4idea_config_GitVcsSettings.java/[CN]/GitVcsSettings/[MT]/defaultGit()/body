{
  String[] paths;
  String exe;
  if (SystemInfo.isWindows) {
    exe=DEFAULT_WINDOWS_GIT;
    paths=DEFAULT_WINDOWS_PATHS;
  }
 else {
    exe=DEFAULT_UNIX_GIT;
    paths=DEFAULT_UNIX_PATHS;
  }
  for (  String p : paths) {
    File f=new File(p,exe);
    if (f.exists()) {
      return f.getAbsolutePath();
    }
  }
  return exe;
}
