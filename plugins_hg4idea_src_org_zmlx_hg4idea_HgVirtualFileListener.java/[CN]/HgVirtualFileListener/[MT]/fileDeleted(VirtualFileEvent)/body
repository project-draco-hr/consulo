{
  if (event.isFromRefresh()) {
    return;
  }
  final VirtualFile file=event.getFile();
  if (!shouldProcess(file)) {
    return;
  }
  VirtualFile repo=VcsUtil.getVcsRootFor(project,file);
  if (repo == null) {
    return;
  }
  FilePath path=getFilePath(file);
  deleteFile(repo,path,false);
  markDirty(path);
}
