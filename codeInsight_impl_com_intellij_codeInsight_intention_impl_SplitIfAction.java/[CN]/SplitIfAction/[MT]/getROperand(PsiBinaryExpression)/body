{
  PsiElement e=expression;
  while (!(e.getParent() instanceof PsiIfStatement))   e=e.getParent();
  return JavaPsiFacade.getInstance(expression.getProject()).getElementFactory().createExpressionFromText(e.getText().substring(expression.getROperand().getTextRange().getStartOffset() - e.getTextRange().getStartOffset()),e.getParent());
}
