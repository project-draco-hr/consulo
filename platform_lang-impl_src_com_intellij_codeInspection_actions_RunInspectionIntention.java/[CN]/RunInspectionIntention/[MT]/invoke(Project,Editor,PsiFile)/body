{
  final InspectionManagerEx managerEx=(InspectionManagerEx)InspectionManager.getInstance(project);
  final Module module=ModuleUtil.findModuleForPsiElement(file);
  final BaseAnalysisActionDialog dlg=new BaseAnalysisActionDialog(AnalysisScopeBundle.message("specify.analysis.scope",InspectionsBundle.message("inspection.action.title")),AnalysisScopeBundle.message("analysis.scope.title",InspectionsBundle.message("inspection.action.noun")),project,new AnalysisScope(file),module != null ? module.getName() : null,true,AnalysisUIOptions.getInstance(project),file);
  AnalysisScope scope=new AnalysisScope(file);
  dlg.show();
  if (!dlg.isOK())   return;
  final AnalysisUIOptions uiOptions=AnalysisUIOptions.getInstance(project);
  scope=dlg.getScope(uiOptions,scope,project,module);
  final InspectionProfileEntry baseTool=InspectionProjectProfileManager.getInstance(project).getInspectionProfile().getInspectionTool(myShortName,file);
  rerunInspection(baseTool,managerEx,scope,file);
}
