{
  String message="";
  if (!localBranches.isEmpty()) {
    message="Also deleted local " + StringUtil.pluralize("branch",localBranches.size()) + ": "+ StringUtil.join(localBranches,", ");
  }
  NotificationManager.getInstance(myProject).notify(GitVcs.NOTIFICATION_GROUP_ID,"Deleted remote branch " + remoteBranchName,message,NotificationType.INFORMATION);
}
