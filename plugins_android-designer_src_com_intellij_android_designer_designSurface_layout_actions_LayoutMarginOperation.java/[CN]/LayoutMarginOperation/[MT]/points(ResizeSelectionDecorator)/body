{
  pointFeedback(decorator);
  decorator.addPoint(new DirectionResizePoint(Color.orange,Color.black,Position.WEST,TYPE,"Change layout:margin.left"){
    @Override protected Point getLocation(    DecorationLayer layer,    RadComponent component){
      Point location=super.getLocation(layer,component);
      location.x-=((RadViewComponent)component).getMargins().x;
      return location;
    }
  }
);
  pointRight(decorator,Color.orange,0.25,TYPE,"Change layout:margin.right");
  decorator.addPoint(new DirectionResizePoint(Color.orange,Color.black,Position.NORTH,TYPE,"Change layout:margin.top"){
    @Override protected Point getLocation(    DecorationLayer layer,    RadComponent component){
      Point location=super.getLocation(layer,component);
      location.y-=((RadViewComponent)component).getMargins().y;
      return location;
    }
  }
);
  pointBottom(decorator,Color.orange,0.25,TYPE,"Change layout:margin.bottom");
}
