{
  if (myElement != null) {
    myBackStack.push(saveContext());
    myForwardStack.clear();
  }
  final SmartPsiElementPointer element=_element != null ? SmartPointerManager.getInstance(_element.getProject()).createSmartPsiElementPointer(_element) : null;
  if (element != null) {
    myElement=element;
  }
  myIsEmpty=false;
  updateControlState();
  setDataInternal(element,text,new Rectangle(0,0));
}
