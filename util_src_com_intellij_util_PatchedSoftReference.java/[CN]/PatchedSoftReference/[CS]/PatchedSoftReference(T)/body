{
  super(referent,(ReferenceQueue<? super T>)ourQueue);
synchronized (ourRefsList) {
    ourRefsList.add(this);
  }
  if (ourTimer == null) {
    ourTimer=new Timer(500,new ActionListener(){
      public void actionPerformed(      ActionEvent e){
        processQueue();
      }
    }
);
    ourTimer.setRepeats(true);
    ourTimer.start();
  }
}
