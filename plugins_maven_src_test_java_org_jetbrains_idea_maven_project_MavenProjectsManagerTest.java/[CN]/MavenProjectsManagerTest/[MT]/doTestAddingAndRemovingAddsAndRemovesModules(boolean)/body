{
  VirtualFile m1=createModulePom("m1","<groupId>test</groupId>" + "<artifactId>m1</artifactId>" + "<version>1</version>");
  VirtualFile m2=createModulePom("m2","<groupId>test</groupId>" + "<artifactId>m2</artifactId>" + "<version>1</version>");
  importProject(m1);
  assertModules("m1");
  myProjectsManager.performScheduledImport();
  getMavenImporterSettings().setImportAutomatically(autoImport);
  myProjectsManager.addManagedFiles(Arrays.asList(m2));
  waitForReadingCompletion();
  myProjectsManager.performScheduledImport(true);
  assertModules("m1","m2");
  configConfirmationForYesAnswer();
  myProjectsManager.removeManagedFiles(Arrays.asList(m2));
  waitForReadingCompletion();
  myProjectsManager.performScheduledImport(true);
  assertModules("m1");
}
