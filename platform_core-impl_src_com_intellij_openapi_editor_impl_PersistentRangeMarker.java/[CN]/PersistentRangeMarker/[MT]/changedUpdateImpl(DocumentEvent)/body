{
  if (!isValid())   return;
  Pair<ProperTextRange,LinesCols> pair=applyChange(e,this,intervalStart(),intervalEnd(),isGreedyToLeft(),isGreedyToRight(),myLinesCols);
  if (pair == null) {
    invalidate(e);
    return;
  }
  setIntervalStart(pair.first.getStartOffset());
  setIntervalEnd(pair.first.getEndOffset());
  myLinesCols=pair.second;
}
