{
switch (myType) {
case DIRECTORY:
    return ProjectRootManager.getInstance(myElement.getProject()).getFileIndex().isInTestSourceContent(((PsiDirectory)myElement).getVirtualFile());
case FILE:
  final PsiFile containingFile=myElement.getContainingFile();
return ProjectRootManager.getInstance(myElement.getProject()).getFileIndex().isInTestSourceContent(containingFile.getVirtualFile());
case MODULE:
return isTestOnly(myModule);
case MODULES:
for (Module module : myModules) {
if (!isTestOnly(module)) return false;
}
return true;
}
return false;
}
