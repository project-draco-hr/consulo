{
  while (context != null) {
    if (context instanceof GrTypeDefinition) {
      return (PsiClass)context;
    }
 else     if (context instanceof GroovyFileBase && context.isPhysical()) {
      return ((GroovyFileBase)context).getScriptClass();
    }
    context=context.getContext();
  }
  return null;
}
