{
  Runnable runnable=new Runnable(){
    public void run(){
      RefactoringActionHandlerFactory.getInstance().createRenameHandler().invoke(project,new PsiElement[]{myElement},DataManager.getInstance().getDataContext());
    }
  }
;
  if (ApplicationManager.getApplication().isUnitTestMode()) {
    runnable.run();
  }
 else {
    ApplicationManager.getApplication().invokeLater(runnable,project.getDisposed());
  }
}
