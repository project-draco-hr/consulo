{
  Matcher aMatcher=HREF_PATTERN.matcher(text);
  if (aMatcher.find()) {
    myTextBefore=text.substring(0,aMatcher.start());
    myHandledLink=aMatcher.group(2);
    myTextAfter=text.substring(aMatcher.end(),text.length());
  }
 else {
    myTextBefore=text;
    myHandledLink="";
    myTextAfter="";
  }
  myLinkListener=listener;
}
