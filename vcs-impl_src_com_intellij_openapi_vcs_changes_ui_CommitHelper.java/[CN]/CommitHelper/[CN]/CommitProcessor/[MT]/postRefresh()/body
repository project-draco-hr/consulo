{
  return new Runnable(){
    public void run(){
      myAction.finish();
      if (!myProject.isDisposed()) {
        for (        FilePath path : myPathsToRefresh) {
          myDirtyScopeManager.fileDirty(path);
        }
        LocalHistory.putSystemLabel(myProject,myActionName + ": " + myCommitMessage);
      }
    }
  }
;
}
