{
  ImplicitFacetsComponent facetsComponent=createImplicitFacetsComponent(myImplicitFacets);
  JBPopup popup=JBPopupFactory.getInstance().createComponentPopupBuilder(facetsComponent.getMainPanel(),null).setForceHeavyweight(true).setRequestFocus(false).setResizable(false).setMovable(true).setLocateWithinScreenBounds(true).createPopup();
  popup.showUnderneathOf(e.getComponent());
  facetsComponent.setContainingPopup(popup);
}
