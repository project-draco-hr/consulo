{
  myBlinkingAlarm.cancelAllRequests();
  myIconVisible=true;
  myActive=true;
  showIcon();
  myBlinkingAlarm.addRequest(new Runnable(){
    public void run(){
      if (!myActive)       return;
      if (myIconVisible) {
        hideIcon();
      }
 else {
        showIcon();
      }
      myIconVisible=!myIconVisible;
      myBlinkingAlarm.addRequest(this,BLINKING_DELAY);
    }
  }
,BLINKING_DELAY);
}
