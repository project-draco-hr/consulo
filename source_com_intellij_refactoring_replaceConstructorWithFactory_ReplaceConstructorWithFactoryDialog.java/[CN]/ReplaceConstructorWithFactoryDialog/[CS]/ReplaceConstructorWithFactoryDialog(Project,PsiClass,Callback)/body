{
  super(project,true);
  myProject=project;
  myCallback=callback;
  myContainingClass=containingClass;
  myIsInner=myContainingClass.getContainingClass() != null && !myContainingClass.hasModifierProperty(PsiModifier.STATIC);
  setTitle(ReplaceConstructorWithFactoryHandler.REFACTORING_NAME);
  myTfTargetClassName=new TextFieldWithBrowseButton(new ChooseClassAction());
  init();
}
