{
  PsiPackage p=checkPackage(element);
  if (p != null) {
    RunnerAndConfigurationSettings settings=checkFacetAndCreateConfiguration(p,context,AndroidTestRunConfiguration.TEST_ALL_IN_PACKAGE,p.getQualifiedName());
    if (settings == null)     return null;
    AndroidTestRunConfiguration configuration=(AndroidTestRunConfiguration)settings.getConfiguration();
    configuration.PACKAGE_NAME=p.getQualifiedName();
    return settings;
  }
  return null;
}
