def range_header_to_tuple(range_header):
    'Get a (firstbyte,lastbyte) tuple from a Range header value.\n\n    Range headers have the form "bytes=<firstbyte>-<lastbyte>". This\n    function pulls the firstbyte and lastbyte values and returns\n    a (firstbyte,lastbyte) tuple. If lastbyte is not specified in\n    the header value, it is returned as an empty string in the\n    tuple.\n\n    Return None if range_header is None\n    Return () if range_header does not conform to the range spec\n    pattern.\n\n    '
    global _rangere
    if (range_header is None):
        return None
    if (_rangere is None):
        import re
        _rangere = re.compile('^bytes=(\\d{1,})-(\\d*)')
    match = _rangere.match(range_header)
    if match:
        tup = range_tuple_normalize(match.group(1, 2))
        if (tup and tup[1]):
            tup = (tup[0], (tup[1] + 1))
        return tup
    return ()
