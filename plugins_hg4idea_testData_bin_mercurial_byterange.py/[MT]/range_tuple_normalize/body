def range_tuple_normalize(range_tup):
    "Normalize a (first_byte,last_byte) range tuple.\n    Return a tuple whose first element is guaranteed to be an int\n    and whose second element will be '' (meaning: the last byte) or\n    an int. Finally, return None if the normalized tuple == (0,'')\n    as that is equivelant to retrieving the entire file.\n    "
    if (range_tup is None):
        return None
    fb = range_tup[0]
    if (fb in (None, '')):
        fb = 0
    else:
        fb = int(fb)
    try:
        lb = range_tup[1]
    except IndexError:
        lb = ''
    else:
        if (lb is None):
            lb = ''
        elif (lb != ''):
            lb = int(lb)
    if ((fb, lb) == (0, '')):
        return None
    if (lb < fb):
        raise RangeError(('Invalid byte range: %s-%s' % (fb, lb)))
    return (fb, lb)
