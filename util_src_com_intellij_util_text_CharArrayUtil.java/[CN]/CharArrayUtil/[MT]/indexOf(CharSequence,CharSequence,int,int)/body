{
  final int patternLength=pattern.length();
  int limit=toIndex - patternLength;
  if (fromIndex < 0) {
    fromIndex=0;
  }
  SearchLoop:   for (int i=fromIndex; i < limit; i++) {
    for (int j=0; j < patternLength; j++) {
      if (pattern.charAt(j) != buffer.charAt(i + j))       continue SearchLoop;
    }
    return i;
  }
  return -1;
}
