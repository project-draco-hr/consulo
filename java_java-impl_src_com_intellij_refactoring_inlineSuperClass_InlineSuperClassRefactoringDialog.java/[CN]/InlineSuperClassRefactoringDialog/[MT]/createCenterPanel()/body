{
  final JLabel label=new JLabel("<html>Inline \'" + mySuperClass.getQualifiedName() + "\' to "+ (myTargetClasses.length > 1 ? " <br>&nbsp;&nbsp;&nbsp;\'" : "\'")+ StringUtil.join(myTargetClasses,new Function<PsiClass,String>(){
    public String fun(    final PsiClass psiClass){
      return psiClass.getQualifiedName();
    }
  }
,"\',<br>&nbsp;&nbsp;&nbsp;\'")+ "\'</html>");
  label.setBorder(IdeBorderFactory.createEmptyBorder(5,5,5,5));
  return label;
}
