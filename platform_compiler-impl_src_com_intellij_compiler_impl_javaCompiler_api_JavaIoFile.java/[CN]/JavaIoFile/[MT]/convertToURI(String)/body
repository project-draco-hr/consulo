{
  if (File.separatorChar != '/') {
    path=path.replace(File.separatorChar,'/');
  }
  if (!StringUtil.startsWithChar(path,'/')) {
    path="/" + path;
  }
  if (path.startsWith("//")) {
    path="//" + path;
  }
  try {
    return new URI("file",null,path,null);
  }
 catch (  URISyntaxException e) {
    throw new RuntimeException(e);
  }
}
