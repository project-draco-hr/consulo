{
  myParent=parent;
  mySettings=settings;
  myPredefinedCodeStyles=getPredefinedStyles();
  myLanguageButton.setPreferredSize(new Dimension(20,20));
  myLanguageButton.setMnemonic(KeyEvent.VK_C);
