{
  if (myOriginal.isRunning()) {
    myOriginal.stop();
  }
 else {
    myStartupAlarm.cancelAllRequests();
  }
  final Semaphore semaphore=new Semaphore();
  semaphore.down();
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      semaphore.waitFor();
      if (myDialog != null) {
        myDialog.close(DialogWrapper.OK_EXIT_CODE);
        myDialog=null;
      }
    }
  }
);
  super.stop();
  semaphore.up();
}
