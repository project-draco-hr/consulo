{
  setFont(UIManager.getFont("Label.font"));
  myHighlightedText=new HighlightedText();
  myHighlightedText.appendText(text,new TextAttributes(textForegroundColor,textBackgroundColor,textEffectColor,EffectType.LINE_UNDERSCORE,Font.PLAIN));
  myHighlightedText.applyToComponent(this);
  adjustSize();
}
